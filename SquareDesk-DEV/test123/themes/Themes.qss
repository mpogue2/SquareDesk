/* TOOL BUTTONS ---------- */
QToolButton[theme="Dark"] { /* all types of tool button */
	background-color: qlineargradient( x1:0 y1:1, x2:0 y2:0, stop:0 #363636, stop:1 #404040);
    border: 1px solid #1a1a1a;
    border-radius: 3px;
    color: #CCC;
}
QToolButton[theme="Light"] { /* all types of tool button */
	background-color: #f2f2f5;
    border: 1px solid #000;
    border-radius: 3px;
}

