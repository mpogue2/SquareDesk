<tamination title="Ocean Wave Family">

  <tam title="Step to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
  </tam>

  <tam title="Step to a Wave"
       from="Facing Lines"
       formation="Normal Lines"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="2">
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="2">
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Step to a Left-Hand Wave"
       from="Facing Lines"
       formation="Normal Lines"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tamxref title="Allemande Left to an Alamo Ring" group=" "
           xref-link="b2/alamo_style"
           xref-title="Allemande Left to an Alamo Ring"/>

</tamination>
