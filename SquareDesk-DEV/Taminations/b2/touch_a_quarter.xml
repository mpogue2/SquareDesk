<tamination title="Touch a Quarter">

  <tam title="Touch a Quarter"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" scaleX="2" />
      <move select="Quarter Right" hands="right" beats="1" offsetX="1" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Hinge Right" beats="1" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Touch a Quarter"
       from="Lines"
       formation="Normal Lines"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" beats="1" hands="gripright"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" beats="1" hands="gripright"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" beats="1" hands="gripright"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" beats="1" hands="gripright"/>
    </path>
  </tam>

  <tam title="Touch a Quarter"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" />
      <move select="Quarter Right" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Extend Left" />
      <move select="Quarter Right" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Left Touch a Quarter"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Hinge Left" beats="1" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" scaleX="2" />
      <move select="Quarter Left" hands="left" beats="1" offsetX="1" />
    </path>
  </tam>

  <tam title="Left Touch a Quarter"
       from="Lines"
       formation="Normal Lines"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" beats="1" hands="gripleft"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" beats="1" hands="gripleft"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" beats="1" hands="gripleft"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" beats="1" hands="gripleft"/>
    </path>
  </tam>

  <tam title="Left Touch a Quarter"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="2">
    <path>
      <move select="Forward" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Extend Right" />
      <move select="Quarter Left" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Extend Right" />
      <move select="Quarter Left" hands="left" offsetX="1" />
    </path>
  </tam>

  <tam title="Touch a Half"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" beats="3" />
      <move select="Swing Right" />
    </path>
  </tam>
</tamination>
