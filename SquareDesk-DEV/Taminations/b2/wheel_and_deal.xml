<tamination title="Wheel and Deal Family">

  <tam title="Wheel and Deal"
       from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH"
       difficulty="1">
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="2" offsetX="2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="2" />
    </path>
  </tam>

  <tam title="Wheel and Deal"
       from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH"
       fractions="" difficulty="1">
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="2" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="2" scaleY="2" offsetX="2" />
    </path>
  </tam>

  <tam title="Wheel and Deal"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       difficulty="1">
    <path>
      <move select="Run Left" beats="4" hands="left" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Wheel and Deal"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       difficulty="1">
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <taminator>
      Be careful not to do a Ferris Wheel!
    </taminator>
  </tam>

  <tam title="Wheel and Deal"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       difficulty="2">
    <path>
      <move select="Run Left" beats="4" hands="gripleft" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" scaleY="2" offsetX="1" />
    </path>
    <taminator>
      Be careful not to do a Ferris Wheel!
    </taminator>
  </tam>

  <tam title="Wheel and Deal"
       from="Lines Facing In"
       formation="Normal Lines"
       difficulty="2">
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="-1" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" scaleY="2" offsetX="-1" />
    </path>
    <taminator>
      This is seldom called, because everyone is trying to squeeze into the
      center of the square.
    </taminator>
  </tam>

  <tam title="Wheel and Deal"
       from="Tidal Two-Faced Line, Right-Handed"
       formation="Two-Faced Tidal Line RH"
       difficulty="1">
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="2" offsetY="-0.5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="2" offsetY="0.5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="2" offsetY="0.5" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="2" offsetY="-0.5" />
    </path>
  </tam>

  <tam title="Wheel and Deal"
       from="Tidal Two-Faced Line, Left-Handed"
       formation="Two-Faced Tidal Line LH"
       difficulty="1">
    <path>
      <move select="Run Left" beats="4" hands="gripleft" offsetX="2" offsetY="0.5" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="2" offsetY="-0.5" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="2" offsetY="-0.5" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" offsetX="2" offsetY="0.5" />
    </path>
  </tam>

  <tam title="Wheel and Deal"
       from="Tidal Line"
       formation="Tidal Line RH"
       difficulty="3">
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleY="1.25" offsetX="2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="gripright" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" scaleY="1.25" offsetX="-2" />
    </path>
  </tam>

</tamination>
