<tamination title="Sweep a Quarter">

  <tam title="Flutterwheel and Sweep a Quarter" group=" "
       formation="Facing Couples"
       fractions="" >
    <path>
      <move select="Forward" hands="nohands" beats="3.5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Run Right" hands="right" scaleX="1.5" scaleY="2" offsetX="1.5" offsetY=".5" />
      <move select="Counter Rotate Right 3 1" beats="4" hands="right"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY="1.75" />
      <move select="Swing Right" hands="both" scaleX=".75" scaleY=".75" />
      <move select="U-Turn Right" hands="left" offsetX="1.5" offsetY=".25" />
      <move select="Counter Rotate Right 0 2" scaleX="1.5" scaleY="1.5" offsetX="1" beats="4" hands="left"/>
    </path>
  </tam>


  <tam title="Ferris Wheel, Centers Sweep a Quarter" group=" "
       from="Right-Handed Two-Faced Lines"
       formation="Two-Faced Lines RH"
       fractions="" >
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleX="2" scaleY="2" offsetX="3" />
      <move select="Counter Rotate Right 2 0" hands="right"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="3" />
      <move select="Counter Rotate Right 0 2" hands="left"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="gripleft" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Flutterwheel and Sweep a Quarter" group=" "
       from="Lines"
       formation="Normal Lines"
       fractions="" >
    <path>
      <move select="Forward" hands="nohands" beats="3.5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Run Right" hands="right" scaleX="1.5" scaleY="2" offsetX="1.5" offsetY=".5" />
      <move select="Counter Rotate Right 2 0" scaleX="1.5" beats="4" hands="right"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY="1.75" />
      <move select="Swing Right" hands="both" scaleX=".75" scaleY=".75" />
      <move select="U-Turn Right" hands="left" offsetX="1.5" offsetY=".25" />
      <move select="Counter Rotate Right 0 2" offsetX="1" beats="4" hands="left"/>
    </path>
    <path>
      <move select="Forward" hands="nohands" beats="3.5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Run Right" hands="right" scaleX="1.5" scaleY="1.5" offsetX="1.5" offsetY=".5" />
      <move select="Counter Rotate Right 2 0" scaleX="1.5" beats="4" hands="right"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY="1.75" />
      <move select="Swing Right" hands="both" scaleX=".75" scaleY=".75" />
      <move select="U-Turn Right" hands="left" offsetX="1.5" offsetY=".25" />
      <move select="Counter Rotate Right 0 2" offsetX="1" beats="4" hands="left"/>
    </path>
  </tam>

  <tam title="Recycle and Sweep a Quarter" group=" "
       from="Ocean Waves"
       formation="Ocean Waves RH BGGB"
       fractions="4" >
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
      <move select="Counter Rotate Right 2 0" hands="right" offsetY="1"/>
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
      <move select="Counter Rotate Right 0 2" hands="left" offsetY="1"/>
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
      <move select="Counter Rotate Right 0 2" hands="left" offsetY="1"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
      <move select="Counter Rotate Right 2 0" hands="right" offsetY="1"/>
    </path>
  </tam>

  <tam title="Reverse Flutterwheel and Sweep a Quarter" group=" "
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" >
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" hands="both" scaleX=".5" scaleY=".5" />
      <move select="U-Turn Left" hands="right" offsetX="1" offsetY="-.5" />
      <move select="Counter Rotate Left 0 -2" hands="right" beats="4" offsetY="-1"/>
    </path>
    <path>
      <move select="Stand" hands="nohands" beats="3.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Run Left" hands="left" offsetX="1" offsetY=".5" />
      <move select="Counter Rotate Left 2 0" beats="4" hands="left" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" hands="both" scaleX=".5" scaleY=".5" />
      <move select="U-Turn Left" hands="right" offsetX="1" offsetY="-.5" />
      <move select="Counter Rotate Left 0 -2" hands="right" beats="4" offsetY="-1"/>
    </path>
    <path>
      <move select="Stand" hands="nohands" beats="3.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Run Left" hands="left" offsetX="1" offsetY=".5" />
      <move select="Counter Rotate Left 2 0" beats="4" hands="left" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Wheel and Deal, Centers Sweep a Quarter" group=" "
       from="Lines Facing Out"
       formation="Lines Facing Out"
       fractions="4" >
    <path>
      <move select="Run Left" beats="4" hands="left" scaleY="2" offsetX="-1" />
      <move select="Counter Rotate Left 2 0" hands="left"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="-1" />
      <move select="Counter Rotate Left 0 -2" hands="right"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

</tamination>
