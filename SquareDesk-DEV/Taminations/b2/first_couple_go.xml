<tamination title="First Couple Go Left/Right, Next Couple Go Left/Right">
  
  

  <tam title="First Couple Go Left, Next Couple Go Right" group=" "
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="1.5" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="1.5" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="First Couple Go Right, Next Couple Go Left" group=" "
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="1.5" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="1.5" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="1" />
    </path>
  </tam>

  <tam title="First Couple Go Left, Next Couple Go Left" group=" "
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="1.5" scaleY="2.5" offsetX="-3" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="-3" offsetY="1" />
    </path>
    <path>
      <move select="Lead Left" beats="4" hands="left" scaleX="3" />
    </path>
    <path>
      <move select="Quarter Left" beats="4" hands="right" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="First Couple Go Right, Next Couple Go Right" group=" "
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="-3" offsetY="-1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="1.5" scaleY="2.5" offsetX="-3" />
    </path>
    <path>
      <move select="Quarter Right" beats="4" hands="left" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Lead Right" beats="4" hands="right" scaleX="3" />
    </path>
  </tam>
</tamination>
