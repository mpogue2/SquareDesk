<tamination title="Flutterwheel Family">

  <tam title="Flutterwheel"
       from="Facing Couples"
       formation="Facing Couples"
       difficulty="1" >
    <path>
      <move select="Stand" hands="nohands" beats="3.5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY="1.5" />
      <move select="Run Right" hands="right" scaleX="1.5" scaleY="2" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Right" hands="both" scaleX=".75" scaleY=".75" />
      <move select="U-Turn Right" hands="left" offsetX="2" offsetY=".25" />
    </path>
  </tam>

