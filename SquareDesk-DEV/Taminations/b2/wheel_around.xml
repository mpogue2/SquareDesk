<tamination title="Wheel Around">

  <tam title="Wheel Around"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" >
    <path>
      <move select="Beau Wheel" />
    </path>
    <path>
      <move select="Belle Wheel" />
    </path>
  </tam>

  <tam title="Wheel Around"
       from="Lines"
       formation="Normal Lines"
       fractions="" >
    <path>
      <move select="Beau Wheel" />
    </path>
    <path>
      <move select="Belle Wheel" />
    </path>
    <path>
      <move select="Beau Wheel" />
    </path>
    <path>
      <move select="Belle Wheel" />
    </path>
  </tam>

  <tam title="Heads Wheel Around"
       from="Promenade"
       formation="Promenade 2">
    <path>
    <move select="BackHinge Right" scaleX=".5" scaleY=".5"/>
    <move select="HalfBackHinge Right" scaleX=".5" scaleY=".5" offsetX="-.35" offsetY=".35"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
      <move select="Eighth Left" hands="left" beats=".75" offsetX=".60" offsetY="-.10" />
    </path>
    <path>
      <move select="HalfBackHinge Right" scaleX=".5" scaleY=".5" offsetX="-.25" offsetY=".25"/>
    </path>
    <path>
      <move select="Eighth Left" hands="left" beats=".75" offsetX=".71" offsetY="-.20" />
    </path>
  </tam>

  <tam title="Reverse Wheel Around"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" >
    <path>
      <move select="Belle Wheel" reflect="1" />
    </path>
    <path>
      <move select="Beau Wheel" reflect="1" />
    </path>
  </tam>

  <tam title="Reverse Wheel Around"
       from="Lines"
       formation="Normal Lines"
       fractions="" >
    <path>
      <move select="Belle Wheel" reflect="-1" />
    </path>
    <path>
      <move select="Beau Wheel" reflect="-1" />
    </path>
    <path>
      <move select="Belle Wheel" reflect="-1" />
    </path>
    <path>
      <move select="Beau Wheel" reflect="-1" />
    </path>
  </tam>

</tamination>
