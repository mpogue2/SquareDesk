<tamination title="Promenade Family">

  <tam title="Heads Promenade 1/2"
       from="Static Square" group=" "
       formation="Static Square">
    <path>
      <move select="Extend Right" hands="gripright" beats="3" scaleX="2" scaleY="4" />
      <move select="Forward 2" hands="right" />
      <move select="Run Left" hands="gripright" beats="3" offsetX="2" />
    </path>
    <path>
      <move select="Extend Right" hands="gripleft" beats="3" scaleX="2" scaleY="4" />
      <move select="Forward 2" hands="left" />
      <move select="Run Left" hands="gripleft" beats="3" scaleX="3" scaleY="3" offsetX="2" />
    </path>
    <path>
      <move select="Forward 2" hands="right" />
      <move select="Stand" beats="3" />
      <move select="Back 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
      <move select="Stand" beats="3" />
      <move select="Back 2" hands="left" />
    </path>
  </tam>

