<tamination title="Bend the Line">

  <tam title="Bend the Line"
       from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH"
       fractions="" difficulty="1">
    <path>
      <move select="Hinge Right" beats="4" />
    </path>
    <path>
      <move select="BackHinge Left" beats="4" />
    </path>
  </tam>

  <tam title="Bend the Line"
       from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH"
       fractions="" difficulty="1">
    <path>
      <move select="BackHinge Right" beats="4" />
    </path>
    <path>
      <move select="Hinge Left" beats="4" />
    </path>
  </tam>

  <tam title="Bend the Line"
       from="Lines Facing In"
       formation="Normal Lines"
       fractions="" difficulty="2">
    <path>
      <move select="Hinge Right" beats="4" />
    </path>
    <path>
      <move select="BackHinge Left" beats="4" />
    </path>
    <path>
      <move select="BackHinge Right" beats="4" />
    </path>
    <path>
      <move select="Hinge Left" beats="4" />
    </path>
  </tam>

  <tam title="Bend the Line"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       difficulty="1">
    <path>
      <move select="Hinge Left" beats="4" />
    </path>
    <path>
      <move select="BackHinge Right" beats="4" />
    </path>
    <path>
      <move select="BackHinge Left" beats="4" />
    </path>
    <path>
      <move select="Hinge Right" beats="4" />
    </path>
  </tam>

  <tam title="Bend the Line"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       difficulty="1">
    <path>
      <move select="Hinge Right" beats="4" />
    </path>
    <path>
      <move select="BackHinge Left" beats="4" />
    </path>
    <path>
      <move select="BackHinge Left" beats="4" />
    </path>
    <path>
      <move select="Hinge Right" beats="4" />
    </path>
  </tam>

  <tam title="Bend the Line"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       difficulty="1">
    <path>
      <move select="Hinge Left" beats="4" />
    </path>
    <path>
      <move select="BackHinge Right" beats="4" />
    </path>
    <path>
      <move select="BackHinge Right" beats="4" />
    </path>
    <path>
      <move select="Hinge Left" beats="4" />
    </path>
  </tam>

  <tam title="Bend the Line"
       from="Two-Faced Tidal Line"
       formation="Two-Faced Tidal Line RH"
       difficulty="1">
    <path>
      <move select="Hinge Right" hands="gripright" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="BackHinge Left" hands="gripleft" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="BackHinge Left" hands="gripleft" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" hands="gripright" beats="4" scaleY=".5" />
    </path>
  </tam>
  
  <tam title="Bend the Line"
       from="Left-Hand Two-Faced Tidal Line"
       formation="Two-Faced Tidal Line LH"
       difficulty="1">
    <path>
      <move select="Hinge Left"  beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="BackHinge Right"  beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="BackHinge Right"  beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left"  beats="4" scaleY=".5" />
    </path>
  </tam>
  
  <tam title="Line of 8, Bend the Line"
       from="Tidal Line"
       formation="Tidal Line RH"
       difficulty="2">
    <path>
      <move select="Lead Right" hands="gripright" beats="6" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" hands="gripboth" beats="6" scaleY=".5" />
    </path>
    <path>
      <move select="BackHinge Left" hands="gripboth" beats="6" scaleY=".5" />
    </path>
    <path>
      <move select="BackHinge Left" hands="gripleft" beats="6" scaleX="3" scaleY="1.5" />
    </path>
  </tam>
</tamination>
