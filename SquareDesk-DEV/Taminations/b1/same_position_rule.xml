<tamination title="Same Position Rule">

  <tam title="Circulate 1 1/2" from="Lines Facing Out"
       formation="Lines Facing Out" fractions="4">
    <path numbers="1 8">
      <move select="Run Left" beats="4" scaleX="2" scaleY="3"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path numbers="2 7">
      <move select="Flip Left" beats="4"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path numbers="3 6">
      <move select="Run Right" beats="4"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path numbers="4 5">
      <move select="Run Right" beats="4" scaleX="3" scaleY="3"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Split Circulate" from="Inverted Lines"
       formation="Inverted Lines Ends Facing Out">
    <path>
      <move select="Lead Left" beats="2" scaleY=".5"/>
      <move select="Quarter Left" beats="2" offsetX="-.5" offsetY="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
  </tam>

</tamination>
