<tamination title="Walk Around the Corner">


  <tam title="All Around the Corner" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="Extend Left" beats="2.5" scaleX="2" scaleY="1.3"/>
      <move select="Run Right" scaleX=".65" scaleY=".65"/>
      <move select="Forward 2" beats="2.5"/>
    </path>
    <path>
      <move select="Forward 2" beats="2.5"/>
      <move select="Run Right" scaleX=".65" scaleY=".65"/>
      <move select="Extend Right" beats="2.5" scaleX="2" scaleY="1.3"/>
    </path>
  </tam>


  <tam title="All Around the Corner"
       from="Static Square"
       formation="Static Square"
       fractions="" >
    <path>
      <move select="Lead Left" offsetX="-.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" offsetX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Lead Left" offsetX="-.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" offsetX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" offsetY="-.5" />
    </path>
  </tam>

  <tamxref title="All Around the Corner, See Saw Your Partner" group=" "
           xref-link="b1/see_saw"
           xref-title="All Around the Corner, See Saw Your Partner"/>

</tamination>
