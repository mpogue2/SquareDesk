<tamination title="Pass Thru">

  <tam title="Pass Thru"
       from="Facing Couples"
       formation="Facing Couples Compact"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass Thru"
       from="Lines"
       formation="Normal Lines"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass Thru"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="1">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Pass Thru"
       from="Ocean Waves"
       formation="Ocean Waves RH BGGB"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <taminator>
      Note that the new centers end facing each other, and do not form a wave.
    </taminator>
  </tam>

</tamination>
