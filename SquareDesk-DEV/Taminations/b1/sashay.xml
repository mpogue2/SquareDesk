<tamination title="Half Sashay Family">

  <tam title="Half Sashay" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="BackSashay Right" beats="4" />
    </path>
    <path>
      <move select="Sashay Left" beats="4" />
    </path>
  </tam>

  <tam title="Half Sashay" from="Lines" formation="Normal Lines">
    <path>
      <move select="BackSashay Right" beats="4" />
    </path>
    <path>
      <move select="Sashay Left" beats="4" />
    </path>
    <path>
      <move select="BackSashay Right" beats="4" />
    </path>
    <path>
      <move select="Sashay Left" beats="4" />
    </path>
  </tam>
  
  <tam title="Half Sashay" from="Squared Set" formation="Static Square">
    <path>
      <move select="BackSashay Right" beats="4" />
    </path>
    <path>
      <move select="Sashay Left" beats="4" />
    </path>
    <path>
      <move select="BackSashay Right" beats="4" />
    </path>
    <path>
      <move select="Sashay Left" beats="4" />
    </path>
  </tam>

  <tam title="Ladies In, Men Sashay"
       from="Circle Left"
       formation="Circle" gender-specific="true">
    <path>
      <move select="Sxtnth Left" />
      <move select="cl" beats="2" />
      <move select="cl" beats="2" />
      <move select="Sxtnth Right" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Back" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Sxtnth Left" />
      <move select="cl" beats="2" />
      <move select="cl" beats="2" />
      <move select="Sxtnth Right" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Back" beats="2" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Ladies In, Men Sashay"
       from="Circle Right" gender-specific="true"
       formation="Circle">
    <path>
      <move select="Sxtnth Right" />
      <move select="cr" beats="2" />
      <move select="cr" beats="2" />
      <move select="Sxtnth Left" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Back" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Sxtnth Right" />
      <move select="cr" beats="2" />
      <move select="cr" beats="2" />
      <move select="Sxtnth Left" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Back" beats="2" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Rollaway"
       from="Lines"
       formation="Normal Lines">
    <path>
      <move select="Dodge Right" hands="gripright" />
    </path>
    <path>
      <move select="Fold Left" hands="gripleft" beats="1.5" scaleX=".6" scaleY=".5" />
      <move select="U-Turn Left" hands="gripleft" beats="1.5" offsetX="1.2" offsetY="-1" />
    </path>
    <path>
      <move select="Dodge Right" hands="gripright" />
    </path>
    <path>
      <move select="Fold Left" hands="gripleft" beats="1.5" scaleX=".6" scaleY=".5" />
      <move select="U-Turn Left" hands="gripleft" beats="1.5" offsetX="1.2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Rollaway" from="Circle Left" formation="Circle">
    <path>
      <move select="Stand" hands="gripright" beats="4.5"/>
      <move select="Stand" hands="both" beats=".1"/>
    </path>
    <path>
      <move select="Eighth Left" hands="gripleft" offsetX=".5" offsetY=".1"/>
      <move select="Quarter Left" hands="gripleft" offsetX="1.4"/>
      <move select="Quarter Left" hands="gripleft" offsetY="-1.4"/>
      <move select="Eighth Left" hands="gripleft" offsetX="-.4" offsetY="-.25"/>
      <move select="Stand" hands="both" beats=".1"/>
    </path>
    <path>
      <move select="Stand" hands="gripright" beats="4.5"/>
      <move select="Stand" hands="both" beats=".1"/>
    </path>
    <path>
      <move select="Eighth Left" hands="gripleft" offsetX=".5" offsetY=".1"/>
      <move select="Quarter Left" hands="gripleft" offsetX="1.4"/>
      <move select="Quarter Left" hands="gripleft" offsetY="-1.4"/>
      <move select="Eighth Left" hands="gripleft" offsetX="-.4" offsetY="-.25"/>
      <move select="Stand" hands="both" beats=".1"/>
    </path>
  </tam>


</tamination>
