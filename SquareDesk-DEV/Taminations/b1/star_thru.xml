<tamination title="Star Thru">

  <tam title="Star Thru"
       from="Facing Couples"
       formation="Facing Couples" gender-specific="true">
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" offsetX="1" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="Star Thru" from="Sashayed Couples" gender-specific="true">
    <formation>
      <dancer gender="boy" x="-2" y="-1" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Forward 2" hands="gripright" beats="2"  />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY="-1" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" />
      <move select="Quarter Left" hands="gripright" offsetX="1" beats="2"/>
    </path>
  </tam>

  <tam title="Star Thru" from="Lines"
       formation="Normal Lines" gender-specific="true">
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Star Thru" from="Sashayed Lines" gender-specific="true">
     <formation>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
  </tam>


  <tam title="Star Thru"
       from="Eight Chain Thru"
       formation="Eight Chain Thru" gender-specific="true">
    <path>
      <move select="Extend Left" hands="gripright" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" offsetX="1" offsetY=".5" />
      <move select="Stand" hands="nohands" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" offsetX="1" offsetY="-1.5" />
      <move select="Stand" hands="nohands" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" offsetX="1" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="Heads Star Thru" group=" "
       formation="Static Square" gender-specific="true">
    <path>
      <move select="Extend Left" hands="gripright" beats="3" scaleX="3" scaleY=".5" />
      <move select="Quarter Right" hands="gripright" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="gripright" beats="3" scaleX="3" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" offsetX="1" offsetY="-.5" />
    </path>
    <path/><path/>
  </tam>

</tamination>
