<tamination title="Turn Back Family">

  <tam title="U-Turn Back"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="1.5" >
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
  </tam>

  <tam title="U-Turn Back"
       from="Sashayed Couples">
    <formation>
      <dancer gender="boy" x="-2" y="-1" angle="0" />
      <dancer gender="girl" x="-2" y="1" angle="0" />
    </formation>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="U-Turn Back"
       from="Couples Facing Out"
       formation="Couples Facing Out"
       fractions="1.5" >
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="U-Turn Back"
       from="Lines"
       formation="Normal Lines"
       fractions="1.5" >
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
  </tam>

  <tam title="U-Turn Back"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       fractions="1.5" >
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="U-Turn Back"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       fractions="1.5" >
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="U-Turn Back"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="1.5" >
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
  </tam>

  <tam title="Boys Turn Back" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Stand" beats="3" />
    </path>
  </tam>

  <tam title="Boys Turn Back" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Stand" beats="3" />
    </path>
  </tam>

  <tam title="Girls Turn Back" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
  </tam>

  <tam title="Girls Turn Back" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="Girls Backtrack" from="Promenade" formation="Promenade">
    <path>
      <move select="Lead Left 1/2" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Flip Right" beats="2" scaleY=".5" offsetX="-1" offsetY=".5"/>
    </path>
    <path>
      <move select="Lead Left 1/2" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Flip Right" beats="2" scaleY=".5" offsetX="-1" offsetY=".5"/>
    </path>
    <taminator>
      Girls continue clockwise and boys counterclockwise until the next call.
    </taminator>
  </tam>

</tamination>
