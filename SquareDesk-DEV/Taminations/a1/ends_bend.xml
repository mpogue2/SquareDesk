<tamination title="Ends Bend">

  <tam title="Ends Bend"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       fractions="" >
    <path numbers="1  ">
      <move select="Lead Left" beats="2" scaleY="2" />
    </path>
    <path numbers="   ">
      <move select="Back" beats="2" hands="left" />
    </path>
    <path numbers="   ">
      <move select="Back" beats="2" hands="right" />
    </path>
    <path numbers="2  ">
      <move select="Lead Right" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Ends Bend"
       from="Inverted Lines">
    <formation name="Inverted Lines Ends Facing Out">
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path numbers="1  " couples="4 2">
      <move select="Lead Left" beats="2" scaleY="2" />
    </path>
    <path numbers="   " couples="4 2">
      <move select="Forward" beats="2" hands="right" />
    </path>
    <path numbers="   " couples="3 1">
      <move select="Forward" beats="2" hands="left" />
    </path>
    <path numbers="2  " couples="3 1">
      <move select="Lead Right" beats="2" scaleY="2" />
    </path>
  </tam>
</tamination>
