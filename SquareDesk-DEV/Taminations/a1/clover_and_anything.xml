<tamination title="Clover and Anything">

  <tam title="Clover and Lock It" group=" " formation="3/4 Tag">
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>      
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Left" beats="4"/>      
    </path>
  </tam>

  <tam title="Clover and Lock It" group=" " formation="3/4 Tag LH" display="none">
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>      
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Right" beats="4"/>      
    </path>
  </tam>

  <tam title="Clover and Pass the Ocean"
       group=" "
       formation="Trade By">
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>

	<tam title="Clover and Square Thru 2" group=" "
	     formation="Trade By">
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
	</tam>

	<tam title="Clover and Square Chain Thru" group=" "
	     formation="Trade By">
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>
      <move select="Pull Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleY="1.5" />
    </path>
    <path>
      <move select="Pull Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Forward"/>
    </path>
	</tam>

	<tam title="Clover and Trade" group=" "
	     formation="Completed Double Pass Thru">
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
		<path>
			<move select="Flip Left"/>
		</path>
		<path>
			<move select="Run Right"/>
		</path>
	</tam>
	
	<tam title="Clover and Triple Star Thru" group=" " gender-specific="true">
		<formation>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="90"/>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
		</formation>
    <path>
    	<move select="Forward"/>
      <move select="Lead Left" beats="2.5" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" beats="2.5" scaleX="1.5"/>
      <move select="Lead Left" beats="2" scaleX="1.5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY=".5" />
    </path>
    <path>
    	<move select="Forward"/>
      <move select="Lead Right" beats="2.5" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" beats="2.5" scaleX="1.5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-1.5" />
    </path>
    <path>
    	<move select="Forward 2"/>
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY=".5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY=".5" />
    </path>
    <path>
    	<move select="Forward 2"/>
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY=".5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-1.5" />
    </path>
	</tam>

</tamination>
