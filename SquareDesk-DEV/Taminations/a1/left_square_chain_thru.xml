  <tam title="As Couples Left Square Chain Thru"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY="1.5" />
      <move select="Lead Right" beats="4" scaleX="3.5" scaleY="1.5" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleX="2.5" scaleY=".5" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY="1.5" />
      <move select="Lead Left" beats="4" scaleX=".5" scaleY="2.5" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Stand" beats="4" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3.5" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="4" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY="1.5" />
    </path>
  </tam>
