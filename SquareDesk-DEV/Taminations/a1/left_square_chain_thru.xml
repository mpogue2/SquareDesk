<tamination title="Left Square Chain Thru">

  <tam title="Left Square Chain Thru"
       from="Facing Couples"
       formation="Facing Couples"
       parts="3;3;3" >
    <path>
      <move select="Pull Right" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Pull Right" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleY="1.5" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
      <move select="Forward" beats="2" scaleX="2" />
    </path>
  </tam>

  <tam title="Left Square Chain Thru"
       from="Lines"
       formation="Normal Lines" >
