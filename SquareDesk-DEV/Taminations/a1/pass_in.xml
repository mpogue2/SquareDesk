<tamination title="Pass In">

  <tam title="Pass In"
       from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="Pass In"
       from="Lines"
       formation="Normal Lines">
    <path numbers="1 8">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY=".5" />
    </path><path numbers="2 7">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY=".5" />
    </path>
    <path numbers="3 6">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path numbers="4 5">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Pass In"
       from="Eight Chain Thru">
  <formation>
    <dancer gender="boy" y="3" x="1" angle="270"/>
    <dancer gender="girl" y="3" x="-1" angle="270"/>
    <dancer gender="boy" y="1" x="-1" angle="90"/>
    <dancer gender="girl" y="1" x="1" angle="90"/>
  </formation>
    <path couples="4 2">
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5" />
    </path>
    <path couples="4 2">
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
    <path couples="1 3">
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5" />
    </path>
    <path couples="1 3">
      <move select="Extend Left" beats="2" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="Heads Pass In" formation="Static Square" group="  ">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5" />
    </path>
    <path>
    </path>
    <path>
    </path>
  </tam>

  <tam title="Sides Pass In" formation="Static Square" group="  ">
    <path>
    </path>
    <path>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="As Couples Pass In"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY=".5" />
      <move select="Lead Right" hands="right" beats="2" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY="1.5" />
      <move select="Lead Right" hands="left" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="gripright" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY="1.5" />
      <move select="Quarter Left" hands="gripleft" beats="2" offsetX="3" offsetY="-.5" />
    </path>
  </tam>

  <tam title="All 4 Couples Pass In" from="Static Square"
       formation="Static Square" group=" ">
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="3" />
      <move select="Forward" />
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="3" />
      <move select="Forward" />
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
  </tam>

</tamination>
