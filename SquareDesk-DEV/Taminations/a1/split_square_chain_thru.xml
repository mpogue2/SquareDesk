<tamination title="Split Square Chain Thru">

  <tam title="Split Square Chain Thru"
       from="T-Bones, Ends Facing"
       parts="1;2;6" >
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="3" angle="180"/>
      <dancer gender="boy" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="1" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Forward" beats="2" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Split Square Chain Thru"
       from="T-Bones, Centers Facing"
       parts="1;2;6" >
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="270"/>
      <dancer gender="girl" x="1" y="3" angle="270"/>
      <dancer gender="boy" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" />
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Forward" beats="2" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Heads Split Square Chain Thru" from="Static Square" formation="Static Square"
       parts="3;2;6">
    <path>
      <move select="Pull Left" beats="3" scaleX="3" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Pull Left" beats="3" scaleX="3" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Forward" beats="2" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
  </tam>

</tamination>
