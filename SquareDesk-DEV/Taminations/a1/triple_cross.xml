<tamination title="Triple Cross">

  <tam title="Triple Cross"
       from="Right-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path>
      <move select="Stand" hands="none" beats="2"/>
    </path>
    <path>
      <move select="Cross Right"/>
    </path>
    <path>
      <move select="Cross Right"/>
    </path>
    <path>
      <move select="Cross Right"/>
    </path>
  </tam>

  <tam title="Triple Cross"
       from="Left-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="270"/>
      <dancer gender="boy" y="1" x="-1" angle="270"/>
      <dancer gender="boy" y="-1" x="-1" angle="270"/>
      <dancer gender="girl" y="-3" x="-1" angle="270"/>
    </formation>
    <path couples="4 2">
      <move select="Cross Left"/>
    </path>
    <path couples="4 2">
      <move select="Cross Left"/>
    </path>
    <path couples="1 3">
      <move select="Cross Left"/>
    </path>
    <path couples="1 3">
      <move select="Stand" hands="none" beats="2"/>
    </path>
  </tam>
  
  <tam title="Triple Cross" from="Right-Hand Box between Couples">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="270" />
      <dancer gender="boy" y="1" x="-1" angle="90" />
      <dancer gender="girl" y="-1" x="-1" angle="90" />
      <dancer gender="boy" y="-3" x="-1" angle="90" />
    </formation>
    <path>
      <move select="Stand" hands="none" beats="2"/>
    </path>
    <path>
      <move select="Cross Right"/>
    </path>
    <path>
      <move select="Cross Right"/>
    </path>
    <path>
      <move select="Cross Right"/>
    </path>
  </tam>  
  
  <tam title="Triple Cross" from="Left-Hand Box between Couples">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="270" />
      <dancer gender="boy" y="1" x="-1" angle="270" />
      <dancer gender="girl" y="-1" x="-1" angle="270" />
      <dancer gender="boy" y="-3" x="-1" angle="90" />
    </formation>
    <path>
      <move select="Cross Left"/>
    </path>
    <path>
      <move select="Cross Left"/>
    </path>
    <path>
      <move select="Cross Left"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="2"/>
    </path>
  </tam>  

  <tam title="Double Cross" from="Quarter Tag" formation="Quarter Tag">
    <path>
      <move select="Stand" hands="none" beats="3"/>
    </path>
    <path>
      <move select="Cross Left" scaleX="1.5" beats="3"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="3"/>
    </path>
    <path>
      <move select="Cross Left" scaleX="1.5" beats="3"/>
    </path>
  </tam>

  <tam title="Double Cross" from="Left-Hand Quarter Tag" formation="Quarter Tag LH">
    <path>
      <move select="Cross Right" scaleX="1.5" beats="3"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="3"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="3"/>
    </path>
    <path>
      <move select="Cross Right" scaleX="1.5" beats="3"/>
    </path>
  </tam>

</tamination>
