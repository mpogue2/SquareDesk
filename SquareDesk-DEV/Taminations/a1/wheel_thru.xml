<tamination title="Wheel Thru">

  <tam title="Wheel Thru"
       from="Facing Couples"
       formation="Facing Couples">
    <path numbers="1 4">
      <movement  beats="3" cx1="2.5" cy1="0" cx2="3" cy2="-.5" x2="3" y2="-3" hands="none"/>
    </path>
    <path numbers="2 3">
      <move select="Quarter Right" beats="3" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="Wheel Thru"
       from="Lines"
       formation="Normal Lines">
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="1" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="1" />
    </path>
  </tam>

  <tam title="Wheel Thru"
       from="Eight Chain Thru"
       formation="Eight Chain Thru">
    <path>
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-1" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-1" />
    </path>
  </tam>

  <tam title="Heads Wheel Thru" group="  "
       formation="Static Square">
    <path>
      <move select="Forward"/>
      <movement hands="none" beats="3" cx1="2.4" cy1="0" cx2="3" cy2="-.6" x2="3" y2="-2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Quarter Right" beats="3" offsetX="1"  />
    </path>
    <path/>
    <path/>
  </tam>

  <tam title="Sides Wheel Thru" group="  "
       formation="Static Square">
    <path/>
    <path/>
    <path>
      <move select="Forward"/>
      <movement hands="none" beats="3" cx1="2.4" cy1="0" cx2="3" cy2="-.6" x2="3" y2="-2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Quarter Right" beats="3" offsetX="1"  />
    </path>
  </tam>

  <tam title="As Couples Wheel Thru"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3" />
      <move select="Extend Left" hands="right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" hands="left" beats="3" scaleX="2.5" />
      <move select="Extend Left" hands="left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="BackHinge Left" />
    </path>
  </tam>

  <tam title="All 8 Wheel Thru"
       from="Static Square"
       formation="Static Square"
       group=" " >
    <path>
      <move select="Forward 3" />
      <move select="Hinge Right" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Lead Right" beats="7.5" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Hinge Right" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Lead Right" beats="7.5" scaleX="2" scaleY="2" />
    </path>
  </tam>
</tamination>
