<tamination title="Grand follow your neighbor">

  <tam title="Grand Follow Your Neighbor" from="Right-Hand Columns">
  <formation>
      <dancer gender="girl" x="1" y="-3" angle="270"/>
      <dancer gender="boy" x="1" y="-1" angle="270"/>
      <dancer gender="girl" x="1" y="1" angle="270"/>
      <dancer gender="boy" x="1" y="3" angle="270"/>
    </formation>
    <path numbers="8 1" couples="2 4">
      <move select="Lead Right" beats="2" scaleX="2" />
      <move select="Run Right" scaleY=".75" />
    </path>
    <path numbers="7 2" couples="2 4">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path numbers="6 3" couples="1 3">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path numbers="5 4" couples="1 3">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Grand Follow Your Neighbor" from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Forward" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX="2" />
      <move select="Run Left" scaleY=".75" />
    </path>
  </tam>

  <tam title="Grand Follow Your Neighbor" from="Right-Hand Columns of 6">
    <formation>
      <dancer gender="girl" x="1" y="-2" angle="270"/>
      <dancer gender="boy" x="1" y="0" angle="270"/>
      <dancer gender="girl" x="1" y="2" angle="270"/>
    </formation>
    <path numbers="6 1">
      <move select="Lead Right" beats="2" scaleX="2" />
      <move select="Run Right" scaleY=".75" />
    </path>
    <path numbers="5 2">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path numbers="4 3">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Grand Follow Your Neighbor and Spread" from="Right-Hand Columns">
  <formation>
      <dancer gender="girl" x="1" y="-3" angle="270"/>
      <dancer gender="boy" x="1" y="-1" angle="270"/>
      <dancer gender="girl" x="1" y="1" angle="270"/>
      <dancer gender="boy" x="1" y="3" angle="270"/>
    </formation>
    <path numbers="8 1">
      <move select="Lead Right" beats="2" scaleX="2" />
      <move select="Run Right" scaleY="1.25" />
    </path>
    <path numbers="7 2">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path numbers="6 3">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path numbers="5 4">
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>


</tamination>
