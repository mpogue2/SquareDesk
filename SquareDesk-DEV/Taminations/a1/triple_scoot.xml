<tamination title="Triple Scoot">
  
  
  

  <tam title="Triple Scoot" 
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path>
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Triple Scoot" 
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" />
    </path>
  </tam>
</tamination>
