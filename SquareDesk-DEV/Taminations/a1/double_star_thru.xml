<tamination title="Double Star Thru">

  <tam title="Double Star Thru"
       from="Facing Couples"
       formation="Facing Couples"
       parts="3" gender-specific="true">
    <path numbers="1 4">
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" />
      <move select="Extend Right" hands="left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="1" />
    </path>
    <path numbers="2 3">
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-1" />
      <move select="Extend Right" hands="left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Double Star Thru"
       from="Lines"
       formation="Normal Lines"
       parts="3" gender-specific="true">
    <path>
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="All 4 Couples Double Star Thru"
       formation="Static Square" group=" " gender-specific="true">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Lead Right" />
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Lead Left"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" />
      <move select="Forward 2" />
      <move select="Lead Left" scaleY="2"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Lead Right" />
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Lead Left"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" />
      <move select="Forward 2" />
      <move select="Lead Left" scaleY="2"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

</tamination>
