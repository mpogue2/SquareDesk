<tamination title="Horseshoe Turn">

  <tam title="Horseshoe Turn"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path couples="2 4">
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path couples="4 2">
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path couples="3 1">
      <move select="Quarter Left" beats="2" offsetX="-.5" offsetY="1"/>
      <move select="Extend Right" beats="2" scaleY=".5" />
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="2" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Horseshoe Turn"
       from="Trade By"
       formation="Trade By"
       fractions="" >
    <path>
      <move select="Lead Right" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-.5" offsetY="1"/>
      <move select="Extend Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Horseshoe Turn" from="3/4 Tag" formation="3/4 Tag">
    <path>
      <move select="Lead Right" beats="2" scaleY="2.5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleY="2.5" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

</tamination>
