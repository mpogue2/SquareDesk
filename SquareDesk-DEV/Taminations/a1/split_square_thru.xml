<tamination title="Split Square Thru">

  <tam title="Split Square Thru 2"
       from="T-Bones, Ends Facing">
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="3" angle="180"/>
      <dancer gender="boy" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="1" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Split Square Thru 2"
       from="T-Bones, Centers Facing">
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="270"/>
      <dancer gender="girl" x="1" y="3" angle="270"/>
      <dancer gender="boy" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Left Split Square Thru" group=" "
       formation="T-Bone ULRU">
    <path>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Heads Start Split Square Thru" group=" "
       formation="Static Square" >
    <path>
      <move select="Forward 2" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="3.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="3.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Sides Start Split Square Thru" group=" "
       formation="Static Square" >
    <path>
      <move select="Stand" beats="3.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="3.5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
    </path>
  </tam>

</tamination>
