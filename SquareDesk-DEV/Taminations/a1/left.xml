<tamination title="Left">


  <tam title="Left Dosado" group="Left"
       formation="Facing Couples">
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Retreat Left" scaleY=".5" />
      <move select="Retreat Right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Retreat Left" scaleY=".5" />
      <move select="Retreat Right" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tamxref title="Left Swing Thru" group="Left"
           xref-link="b2/swing_thru"
           xref-title="Left Swing Thru"
           xref-from="Right-Hand Wave"/>

  <tam title="Left 3/4 Tag the Line" formation="Two-Faced Lines LH" group="Left">
    <path>
      <move select="Lead Left"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tamxref title="Left Touch a Quarter" group="Left"
           xref-link="b2/touch_a_quarter"
           xref-title="Left Touch a Quarter"
           xref-from="Facing Couples"/>

  <tamxref title="Left Track Two" group="Left"
           xref-link="plus/track_ii"
           xref-title="Left Track Two"/>

  <tam title="Left Turn Thru" group="Left"
       from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Swing Left" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" />
      <move select="Swing Left" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Left Wheel and Deal" formation="Lines Facing Out" group="Left">
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleY="2" offsetX="-1" />
    </path>
  </tam>

  <tamxref title="Left (A-1) Partner Hinge" group="Left (A-1)"
           xref-link="a1/partner_hinge"
           xref-title="Left Partner Hinge"
           xref-from="Lines Facing Out"/>

  <tamxref title="Left (A-1) Quarter Thru" group="Left (A-1)"
           xref-link="a1/quarter_thru"
           xref-title="Left Quarter Thru"
           xref-from="Left-Hand Box"/>

  <tamxref title="Left (A-1) Split Square Thru" group="Left (A-1)"
           xref-link="a1/split_square_thru"
           xref-title="Left Split Square Thru"/>

  <tamxref title="Left (A-1) Square Chain Thru" group="Left (A-1)"
           xref-link="a1/left_square_chain_thru"
           xref-title="Left Square Chain Thru"
           xref-from="Facing Couples"/>

  <tamxref title="Left (A-1) Turn and Deal" group="Left (A-1)"
           xref-link="a1/turn_and_deal"
           xref-title="Left Turn and Deal"/>

  <tamxref title="Left (A-2) Pass and Roll" group="Left (A-2)"
           xref-link="a2/pass_and_roll"
           xref-title="Left Pass and Roll"/>

  <tamxref title="Left (A-2) Remake" group="Left (A-2)"
           xref-link="a2/remake"
           xref-title="Left Remake"/>

  <tamxref title="Left (A-2) Spin the Windmill Right" group="Left (A-2)"
           xref-link="a2/spin_the_windmill"
           xref-title="Left Spin the Windmill Right"
           xref-from="Trade By"/>

</tamination>
