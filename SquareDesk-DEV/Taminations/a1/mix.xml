<tamination title="Mix">

  <tam title="Mix" from="Right-Hand Wave" formation="Wave RH" parts="3">
    <path numbers="1 4">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path numbers="2 3">
      <move select="Run Left" scaleY="2" />
    </path>
  </tam>

  <tam title="Mix" from="Left-Hand Wave" formation="Wave LH" parts="3">
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" />
    </path>
  </tam>

  <tam title="Mix"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3" >
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Mix"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="3" >
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Mix"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="3" >
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Mix"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="3" >
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Mix"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       parts="3" >
    <path>
      <move select="Dodge Left" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Run Right" />
    </path>
  </tam>

  <tam title="Mix" from="3 and 1 Lines" parts="3">
     <formation>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path numbers="5 4">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path numbers="6 3">
      <move select="Run Left" beats="4" scaleX="2" scaleY="2" />
    </path>
    <path numbers="7 2">
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
    <path numbers="8 1">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>
  
  <tam title="Mix" from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB" parts="3">
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Mix" from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB" parts="3">
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>
  
  <tam title="Mix" from="Right-Hand Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH" parts="3">
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Mix" from="Left-Hand Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line LH" parts="3">
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="All 8 Mix"
       from="Thar"
       formation="Thar LH Boys"
       parts="4.5" group=" ">
    <path>
      <move select="Hinge Left" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>
  
  <tam title="All 8 Mix"
       from="Thar"
       formation="Thar RH Boys"
       parts="4.5" group=" " display="none">
    <path>
      <move select="Hinge Right" />
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>
  

  <tam title="As Couples Mix"
       from="Two-Faced Tidal Line"
       formation="Two-Faced Tidal Line RH"
       parts="3" group=" ">
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" hands="gripleft" scaleX="3" scaleY="2.5" />
    </path>
    <path>
      <move select="Run Left" beats="6" hands="gripright" scaleX="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="As Couples Mix"
       from="Two-Faced Tidal Line"
       formation="Two-Faced Tidal Line LH"
       parts="3" group=" " display="none">
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" hands="gripright" scaleX="3" scaleY="2.5" />
    </path>
    <path>
      <move select="Run Right" beats="6" hands="gripleft" scaleX="2" scaleY="1.5" />
    </path>
  </tam>


</tamination>
