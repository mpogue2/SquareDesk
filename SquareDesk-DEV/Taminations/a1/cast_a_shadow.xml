<tamination title="Cast a Shadow">

  <tam title="Cast a Shadow"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" >
    <path couples="2 4">
      <move select="Extend Right" beats="2.5" scaleX="2" scaleY=".75" />
      <move select="Swing Left" beats="2" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY=".75" />
    </path>
    <path couples="2 4">
      <move select="Lead Right" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.25"/>
      <move select="Lead Right" scaleX="1.5"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".75" />
    </path>
    <path couples="3 1">
      <move select="Forward 2" />
      <move select="Hinge Left" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path couples="3 1">
      <move select="Flip Left" beats="1.75" offsetX="-1" scaleY=".375"/>
      <move select="Forward" beats=".75"/>
      <move select="Swing Left" beats="2" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY="-1.25" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG">
    <path>
      <move select="U-Turn Right" beats=".5" offsetY="-.75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="1.25" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Hinge Right" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.25"/>
      <move select="Lead Left" scaleX="1.5"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="-.75" />
    </path>
    <taminator>
      The center facing out need to cloverleaf far enough to go around
      the ends as they do their arm turn.
    </taminator>
  </tam>

  <tam title="Cast a Shadow"
       from="Right-Hand Two-Faced Lines">
     <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="1" y="2" angle="270"/>
      <dancer gender="girl" x="-1" y="2" angle="90"/>
      <dancer gender="boy" x="-3" y="2" angle="90"/>
    </formation>
    <path numbers="7 2">
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY=".75" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" />
      <move select="Hinge Right" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path numbers="3 6">
      <move select="Lead Left" />
      <move select="Lead Left" beats="3" offsetX="1" />
      <move select="Quarter Left" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path numbers="1 8">
      <move select="U-Turn Left" beats=".5" offsetY=".75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY="-1.25" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Left-Hand Two-Faced Lines">
     <formation>
      <dancer gender="girl" x="3" y="2" angle="90"/>
      <dancer gender="boy" x="1" y="2" angle="90"/>
      <dancer gender="boy" x="-1" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="270"/>
    </formation>
    <path numbers="7 2">
      <move select="U-Turn Right" beats=".5" offsetY="-.75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="1.25" />
    </path>
    <path numbers="5 4">
      <move select="Lead Right" />
      <move select="Lead Right" beats="3" offsetX="1" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" />
      <move select="Hinge Left" beats="3.5" />
      <move select="Forward 2" />
    </path>
    <path numbers="1 8">
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="-.75" />
    </path>
  </tam>

  <tam title="Cast a Shadow"
       from="Three and One Lines">
     <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path couples="2 4">
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY=".75" />
    </path>
    <path couples="2 4">
      <move select="Lead Right" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.25"/>
      <move select="Lead Right" scaleX="1.25"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".5" />
    </path>
    <path couples="3 1">
      <move select="Lead Left" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.25"/>
      <move select="Lead Left" scaleX="1.25"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".5" />
    </path>
    <path couples="3 1">
      <move select="U-Turn Left" beats=".5" offsetY=".75" />
      <move select="Forward 2" beats="1" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" offsetX="2" offsetY="-1.25" />
    </path>
  </tam>
  
  <tam title="Heads Cast a Shadow" group=" ">
    <formation>
      <dancer gender="girl" x="0" y="3" angle="180"/>
      <dancer gender="boy" x="0" y="1.5" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="boy" x="-1.5" y="0" angle="270"/>
    </formation>
    <path>
      <move select="Forward" beats="2" hands="left"/>
      <move select="U-Turn Right" beats=".5" offsetY="-.75" />
      <move select="Forward" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="1.25" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="2"/>
      <move select="Lead Right" beats="2" offsetX="1" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="left" scaleX="3" scaleY="2"/>
      <move select="Extend Left" beats="1.5" scaleY=".75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" offsetX="2" offsetY="-.75" />
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="right" scaleY=".5"/>
      <move select="Forward" />
      <move select="Hinge Left" beats="3.5" />
      <move select="Forward 2" />
    </path>
  </tam>
    
  
</tamination>
