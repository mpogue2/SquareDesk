<tamination title="Quarter Thru">

  <tam title="Quarter Thru"
       from="Right-Hand Box"
       parts="1.5" >
    <formation>
      <dancer gender="boy" y="2" x="1" angle="270"/>
      <dancer gender="girl" y="2" x="-1" angle="90"/>
    </formation>
    <path couples="1 3">
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path couples="3 1">
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Quarter Thru"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5" >
    <path numbers="1 8">
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path numbers="2 7">
      <move select="Hinge Right" />
    </path>
    <path numbers="3 6">
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path numbers="4 5">
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Quarter Thru"
       from="Columns"
       formation="Column RH GBGB"
       fractions="1.5" >
    <path numbers="2 7">
      <move select="Hinge Right" scaleX=".5" />
    </path>
    <path numbers="4 5">
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
    <path numbers="6 3">
      <move select="Hinge Right" scaleX=".5" />
    </path>
    <path numbers="8 1">
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Quarter Thru"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       fractions="1.5" >
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Centers Quarter Thru"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="1.5" >
    <path>
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Hinge Right" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Left Quarter Thru"
       from="Left-Hand Box"
       formation="Box LH"
       fractions="1.5" >
    <path>
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Left Quarter Thru"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="1.5" >
    <path>
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Left Quarter Thru"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="1.5" >
    <path>
      <move select="Hinge Left" scaleX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
    </path>
  </tam>

  <tam title="Left Quarter Thru"
       from="Facing Diamonds"
       fractions="1.5" >
     <formation>
      <dancer gender="boy" x="0" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="-2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-2" angle="270"/>
    </formation>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Any Hand Quarter Thru" fractions="1.5" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="90"/>
      <dancer gender="girl" x="1" y="2" angle="270"/>
      <dancer gender="boy" x="-1" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
    </formation>
    <path numbers="7 2">
      <move select="Hinge Left"/>
    </path>
    <path numbers="5 4">
      <move select="Hinge Left"/>
      <move select="Run Right"/>
    </path>
    <path numbers="3 6">
      <move select="Hinge Right"/>
      <move select="Flip Left"/>
    </path>
    <path numbers="1 8">
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="As Couples Quarter Thru" group=" "
       formation="Two-Faced Lines RH"
       fractions="3" >
    <path>
      <move select="Hinge Right" beats="3" scaleX="1.5" scaleY="3" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" hands="both" beats="3" scaleX=".5" />
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Hinge Right" hands="both" beats="3" scaleX=".5" />
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleX="1.5" scaleY="3" />
    </path>
  </tam>

  <tam title="All 8 Quarter Thru" group=" "
       formation="Static MiniWaves RH"
       fractions="1.5" >
    <path>
      <move select="Hinge Right" offsetX="1" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Quarter Right" hands="right" offsetY="-1"/>
    </path>
    <path>
      <move select="Hinge Right" offsetX="1" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Quarter Right" hands="right" offsetY="-1"/>
    </path>
  </tam>
</tamination>
