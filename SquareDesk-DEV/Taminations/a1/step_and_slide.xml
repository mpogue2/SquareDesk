<tamination title="Step and Slide">

  <tam title="Step and Slide" from="Lines Facing Out">
    <formation>
      <dancer gender="girl" x="3" y="2" angle="90"/>
      <dancer gender="boy" x="1" y="2" angle="90"/>
      <dancer gender="girl" x="-1" y="2" angle="90"/>
      <dancer gender="boy" x="-3" y="2" angle="90"/>
    </formation>
    <path numbers="4 5">
      <move select="Dodge Left" beats="4" offsetX="-1" />
    </path>
    <path numbers="3 6">
      <move select="Forward" hands="left" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Forward" hands="right" beats="2" />
    </path>
    <path numbers="1 8">
      <move select="Dodge Right" beats="4" offsetX="-1" />
    </path>
  </tam>

  <tam title="Step and Slide" from="Lines Facing In" formation="Normal Lines">
    <path>
      <move select="Dodge Right" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" hands="right" beats="2" />
    </path>
    <path>
      <move select="Forward" hands="left" beats="2" />
    </path>
    <path>
      <move select="Dodge Left" beats="4" offsetX="-1" />
    </path>
  </tam>

  <tam title="Step and Slide" from="Right-Hand Two-Faced Line">
    <formation>
      <dancer gender="boy" x="-3" y="0" angle="90"/>
      <dancer gender="girl" x="-1" y="0" angle="90"/>
    </formation>
    <path numbers="1 4">
      <move select="Dodge Right" beats="4" />
    </path>
    <path numbers="2 3">
      <move select="Forward 2"  />
    </path>
  </tam>

  <tam title="Step and Slide"
       from="Inverted Lines"
       formation="Inverted Lines Ends Facing In">
    <path>
      <move select="Extend Right" beats="4" scaleY="2" />
    </path>
    <path>
      <move select="Forward" hands="left" beats="2" />
    </path>
    <path>
      <move select="Forward" hands="right" beats="2" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleY="2" />
    </path>
  </tam>

</tamination>
