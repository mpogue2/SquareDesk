<tamination title="Quarter Out">

  <tam title="Quarter Out"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" >
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="Quarter Out"
       from="Pass Thru"
       formation="Eight Chain Thru"
       fractions="" >
    <path>
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Quarter Out"
       from="Lines"
       formation="Normal Lines"
       fractions="" >
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Quarter Out" from="Lines Facing Out" formation="Lines Facing Out">
    <path numbers="1 8">
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Quarter Out"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       fractions="" >
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Quarter Out"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="" >
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Quarter Out" from="T-Bones" formation="T-Bone LDDR">
    <path numbers="1 8">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="5 4">
      <move select="Quarter Right" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="2" />
    </path>
  </tam>

  <tam title="Quarter Out" from="Diamonds" formation="Diamonds RH Girl Points">
    <path numbers="6 3">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="5 4">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="8 1">
      <move select="Quarter Left" beats="2" />
    </path>
  </tam>

  <tam title="Quarter Out" from="Heads Facing Left">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="90"/>
      <dancer gender="girl" x="-3" y="-1" angle="90"/>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
    </formation>
    <path numbers="1 8">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="5 4">
      <move select="Quarter Left" beats="2" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="2" />
    </path>
  </tam>

  <tam title="All 4 Couples Quarter Out" formation="Squared Set" group=" ">
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2"/>
      <move select="Quarter Right" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2" />
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2"/>
      <move select="Quarter Right" offsetY="-1"/>
    </path>
  </tam>

  <tam title="As Couples Quarter Out"
       from="Lines"
       formation="Normal Lines"
       group=" " >
    <path>
      <move select="BackHinge Right" beats="2" />
    </path>
    <path>
      <move select="Hinge Left" beats="2" />
    </path>
    <path>
      <move select="Hinge Right" beats="2" />
    </path>
    <path>
      <move select="BackHinge Left" beats="2" />
    </path>
  </tam>
</tamination>
