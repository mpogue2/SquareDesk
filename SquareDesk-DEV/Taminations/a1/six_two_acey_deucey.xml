<tamination title="Six-Two Acey Deucey">

  <tam title="Six-Two Acey Deucey"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points">
    <path couples="3 1">
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path couples="3 1">
      <move select="Forward 4" />
    </path>
    <path couples="4 2">
      <move select="Swing Left" />
    </path>
    <path couples="4 2">
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
  </tam>
  
  <tam title="Six-Two Acey Deucey"
       from="Left-Hand Diamonds"  formation="Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
  </tam>

  <tam title="Six-Two Acey Deucey"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points">
    <path couples="2 4">
      <move select="Extend Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="3" scaleY=".5" />
    </path>
    <path couples="3 1">
      <move select="Swing Left" scaleX=".5" />
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path couples="2 4">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Six-Two Acey Deucey"
       from="Hourglass"
       formation="Hourglass RH BP">
    <path>
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path couples="4 2">
      <move select="Forward 4" />
    </path>
    <path couples="4 2">
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Six-Two Acey Deucey"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP">
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Six-Two Acey Deucey"
       from="Wave and Mini-Waves, Right-Handed">
     <formation>
      <dancer gender="boy" x="-3" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
      <dancer gender="boy" x="3" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Six-Two Acey Deucey"
       from="Wave and Mini-Waves, Left-Handed">
     <formation>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="0"/>
      <dancer gender="boy" x="3" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
  </tam>

</tamination>
