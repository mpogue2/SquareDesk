<tamination title="Scoot and Dodge">

  <tam title="Scoot and Dodge"
       from="Right-Hand Box"
       formation="Box RH"
       fractions="" >
    <path couples="1 3">
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path couples="3 1">
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Scoot and Dodge"
       from="Left-Hand Box"
       formation="Box LH"
       fractions="" >
    <path couples="3 1">
      <move select="Dodge Left" />
    </path>
    <path couples="1 3">
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Scoot and Dodge"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       fractions="" >
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Scoot and Dodge"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       fractions="" >
    <path>
      <move select="Dodge Left" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Dodge Left" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Scoot and Dodge"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Scoot and Dodge"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Dodge Left" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Dodge Left" />
    </path>
  </tam>

  <tam title="As Couples Scoot and Dodge"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       group=" " >
    <path>
      <move select="Extend Right" hands="right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Left" hands="right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" hands="left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Dodge Right" beats="5" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Right" beats="5" hands="right" scaleY="2" />
    </path>
  </tam>

  <tam title="All 8 Scoot and Dodge"
       from="Static Mini-Waves"
       formation="Static MiniWaves RH"
       group=" " >
    <path>
      <move select="Forward 3" />
      <move select="Swing Right" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Swing Right" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
  </tam>
</tamination>
