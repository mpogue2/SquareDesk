<tamination title="Brace Thru">

  <tam title="Brace Thru"
       from="Lines, Boys Ends"
       parts="3" 
       gender-specific="true">
     <formation>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Pull Left" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" />
    </path>
    <path>
      <move select="Pull Left" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".5" />
