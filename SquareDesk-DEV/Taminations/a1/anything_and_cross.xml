<tamination title="Anything and Cross">

  <tam title="Cross" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" beats="3" hands="none"/>
    </path>
  </tam>

  <tam title="Cross" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Stand" beats="3" hands="none"/>
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Cross"
       from="Right-Hand Columns"
       formation="Column RH GBGB" >
    <path>
      <move select="Stand" beats="2" hands="none"/>
    </path>
    <path>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
    <path>
      <move select="Stand" beats="2" hands="none"/>
    </path>
    <path>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
  </tam>

  <tam title="Cross"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" beats="3" hands="none"/>
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" beats="3" hands="none"/>
    </path>
  </tam>

  <tam title="Cross"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG" >
    <path>
      <move select="Stand" beats="3" hands="none"/>
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" beats="3" hands="none"/>
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

</tamination>
