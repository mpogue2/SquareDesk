<tamination title="Spin Chain and Exchange the Gears">

  <tam title="Spin Chain and Exchange the Gears"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3;4.5;3;4.5;4" difficulty="1">
    <path numbers="2 6">
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="HalfHinge Right" />
      <move select="Hinge Right" />
      <move select="Forward" beats="2" scaleX="2.2" scaleY="2.2" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path numbers="5 1">
      <move select="Swing Right" />
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Swing Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="HalfHinge Right" />
      <move select="Hinge Right" />
      <move select="Forward" beats="2.5" scaleX="2.7" scaleY="2.7" />
      <move select="Hinge Right" hands="nohands" />
      <move select="Swing Right" hands="nohands" offsetX="-.5" />
    </path>
    <path numbers="7 3">
      <move select="Swing Right" />
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Swing Left" />
      <move select="Swing Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="HalfHinge Right" />
      <move select="Hinge Right" scaleX=".5" offsetY=".3" />
      <move select="Quarter Right" />
    </path>
    <path numbers="8 4">
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Swing Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="Forward" offsetY=".3" />
      <move select="HalfHinge Right" beats="1.5" offsetX=".3" offsetY=".3" />
    </path>
  </tam>

