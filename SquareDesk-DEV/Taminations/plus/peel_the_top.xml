<tamination title="Peel the Top">

  <tam title="Peel the Top"
       from="Right-Hand Box"
       formation="Box RH"
       parts="3" difficulty="1">
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Cast Right" beats="3" />
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Left-Hand Box"
       formation="Box LH"
       parts="3" difficulty="1">
    <path>
      <move select="Run Right" offsetX="-2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Cast Left" beats="3" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Z formation"
       formation="Z RH GBBG"
       parts="2" difficulty="1">
    <path>
      <move select="Forward" beats="2" scaleX="1.5" scaleY="2" />
      <move select="Swing Right" beats="2.5"/>
      <move select="Hinge Right" beats="1.5" scaleX=".65" />
    </path>
    <path>
      <move select="Run Left" beats="2"/>
      <move select="Lead Left" beats="4" scaleX="1.8" scaleY="3" />
    </path>
    <path>
      <move select="Run Left" beats="2"/>
      <move select="Lead Left" beats="4" scaleX="1.8" scaleY="3" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5" scaleY="2" />
      <move select="Swing Right" beats="2.5"/>
      <move select="Hinge Right" beats="1.5" scaleX=".65" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="2" difficulty="3">
    <path>
      <move select="Forward" beats="2" scaleX="2" scaleY="2" />
      <move select="Cast Right" beats="4"/>
    </path>
    <path>
      <move select="Run Left" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="1" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="2" scaleY="2" />
      <move select="Cast Right" beats="4"/>
    </path>
    <path>
      <move select="Run Left" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="5" scaleX="5" scaleY="2" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="2" difficulty="3">
    <path>
      <move select="Run Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="5" scaleX="5" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="2" scaleY="2" />
      <move select="Cast Left" beats="4"/>
    </path>
    <path>
      <move select="Run Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="1" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="2" scaleY="2" />
      <move select="Cast Left" beats="4" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="2" difficulty="2">
    <path>
      <move select="Run Left" beats="2" offsetX="-1" />
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right" beats="2.5"/>
      <move select="Hinge Right" beats="1.5" scaleX=".5" />
    </path>
    <path>
      <move select="Run Left" beats="2" offsetX="-1" />
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Swing Right" beats="2.5"/>
      <move select="Hinge Right" beats="1.5" scaleX=".5" />
    </path>
  </tam>

  <tam title="Peel the Top"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="2" difficulty="2">
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left" beats="2.5"/>
      <move select="Hinge Left" beats="1.5" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="2" offsetX="-1" />
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left" beats="2.5"/>
      <move select="Hinge Left" beats="1.5" scaleX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="2" offsetX="-1" />
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Peel the Top"
       from="T-Bones 1"
       formation="T-Bone LULU"
       parts="2" difficulty="3">
    <path>
      <move select="Run Left" beats="2" offsetX="-1" />
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Swing Left" beats="2.5" offsetY="1" />
      <move select="Hinge Left" beats="1.5"/>
    </path>
    <path>
      <move select="Run Left" beats="2" offsetX="-1" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left" beats="2.5" offsetY="-1" />
      <move select="Hinge Left" beats="1.5"/>
    </path>
  </tam>

  <tam title="Peel the Top"
       from="T-Bones 2"
       formation="T-Bone DLDL"
       difficulty="3">
    <path>
      <move select="Run Right" offsetX="-2" />
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Right"/>
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Run Right" scaleY="0.25" offsetX="-1" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Right" scaleX="0.75" />
      <move select="Hinge Right" />
    </path>
  </tam>

</tamination>
