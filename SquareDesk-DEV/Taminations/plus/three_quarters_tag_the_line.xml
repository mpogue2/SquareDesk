<tamination title="3/4 Tag the Line">

  <tam title="3/4 Tag the Line"
       from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH"
       difficulty="1">
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="3/4 Tag the Line"
       from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH"
       difficulty="2">
    <path>
      <move select="Quarter Left" offsetX="-.5" offsetY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.5" offsetY=".5" />
      <move select="Extend Left" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="3/4 Tag the Line"
       from="Right-Hand Wave"
       formation="Wave RH"
       difficulty="2">
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.5" offsetY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="3/4 Tag the Line"
       from="Left-Hand Wave"
       formation="Wave LH"
       difficulty="2">
    <path>
      <move select="Quarter Left" offsetX="-.5" offsetY=".5" />
      <move select="Extend Left" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="3/4 Tag the Line"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       difficulty="1">
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="3/4 Tag the Line" from="Lines Facing Out" difficulty="1">
    <formation>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Quarter Left" offsetX="-.5" offsetY="1" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.5" offsetY="1" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
  </tam>

</tamination>
