<tamination title="Coordinate">

  <tam title="Coordinate"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="2;1;3" difficulty="1">
    <path>
      <move select="Flip Right" beats="2" />
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" scaleX="2" beats="2" />
      <move select="Lead Right" scaleX=".5" />
      <move select="Lead Right" scaleX="3" scaleY="1.5" beats="5" />
    </path>
    <path>
      <move select="Forward" scaleX="3" beats="3" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" scaleX="3" beats="3" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Lead Right" scaleX="3" scaleY="2.5" beats="5" />
    </path>
  </tam>

  <tam title="Coordinate"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       parts="2;1;3" difficulty="2">
    <path>
      <move select="Forward 3" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="5" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="1.5" beats="5" />
    </path>
    <path>
      <move select="Flip Left" beats="2" />
      <move select="Forward" />
      <move select="Hinge Left" scaleX=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Coordinate"
       from="3 and 1 Lines"
       parts="4;2" difficulty="3">
     <formation>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="-1" angle="180"/>
      <dancer gender="girl" x="-2" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" />
      <move select="U-Turn Left" hands="left" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY="3" />
      <move select="Run Left" hands="left" scaleY="1.5" />
    </path>
    <taminator>
      Not officially in the Plus program, but often workshopped.
    </taminator>
  </tam>

</tamination>
