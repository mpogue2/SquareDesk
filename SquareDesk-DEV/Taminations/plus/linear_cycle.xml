<tamination title="Linear Cycle">

  <tam title="Linear Cycle"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="1.5;4" difficulty="1">
    <path>
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Run Right" />
      <move select="Forward 2" />
      <move select="U-Turn Right" offsetX="2" />
    </path>
    <taminator>
      After the Hinge, be sure to let go of hands.  Do not hold
      hands again until the end of the call.
    </taminator>
  </tam>

  <tam title="Linear Cycle"
       from="Left-Hand Wave"
       formation="Wave LH"
       parts="1.5;4" difficulty="2">
    <path>
      <move select="Hinge Left" />
      <move select="Forward 4" />
      <move select="Run Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Run Left" />
      <move select="Forward 2" />
      <move select="U-Turn Left" offsetX="2" />
    </path>
  </tam>

  <tam title="Linear Cycle"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5;4" difficulty="1">
    <path>
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Run Right" />
      <move select="Forward 2" />
      <move select="U-Turn Right" offsetX="2" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Run Right" />
      <move select="Forward 2" />
      <move select="U-Turn Right" offsetX="2" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Run Right" />
    </path>
    <taminator>
    Linear Cycle is NOT Recycle and Sweep a Quarter,
    </taminator>
  </tam>

  <tam title="Linear Cycle"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="1.5;4" difficulty="2">
    <path>
      <move select="Hinge Left" />
      <move select="Forward 4" />
      <move select="Run Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Run Left" />
      <move select="Forward 2" />
      <move select="U-Turn Left" offsetX="2" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Run Left" />
      <move select="Forward 2" />
      <move select="U-Turn Left" offsetX="2" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Forward 4" />
      <move select="Run Left" />
    </path>
  </tam>

  <tam title="Linear Cycle"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="1.5;3" difficulty="1">
    <path>
      <move select="Hinge Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Hinge Right" scaleY=".5" />
      <move select="Flip Right" />
      <move select="Forward" />
      <move select="U-Turn Right" beats="1" offsetX="1" />
    </path>
    <path>
      <move select="Hinge Right" scaleY=".5" />
      <move select="Flip Right" />
      <move select="Forward" />
      <move select="U-Turn Right" beats="1" offsetX="1" />
    </path>
    <path>
      <move select="Hinge Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Right" />
    </path>
  </tam>

  <tam title="Linear Cycle"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       parts="1.5;3" difficulty="2">
    <path>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Flip Left" />
      <move select="Forward" />
      <move select="U-Turn Left" beats="1" offsetX="1" />
    </path>
    <path>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Flip Left" />
      <move select="Forward" />
      <move select="U-Turn Left" beats="1" offsetX="1" />
    </path>
    <path>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Left" />
    </path>
  </tam>
</tamination>
