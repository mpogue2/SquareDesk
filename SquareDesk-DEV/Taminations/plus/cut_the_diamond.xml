<tamination title="Cut the Diamond">

  <tam title="Cut the Diamond"
       from="Right-Hand Diamond"
       formation="Diamond RH"
       difficulty="1">
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" beats="2"/>
      <move select="Stand" hands="none" beats="2"/>
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Left-Hand Diamond"
       formation="Diamond LH"
       fractions="" difficulty="2">
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" beats="2"/>
      <move select="Stand" hands="none" beats="2"/>
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Facing Diamond"
       formation="Diamond Facing"
       difficulty="2">
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" beats="2"/>
      <move select="Stand" hands="none" beats="2"/>
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points"
       difficulty="1">
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Facing Diamonds, Right-Hand Wave"
       formation="Diamonds Facing Girl Points"
       difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Facing Diamonds, Left-Hand Wave"
       formation="Diamonds Facing LH Girl Points"
       difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <taminator>
      Centers circulate on the outside, points slide togther inside.
      Right-shoulder rule does not apply.
    </taminator>
  </tam>

  <tam title="Cut the Diamond"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       difficulty="2">
    <path>
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Lead Right"  beats="2"/>
      <move select="Stand" beats="2" hands="none"/>
    </path>
    <path>
      <move select="Dodge Right" scaleX=".25" scaleY=".25" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX=".5" />
      <move select="Stand" beats="2" hands="none"/>
    </path>
    <path>
      <move select="Dodge Right" scaleX="1.25" scaleY="1.25" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Cut the Diamond"
       from="Diamonds, Points Facing Out"
       formation="Diamonds 3 and 1 Girl Points"
       difficulty="2">
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Run Right" />
    </path>
  </tam>
</tamination>
