<tamination title="Relay the Deucey">

  <tam title="Relay the Deucey" from="Right-Hand Waves"
    formation="Ocean Waves RH BGGB" parts="3;4.5;3;3;3" difficulty="1">
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Forward 2" beats="4.5" />
      <move select="Forward 2" beats="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Forward 2" beats="3" />
      <move select="Forward 2" beats="4.5" />
    </path>
  </tam>

  <tam title="Relay the Deucey" from="Left-Hand Waves"
    formation="Ocean Waves LH BGGB" parts="3;4.5;3;3;3" difficulty="2">
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
      <move select="Forward 2" beats="3" />
      <move select="Forward 2" beats="4.5" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Forward 2" beats="4.5" />
      <move select="Forward 2" beats="3" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3" />
    </path>
  </tam>
</tamination>
