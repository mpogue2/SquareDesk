<tamination title="Ping Pong Circulate">

  <tam title="Ping Pong Circulate"
       from="Quarter Tag"
       difficulty="1">
     <formation>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
      <dancer gender="girl" x="1" y="-3" angle="90"/>
      <dancer gender="boy" x="3" y="0" angle="270"/>
      <dancer gender="girl" x="1" y="0" angle="90"/>
    </formation>
    <path numbers="2 4">
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward" />
    </path>
    <path numbers="8 6">
      <move select="Forward" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path numbers="1 3">
      <move select="Lead Right" beats="4" scaleX="4" scaleY="3" />
      <move select="Lead Right" />
    </path>
    <path numbers="5 7">
      <move select="Lead Left" beats="4" scaleX="3" />
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Ping Pong Circulate"
       from="Left-Handed Quarter Tag"
       fractions="" difficulty="2">
     <formation>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
      <dancer gender="girl" x="1" y="-3" angle="90"/>
      <dancer gender="boy" x="3" y="0" angle="90"/>
      <dancer gender="girl" x="1" y="0" angle="270"/>
    </formation>
    <path numbers="6 8">
      <move select="Forward" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path numbers="4 2">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward" />
    </path>
    <path numbers="1 3">
      <move select="Lead Left" beats="4" scaleX="4" scaleY="3" />
      <move select="Lead Left" />
    </path>
    <path numbers="5 7">
      <move select="Lead Right" beats="4" scaleX="3" />
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Boys Only Ping Pong Circulate"
       from="Quarter Tag"
       formation="Quarter Tag"
       fractions="" difficulty="2">
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="4" scaleY="2" />
      <move select="Lead Right" beats="2" scaleX="2" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Girls Only Ping Pong Circulate"
       from="Quarter Tag"
       formation="Quarter Tag"
       fractions="" difficulty="2">
    <path>
    </path>
    <path>
      <move select="Forward" beats="6" scaleX="3" scaleY="3" />
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Left" beats="3.5" scaleX="2" />
      <move select="Quarter Left" beats="2.5" offsetX="1" offsetY="-1" />
    </path>
  </tam>
</tamination>
