<tamination title="All 8 Spin the Top">

  <tam title="All 8 Spin the Top" from="Wrong Way Thar" formation="Thar LH Boys"
       parts="3" difficulty="1">
    <path>
      <move select="Swing Right" />
      <move select="Lead Right" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Lead Right" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="All 8 Spin the Top" from="Thar" difficulty="2"
       formation="Thar RH Boys" parts="3">
    <path>
      <move select="Swing Left" />
      <move select="Lead Left" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Lead Left" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="All 8 Spin the Top" difficulty="1"
       from="Grand Circle" parts="5">
     <formation>
      <dancer gender="boy" x="-1" y="-3" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="180"/>
      <dancer gender="boy" x="-3" y="1" angle="270"/>
      <dancer gender="girl" x="-3" y="-1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Swing Right" />
      <move select="Lead Right" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Swing Right" />
      <move select="Lead Right" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="All 8 Left Spin the Top" difficulty="2"
       from="Grand Circle" parts="5">
     <formation>
      <dancer gender="boy" x="-1" y="-3" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="180"/>
      <dancer gender="boy" x="-3" y="1" angle="270"/>
      <dancer gender="girl" x="-3" y="-1" angle="90"/>
    </formation>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Swing Left" />
      <move select="Lead Left" scaleX="3" scaleY="3" beats="4.5" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Swing Left" />
      <move select="Lead Left" scaleX="3" scaleY="3" beats="4.5" />
    </path>
  </tam>

</tamination>
