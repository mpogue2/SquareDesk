<tamination title="Crossfire">

  <tam title="Crossfire"
       from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH"
       fractions="" difficulty="1">
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="2" offsetX="2" />
    </path>
    <path>
      <move select="Swing Right" beats="3.5" />
      <move select="Forward 2" beats="2.5"/>
    </path>
  </tam>

  <tam title="Crossfire"
       from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH"
       fractions="" difficulty="2">
    <path>
      <move select="Swing Left" beats="3.5"/>
      <move select="Forward 2" beats="2.5"/>
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX="2" scaleY="2" offsetX="2" />
    </path>
  </tam>

  <tam title="Crossfire"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       fractions="" difficulty="1">
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Crossfire"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       difficulty="2">
    <path>
      <move select="Run Left" beats="4" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Crossfire"
       from="Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH"
       difficulty="1">
    <path>
      <move select="Run Right" beats="5" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Crossfire"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       fractions="" difficulty="2">
    <path>
      <move select="Run Left" beats="5" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Extend Left 2" />
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <taminator>
      There is some controversy over this particular case.
      The alternative treats Crossfire as a strictly 4-dancer call,
      so this case ends in a double pass thru formation.
    </taminator>
  </tam>

  <tam title="Crossfire"
       from="Inverted Lines, Centers Facing In"
       formation="Inverted Lines Ends Facing Out"
       fractions="" difficulty="2">
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4"  offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Crossfire"
       from="Inverted Lines, Centers Facing Out"
       formation="Inverted Lines Ends Facing In"
       fractions="" difficulty="3">
    <path>
      <move select="Run Right" beats="4" scaleX="1" scaleY="2" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" scaleX="0.75" scaleY="2" offsetX="1"/>
      <move select="Forward" beats="2"/>
    </path>
  </tam>

  <tam title="Crossfire"
       from="Lines Facing In"
       formation="Normal Lines"
       difficulty="3">
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX=".75" offsetX="-1" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="-1"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" scaleY="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Crossfire"
       from="Tidal Lines"
       formation="Tidal Line RH"
       difficulty="3">
    <path>
      <move select="Run Right" beats="5" scaleX="2" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="2" offsetY=".5" />
    </path>
  </tam>

  <tam title="Crossfire"
       from="Tidal Lines"
       formation="Tidal Line LH"
       difficulty="3" display="none">
    <path>
      <move select="Run Left" beats="5" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Left" beats="5" scaleX="2" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Right" beats="5" offsetX="-2" offsetY=".5" />
    </path>
  </tam>

  <tam title="Crossfire"
       from="Tidal Inverted Lines"
       formation="Tidal Inverted Line RH"
       difficulty="3">
    <path>
      <move select="Run Right" beats="4"   offsetY="-.5" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Left" beats="4"  scaleY=".75" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY=".75" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" scaleY="1.25" offsetX="1"/>
      <move select="Extend Left" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Crossfire"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       difficulty="3">
    <path>
      <move select="Swing Right" hands="gripright" scaleY=".75" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Cross Fold Left" scaleX=".5" />
    </path>
    <path>
      <move select="Swing Right" hands="gripright" scaleY=".75" />
      <move select="Extend Left" scaleY=".5" />
    </path>
    <path>
      <move select="Cross Fold Left" scaleX=".5" />
    </path>
  </tam>
</tamination>
