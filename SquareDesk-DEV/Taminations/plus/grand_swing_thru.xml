<tamination title="Grand Swing Thru">

  <tam title="Grand Swing Thru"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="3" difficulty="1">
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Stand" beats="3" hands="nohands" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
  </tam>

  <tam title="Grand Swing Thru"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       parts="3" difficulty="2">
    <path>
      <move select="Stand" beats="3" hands="nohands" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
    </path>
  </tam>

  <tam title="Grand Left Swing Thru"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       parts="3" difficulty="1">
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Stand" beats="3" hands="nohands" />
    </path>
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
  </tam>

  <tam title="Grand Left Swing Thru"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="3" difficulty="2">
    <path>
      <move select="Stand" beats="3" hands="nohands" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Left" scaleX=".65" scaleY=".5" />
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
  </tam>
  
