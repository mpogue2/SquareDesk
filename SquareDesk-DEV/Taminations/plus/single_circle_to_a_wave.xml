<tamination title="Single Circle to a Wave">

  <tam title="Single Circle to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="1">
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Forward" scaleX=".7" scaleY=".7" />
    </path>
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY="2" />
    </path>
  </tam>

  <tam title="Single Circle to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="1">
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Forward" scaleX=".7" scaleY=".7" />
    </path>
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY="2" />
    </path>
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Forward" scaleX=".7" scaleY=".7" />
    </path>
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY="2" />
    </path>
  </tam>

  <tam title="Single Circle to a Wave"
       from="Lines"
       formation="Normal Lines"
       fractions="" difficulty="2">
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX=".7" scaleY=".5" />
    </path>
  </tam>

  <tam title="Single Circle 3/4 to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" difficulty="2">
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX="1.7" />
    </path>
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Dodge Left" beats="1" offsetX="-.3" offsetY="-1" />
    </path>
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Extend Left" scaleX="1.7" />
    </path>
    <path>
      <move select="Forward" scaleX=".3" scaleY=".3" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="ssqtr" />
      <move select="Dodge Left" beats="1" offsetX="-.3" offsetY="-1" />
    </path>
  </tam>

  <tam title="Reverse Single Circle to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       fractions="" difficulty="2">
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" reflect="-1" />
      <move select="ssqtr" reflect="-1" />
      <move select="Extend Right" scaleX=".7" scaleY="2" />
    </path>
    <path>
      <move select="Forward" scaleX="1.3" scaleY=".3" />
      <move select="ssqtr" reflect="-1" />
      <move select="ssqtr" reflect="-1" />
      <move select="Forward" scaleX=".7" scaleY=".7" />
    </path>
  </tam>
</tamination>
