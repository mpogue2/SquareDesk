<tamination title="Spin Chain Thru">

  <tam title="Spin Chain Thru"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3;4.5;3" difficulty="1">
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Spin Chain Thru"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="3;4.5;3" difficulty="2">
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Spin Chain Thru"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="5;4.5;3" difficulty="2">
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right" />
    </path>
    <taminator>
    The Facing Couples rule applies here.
    </taminator>
  </tam>


</tamination>
