<tamination title="Recycle">

  <tam title="Recycle"
       from="Right-Hand Wave"
       formation="Wave RH"
       difficulty="1">
    <path>
      <move select="Run Right" beats="4" offsetX="2" offsetY="-2" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-1" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="1" />
    </path>
    <taminator>
      Do NOT hold hands during this call.
    </taminator>
  </tam>

  <tam title="Recycle"
       from="Left-Hand Wave"
       formation="Wave LH Boys Center"
       difficulty="1">
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-1" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="2" offsetY="2" />
    </path>
  </tam>

  <tam title="Recycle"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       difficulty="1">
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
    <taminator>
      Keep your hands to yourself until the end of the call.
    </taminator>
  </tam>

  <tam title="Recycle"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       difficulty="1">
    <path>
      <move select="Run Left" beats="4" offsetX="1" offsetY="2" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="1" offsetY="2" />
    </path>
    <taminator>
      Do not hold, pull, push, or drag any other dancer.
    </taminator>
  </tam>

  <tam title="Recycle"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       difficulty="2">
    <path>
      <move select="Run Right" beats="4" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="U-Turn Right" beats="2" offsetX="1.5" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="U-Turn Right" beats="2" offsetX="1.5" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Recycle"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       difficulty="2">
    <path>
      <move select="Run Left" beats="4" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="U-Turn Left" beats="2" offsetX="1.5" offsetY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="U-Turn Left" beats="2" offsetX="1.5" offsetY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="2" offsetY=".5" />
    </path>
  </tam>

  <tam title="Recycle"
       from="Thar"
       formation="Thar RH Boys"
       difficulty="2">
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-1.5" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="1.5" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="3" offsetY="2" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-1.5" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="1.5" />
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="3" offsetY="2" />
    </path>
  </tam>

  <!-- tam title="Recycle"
       from="Inverted Lines"
       formation="Inverted Lines Ends Facing Out"
       fractions="" difficulty="3">
    <path>
      <move select="Run Left" beats="4" offsetX="-1" offsetY="2" />
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX=".5" />
      <move select="U-Turn Left" beats="2" offsetX="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-.5" />
      <move select="U-Turn Right" beats="2" offsetX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
    <taminator>
    There is some debate if Recycle can be called from this formation,
    and at what level.  It might be more appropriate at Advanced,
    after learning Cycle and Wheel where the ends can face the same direction.
    </taminator>
  </tam  -->

</tamination>
