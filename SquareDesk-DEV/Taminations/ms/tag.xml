<tamination title="Tag the Line">

  <tam title="Tag the Line" from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH" difficulty="1">
    <path>
      <move select="Quarter Right" offsetX=".5" />
      <move select="Forward 3" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Quarter Right" offsetX=".5" />
      <move select="Forward 3" />
      <move select="Extend Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Tag the Line"
       from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH" difficulty="2">
    <path>
      <move select="Quarter Left" offsetX="-.5" />
      <move select="Forward 3" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.5" />
      <move select="Forward 3" />
      <move select="Extend Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Tag the Line"
       from="Right-Hand Ocean Wave"
