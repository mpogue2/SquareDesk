      <move select="Extend Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Tag the Line"
       from="Lines Facing In"
       formation="Normal Lines"
       difficulty="2">
    <path>
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Quarter Left" />
      <move select="Forward 3" />
      <move select="Extend Right" />
    </path>
    <path>
      <move select="Quarter Left" />
      <move select="Forward 3" />
      <move select="Extend Right" />
    </path>
  </tam>

  <tam title="Tag the Line" from="Lines Facing Out" formation="Lines Facing Out" difficulty="1">
    <path>
      <move select="Quarter Left" offsetX="-1" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="-1" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Quarter Right" />
      <move select="Forward 3" />
      <move select="Extend Right"/>
    </path>
    <path>
      <move select="Quarter Right"/>
      <move select="Forward 3" />
      <move select="Extend Right" />
    </path>
  </tam>

  <tam title="Tag the Line"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       difficulty="1">
    <path>
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Quarter Right" offsetX="1" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Quarter Right" />
      <move select="Forward 3" />
      <move select="Extend Right" />
