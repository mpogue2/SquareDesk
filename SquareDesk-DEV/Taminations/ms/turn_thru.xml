      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleY=".75" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Turn Thru" from="Quarter Tag" difficulty="1">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
    </formation>
    <path>
    </path>
    <path>
    </path>
    <path>
      <move select="Swing Right" scaleX=".75"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".75" scaleY=".5"/>
      <move select="Extend Right"/>
    </path>
    <taminator>
      The Ocean Wave rule is used here.
      The centers work with each other and not the outsides.
    </taminator>
  </tam>

