<tamination title="Turn Thru">

  <tam title="Turn Thru"
       from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Turn Thru" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleY=".75" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleY=".75" />
    </path>
  </tam>

  <tam title="Turn Thru"
       from="Lines"
       formation="Normal Lines" difficulty="2">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Turn Thru"
       from="Waves"
       formation="Ocean Waves RH GBBG" difficulty="1">
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleY=".25" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="2" scaleY="1.75" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="2" scaleY="1.75" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleY=".25" />
    </path>
  </tam>

  <tam title="Turn Thru" from="Eight Chain Thru" formation="Eight Chain Thru" difficulty="1">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
