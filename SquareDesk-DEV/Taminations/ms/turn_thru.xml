      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Right" hands="gripright" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Turn Thru" from="Right-Hand Columns" formation="Column RH GBGB" difficulty="2">
    <path>
      <move select="Hinge Right" scaleX=".75" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleY=".75" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".75" />
