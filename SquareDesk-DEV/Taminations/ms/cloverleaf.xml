<tamination title="Cloverleaf">

  <tam title="Cloverleaf"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path>
      <move select="Lead Right" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Cloverleaf"
       from="Trade By"
       formation="Trade By">
    <path>
      <move select="Lead Right" />
      <move select="Lead Right" scaleX="2" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" scaleX="2" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" />
    </path>
    <path>
    </path>
    <path>
    </path>
  </tam>

  <tam title="Cloverleaf" from="After Heads Pass Thru">
    <formation>
      <dancer gender="boy" x="2" y="1" angle="0"/>
      <dancer gender="girl" x="2" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
      <dancer gender="girl" x="1" y="-3" angle="90"/>
    </formation>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" scaleX="2" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Lead Right" scaleX="2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Forward 2" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Forward 2" beats="3" hands="left"/>
    </path>
  </tam>

</tamination>
