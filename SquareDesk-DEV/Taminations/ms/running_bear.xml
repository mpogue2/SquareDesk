<tamination title="Running Bear">

  <tam title="Running Bear"
       group=" "
       formation="Static Square"
       fractions="8;8;3;5;2;3;4;4.5;2;6.5;4;4.5;2" >
    <path>
      <!-- Ladies Chain -->
        <move select="Flip Left" beats="5" offsetY="-4" />
        <move select="Beau Wheel" />
      <!-- Ladies Chain -->
        <move select="Flip Left" beats="5" offsetY="-4" />
        <move select="Beau Wheel" />
      <!-- Rollaway -->
        <move select="Dodge Right" hands="gripright" />
      <!-- Star Thru -->
        <move select="Extend Left"  beats="3" scaleX="3" scaleY=".5" />
        <move select="Quarter Right" hands="right" beats="2" offsetX="1" offsetY="-.5" />
      <!-- Dive Thru -->
        <move select="Extend Left" hands="gripright" scaleY=".5" />
        <move select="Extend Right" hands="gripright" scaleY=".5" />
        <move select="Run Right" hands="gripright" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Right" hands="gripright"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Left" hands="gripright"/>
      <!-- Dive Thru -->
        <move select="Extend Left" hands="gripright" scaleY=".5" />
        <move select="Extend Right" hands="gripright" scaleY=".5" />
        <move select="Lead Right" />
      <!-- Separate and Star Thru -->
        <move select="Lead Right" beats="3.5" scaleX="4" scaleY="4"/>
        <move select="Lead Right" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Right" hands="gripright"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Left" hands="gripright"/>
      <!-- Dive Thru -->
        <move select="Extend Left" hands="gripright" scaleY=".5" />
        <move select="Extend Right" hands="gripright" scaleY=".5" />
        <move select="Run Right" beats="4" hands="gripright" />
    </path>
    <path>
      <!-- Ladies Chain -->
        <move select="Pull Left" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Extend Right" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Belle Wheel" />
      <!-- Ladies Chain -->
        <move select="Pull Left" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Extend Right" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Belle Wheel" />
      <!-- Rollaway -->
        <move select="Fold Left" hands="gripleft" beats="1.5" scaleX=".6" scaleY=".5" />
        <move select="U-Turn Left" hands="gripleft" beats="1.5" offsetX="1.2" offsetY="-1" />
      <!-- Star Thru -->
        <move select="Extend Left"  beats="3" scaleX="3" scaleY=".5" />
        <move select="Quarter Left" hands="left" beats="2" offsetX="1" offsetY="-.5" />
      <!-- Dive Thru -->
        <move select="Extend Right" hands="gripleft" scaleY=".5" />
        <move select="Extend Left" hands="gripleft" scaleY=".5" />
        <move select="Flip Left" hands="gripleft" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Left" hands="gripleft"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Right" hands="gripleft"/>
      <!-- Dive Thru -->
        <move select="Extend Right" hands="gripleft" scaleY=".5" />
        <move select="Extend Left" hands="gripleft" scaleY=".5" />
        <move select="Quarter Left" offsetY="1" />
      <!-- Separate and Star Thru -->
        <move select="Lead Left" beats="3.5" scaleX="3" scaleY="3"/>
        <move select="Quarter Left" offsetX="1" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Left" hands="gripleft"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Right" hands="gripleft"/>
      <!-- Dive Thru -->
        <move select="Extend Right" hands="gripleft" scaleY=".5" />
        <move select="Extend Left" hands="gripleft" scaleY=".5" />
        <move select="Flip Left" beats="4" hands="gripleft" />
    </path>
    <path>
      <!-- Ladies Chain -->
        <move select="Flip Left" beats="5" offsetY="-4" />
        <move select="Beau Wheel" />
      <!-- Ladies Chain -->
        <move select="Flip Left" beats="5" offsetY="-4" />
        <move select="Beau Wheel" />
      <!-- Rollaway -->
        <move select="Dodge Right" hands="gripright" />
      <!-- do nothing while the heads star thru -->
        <move select="Stand" beats="5"/>
      <!-- Dive Thru -->
        <move select="Extend Left" hands="left" scaleY=".5" />
        <move select="Extend Right" hands="left" scaleY=".5" />
      <!-- Pass Thru (while outsides complete Dive Thru-->
        <move select="Extend Left" beats="1.5" scaleY=".5" />
        <move select="Extend Right" beats="1.5" scaleY=".5" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Left" hands="gripleft"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Right" hands="gripleft"/>
      <!-- Dive Thru -->
        <move select="Extend Left" hands="left" scaleY=".5" />
        <move select="Extend Right" hands="left" scaleY=".5" />
      <!-- Centers Square Thru -->
        <move select="Pull Left" scaleY=".5" />
        <move select="Lead Left" offsetX=".5" offsetY="-.5" />
        <move select="Lead Left" scaleX=".5" scaleY="1.5" />
        <move select="Lead Left" offsetX=".5" offsetY="-.5" />
        <move select="Extend Left" scaleY=".5" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Left" hands="gripleft"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Right" hands="gripleft"/>
      <!-- Dive Thru -->
        <move select="Extend Left" hands="left" scaleY=".5" />
        <move select="Extend Right" hands="left" scaleY=".5" />
      <!-- Box the Gnat and Pull By -->
        <movement hands="none" beats="2" cx1="1" cy1="1" cx2="1.5" cy2="1" x2="2" y2="0" cx3="1.3" cx4="1.3" cy4="-2" x4="0" y4="-2" />
        <move select="Extend Left" scaleY=".5"/>
        <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <!-- Ladies Chain -->
        <move select="Pull Left" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Extend Right" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Belle Wheel" />
      <!-- Ladies Chain -->
        <move select="Pull Left" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Extend Right" beats="2.5" scaleX="3" scaleY="1.75" />
        <move select="Belle Wheel" />
      <!-- Rollaway -->
        <move select="Fold Left" hands="gripleft" beats="1.5" scaleX=".6" scaleY=".5" />
        <move select="U-Turn Left" hands="gripleft" beats="1.5" offsetX="1.2" offsetY="-1" />
      <!-- do nothing while the heads star thru -->
        <move select="Stand" beats="5"/>
      <!-- Dive Thru -->
        <move select="Extend Right" hands="right" scaleY=".5" />
        <move select="Extend Left" hands="right" scaleY=".5" />
      <!-- Pass Thru (while outsides complete Dive Thru-->
        <move select="Extend Left" beats="1.5" scaleY=".5" />
        <move select="Extend Right" beats="1.5" scaleY=".5" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Right" hands="gripright"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Left" hands="gripright"/>
      <!-- Dive Thru -->
        <move select="Extend Right" hands="right" scaleY=".5" />
        <move select="Extend Left" hands="right" scaleY=".5" />
      <!-- Centers Square Thru -->
        <move select="Pull Left" scaleY=".5" />
        <move select="Lead Right" scaleX=".5" scaleY="1.5" />
        <move select="Lead Right" offsetX=".5" offsetY=".5" />
        <move select="Lead Right" scaleX=".5" scaleY="1.5" />
        <move select="Extend Left" scaleY=".5" />
      <!-- Dosado -->
        <move select="Extend Left" scaleY=".5" />
        <move select="Extend Right" scaleY=".5" />
        <move select="Retreat Right" scaleY=".5" />
        <move select="Retreat Left" scaleY=".5" />
      <!-- Circle Four 1/2 -->
        <move select="Eighth Right" hands="gripright"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Circle Left Quarter" scaleX="2" scaleY="2"/>
        <move select="Eighth Left" hands="gripright"/>
      <!-- Dive Thru -->
        <move select="Extend Right" hands="right" scaleY=".5" />
        <move select="Extend Left" hands="right" scaleY=".5" />
      <!-- Box the Gnat and Pull By -->
        <movement hands="none" beats="2" cx1="1" cy1=".1" cx2="1.5" cy2=".1" x2="2" y2="0" cx3="1.3" cx4="1.3" cy4="2" x4="0" y4="2" />
        <move select="Extend Left" scaleY=".5"/>
        <move select="Extend Right" scaleY=".5"/>
    </path>

    <taminator>
      Note that some of the calls overlap.
      For example, after the first Dive Thru the centers Pass Thru while
      the outside couples are still trading.
    </taminator>

  </tam>

</tamination>