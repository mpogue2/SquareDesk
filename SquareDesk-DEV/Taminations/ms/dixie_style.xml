<tamination title="Dixie Style to an Ocean Wave">

  <tam title="Dixie Style to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       difficulty="1" >
    <path>
      <move select="Dodge Right" beats="4" scaleY="0.875"/>
      <move select="Hinge Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Left" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Dixie Style to a Wave" from="Tandem" formation="Tandem Girls Lead"
       difficulty="2">
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Dixie Style to a Wave"
       from="Lines"
       formation="Normal Lines"
       difficulty="1" >
    <path>
      <move select="Dodge Right" beats="4" scaleY="0.875"/>
      <move select="Hinge Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Dodge Right" beats="4" scaleY="0.875"/>
      <move select="Hinge Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Left" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Dixie Style to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       difficulty="2" >
    <path>
      <move select="Dodge Right" scaleY=".875" offsetX="-.3"/>
      <move select="Stand" />
      <move select="Hinge Left" scaleX=".8" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="1.15" scaleY="1.5" />
      <move select="Extend Right" beats="2" scaleX="1.15" scaleY="1.25" />
      <move select="Quarter Left" hands="left" offsetX=".2" offsetY=".75" />
    </path>
    <path>
      <move select="Dodge Right" scaleY=".875" offsetX="-.3"/>
      <move select="Stand" />
      <move select="Hinge Left" scaleX=".8" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="1.15" scaleY="1.5" />
      <move select="Extend Right" beats="2" scaleX="1.15" scaleY="1.25" />
      <move select="Quarter Left" hands="left" offsetX=".2" offsetY=".75" />
    </path>
  </tam>

  <tam title="Dixie Style to a Wave"
       from="Double Pass Thru"
       difficulty="1" >
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Reverse Dixie Style to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       difficulty="2" >
    <path>
      <move select="Extend Right" beats="2" hands="right" offsetX="1" offsetY="-.5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Right" scaleY=".75"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4" scaleY="0.875"/>
      <move select="Hinge Right" scaleY=".75"/>
    </path>
  </tam>
</tamination>
