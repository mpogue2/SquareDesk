<tamination title="Own the Anyone Anything By Anything">

  <tam title="Own the Boys: Ah So by Switch the Wave" group=" "
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGBG" >
    <path couples="3 1">
      <move select="Fold Right" beats="3" scaleX=".65" scaleY=".5" offsetY="-1.5" />
    </path>
    <path couples="3 1">
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
    </path>
    <path couples="4 2">
      <move select="Run Right" offsetX="-1.25" offsetY="1.5" hands="nohands" />
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="3"  scaleY=".75" hands="nohands" />
    </path>
  </tam>

  <tam title="Own the Leaders: Step and Fold by 1/2 Crazy Lockit"
       from="Right-Hand Waves" group=" "
       formation="Ocean Waves RH GBGB" >
    <path couples="2 4">
      <move select="Hinge Right" beats="2" offsetX=".5" offsetY="-2" />
      <move select="Hinge Left" scaleX="1" scaleY=".5" />
    </path>
    <path couples="2 4">
      <move select="Forward" beats="2" scaleX="1" />
    </path>
    <path couples="3 1">
      <move select="Hinge Left" beats="2" scaleX=".5" hands="nohands" />
      <move select="Hinge Right" scaleX="3" scaleY="1.5" />
    </path>
    <path couples="3 1">
      <move select="Fold Right" beats="2" scaleX=".5"  scaleY="1" hands="nohands" />
    </path>
  </tam>

  <tam title="Own the Ends: Regroup by Shakedown" group=" "
       from="Lines Facing Out"
       formation="Lines Facing Out" >
    <path couples="4 2">
      <move select="Quarter Right" />
      <move select="Run Right" scaleY="2.5" scaleX="2"  />
      <move select="Forward" scaleX="2" />
    </path>
    <path couples="4 2">
      <move select="Flip Right" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path couples="3 1">
      <move select="U-Turn Right" offsetX="-1.5" offsetY="-.5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path couples="3 1">
      <move select="Quarter Left" />
      <move select="Run Left" scaleY="2.5" scaleX="1"  />
      <move select="Forward" scaleX="2" />
    </path>
  </tam>

  <tam title="Own the Outsides: Swing and Mix by Linear Cycle"
       from="Right-Hand Tidal Wave" group=" "
       formation="Tidal Wave RH BGGB" >
    <path couples="3 1">
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Run Left" scaleY="1" />
    </path>
    <path couples="3 1">
      <move select="Swing Right" scaleX=".65" scaleY=".5" />
      <move select="Dodge Right" beats=".5" scaleY=".25" />
      <move select="Swing Right" scaleY=".75" />
    </path>
    <path couples="4 2">
      <move select="Hinge Right" scaleY=".5" />
      <move select="Flip Right" scaleY="1.5" />
      <move select="Forward" offsetY="-1" />
      <move select="U-Turn Right" beats="1" offsetX="1" />
    </path>
    <path couples="4 2">
      <move select="Hinge Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Right" />
    </path>
  </tam>

  <tam title="Own the Girls: Explode the Line by Vertical 1/2 Tag"
       from="3 and 1 Lines" group=" "
       formation="3 and 1 lines #7" >
    <path>
      <move select="U-Turn Left" />
      <move select="Forward" beats="3" offsetX="2" />
    </path>
    <path>
      <move select="Lead Left" hands="right" beats="3" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX=".2" scaleY=".5" />
    </path>
    <path>
      <move select="Forward" beats="3" offsetX="2" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX="2"  scaleY=".5" />
    </path>
  </tam>

  <tam title="Own the Outsides: Linear Cycle by Pass the Ocean"
       from="Right-Hand Tidal Wave" group=" ">
    <formation name="C3A own_the_anyone_anything_by_anything 1">
      <dancer gender="boy" x="0" y="5" angle="0" />
      <dancer gender="girl" x="0" y="3" angle="180" />
      <dancer gender="boy" x="-1" y="1" angle="90" />
      <dancer gender="girl" x="1" y="1" angle="90" />
    </formation>
    <path>
      <move select="Hinge Right" beats="1.25" scaleX="2" />
      <move select="Extend Right" beats="4" scaleX="3" scaleY="1.25"  />
      <move select="Run Right" scaleX=".5" scaleY=".88" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Run Right" scaleX="1" scaleY="1" />
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".25"  />
      <move select="U-Turn Right" beats="1.8" offsetX="1.5" offsetY="-.25" scaleX=".25" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleY=".25" />
      <move select="Lead Left" beats="2.5" hands="left" />
    </path>
  </tam>

</tamination>
