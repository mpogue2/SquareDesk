<tamination title="1/4 the Deucey">

  <tam title="1/4 the Deucey" from="Right-Hand Waves"
       formation="Ocean Waves RH GBGB" fractions="2;2;2">
    <path numbers="1 8" couples="4 2">
      <move select="Hinge Right" beats="2"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Hinge Right" beats="2"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path numbers="2 7" couples="4 2">
      <move select="Hinge Right" beats="2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path numbers="3 6" couples="3 1">
      <move select="Hinge Right" beats="2"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Stand" beats="2"/>
      <move select="Hinge Left" beats="2"/>
    </path>
    <path numbers="4 5" couples="3 1">
      <move select="Hinge Right" beats="2"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
      <move select="Hinge Right" beats="2"/>
      <move select="Hinge Left" beats="2"/>
    </path>
  </tam>

  <tam title="1/4 the Deucey" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" fractions="2;2;2">
    <path>
      <move select="Hinge Left" beats="2"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Hinge Right" beats="2"/>
    </path>
    <path>
      <move select="Hinge Left" beats="2"/>
      <move select="Hinge Right" beats="2"/>
      <move select="Stand" beats="2"/>
      <move select="Hinge Right" beats="2"/>
    </path>
    <path>
      <move select="Hinge Left" beats="2"/>
      <move select="Run Left" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Left" beats="2"/>
      <move select="Hinge Right" beats="2"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
