<tamination title="Team Up">



  <tam title="Team Up" from="Completed Double Pass Thru" formation="Completed Double Pass Thru">
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Quarter Right" beats="1.5" hands="right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Dodge Left"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
  </tam>

<!-- ARV 20130208 22:10 CST -->
  <tam title="Team Up" from="Inverted Lines" formation="Inverted Lines Ends Facing Out">
    <path couples="2 4">
      <move select="Lead Left 2" offsetX="-1" offsetY="1" />
      <move select="Quarter Right" beats="1.5" hands="right" offsetX="1"/>
    </path>
    <path couples="2 4">
      <move select="Run Right" offsetX="1"/>
    </path>
    <path couples="3 1">
      <move select="Dodge Left" offsetX="1"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right 2" offsetY="-1" offsetX="0" />
      <move select="Hinge Right"/>
    </path>
  </tam>

<!-- ARV 20130209 10:50 CST -->
  <tam title="Team Up" from="T-Bones" formation="T-Bone URDR">
    <path couples="4 2">
      <move select="Forward" />
      <move select="Quarter Left" beats="1.5" hands="left" offsetX="1"/>
    </path>
    <path couples="4 2">
      <move select="Dodge Left" />
    </path>
    <path couples="3 1">
      <move select="Run Right" />
    </path>
    <path couples="3 1">
      <move select="Run Left" hands="left" />
    </path>
  </tam>

</tamination>
