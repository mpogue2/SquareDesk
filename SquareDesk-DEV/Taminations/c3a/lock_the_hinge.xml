<tamination title="Lock the Hinge">

  <tam title="Lock the Hinge" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" parts="3">
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Lock the Hinge" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" parts="3">
    <path>
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleX=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleX=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Lock the Hinge" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH" parts="3">
    <path>
      <move select="Lead Right" beats="3" hands="gripright" scaleX="1.5" scaleY="3"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="gripboth" scaleX=".5"/>
      <move select="Quarter Left" offsetX="-1" offsetY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="gripboth" scaleX=".5"/>
      <move select="Quarter Left" offsetX="-1" offsetY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="gripright" scaleX="1.5" scaleY="3"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Lock the Hinge" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH" parts="3">
    <path>
      <move select="Lead Left" beats="3" hands="gripleft" scaleX="1.5" scaleY="3"/>
      <move select="Quarter Left" offsetX="-1" offsetY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" hands="gripboth" scaleX=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" hands="gripboth" scaleX=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" hands="gripleft" scaleX="1.5" scaleY="3"/>
      <move select="Quarter Left" offsetX="-1" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Lock the Hinge" from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB" parts="3">
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleY=".5"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleY=".5"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Lock the Hinge" from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB" parts="3">
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleY=".5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleY=".5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Right-Hand Box" formation="Box RH" parts="1.5">
    <path couples="3 1">
      <move select="Hinge Right"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Right"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Left-Hand Box" formation="Box LH" parts="1.5">
    <path couples="3 1">
      <move select="Hinge Left"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Left"/>
      <move select="Hinge Right" beats="3"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Facing Couples" formation="Facing Couples" parts="1.5">
    <path couples="3 1">
      <move select="Lead Right" beats="1.5"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY="1"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Couples Facing Out" formation="Couples Facing Out" parts="1.5">
    <path couples="3 1">
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY="1"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="1.5"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Right-Hand Waves" formation="Ocean Waves RH BGGB" parts="1.5">
    <path>
      <move select="Hinge Right"/>
      <move select="Hinge Left" beats="3" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Hinge Left" beats="3" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Left-Hand Waves" formation="Ocean Waves LH BGGB" parts="1.5">
    <path>
      <move select="Hinge Left"/>
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Hinge Right" beats="3" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Hinge Right" beats="3" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Right-Hand Columns"
       formation="Column RH GBGB" parts="1.5">
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Hinge Left" beats="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Hinge Left" beats="3" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Hinge the Lock" from="Left-Hand Columns"
       formation="Column LH GBGB" parts="1.5">
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Hinge Right" beats="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Hinge Right" beats="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="All 8 Hinge the Lock" formation="Static Square"
       group=" " parts="1.5">
    <path>
      <move select="Quarter Right" beats="1.5" offsetX="2" offsetY="-1"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetY="1"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Right" beats="1.5" offsetX="2" offsetY="-1"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetY="1"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3"/>
    </path>
  </tam>
  
  <tam title="As Couples Lock the Hinge" group=" " parts="4"
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Lead Right" hands="right" beats="4" scaleX="3.5" scaleY="3.5"/>
      <move select="Lead Right" hands="right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Lead Right" hands="left" beats="4" scaleX="2.5" scaleY="2.5"/>
      <move select="Lead Right" hands="both" beats="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="1.5"/>
      <move select="Lead Right" hands="both" beats="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right" hands="right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>
  
  <tam title="As Couples Hinge the Lock" formation="Two-Faced Lines RH"
       group=" " parts="3">
    <path>
      <move select="Lead Right" beats="3" hands="right" scaleX="1.5" scaleY="3"/>
      <move select="Lead Left" beats="3" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="both" scaleX=".5"/>
      <move select="Lead Left" beats="3" hands="left" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="both" scaleX=".5"/>
      <move select="Lead Right" beats="3" hands="left" scaleX="2.5" scaleY="2.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="right" scaleX="1.5" scaleY="3"/>
      <move select="Lead Right" beats="3" hands="right" scaleX="3.5" scaleY="3.5"/>
    </path>
  </tam>

  <tam title="Tandem Lock the Hinge" group=" " parts="4"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Counter Rotate Right 5 -1" beats="4"/>
      <move select="Counter Rotate Right 2 0" hands="right" beats="2" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Left -1 3" beats="4"/>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="2" offsetX="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 3 -1" beats="4"/>
      <move select="Counter Rotate Right 2 0" hands="right" beats="2" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 1 -5" beats="4"/>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="2" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Tandem Hinge the Lock" formation="Column RH GBGB"
       group=" " parts="2">
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Right 2 -4" beats="4" offsetY="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Right 4 -2" beats="4" offsetY="1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Left 0 2" hands="left" beats="4" offsetY="1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Left 2 0" hands="left" beats="4" offsetY="-1"/>
    </path>
  </tam>    

</tamination>
