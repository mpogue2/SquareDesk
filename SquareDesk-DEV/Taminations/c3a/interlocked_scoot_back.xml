<tamination title="Interlocked Scoot Back">

  <tam title="Interlocked Scoot Back" from="Right-Hand Quarter Line">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="3" angle="0"/>
    </formation>
    <path couples="4 2">
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="1.5"/>
    </path>
    <path couples="3 1">
      <move select="Forward" beats="2" scaleX="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="1.5"/>
    </path>
    <path couples="2 4">
      <move select="Extend Right" beats="2" scaleX="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="1.5" scaleY="2"/>
    </path>
    <path couples="1 3">
      <move select="Extend Right" beats="2" scaleX="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="1.5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Interlocked Scoot Back" from="Left-Hand Quarter Line" formation="Quarter Lines LH">
    <path>
      <move select="Forward" beats="2" scaleX="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="1.5"/>
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="1.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="1.5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="1.5" scaleY="2"/>
    </path>
  </tam>


</tamination>
