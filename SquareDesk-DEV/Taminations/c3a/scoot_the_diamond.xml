<tamination title="Scoot the Diamond">
  
  

    <tam title="Scoot the Diamond"
       from="Quarter Tag"
       formation="Quarter Tag"
       fractions="5.5" >
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" scaleX="1.5" />
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Forward" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Lead Right" beats="4" scaleX="3"/>
    </path>
    <path>
      <move select="Forward" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleX="3"/>
    </path>
  </tam>

    <tam title="Scoot the Diamond"
       from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH"
       fractions="5.5" >
    <path>
      <move select="Forward" scaleX="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" scaleX="1.5" />
      <move select="Lead Left" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY=".5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Lead Left" beats="4" scaleX="3"/>
    </path>
    <path>
      <move select="Forward" scaleX="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleX="3"/>
    </path>
  </tam>


</tamination>
