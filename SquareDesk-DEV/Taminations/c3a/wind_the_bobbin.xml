<tamination title="Wind The Bobbin">

  <tam title="Wind the Bobbin"
       from="Right-Hand Columns"
       fractions="1;4.5;3" >
      <formation>
        <dancer gender="girl" y="3" x="-1" angle="90"/>
        <dancer gender="boy" y="1" x="-1" angle="90"/>
        <dancer gender="girl" y="-1" x="-1" angle="90"/>
        <dancer gender="boy" y="-3" x="-1" angle="90"/>
      </formation>
    <path couples="2 4">
      <move select="Run Left" offsetX="-1" />
      <move select="Forward 4" />
      <move select="Run Left" beats="6" scaleX="2" scaleY="3" />
    </path>
    <path couples="2 4">
      <move select="Forward" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path couples="3 1">
      <move select="Run Left" offsetX="-1" />
      <move select="Run Left" beats="6" scaleX="2" scaleY="3" />
      <move select="Forward 4" />
    </path>
    <path couples="3 1">
      <move select="Forward" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Wind the Bobbin"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="1;4.5;3" >
    <path>
      <move select="Forward" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
      <move select="Run Right" beats="6" scaleX="2" scaleY="3" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Right" offsetX="-1" />
      <move select="Forward 4" />
      <move select="Run Right" beats="6" scaleX="2" scaleY="3" />
    </path>
  </tam>
</tamination>
