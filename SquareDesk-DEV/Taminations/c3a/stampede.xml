<tamination title="Stampede">

  <tam title="Stampede" from="3/4 Tag" formation="3/4 Tag" parts="4;1.5">
    <path couples="3 1">
      <move select="Run Left" beats="5.5" offsetX="-2" scaleX="1.5" scaleY="2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5"/>
    </path>
    <path couples="3 1">
      <move select="Flip Right" beats="5.5" offsetX="-2" scaleY="2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="1.75"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Run Left" beats="4" scaleX=".5" scaleY="1.25"/>
      <move select="Hinge Left" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Stampede" from="Left-Hand 3/4 Tag" formation="3/4 Tag LH" parts="4;1.5">
    <path>
      <move select="Run Left" beats="5.5" offsetX="-2" scaleX="1.5" scaleY="2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Flip Right" beats="5.5" offsetX="-2" scaleY="2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleX=".5" scaleY="1.75"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="1.25"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
  </tam>

</tamination>
