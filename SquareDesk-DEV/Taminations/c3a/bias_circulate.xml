<tamination title="Bias Circulate">

  <tam title="Bias Circulate" from="Right-Hand Waves" formation="Ocean Waves RH BGBG">
    <path numbers="1 8">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
      <move select="Hinge Right"/>
      <move select="Lead Left" beats="3"/>
    </path>
    <path numbers="2 7">
      <move select="Run Left" beats="7.5"/>
    </path>
    <path numbers="3 6">
      <move select="Lead Left" beats="3"/>
      <move select="Hinge Right"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path numbers="4 5">
      <move select="Run Right" beats="7.5" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Bias Circulate" from="Left-Hand Waves" formation="Ocean Waves LH BGBG">
    <path>
      <move select="Run Left" beats="7.5" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3"/>
      <move select="Hinge Left"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="7.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Hinge Left"/>
      <move select="Lead Right" beats="3"/>
    </path>
  </tam>

</tamination>
