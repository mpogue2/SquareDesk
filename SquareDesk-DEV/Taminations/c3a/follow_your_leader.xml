<tamination title="Follow Your Leader">

  <tam title="Follow Your Leader" from="Right-Hand Waves"
       formation="Ocean Waves RH GBGB">
    <path couples="4 2">
      <move select="Forward 2" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
      <move select="Forward"/>
    </path>
    <path couples="4 2">
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path couples="3 1">
      <move select="Forward 2" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
      <move select="Forward 3"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right"/>
      <move select="Forward 5" beats="3"/>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Follow Your Leader" from="Left-Hand Waves" formation="Ocean Waves LH BGBG">
    <path>
      <move select="Lead Left"/>
      <move select="Forward 5" beats="3"/>
      <move select="Run Left" beats="5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward"/>
      <move select="Run Left" beats="5" scaleX="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Your Leader" from="3/4 Tag" formation="3/4 Tag" >
    <path couples="3 1">
      <move select="Quarter Right" beats=".5" />
      <move select="Forward 3" beats="1.5" />
      <move select="Run Right" beats="3" scaleX="1" scaleY="2"/>
      <move select="Forward 3"/>
    </path>
    <path couples="3 1">
      <move select="Quarter Right" beats=".5" />
      <move select="Forward 4" beats="2" />
      <move select="Run Right" beats="5.5" scaleX="2" scaleY="2"/>
    </path>
    <path couples="4 2">
      <move select="Swing Right" beats="2" />
      <move select="Hinge Right" />
      <move select="Forward" />
    </path>
    <path couples="4 2">
      <move select="Swing Right" beats="2" />
      <move select="Hinge Right" />
      <move select="Forward" offsetX="2" beats="2" />
    </path>
  </tam>

  <tam title="Your Leader" from="Twin Diamonds" formation="Diamonds RH Girl Points" >
    <path>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
      <move select="Forward" offsetX="-.25" beats=".5" />
    </path>
    <path>
      <move select="Forward 5" beats="3"/>
      <move select="Run Right" beats="3.25" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
      <move select="Forward"   beats="1.75" offsetX="1.75" />
    </path>
    <path>
      <move select="Forward"/>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2"/>
      <move select="Forward"   beats="1.25" offsetX="1" />
    </path>
  </tam>

</tamination>
