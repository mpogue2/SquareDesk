<tamination title="Reach Out">

  <tam title="Reach Out" from="Right-Hand Box" formation="Box RH Boys Lead">
    <path couples="3 1">
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path couples="3 1">
      <move select="Forward 2"/>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Reach Out" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Run Left"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Reach Out" from="Right-Hand Waves" formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" scaleY=".25"/>
    </path>
    <path>
      <move select="Run Right"/>
     <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" scaleY=".25"/>
    </path>
    <path>
      <move select="Run Right"/>
     <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Reach Out" from="Left-Hand Waves" formation="Ocean Waves LH BGBG">
    <path>
      <move select="Run Left"/>
     <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" scaleY=".25"/>
    </path>
    <path>
      <move select="Run Left"/>
     <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" scaleY=".25"/>
    </path>
  </tam>

  <tam title="Reach Out" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 2"/>
      <move select="Flip Left" scaleY=".25"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Flip Right" scaleY=".25"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Reach Out" from="T-Bones" formation="T-Bone DLDL">
    <path>
      <move select="Run Left"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Flip Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Flip Left" scaleY=".5"/>
    </path>
  </tam>

</tamination>
