<tamination title="Polly Wally">

  <tam title="Polly Wally" from="Right-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path couples="1 3">
      <move select="Flip Left" beats="6" offsetX="-1"/>
    </path>
    <path couples="2 4">
      <move select="Flip Left"/>
      <move select="Forward 3"/>
    </path>
    <path couples="4 2">
      <move select="Extend Right" beats="3" scaleX=".5" scaleY="2"/>
      <move select="Forward" beats="3" scaleX="2.5"/>
    </path>
    <path couples="3 1">
      <move select="Flip Right" beats="6" offsetX="1"/>
    </path>
  </tam>

  <tam title="Polly Wally" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Flip Right" beats="6" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX=".5" scaleY="2"/>
      <move select="Forward" beats="3" scaleX="2.5"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Flip Left" beats="6" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Polly Wally" from="Double Pass Thru" formation="Double Pass Thru">
    <path>
      <move select="Flip Right" beats="6" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" beats="6" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX=".5" scaleY="2"/>
      <move select="Forward" beats="3" scaleX="2.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX=".5" scaleY="2"/>
      <move select="Forward" beats="3" scaleX="2.5"/>
    </path>
  </tam>

  <tam title="Polly Wally" from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path>
      <move select="Flip Left" beats="6" offsetX="-1"/>
    </path>
    <path>
      <move select="Flip Left" beats="6" offsetX="-1"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Forward 3"/>
    </path>
  </tam>

</tamination>
