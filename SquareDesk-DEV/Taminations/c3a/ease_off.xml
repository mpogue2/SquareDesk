<tamination title="Ease Off">

  <tam title="Ease Off"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Quarter Right" offsetX="3" beats="3"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="3" beats="3"/>
    </path>
    <path>
      <move select="Run Right" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Lead Left" scaleY="2" beats="2"/>
    </path>
  </tam>

  <tam title="Ease Off" from="Left-Hand Two-Faced Lines">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="boy" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
    </formation>
    <path couples="4 2">
      <move select="Run Right" offsetX="-2" />
      <move select="Lead Right" scaleY="2" beats="2"/>
    </path>
    <path couples="4 2">
      <move select="Run Left" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path couples="3 1">
      <move select="Quarter Left" offsetX="3" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Quarter Left" offsetX="3" beats="3"/>
    </path>
  </tam>

  <tam title="Ease Off" from="Right-Hand Waves"
       formation="Ocean Waves RH GBGB">
    <path numbers="1 8" couples="4 2">
      <move select="Quarter Right" offsetX="3" beats="3"/>
    </path>
    <path numbers="2 7" couples="4 2">
      <move select="Run Left" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path numbers="3 6" couples="3 1">
      <move select="Quarter Left" offsetX="3" beats="3"/>
    </path>
    <path numbers="4 5" couples="3 1">
      <move select="Run Left" offsetX="-2" />
      <move select="Lead Left" scaleY="2" beats="2"/>
    </path>
  </tam>

  <tam title="Ease Off" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Right" offsetX="-2" />
      <move select="Lead Right" scaleY="2" beats="2"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="3" beats="3"/>
    </path>
    <path>
      <move select="Run Right" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="3" beats="3"/>
    </path>
  </tam>

</tamination>
