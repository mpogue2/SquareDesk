<tamination title="Grand Mix">

  <tam title="Grand Mix" from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB" parts="3">
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB" parts="3">
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Right-Hand Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH" parts="3">
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Left-Hand Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line LH" parts="3">
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Right-Hand Tidal Inverted Line"
       formation="Tidal Inverted Line RH" parts="3">
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Run Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Flip Left" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Left-Hand Tidal Inverted Line"
       formation="Tidal Inverted Line LH" parts="3">
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Flip Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Run Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Right-Hand Tidal Line"
       formation="Tidal Line RH" parts="3">
    <path couples="3 1">
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Flip Right" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" scaleX="2"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Run Left"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" scaleX=".5"/>
      <move select="Run Left" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Mix" from="Left-Hand Tidal Line"
       formation="Tidal Line LH" parts="3">
    <path>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Flip Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" scaleX=".5"/>
      <move select="Run Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2"/>
    </path>
  </tam>

  <tam title="Grand Swing and Mix" from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB" parts="3;3">
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Grand Swing and Mix" from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB" parts="3">
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Run Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Run Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Grand Swing and Mix" from="Facing Lines"
       formation="Normal Lines" parts="5;3">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

</tamination>
