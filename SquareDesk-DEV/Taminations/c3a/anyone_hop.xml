<tamination title="Anyone Hop">

  <tam title="Beaus Hop" parts="4" group=" ">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="270" />
      <dancer gender="girl" y="2" x="-1" angle="270" />
    </formation>
    <path>
      <move select="Forward 4"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Trailers Hop" parts="4" group=" ">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="90"/>
      <dancer gender="girl" y="2" x="-1" angle="270"/>
    </formation>
    <path>
      <move select="Dodge Left" beats="4"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY="1"/>
    </path>
  </tam>

  <tam title="Everybody Hop" formation="Facing Couples" parts="4" group=" ">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY="1"/>
    </path>
  </tam>

  <tam title="Nobody Hop" formation="Box RH" parts="3" group=" ">
    <path>
      <move select="BackSashay Right" scaleX="1.5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="BackSashay Right" scaleX="1.5"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Boys Hop" from="Lines" formation="Normal Lines" parts="4" group=" ">
    <path>
      <move select="Forward 4"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Magic Column Boys Hop" formation="Magic Column RH" parts="3" group=" ">
    <formation>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="-1" angle="180"/>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Forward" beats="2" />
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Lead Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Dodge Right" beats="4" />
      <move select="Quarter Left" beats="1.5" offsetX="-.5" offsetY="1"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
      <move select="Quarter Left" beats="1.5" offsetX="-.5" offsetY="1"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4" />
      <move select="Lead Right" scaleX=".5"/>
    </path>
  </tam>

</tamination>
