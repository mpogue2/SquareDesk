<tamination title="Split Phantom Columns-Lines-Waves Concept">

  <tam title="Split Phantom Columns Triple Cross" group="Split Phantom Columns">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="0"/>
      <dancer gender="phantom" x="-3" y="3" angle="0"/>
      <dancer gender="phantom" x="1" y="3" angle="0"/>
      <dancer gender="phantom" x="-1" y="3" angle="0"/>
    </formation>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Split Phantom Columns Something New" group="Split Phantom Columns">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="0"/>
      <dancer gender="phantom" x="-3" y="3" angle="0"/>
      <dancer gender="phantom" x="1" y="3" angle="0"/>
      <dancer gender="phantom" x="-1" y="3" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".75"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="2" offsetY="-.5"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="2" offsetY="-.5"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="1" offsetY="-.5"/>
    </path>
  </tam>


  <tam title="Split Phantom Lines Acey Deucey" group="Split Phantom Lines">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="-3" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="180"/>
      <dancer gender="phantom" x="-3" y="3" angle="180"/>
      <dancer gender="phantom" x="1" y="3" angle="180"/>
      <dancer gender="phantom" x="-3" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Run Left" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Run Left" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Split Phantom Lines Load the Boat" group="Split Phantom Lines">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="180"/>
      <dancer gender="phantom" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="3" y="-1" angle="180"/>
      <dancer gender="phantom" x="3" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Quarter Left"/>
      <move select="Flip Left"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Quarter Right"/>
      <move select="Flip Right"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Quarter Left" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Lead Left" beats="3" scaleX="3" />
      <move select="Quarter Left" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Quarter Right"/>
      <move select="Flip Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Quarter Left"/>
      <move select="Flip Left"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="3" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" />
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
  </tam>


  <tam title="Split Phantom Waves In Roll Circulate" group="Split Phantom Waves">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="180"/>
      <dancer gender="phantom" x="3" y="3" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="3" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tam title="Split Phantom Waves Split Counter Rotate" group="Split Phantom Waves">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="180"/>
      <dancer gender="phantom" x="3" y="3" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="3" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
    </path>
  </tam>

</tamination>
