<tamination title="Couple Up">

  <tam title="Couple Up" from="Right-Hand Box" formation="Box RH" parts="4">
    <path numbers="1 4">
      <move select="Forward 4"/>
      <move select="U-Turn Right"/>
    </path>
    <path numbers="2 3">
      <move select="Run Right" beats="4"/>
    </path>
  </tam>

  <tam title="Couple Up" from="Left-Hand Box" formation="Box LH" parts="4">
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="Couple Up" from="Right-Hand Waves" 
       formation="Ocean Waves RH BGGB" parts="4">
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
  </tam>

  <tam title="Couple Up" from="Left-Hand Waves" 
       formation="Ocean Waves LH BGGB" parts="4">
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="Couple Up" from="Right-Hand Columns" 
       formation="Column RH GBGB" parts="3">
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Couple Up" from="Left-Hand Columns" 
       formation="Column LH GBGB" parts="3">
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Counter Couple Up" formation="Ocean Waves RH BGGB" 
       group="  " parts="4">
    <path>
      <move select="Counter Rotate Right 5 -1" beats="4"/>
    </path>
    <path>
      <move select="Counter Rotate Left -1 3" beats="4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Counter Rotate Left 3 -1" beats="4"/>
    </path>
    <path>
      <move select="Counter Rotate Right 1 -5" beats="4"/>
      <move select="U-Turn Right"/>
    </path>
    <taminator>
      This is an application of the C-2 Anything Concept.
    </taminator>
  </tam>

  <tam title="Split Counter Couple Up" formation="Ocean Waves RH BGGB" 
       group="  " parts="3">
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1" beats="3"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1" beats="3"/>
      <move select="U-Turn Right"/>
    </path>
    <taminator>
      This is an application of the C-2 Anything Concept.
    </taminator>
  </tam>

  <tam title="Trade Couple Up" formation="Ocean Waves RH BGGB" group="  " 
       parts="4">
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2" />
    </path>
    <taminator>
      This is an application of the C-2 Anything Concept.
    </taminator>
  </tam>

  <tam title="Trade Like a Couple Up" 
       formation="Ocean Waves RH BGGB" group="  " parts="3">
    <path>
      <move select="Swing Right"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="As Couples Couple Up" formation="Two-Faced Lines RH" 
       group=" " parts="4">
    <path>
      <move select="Forward 4" hands="right" />
      <move select="Beau Reverse Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Forward 4" hands="left" />
      <move select="Belle Reverse Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="left" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="3" scaleY="3" hands="right" />
    </path>
  </tam>

  <tam title="Concentric Couple Up" formation="Ocean Waves RH BGGB" 
       group=" " parts="4">
    <path>
      <move select="Forward 4" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Run Left" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2" scaleY="3" beats="4" />
    </path>
  </tam>

  <tam title="Once Removed Couple Up" formation="Two-Faced Lines RH" 
       group=" " parts="4">
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Tandem Couple Up" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="Pivot backward right"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="Pivot forward left"/>
    </path>
  </tam>

</tamination>
