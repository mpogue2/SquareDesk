<tamination title="&lt;anything&gt;er's Couple Up">

  <tam title="Counter Couple Up" formation="Ocean Waves RH BGGB" 
       group="  " parts="4">
    <path>
      <move select="Counter Rotate Right 5 -1" beats="4"/>
    </path>
    <path>
      <move select="Counter Rotate Left -1 3" beats="4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Counter Rotate Left 3 -1" beats="4"/>
    </path>
    <path>
      <move select="Counter Rotate Right 1 -5" beats="4"/>
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Split Counter Couple Up" formation="Ocean Waves RH BGGB" 
       group="  " parts="3">
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1" beats="3"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1" beats="3"/>
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Trade Couple Up" formation="Ocean Waves RH BGGB" group="  " 
       parts="4">
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2" />
    </path>
  </tam>

</tamination>
