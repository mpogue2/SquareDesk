<tamination title="Checkerboard Anything">

  <tam title="Checkerboard Bounce the Boys" group="Checkerboard"
          formation="Two-Faced Lines RH Compact">
    <path>
      <move select="Forward"/>
      <move select="Extend Right" hands="right" beats="3" scaleX="2" scaleY="4"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" hands="left" beats="3" scaleX="2" scaleY="4"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Checkerboard Swing Thru" group="Checkerboard" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Back 2"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
      <move select="Back 2"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Checkerboard Tag the Line" group="Checkerboard" 
       formation="Two-Faced Lines RH Compact">
    <path>
      <move select="Forward" scaleX="1.5"/>
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward 2"/>
      <move select="Extend Left" />
    </path>
    <path>
      <move select="Forward" scaleX="1.5"/>
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward 2"/>
      <move select="Extend Left" />
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Checkerboard Recycle" group="Checkerboard" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX=".75" offsetY="-2" />
      <move select="Back" offsetX="-.25" offsetY="2" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1" />
      <move select="Stand" beats="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="2" scaleX=".75" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
      <move select="Back" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" offsetX="1" />
      <move select="Stand" beats="2" />
      <move select="Forward" />
    </path>
  </tam>
 <tam title="Checkerboard Swap the Wave"  from="Right Hand Waves" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="3" />
      <move select="Lead Right" beats="2" scaleY="2.5" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1" />
      <move select="Stand" beats="1" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Forward" />
      <move select="Stand" beats="2" />
      <move select="Extend Right"  scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" offsetX="1" />
      <move select="Stand" beats="1" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Checkerboard Swap the Wave" from="Left Hand Waves" formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1" />
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Swing Right" beats="2" scaleX="1" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" offsetX="1" />
      <move select="Forward" beats="2" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Extend Left" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Checkerbox Recycle" group="Checkerbox" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Extend Right" scaleY="1.5" />
      <move select="U-Turn Right" offsetX="1" offsetY="-.5" />
      <move select="Back 2" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" scaleX=".5" />
      <movement hands="none" beats="3" cx1="-2" cy1="2" cx2="1" cy2="4" x2="1.5" y2="4" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
      <move select="Back 2" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" offsetX="1" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Checkerbox Turn Thru" group="Checkerbox" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Checkerbox Swap Around" group="Checkerbox" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Flip Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="5" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
