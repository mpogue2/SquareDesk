<tamination title="Plan Ahead">

  <tam title="Plan Ahead" from="Lines" fractions="8.5">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
    </formation>
    <path couples="4 2">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" beats="5" scaleX="4" scaleY="3.5"/>
      <move select="Hinge Right"/>
      <move select="Forward 2" beats="3"/>
      <move select="Forward"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path couples="4 2">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Forward 2" beats="3"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Run Left" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Run Right"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Flip Right" offsetX="2" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" beats="5" scaleX="2" scaleY="2.5"/>
      <move select="Hinge Right"/>
      <move select="Run Right"/>
      <move select="Forward"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Plan Ahead" from="Inverted Lines" fractions="8.5"
       formation="Inverted Lines Ends Facing Out">
    <path>
      <move select="Run Left" beats="3" scaleY="3"/>
      <move select="Forward 2"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Lead Right" beats="2" scaleX="2.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Forward 2" beats="3"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Run Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Run Right"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Flip Right" offsetX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="3" scaleX="2" scaleY="3"/>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Forward" beats="3.5" scaleX="3.5"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

</tamination>
