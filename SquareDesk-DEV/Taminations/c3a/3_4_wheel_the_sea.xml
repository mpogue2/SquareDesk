<tamination title="3/4 Wheel the Sea">
  
  <tam title="3/4 Wheel the Sea" from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH" parts="4.5" >
    <path numbers="1 4">
      <move select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
      <move select="Dodge Right" beats="4"/>
    </path>
    <path numbers="2 3">
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Forward 4"/>
    </path>
  </tam>  

  <tam title="3/4 Wheel the Sea" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH" parts="4.5" >
    <path>
      <move select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
      <move select="Dodge Right" beats="4"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
      <move select="Dodge Right" beats="4"/>
    </path>
  </tam>

  <tam title="3/4 Wheel the Sea" from="Right-Hand Two-Faced Tidal Line"
       formation="Two-Faced Tidal Line RH" parts="6">
    <path>
      <move beats="2" select="Quarter Left" hands="right" offsetX=".33" offsetY="-.17" />
      <move beats="2" select="Quarter Left" hands="right" offsetX="-.17" offsetY="-.33" />
      <move beats="2" select="Quarter Left" hands="right" offsetX="-.33" offsetY=".17" />
      <move select="Dodge Right"/>
    </path>
    <path>
      <move beats="2" select="Hinge Left" offsetX=".33" offsetY="-.17" />
      <move beats="2" select="Hinge Left" offsetX="-.17" offsetY="-.33" />
      <move beats="2" select="Hinge Left" scaleX="2" offsetX="-.33" offsetY=".17" />
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move beats="2" select="Hinge Left" offsetX=".33" offsetY="-.17" />
      <move beats="2" select="Hinge Left" offsetX="-.17" offsetY="-.33" />
      <move beats="2" select="Hinge Left" scaleX="2" offsetX="-.33" offsetY=".17" />
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move beats="2" select="Quarter Left" hands="right" offsetX=".33" offsetY="-.17" />
      <move beats="2" select="Quarter Left" hands="right" offsetX="-.17" offsetY="-.33" />
      <move beats="2" select="Quarter Left" hands="right" offsetX="-.33" offsetY=".17" />
      <move select="Dodge Right"/>
    </path>
  </tam>

