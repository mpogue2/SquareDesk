<tamination title="The Gamut">

  <tam title="The Gamut" from="Right-Hand Waves" formation="Ocean Waves RH BGGB" fractions="7.5;4.5">
    <path>
      <move select="Forward 4"/>
      <move select="Run Right" beats="8" scaleX="2" scaleY="3"/>
      <move select="Dodge Right"/>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Swing Right"/>
      <move select="Run Right" beats="4.5" scaleX="2" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Stand" beats="3"/>
      <move select="Run Left" beats="4.5" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right" beats="8" scaleX="2" scaleY="3"/>
      <move select="Forward 4"/>
      <move select="Dodge Right"/>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="The Gamut" from="Left-Hand Waves" formation="Ocean Waves LH BGGB" fractions="7.5;4.5">
    <path>
      <move select="Run Left" beats="8" scaleX="2" scaleY="3"/>
      <move select="Forward 4"/>
      <move select="Dodge Left"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Cast Right"/>
      <move select="Stand" beats="3"/>
      <move select="Run Right" beats="4.5" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Cast Right"/>
      <move select="Swing Left"/>
      <move select="Run Left" beats="4.5" scaleX="2" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="Run Left" beats="8" scaleX="2" scaleY="3"/>
      <move select="Dodge Left"/>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="The Gamut" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH" fractions="7.5;4.5">
    <path>
      <move select="Forward 4"/>
      <move select="Run Right" beats="8" scaleX="2" scaleY="3"/>
      <move select="Dodge Right"/>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Cast Right"/>
      <move select="Stand" beats="3"/>
      <move select="Run Right" beats="4.5" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Cast Right"/>
      <move select="Swing Left"/>
      <move select="Run Left" beats="4.5" scaleX="2" scaleY="2"/>
      <move select="Lead Left" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right" beats="8" scaleX="2" scaleY="3"/>
      <move select="Forward 4"/>
      <move select="Dodge Right"/>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="The Gamut" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH" fractions="7.5;4.5">
    <path>
      <move select="Run Left" beats="8" scaleX="2" scaleY="3"/>
      <move select="Forward 4"/>
      <move select="Dodge Left"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Swing Right"/>
      <move select="Run Right" beats="4.5" scaleX="2" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Stand" beats="3"/>
      <move select="Run Left" beats="4.5" scaleY="2"/>
      <move select="Lead Right" beats="3" scaleX="3"/>
    </path>
    <path>
      <move select="Forward 4"/>
      <move select="Run Left" beats="8" scaleX="2" scaleY="3"/>
      <move select="Dodge Left"/>
      <move select="Swing Left"/>
    </path>
  </tam>

</tamination>
