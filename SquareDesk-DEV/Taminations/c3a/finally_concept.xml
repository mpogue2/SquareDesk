<tamination title="Finally Concept">

  <tam title="Finally As Couples Swing Thru"
       from="Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH"
       group="Finally As Couples"
       fractions="3" >
    <path>
      <move select="Stand" beats="8"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Swing Left" hands="left" beats="5" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Stand" beats="5"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left" hands="both" beats="5" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Finally As Couples Mix"
       from="Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH"
       group="Finally As Couples"
       fractions="3" >
    <path>
      <move select="Dodge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" />
      <move select="Swing Left" hands="both" beats="5" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Left" beats="5" scaleX="1.5" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Finally As Couples Pass the Ocean"
       formation="Normal Lines"
       group="Finally As Couples" fractions="3;1.5">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Right"/>
      <move select="Extend Left" beats="3" hands="right"  scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Left"/>
      <move select="Extend Left" beats="3" hands="left"  scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Right"/>
      <move select="Extend Left" beats="3" hands="right"  scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Left"/>
      <move select="Extend Left" beats="3" hands="left"  scaleY="2"/>
    </path>
  </tam>

