  <tam title="Finally As Couples Wheel the Sea"
       formation="Lines Facing Out"
       group="Finally As Couples"
       fractions="3">
    <path>
      <move select="Belle Wheel"/>
      <move select="Dodge Right" beats="4" hands="left" scaleY="2"/>
    </path>
    <path>
      <move select="Beau Wheel"/>
      <move select="Dodge Right" beats="4" hands="right" scaleY="2"/>
    </path>
    <path>
      <move select="Belle Wheel"/>
      <move select="Forward 4" hands="left"/>
    </path>
    <path>
      <move select="Beau Wheel"/>
      <move select="Forward 4" hands="right"/>
    </path>
  </tam>

  <tam title="Finally Tandem Swing Thru"
       formation="Ocean Waves RH BGGB"
       group="Finally Tandem" fractions="3">
    <path>
      <move select="Swing Right"/>
      <move select="Counter Rotate Left 0 2" hands="left" offsetX="-1"/>
      <move select="Counter Rotate Left 0 2" hands="left" offsetY="1"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Counter Rotate Left 2 0" hands="left" offsetX="1"/>
      <move select="Counter Rotate Left 2 0" hands="left" offsetY="-1"/>
    </path>
  </tam>

