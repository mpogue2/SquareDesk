<tamination title="Touch By">

  <tam title="Touch By 1/2 By 1/4" group=" " parts="6">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="270"/>
      <dancer gender="girl" x="0" y="1" angle="270"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="3" scaleX="3"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Extend Left"/>
      <move select="Hinge Right"/>
      <move select="Hinge Right" beats="3" offsetX="2"/>
    </path>
  </tam>

  <tam title="Touch By 1/4 By 1/2" group=" " parts="5">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="270"/>
      <dancer gender="girl" x="0" y="1" angle="270"/>
    </formation>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Left" beats="3" scaleX="3"/>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Extend Left"/>
      <move select="Hinge Right" beats="3" offsetX="2"/>
    </path>
  </tam>

  <tam title="Touch By 1/4 By Swing Thru" group=" ">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="1" y="1" angle="270"/>
      <dancer gender="boy" x="1" y="-1" angle="90"/>
      <dancer gender="girl" x="1" y="-3" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Extend Left" beats="2" scaleY="1.5"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward 2"/>
      <move select="Quarter Right" offsetX="1" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward 2"/>
      <move select="Quarter Right" offsetX="1" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleY=".5"/>
      <move select="Swing Right"/>
    </path>
  </tam>

</tamination>
