<tamination title="Twosome Concept">

  <tam title="Couples Twosome Circulate" group="Couples Twosome"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 4" beats="5"/>
    </path>
    <path>
      <move select="Forward 4" beats="5"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <taminator>
      Many Twosome moves are danced like a Turn and Deal.
    </taminator>
  </tam>

  <tam title="Couples Twosome Crossfire" group="Couples Twosome"
       formation="Tidal Line RH">
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2" offsetX="2" offsetY="-.5"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2" offsetX="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".75"/>
      <move select="Forward 2" offsetY=".5"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".75"/>
      <move select="Forward 2" offsetY="1.5"/>
    </path>
  </tam>

  <tam title="Couples Twosome Hinge" group="Couples Twosome"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Couples Twosome Recycle" group="Couples Twosome"
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="2" offsetX="2" offsetY="-.5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="2" offsetX="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-1"/>
      <move select="Flip Right" offsetX="1" scaleY=".25"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" offsetY=".5"/>
      <move select="Flip Right" offsetX="1" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Couples Twosome Single Wheel" group="Couples Twosome">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="2" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <taminator>
      Same as Turn and Deal
    </taminator>
  </tam>

  <tam title="Couples Twosome Swing Thru" group="Couples Twosome"
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Run Right" scaleX=".75"/>
      <move select="Run Left" scaleX=".75"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".75"/>
      <move select="Run Left" scaleX=".75"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".75"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".75"/>
    </path>
  </tam>

  <tam title="Couples Twosome Trade" group="Couples Twosome"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
  </tam>

  <tam title="Tandem Twosome Circulate" group="Tandem Twosome"
       formation="Column RH GBGB">
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
  </tam>

  <tam title="Tandem Twosome Left Roll to a Wave" group="Tandem Twosome"
       formation="Column RH GBGB">
    <path>
      <move select="Run Left" offsetX="-1"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-3"/>
    </path>
    <path>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
    </path>
  </tam>

  <tam title="Tandem Twosome Single Wheel" group="Tandem Twosome">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="2" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="U-Turn Right" offsetX="3" offsetY="-2"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" offsetY="-2"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-3"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Tandem Twosome Zoom" group="Tandem Twosome"
       formation="Column RH GBGB" fractions="4">
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Run Left" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Run Left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 4" beats="8"/>
    </path>
    <path>
      <move select="Forward 4" beats="8"/>
    </path>
  </tam>

  <tam title="Tandem, Tandem Twosome Touch a Quarter"
       group="Tandem, Tandem Twosome">
    <formation>
      <dancer gender="girl" x=".8" y="0" angle="180"/>
      <dancer gender="boy" x="3.6" y="0" angle="180"/>
      <dancer gender="girl" x="2.2" y="0" angle="180"/>
      <dancer gender="boy" x="5.0" y="0" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5"/>
      <move select="Forward" beats="3" scaleX="2.8"/>
      <move select="Quarter Right" beats="3" offsetY="-3.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5"/>
      <move select="Forward" beats="3" scaleX="2.8"/>
      <move select="Quarter Right" beats="3" offsetX=".8" offsetY="-3.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5"/>
      <move select="Forward" beats="3" scaleX="2.8"/>
      <move select="Quarter Right" beats="3" offsetX="1.4" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5"/>
      <move select="Forward" beats="3" scaleX="2.8"/>
      <move select="Quarter Right" beats="3" offsetX="2.2" offsetY=".5"/>
    </path>
  </tam>


</tamination>

