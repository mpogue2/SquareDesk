<tamination title="Anything Reaction">
  
  

  <tam title="Flip Reaction" from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG" fractions="9" group=" ">
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" beats="3" />
      <move select="U-Turn Right" beats="4.5" offsetX="1"/>
      <!-- Chain Reaction -->
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Right" beats="2" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" />
      <move select="Forward 2"/>
      <move select="Swing Right" beats="2.5"/>
      <!-- Chain Reaction -->
      <move select="Lead Right" beats="3.5" scaleX="5" scaleY="3" />
      <move select="Swing Right" beats="2" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" />
      <move select="Forward 2"/>
      <move select="Swing Right" beats="2.5"/>
      <!-- Chain Reaction -->
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Left" offsetX=".5" offsetY="-.5" />
      <move select="Swing Right" beats="2" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" beats="3" />
      <move select="Run Right" beats="4.5" offsetX="1"/>
      <!-- Chain Reaction -->
      <move select="Forward" beats="2" />
      <move select="Hinge Left" />
      <move select="Hinge Right" beats="2" />
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Tag Reaction" from="Two-Faced Lines" group=" "
       formation="Two-Faced Lines RH" fractions="6">
    <path>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Swing Right"/>
      <!-- Chain Reaction -->
      <move select="Lead Right" beats="3.5" scaleX="5" scaleY="3" />
      <move select="Swing Right" beats="2" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="U-Turn Right" beats="4" offsetX="2"/>
      <!-- Chain Reaction -->
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Right" beats="2" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Run Right" beats="4" offsetX="2"/>
      <!-- Chain Reaction -->
      <move select="Forward" beats="2" />
      <move select="Hinge Left" />
      <move select="Hinge Right" beats="2" />
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Swing Right"/>
      <!-- Chain Reaction -->
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Left" offsetX=".5" offsetY="-.5" />
      <move select="Swing Right" beats="2" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
  </tam>

</tamination>
