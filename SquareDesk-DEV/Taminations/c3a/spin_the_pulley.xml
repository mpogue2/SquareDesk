<tamination title="The Pulley">

  <tam title="Heads Spin the Pulley" from="Static Square"
       formation="Static Square" parts="7.5;2">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
      <move select="Run Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
      <move select="U-Turn Right" beats="3" offsetX="1"/>
    </path>
    <path>
      <move select="Stand" beats="7.5"/>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
      <move select="Run Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Stand" beats="9.5"/>
      <move select="U-Turn Right" beats="3" offsetX="1"/>
    </path>
  </tam>

</tamination>
