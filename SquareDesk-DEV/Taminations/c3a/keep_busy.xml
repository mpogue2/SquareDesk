<tamination title="Keep Busy">

  <tam title="Keep Busy" from="Right-Hand Two-Faced Lines" 
       formation="Two-Faced Lines RH" parts="2;1.5;3">
    <path couples="2 4">
      <move select="Forward 2" hands="right"/>
      <move select="Stand" beats="1.5"/>
      <move select="Run Right" scaleY="1.2"/>
      <move select="Extend Right" beats="2.5" scaleX="2" scaleY=".4"/>
    </path>
    <path couples="2 4">
      <move select="Forward 2" hands="left"/>
      <move select="Hinge Right"/>
      <move select="Lead Right" beats="3" scaleX="1.8"/>
      <move select="Flip Right" beats="2.5" offsetX="2" scaleY="0.4"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" hands="left" beats="5"/>
      <move select="Dodge Left" beats="4"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="5" hands="right" scaleX="3" scaleY="3"/>
      <move select="Forward 4"/>
    </path>
  </tam>

  <tam title="Keep Busy" from="Left-Hand Two-Faced Lines" 
       formation="Two-Faced Lines LH" parts="2;1.5;3">
    <path>
      <move select="Run Left" beats="5" hands="left" scaleX="3" scaleY="3"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Left" hands="right" beats="5"/>
      <move select="Dodge Right" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Hinge Left"/>
      <move select="Lead Left" beats="3" scaleX="1.8"/>
      <move select="Flip Left" beats="2.5" offsetX="2" scaleY="0.4"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Stand" beats="1.5"/>
      <move select="Run Left" scaleY="1.2"/>
      <move select="Extend Left" beats="2.5" scaleX="2" scaleY=".4"/>
    </path>
  </tam>

</tamination>
