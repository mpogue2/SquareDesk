<tamination title="Slant Touch and Wheel">

  <tam title="Slant Touch and Wheel" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path numbers="1 8">
      <move select="Forward 2" beats="3"/>
    </path>
    <path numbers="2 7">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path numbers="3 6">
      <move select="U-Turn Right" hands="left" beats="4" offsetX="1"/>
    </path>
    <path numbers="4 5">
      <move select="Run Right" hands="right" beats="4" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Slant Touch and Wheel" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Run Left" hands="left" beats="4" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
    <path>
      <move select="U-Turn Left" hands="right" beats="4" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

</tamination>
