<tamination title="Delight/Dilemma">

  <tam title="Delight" group=" "
       formation="3/4 Tag"
       fractions="3;3;3" >
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
      <move select="Forward 4" beats="4" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Forward 2" beats="4" />
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="6" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Dilemma" group=" "
       formation="3/4 Tag"
       fractions="3;3;3" >
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Forward 2" beats="4" />
      <move select="Lead Left" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Lead Left" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2" />
      <move select="Forward 4" beats="4" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="6" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Tagger's Delight" group=" "
       formation="Lines Facing Out">
    <path numbers="1 8">
      <move select="Quarter Left" offsetX="-.5" offsetY="1" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Stand" beats="6" />
      <move select="Cast Right" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" offsetX="-.5" offsetY="1" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
      <move select="Forward 4" beats="4" />
    </path>
    <path numbers="3 6">
      <move select="Lead Right" scaleX=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Quarter Right" offsetY="-1" />
      <move select="Forward 2" beats="4" />
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path numbers="4 5">
      <move select="Lead Right" scaleX=".5" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
  </tam>

</tamination>
