<tamination title="Trade the Deucey">

  <tam title="Trade the Deucey"
       from="Normal Lines"
       formation="Normal Lines">
    <path>
      <move select="Forward" beats="1.5" />
      <move select="Extend Right" scaleX="3" scaleY="2" beats="4.5" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Flip Left" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Extend Left" scaleX="3" scaleY="2" beats="4.5" />
      <move select="Forward" beats="1.5" />
    </path>
  </tam>

  <tam title="Trade the Deucey"
       from="Lines Facing Out"
       formation="Lines Facing Out">
    <path>
      <move select="Run Left" scaleX="2" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Flip Left" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleX="3" scaleY="2" beats="6" />
    </path>
  </tam>

  <tam title="Trade the Deucey"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" scaleX="4" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" beats="6" />
    </path>
  </tam>

  <tam title="Trade the Deucey"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Run Left" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Extend Left" scaleX="4" scaleY="2" beats="6" />
    </path>
  </tam>

  <tam title="Trade the Deucey"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path couples="2 4">
      <move select="Extend Right" scaleX="4" scaleY="2" beats="6" />
    </path>
    <path couples="2 4">
      <move select="Run Left" scaleY="2" beats="6" />
    </path>
    <path couples="3 1">
      <move select="Run Left" scaleY="2" beats="6" />
    </path>
    <path couples="3 1">
      <move select="Run Right" scaleX="2" scaleY="2" beats="6" />
    </path>
  </tam>

  <tam title="Trade the Deucey"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Left" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Run Right" scaleX="2" scaleY="2" beats="6" />
    </path>
    <path>
      <move select="Extend Left" scaleX="4" scaleY="2" beats="6" />
    </path>
  </tam>

  <tam title="Trade the Deucey" from="Eight Chain Thru" formation="Eight Chain Thru">
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Stand"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" scaleY="2"  beats="4"/>
    </path>
    <path>
      <move select="Flip Left" scaleY="2" beats="4" />
    </path>
  </tam>

  <tam title="Trade the Deucey"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points">
    <path couples="3 1">
      <move select="Run Right" scaleY="1.25" beats="6" />
    </path>
    <path couples="3 1">
      <move select="Extend Right" beats="6" scaleX="4" scaleY="2"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" scaleY="1.25" beats="6" />
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="6" scaleY="2"/>
    </path>
  </tam>

  <tam title="Trade the Deucey" from="Thar" formation="Thar LH Boys">
    <path>
      <move select="Run Left" beats="6" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="2" scaleY="2"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path>
      <move select="Run Left" beats="6" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="2" scaleY="2"/>
      <move select="Extend Right" beats="2"/>
    </path>
  </tam>

</tamination>
