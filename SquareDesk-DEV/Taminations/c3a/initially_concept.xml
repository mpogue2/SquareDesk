<tamination title="Initially Any Concept Anything">

  <tam title="Initially As Couples Hinge the Lock"
       group="Initially As Couples"
       formation="Tidal Line RH" fractions="2">
    <path>
      <move select="Hinge Right" beats="2" scaleX="1.5" scaleY="1.5"/>
      <move select="Hinge Right" beats="2" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="2" hands="left" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" beats="2" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1.5" offsetY=".5"/>
      <move select="Hinge Right" beats="2" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-.5" offsetY="1.5"/>
      <move select="Hinge Right" beats="2" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Initially As Couples Lock the Hinge"
       group="Initially As Couples"
       formation="Two-Faced Tidal Line RH" fractions="2">
   <path>
      <move select="Lead Right" beats="3" scaleX="3.5" scaleY="3.5" />
      <move select="Lead Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY="2.5" />
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY=".5" scaleX=".5" scaleY="1" />
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="1.5" />
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY=".5" scaleX=".5" scaleY="1" />
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
  </tam>

  <tam title="Initially As Couples Mix"
       group="Initially As Couples"
       formation="Two-Faced Tidal Line RH" fractions="4">
    <path>
      <move select="Dodge Right" hands="right" beats="4"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Dodge Right" hands="left" beats="4"/>
    </path>
    <path>
      <move select="Run Left" hands="left" scaleX="2" scaleY="2.5" beats="4"/>
    </path>
    <path>
      <move select="Run Left" hands="right" scaleY="1.5" beats="4"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Initially As Couples Spin the Top"
       group="Initially As Couples"
       formation="Two-Faced Tidal Line RH" fractions="4">
    <path>
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Swing Right" beats="4" hands="both" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" beats="4" hands="both" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>

</tamination>
