<tamination title="Follow to a Diamond">

  <tam title="Follow to a Diamond"
       from="Right-Hand Box">
    <formation name="Box RH">
      <dancer gender="boy" y="2" x="1" angle="270"/>
      <dancer gender="girl" y="2" x="-1" angle="90"/>
    </formation>
    <path couples="1 3">
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".875" scaleY=".875" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".125" />
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
  </tam>

  <tam title="Follow to a Diamond"
       from="Left-Hand Box"
       formation="Box LH"
       fractions="" >
    <path>
      <move select="Run Left" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".125" />
      <move select="Swing Left" scaleX=".875" scaleY=".875" />
      <move select="Lead Left" beats="2" offsetX="2" offsetY="-.25" />
    </path>
  </tam>

  <tam title="Follow to a Diamond"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       fractions="" >
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".875" scaleY=".875" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".125" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".875" scaleY=".875" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".125" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
  </tam>

  <tam title="Follow to a Diamond"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Run Left" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".125" />
      <move select="Swing Left" scaleX=".875" scaleY=".875" />
      <move select="Lead Left" beats="2" offsetX="2" offsetY="-.125" />
    </path>
    <path>
      <move select="Run Left" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".125" />
      <move select="Swing Left" scaleX=".875" scaleY=".875" />
      <move select="Lead Left" beats="2" offsetX="2" offsetY="-.125" />
    </path>
  </tam>

  <tam title="Follow to a Diamond" from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" beats="5.5" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX=".5" offsetY=".25" />
    </path>
    <path>
      <move select="Run Right" beats="5.5" scaleX=".5"/>
      <move select="Forward"  />
    </path>
    <path>
      <move select="Forward" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX=".5" offsetY=".25" />
    </path>
  </tam>

  <tam title="Follow to a Diamond" from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Forward" beats="1.5" offsetY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="2" offsetX=".5" offsetY="-.25" />
    </path>
    <path>
      <move select="Run Left" beats="5.5" scaleX=".5"/>
      <move select="Forward"  />
    </path>
    <path>
      <move select="Forward" beats="1.5" offsetY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="2" offsetX=".5" offsetY="-.25" />
    </path>
    <path>
      <move select="Run Left" beats="5.5" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Follow to a Diamond" from="T-Bones" formation="T-Bone URUR">
    <path>
      <move select="Forward" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".25" />
    </path>
    <path>
      <move select="Run Left" beats="5" scaleX=".5"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".25" />
    </path>
    <path>
      <move select="Run Left" beats="5"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="All 8 Follow to a Diamond" formation="Static MiniWaves RH" group=" ">
    <path>
      <move select="Forward 3" beats="2" />
      <move select="Swing Right"  />
      <move select="Lead Right" beats="3" offsetX="2" />
    </path>
    <path>
      <move select="Run Right" beats="5" />
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Forward 3" beats="2" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="3" offsetX="2" />
    </path>
    <path>
      <move select="Run Right" beats="5" />
      <move select="Forward 3"/>
    </path>
  </tam>

  <tam title="As Couples Follow to a Diamond" formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Run Right" beats="5" hands="right" scaleX="2" scaleY="3"/>
      <move select="Forward" hands="right"/>
      <move select="Lead Right" hands="right" beats="3" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Run Right" beats="5" hands="left"/>
      <move select="Forward" hands="left"/>
      <move select="Lead Right" hands="left" beats="3"/>
    </path>
    <path>
      <move select="Run Right" beats="8" hands="left"/>
      <move select="Forward 2" beats="3" hands="left"/>
    </path>
    <path>
      <move select="Run Right" beats="8" hands="right" scaleX="3" scaleY="3"/>
      <move select="Forward 2" beats="3" hands="right"/>
    </path>
  </tam>

  <tam title="Tandem Follow to a Diamond" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Run Right" beats="5"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Forward 2" beats="1.5"/>
      <move select="Quarter Right" beats="1.5" offsetX="2"/>
    </path>
  </tam>

</tamination>
