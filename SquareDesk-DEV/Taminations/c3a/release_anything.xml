<tamination title="Release Anything">

  <tam title="Release Ah So" group="Release" fractions="3"
       formation="Quarter Tag">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Run Right" beats="6" hands="right" scaleX="1.25" scaleY="2" offsetX="1"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="U-Turn Right" beats="6" hands="right"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Run Right" beats="6" hands="right" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="U-Turn Right" beats="6" hands="right" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Release Crossfire" group="Release" fractions="3">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Run Left"/>
      <move select="Forward" scaleX=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="2" offsetX=".75"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left"/>
      <move select="Forward" scaleX=".75"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Release Cycle and Wheel" group="Release" fractions="3">
    <formation>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="boy" x="3" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="U-Turn Right" beats="6" hands="left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Run Right" beats="6" hands="right" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="U-Turn Right"/>
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Release Left Turn and Deal" group="Release" fractions="3">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Flip Left" offsetX="1"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Flip Left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Flip Left"/>
    </path>
  </tam>

  <tam title="Release Linear Cycle" group="Release" fractions="3;1.5;3"
       formation="Quarter Tag">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Hinge Right" scaleX=".75"/>
      <move select="Forward 3" scaleX="1.167"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right" scaleX=".75"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2"/>
      <move select="U-Turn Right" offsetX="1.5"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Hinge Right" scaleX=".75"/>
      <move select="Forward 3" scaleX="1.167"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right" scaleX=".75"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2"/>
      <move select="U-Turn Right" offsetX="1.5"/>
    </path>
  </tam>

  <tam title="Release Offset Waves Out Roll Circulate" group="Release" fractions="3">
    <formation>
      <dancer gender="girl" x="0" y="1" angle="180"/>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="boy" x="3" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Forward 2"/>
      <move select="Run Left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="3" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Run Right"/>
    </path>
  </tam>

</tamination>
