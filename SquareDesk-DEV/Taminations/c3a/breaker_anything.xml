<tamination title="Breaker Anything">

  <tam title="Breaker 3" from="Right-Hand Columns" fractions="4.5">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path numbers="1 8">
      <move select="Hinge Right" offsetX=".333"/>
      <move select="Hinge Right" offsetY=".333"/>
      <move select="Hinge Right" offsetX="-.333"/>
      <move select="Cast Left"/>
    </path>
    <path numbers="2 7">
      <move select="Quarter Right" beats="3" hands="gripright" offsetY="-2"/>
      <move select="Lead Right"/>
      <move select="Extend Left" beats="4.5" scaleX="2"/>
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="3" hands="gripright" offsetX="2"/>
      <move select="Forward" beats="1.5"/>
      <move select="Cast Left"/>
    </path>
    <path numbers="4 5">
      <move select="Hinge Right" offsetX="-.333"/>
      <move select="Hinge Right" offsetY="-.333"/>
      <move select="Hinge Right" offsetX=".333"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Breaker 3" from="Left-Hand Columns" formation="Column LH GBGB" fractions="4.5">
    <path>
      <move select="Hinge Left" offsetX="-.333"/>
      <move select="Hinge Left" offsetY=".333"/>
      <move select="Hinge Left" offsetX=".333"/>
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" hands="gripleft" offsetX="2"/>
      <move select="Forward" beats="1.5"/>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" hands="gripleft" offsetY="2"/>
      <move select="Lead Left"/>
      <move select="Extend Right" beats="4.5" scaleX="2"/>
    </path>
    <path>
      <move select="Hinge Left" offsetX=".333"/>
      <move select="Hinge Left" offsetY="-.333"/>
      <move select="Hinge Left" offsetX="-.333"/>
      <move select="Cast Right"/>
    </path>
  </tam>

  <tam title="Breaker 3" from="Magic Columns" formation="Magic Column RH" fractions="4.5">
    <path>
      <move select="Hinge Left" offsetX="-.333"/>
      <move select="Hinge Left" offsetY=".333"/>
      <move select="Hinge Left" offsetX=".333"/>
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" hands="gripright" offsetY="-2"/>
      <move select="Lead Right"/>
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Right" beats="3" hands="gripright" offsetX="2"/>
      <move select="Forward" beats="1.5"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Hinge Left" offsetX=".333"/>
      <move select="Hinge Left" offsetY="-.333"/>
      <move select="Hinge Left" offsetX="-.333"/>
      <move select="BackHinge Right"/>
      <move select="BackHinge Right"/>
      <move select="BackHinge Right"/>
    </path>
  </tam>

  <tam title="Breaker Mix" from="Right-Hand Columns" fractions="4.5">
    <formation>
      <dancer gender="boy" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="-1" x="-1" angle="90"/>
      <dancer gender="girl" y="-3" x="-1" angle="90"/>
    </formation>
    <path couples="2 4">
      <move select="Hinge Right" offsetX=".333"/>
      <move select="Hinge Right" offsetY=".333"/>
      <move select="Hinge Right" offsetX="-.333"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path couples="2 4">
      <move select="Counter Rotate Right 0 -2" hands="right" beats="3"/>
      <move select="Lead Right"/>
      <move select="Extend Left" beats="4.5" scaleX="2"/>
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Right 2 0" hands="right" beats="3"/>
      <move select="Forward" beats="1.5"/>
     <move select="Run Right" scaleY="2" />
    </path>
    <path couples="3 1">
      <move select="Hinge Right" offsetX="-.333"/>
      <move select="Hinge Right" offsetY="-.333"/>
      <move select="Hinge Right" offsetX=".333"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
  </tam>

</tamination>
