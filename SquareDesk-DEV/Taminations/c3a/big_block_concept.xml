<tamination title="Big Block Concept">

  <tam title="Big Block Circulate" group="Big Block">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-3" angle="180"/>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Run Left"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" scaleX="2" scaleY="3" beats="5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
  </tam>

  <tam title="Big Block Counter Rotate" group="Big Block">
     <formation>
      <dancer gender="boy" x="3" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="-3" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Back 2"/>
      <move select="Counter Rotate Right 2 -4" beats="4"/>
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Counter Rotate Left 2 0" beats="4" hands="left"/>
      <move select="Back 2"/>
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Counter Rotate Right 4 -2" beats="4"/>
      <move select="Back 2"/>
    </path>
    <path>
      <move select="Back 2"/>
      <move select="Counter Rotate Left 0 2" beats="4" hands="left"/>
    </path>
  </tam>

  <tam title="Big Block Split Circulate" group="Big Block">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-3" angle="180"/>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
  </tam>

  <tam title="Big Block Split Counter Rotate" group="Big Block">
     <formation>
      <dancer gender="boy" x="3" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="-3" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="4" offsetX="-2"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="4" offsetX="-2"/>
    </path>
  </tam>

  <tam title="Big Block In Roll Circulate" group="Big Block">
     <formation>
      <dancer gender="girl" x="-3" y="1" angle="180"/>
      <dancer gender="boy" x="-3" y="-3" angle="180"/>
      <dancer gender="girl" x="-1" y="3" angle="0"/>
      <dancer gender="boy" x="-1" y="-1" angle="0"/>
    </formation>
    <path couples="3 1">
      <move select="Run Right"/>
      <move select="Forward 2"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" />
      <move select="Forward 2"/>
    </path>
    <path couples="4 2">
      <move select="Forward 4"/>
    </path>
    <path couples="4 2">
      <move select="Run Left" scaleX=".5"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Big Block Trade Circulate" group="Big Block">
    <formation>
      <dancer gender="boy" x="-3" y="-3" angle="180"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="3" angle="0"/>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
    </formation>
    <path couples="3 1">
      <move select="Run Right" scaleX=".6" scaleY=".9"  />
      <move select="Extend Left 2" beats="1" scaleY=".1"  />
    </path>
    <path couples="3 1">
      <movement hands="none" beats="4" cx1="0" cy1="-1" cx2="3.5" cy2="-4" x2="4" y2="-4" cx3="1" cx4="1" cy4="-0.4" x4="2" y4="-0.4" />
    </path>
    <path couples="4 2">
      <movement hands="none" beats="4" cx1="4" cy1="0" cx2="3.5" cy2="-4" x2="4" y2="-4" cx3="1" cx4="1" cy4="-0.4" x4="2" y4="-0.4" />
    </path>
    <path couples="4 2">
      <move select="Extend Left 2" beats="1.5" scaleY=".9"  />
      <move select="Run Left" scaleX=".2" scaleY=".1"  />
    </path>
  </tam>

</tamination>
