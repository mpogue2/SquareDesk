<tamination title="Quick">

  <tam title="Quick Step" from="Right-Hand Columns" formation="Column RH GBGB">
    <path>
      <move select="Stand" hands="none" beats="3"/>
      <move select="U-Turn Right" hands="left" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Run Right" hands="right" beats="4" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
  </tam>


  <tam title="Quick Step" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
      <move select="Run Left" hands="left" beats="4" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="3"/>
      <move select="U-Turn Left" hands="right" beats="4"/>
    </path>
  </tam>

  <tam title="Quick Turn and Deal" from="Right-Hand Columns" formation="Column RH GBGB">
    <path>
      <move select="Stand" hands="none" beats="3"/>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
  </tam>

</tamination>
