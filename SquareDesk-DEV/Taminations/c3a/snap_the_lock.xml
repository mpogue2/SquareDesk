<tamination title="Snap the Lock">
  
  

  <tam title="Snap the Lock" from="Lines" formation="Normal Lines" fractions="3;1;2">
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Hinge Left" beats="2" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1.3" scaleX=".5"/>
      <move select="Extend Right" scaleY=".5" beats="1.7"/>
      <move select="Lead Right" beats="3" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Left" beats="3" offsetX="-.5" offsetY="1"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1.3" scaleX=".5"/>
      <move select="Extend Right" scaleY=".5" beats="1.7"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

</tamination>
