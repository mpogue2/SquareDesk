<tamination title="Flare Out to a Line">

  <tam title="Flare Out to a Line" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Left" beats="3" offsetX="-2" offsetY="-.5"/>
    </path>
    <path>
      <move select="Flip Left" beats="3" offsetX="-2" offsetY="-1.5"/>
    </path>
  </tam>

  <tam title="Flare Out to a Line" from="Left-Hand Two-Faced Lines">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="-2" y="1" angle="180"/>
      <dancer gender="boy" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
    </formation>
    <path couples="2 4">
      <move select="Flip Right" beats="3" offsetX="-2" offsetY="1.5"/>
    </path>
    <path couples="1 3">
      <move select="Flip Right" beats="3" offsetX="-2" offsetY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="3" hands="left" scaleX="2" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Extend Left" beats="3" hands="right" scaleX="2" scaleY="1.5"/>
    </path>
  </tam>

</tamination>
