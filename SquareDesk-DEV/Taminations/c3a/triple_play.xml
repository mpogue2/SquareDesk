<tamination title="Triple Play">

  <tam title="Triple Play" from="Right-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path couples="4 2">
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Forward 5" beats="4"/>
      <move select="Lead Right"/>
    </path>
    <path couples="4 2">
      <move select="Forward"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Forward"/>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Forward"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Forward"/>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="1.5"/>
    </path>
    <path couples="3 1">
      <move select="Forward"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Lead Right"/>
    </path>
  </tam>

  <tam title="Triple Play" from="Left-Hand Columns"
       formation="Column LH GBGB" >
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5"/>
      <move select="Run Left" beats="4" scaleY="2"/>
      <move select="Lead Left"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5"/>
      <move select="Forward"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5"/>
      <move select="Forward"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2"/>
      <move select="Forward 5" beats="4"/>
      <move select="Lead Left"/>
    </path>
  </tam>

	<tam title="Magic Column Triple Play" from="Magic Columns Right-Hand Centers"
		   formation="Magic Column RH" >
		<path>
      <move select="Forward" beats="2" />
      <move select="Swing Left" scaleX=".5"/>
      <move select="Run Left" beats="4" scaleY="2"/>
      <move select="Lead Left"/>
		</path>
		<path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" scaleX=".5"/>
      <move select="Forward" beats="2" />			
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
		</path>
		<path>
      <move select="Forward" beats="2" />			
      <move select="Swing Right" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="1.5"/>
		</path>
		<path>
      <move select="Run Left" beats="4" scaleY="2"/>
      <move select="Forward 5" beats="4"/>
      <move select="Lead Left"/>
		</path>
	</tam>

	<tam title="Magic Column Triple Play" from="Magic Columns Left-Hand Centers">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="270"/>
      <dancer gender="girl" y="-1" x="-1" angle="270"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
		<path couples="4 2">
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Forward 5" beats="4"/>
      <move select="Lead Right"/>
		</path>
		<path couples="4 2">
      <move select="Forward" beats="2" />			
      <move select="Swing Left" scaleX=".5"/>
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="1.5"/>
		</path>
		<path couples="3 1">
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Swing Right" scaleX=".5"/>
      <move select="Forward" beats="2" />			
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY=".5"/>
		</path>
		<path couples="3 1">
      <move select="Forward" beats="2" />
      <move select="Swing Right" scaleX=".5"/>
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Lead Right"/>
		</path>
	</tam>

</tamination>
