<tamination title="Single Concept">

  <tam title="Single Checkmate" from="Right-Hand Box">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="270"/>
      <dancer gender="girl" y="2" x="-1" angle="90"/>
    </formation>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" scaleY="1.5"/>
      <move select="Quarter Right" beats="3" offsetX="3"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Run Left" scaleY="1.5"/>
      <move select="Quarter Left" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="4" scaleY="3"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Couples Facing Out"
       formation="Couples Facing Out">
    <path>
      <move select="Flip Left"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Quarter Right" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Quarter Right" beats="3" offsetX="3"/>
    </path>
    <taminator>
      This has also been called Split Checkmate
    </taminator>
  </tam>

  <tam title="Single Checkmate" from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Run Left"/>
      <move select="Quarter Left" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Left"/>
      <move select="Quarter Left" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY="1.5"/>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
  </tam>

  <tam title="Single Checkmate" from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Forward"/>
      <move select="Lead Left" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY="1.5"/>
      <move select="Quarter Left" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Left" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Run Left" scaleY="1.5"/>
      <move select="Quarter Left" beats="2" offsetX="2"/>
    </path>
  </tam>

  <tam title="Single Checkmate"
       from="Inverted Lines Ends Facing Out"
       formation="Inverted Lines Ends Facing Out">
    <path>
      <move select="Run Left" scaleY="0.75"/>
      <move select="Forward 2"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="2" scaleX="1.5"/>
    </path>
    <path>
      <move select="Run Right" scaleY="1.25"/>
      <move select="Forward 2"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Single Checkmate"
       from="Inverted Lines Ends Facing In"
       formation="Inverted Lines Ends Facing In">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="2" scaleX="1.5"/>
    </path>
    <path>
      <move select="Run Right" scaleY="1.25"/>
      <move select="Forward 2"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" scaleY="0.75"/>
      <move select="Forward 2"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Heads Single Checkmate" from="Static Square"
       formation="Static Square" group=" ">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path/>
    <path/>
    <taminator>
      This has also been called Box Checkmate
    </taminator>
  </tam>

  <tam title="As Couples Single Checkmate"
       formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Lead Right" beats="4" hands="right" scaleX="3" scaleY="3"/>
      <move select="Forward 2" hands="right"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Lead Right" beats="4" hands="left"/>
      <move select="Forward 2" hands="left"/>
    </path>
    <path>
      <move select="Flip Right" beats="4" hands="left"/>
      <move select="Forward 3" hands="left"/>
      <move select="Quarter Right" beats="2" hands="left" offsetY="1"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="2" scaleY="3"/>
      <move select="Forward 3" hands="right"/>
      <move select="Lead Right" beats="2" hands="right" scaleX="2"/>
    </path>
  </tam>

  <tam title="Stretch Single Checkmate" group=" "
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Quarter Right" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleY="2"/>
      <move select="Quarter Right" beats="3" offsetX="3"/>
    </path>
  </tam>

  <tam title="Tandem Single Checkmate" group=" "
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Forward 4"/>
      <move select="Counter Rotate Right 0 -2" offsetY="1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 2 0" offsetY="1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 0 -2" beats="5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 2 0" beats="5"/>
      <move select="Forward 2"/>
    </path>
    <taminator>
      Note how this is different from A-2 Checkmate
    </taminator>
  </tam>


  <tam title="Single Ferris Wheel" group="Single"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="U-Turn Right" offsetX="1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Single Polly Wally" group="Single"
       formation="Eight Chain Thru">
    <path>
      <move select="U-Turn Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Single Rotary Spin" group="Single">
    <formation name="Single Eight Chain Thru">
      <dancer gender="boy" x="0" y="3" angle="270"/>
      <dancer gender="girl" x="0" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleY=".5"/>
      <move select="U-Turn Left"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Couples Facing Out"
       formation="Couples Facing Out">
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Right-Hand Box"
       formation="Box RH">
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Left-Hand Box"
       formation="Box LH">
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

</tamination>
