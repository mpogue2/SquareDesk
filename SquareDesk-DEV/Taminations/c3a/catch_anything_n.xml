<tamination title="Catch Anything N">

  <tam title="Catch Mix 3" from="Facing Couples" group=" "
       formation="Facing Couples" parts="5;5">
    <path numbers="1 4">
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" offsetX=".5" offsetY=".5" />
      <move select="Dodge Right" beats="2" scaleY="0.5"/>
      <move select="Swing Right" scaleX="0.5" scaleY="0.5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path numbers="2 3">
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Run Left" beats="5"/>
      <move select="Flip Left" offsetX="2" scaleY="0.25"/>
    </path>
  </tam>

  <tam title="Catch Switch to a Diamond 3" group=" "
       from="Facing Couples" formation="Facing Couples" parts="5;5">
    <path>
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" offsetX=".5" offsetY=".5" />
      <move select="Lead Right" scaleY="1.5" beats="3" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Lead Left" scaleX=".5" scaleY="1.5" />
      <move select="Run Right" />
      <move select="Fold Right" scaleX=".5" scaleY=".75" />
    </path>
  </tam>

</tamination>
