<tamination title="Expand the Column">

  <tam title="Expand the Column" from="Right-Hand Columns">
    <formation>
      <dancer gender="boy" x="-3" y="-1" angle="180"/>
      <dancer gender="girl" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="1" y="-1" angle="180"/>
      <dancer gender="boy" x="3" y="-1" angle="180"/>
    </formation>
    <path couples="3 1">
      <move select="Run Right"/>
      <move select="Forward"/>
    </path>
    <path couples="3 1">
      <move select="Run Left" beats="4" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="-1"/>
    </path>
    <path>
      <move select="Forward 5" beats="4"/>
    </path>
  </tam>

  <tam title="Magic Expand the Column" from="Right-Hand Magic Columns"
       formation="Magic Column RH">
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Forward 3" beats="2"/>
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="-1"/>
    </path>
    <path>
      <move select="Run Left" beats="3"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
