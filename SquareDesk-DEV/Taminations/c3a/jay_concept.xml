<tamination title="Jay Concept">

  <tam title="Jay Left Wheel Thru" group="Jay">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="3" angle="0"/>
    </formation>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3"/>
    </path>
  </tam>

  <tam title="Jay Pass the Ocean" group="Jay">
    <formation>
      <dancer gender="boy" x="3" y="0" angle="270"/>
      <dancer gender="girl" x="-1" y="0" angle="270"/>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
      <dancer gender="girl" x="1" y="-3" angle="90"/>
    </formation>
    <path>
      <move select="Lead Right" beats="5" scaleX="5" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" />
      <move select="Quarter Left" beats="2" offsetX="1.5"/>
    </path>
    <path>
      <move select="Forward" beats="2" scaleX="1.5"/>
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Quarter Left" beats="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Jay Square Thru Three" formation="Quarter Tag" group="Jay">
    <path>
      <move select="Extend Left" beats="2" scaleX="1" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Lead Left" beats="2" scaleX="1.5"/>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Extend Right" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="2"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY="1.5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2.5"/>
    </path>
  </tam>

  <tam title="Jay Swap Around" formation="Quarter Tag" group="Jay">
    <path>
      <move select="Run Right" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
    </path>
  </tam>

  <tam title="Jay Touch a Quarter" formation="Quarter Tag" group="Jay">
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Back Jay Chase Right" group="Back Jay" formation="3/4 Tag">
    <path>
      <move select="U-Turn Right" beats="1.5" offsetX="-1" offsetY="-1" />
      <move select="Forward" />
      <move select="Run Right" beats="3.5" offsetX="1" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Right" scaleY="1.5" />
      <move select="Extend Left" scaleX="3"  beats="4" />
    </path>
    <path>
      <move select="Flip Right" scaleY="1.25" />
      <move select="Extend Left" beats="3.5" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="1.5" offsetX="-1" />
      <move select="Forward" />
      <move select="Run Right" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Back Jay Shakedown" group="Back Jay">
    <formation>
      <dancer gender="boy" x="3" y="3" angle="0"/>
      <dancer gender="girl" x="3" y="-3" angle="0"/>
      <dancer gender="boy" x="0" y="3" angle="180"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Flip Right" beats="5" scaleY="2.5"/>
      <move select="Quarter Right" beats="2" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="U-Turn Right" beats="2.5" offsetX="-1.5" offsetY="-1.5"/>
      <move select="Forward 2"/>
      <move select="Extend Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" />
      <move select="Quarter Right" beats="2"/>
    </path>
  </tam>

  <tam title="Left Jay Partner Tag" group="Left Jay">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="270"/>
      <dancer gender="girl" x="2" y="1" angle="90"/>
      <dancer gender="boy" x="0" y="1" angle="270"/>
      <dancer gender="girl" x="2" y="-1" angle="270"/>
    </formation>
    <path>
      <move select="Lead Left" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Lead Left" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Lead Left" scaleX=".5"/>
      <move select="Extend Right" beats="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-.5" offsetY="-1"/>
      <move select="Extend Right" beats="2" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Right Jay Partner Tag" group="Right Jay">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="270"/>
      <dancer gender="girl" x="2" y="1" angle="90"/>
      <dancer gender="boy" x="0" y="1" angle="270"/>
      <dancer gender="girl" x="2" y="-1" angle="270"/>
    </formation>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY=".5"/>
      <move select="Extend Left" beats="1.5" scaleX="1.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
