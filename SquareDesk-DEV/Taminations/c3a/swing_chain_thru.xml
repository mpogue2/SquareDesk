<tamination title="Swing Chain Thru">

  <tam title="Swing Chain Thru" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" parts="3;1.5;3">
    <path couples="2 4">
      <move select="Swing Right"/>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Hinge Left"/>
    </path>
    <path couples="2 4">
      <move select="Swing Right"/>
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="Hinge Left"/>
      <move select="Swing Right"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Swing Chain Thru" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" parts="3;1.5;3">
    <path>
      <move select="Swing Left"/>
      <move select="Hinge Right"/>
      <move select="Swing Left"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Hinge Right"/>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

</tamination>
