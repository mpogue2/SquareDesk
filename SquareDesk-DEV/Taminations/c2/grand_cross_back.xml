<tamination title="Grand Cross Back">

  <tam title="Grand Cross Back" from="Right-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path couples="2 4">
      <move select="U-Turn Right"/>
    </path>
    <path couples="2 4">
      <move select="Extend Right" scaleX="1.25" scaleY="2" beats="2"/>
      <move select="Forward" scaleX=".75"/>
    </path>
    <path couples="3 1">
      <move select="Extend Right" scaleX="1.25" scaleY="2" beats="2"/>
      <move select="Forward" scaleX=".75"/>
    </path>
    <path couples="3 1">
      <move select="Extend Right" scaleX="1.25" scaleY="2" beats="2"/>
      <move select="Forward" scaleX=".75"/>
    </path>
  </tam>

  <tam title="Grand Cross Back" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Extend Left" scaleX="1.25" scaleY="2" beats="2"/>
      <move select="Forward" scaleX=".75"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="1.25" scaleY="2" beats="2"/>
      <move select="Forward" scaleX=".75"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="1.25" scaleY="2" beats="2"/>
      <move select="Forward" scaleX=".75"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

</tamination>
