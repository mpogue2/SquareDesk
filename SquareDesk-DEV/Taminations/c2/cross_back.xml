<tamination title="Cross Back">

  <tam title="Cross Back"
       from="Right-Hand Box"
       formation="Box RH Boys Lead" >
    <path numbers="2 3" couples="3 1">
      <move select="U-Turn Right" />
    </path>
    <path numbers="1 4" couples="3 1">
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Cross Back"
       from="Left-Hand Box"
       formation="Box LH" >
    <path numbers="1 4">
      <move select="U-Turn Left" />
    </path>
    <path numbers="2 3">
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Cross Back" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="Cross Back" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Cross Back" from="Right-Hand Columns" formation="Column RH GBGB">
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="1.25" scaleY="2" />
      <move select="Forward" scaleX=".75"/>
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="1.25" scaleY="2" />
      <move select="Forward" scaleX=".75" />
    </path>
  </tam>

  <tam title="Cross Back" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="1.25" scaleY="2" />
      <move select="Forward" scaleX=".75"/>
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="2" scaleX="1.25" scaleY="2" />
      <move select="Forward" scaleX=".75" />
    </path>
    <path>
      <move select="U-Turn Left" />
    </path>
  </tam>

  <tam title="All 8 Cross Back" formation="Static MiniWaves RH" group=" ">
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="As Couples Cross Back" formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY="4" />
      <move select="Forward 2" hands="right"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="4" />
      <move select="Forward 2" hands="left"/>
    </path>
    <path>
      <move select="Belle Reverse Wheel"/>
    </path>
    <path>
      <move select="Beau Reverse Wheel"/>
    </path>
  </tam>

  <tam title="Tandem Cross Back" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Pivot backward right" beats="5"/>
    </path>
    <path>
      <move select="Pivot forward left" beats="5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY="1.5" beats="1.5"/>
      <move select="Extend Right" scaleX="3" scaleY=".5" beats="3.5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY="1.5" beats="1.5"/>
      <move select="Extend Right" scaleX="3" scaleY=".5" beats="3.5"/>
    </path>
  </tam>

</tamination>
