<tamination title="Dodge Anything">

  <tam title="Dodge Circulate" group=" "
       formation="Ocean Waves RH BGGB" >
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Dodge Left" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="3" />
    </path>
  </tam>

  <tam title="Dodge Hocus Pocus" group=" "
       formation="Two-Faced Lines RH">
    <path couples="2 4">
      <move select="Forward 4"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
    <path couples="2 4">
      <move select="Forward 3"/>
    </path>
    <path couples="3 1">
      <move select="Dodge Right" offsetX="-1"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
  </tam>

  <tam title="Dodge Load the Boat" group=" ">
     <formation>
      <dancer gender="boy" x="-1" y="-3" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="270"/>
      <dancer gender="boy" x="-1" y="-1" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="0"/>
    </formation>
    <path>
      <move select="Pass Thru" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4"/>
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
  </tam>

  <tam title="Dodge Trade" group=" "
       formation="Column RH GBGB" >
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Forward 2" beats="3" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
  </tam>

</tamination>
