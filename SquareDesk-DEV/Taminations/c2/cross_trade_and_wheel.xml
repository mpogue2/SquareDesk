<tamination title="Cross Trade and Wheel">
  
  <tam title="Cross Trade and Wheel"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="3;3" >
    <path>
      <move select="Hinge Right" beats="3" scaleX="1.5" scaleY="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="both" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="both" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Forward"/>
      <move select="BackRun Left" hands="left" offsetX="1" offsetY="-1.5" />
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleX="1.5" scaleY="3" />
      <move select="Stand" beats="3" />
      <move select="Forward"/>
      <move select="Run Right" hands="right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Cross Trade and Wheel"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="3;3" >
    <path>
      <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3" />
      <move select="Stand" beats="3" />
      <move select="Forward"/>
      <move select="Run Left" hands="left" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Hinge Left" beats="3" hands="both" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Forward"/>
      <move select="BackRun Right" hands="right" offsetX="1" offsetY="1.5" />
    </path>
    <path>
      <move select="Hinge Left" beats="3" hands="both" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Extend Left" beats="3" hands="right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="3" hands="left" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Cross Trade and Wheel"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       parts="3;3" >
    <path>
      <move select="Quarter Left" beats="3" hands="left" offsetX="-.5" offsetY="3"/>
      <move select="Stand" beats="3" />
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Quarter Left" beats="3" hands="right"  offsetX="-1.5" offsetY="1" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="left" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Forward"/>
      <move select="BackRun Left" hands="left" offsetX="1" offsetY="-1.5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="right" scaleX="1.5" scaleY="3" />
      <move select="Stand" beats="3" />
      <move select="Forward"/>
      <move select="Run Right" hands="right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>
  
</tamination>
