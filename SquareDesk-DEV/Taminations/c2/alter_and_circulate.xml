<tamination title="Alter and Circulate">

  <tam title="Alter and Circulate"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3;4.5;3;4" >
    <path>
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Swing Left" beats="4" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="U-Turn Right" />
      <move select="Run Left" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Flip Left" />
    </path>
    <path couples="4 2">
      <move select="Swing Right" />
      <move select="U-Turn Right" />
      <move select="Forward 4" beats="4.5" />
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Flip Left" />
    </path>
    <path couples="4 2">
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" beats="4" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Alter and Circulate"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="3;4.5;3;4" >
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" beats="4" />
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="U-Turn Left" />
      <move select="Forward 4" beats="4.5" />
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="U-Turn Left" />
      <move select="Run Right" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Swing Right" beats="4" />
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
  </tam>
</tamination>
