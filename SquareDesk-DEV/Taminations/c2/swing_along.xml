<tamination title="Swing Along">
  
  

  <tam title="Swing Along" from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB" fractions="3">
	<path>
	  <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Forward 4" />
      <move select="Swing Left" />
	</path>
	<path>
	  <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Forward" />
      <move select="Lead Right" beats="6" scaleX="2" scaleY="5.5" />
	</path>
	<path>
	  <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Right" />
	</path>
	<path>
	  <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5" />
      <move select="Flip Left" beats="4" />
      <move select="Swing Left" />
	</path>
  </tam>

</tamination>
