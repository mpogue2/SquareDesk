<tamination title="Offset Waves/Lines/Columns Concept">

  <tam title="Offset Lines Couples Circulate" group="Offset Lines">
     <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
      <dancer gender="boy" x="-3" y="-3" angle="180"/>
    </formation>
    <path numbers="5 4">
      <move select="Forward 3" beats="5" hands="right" />
    </path>
    <path numbers="6 3">
      <move select="Forward 3" beats="5" hands="left" />
    </path>
    <path numbers="1 8">
      <move select="Run Right" hands="left" />
      <move select="Forward 3" beats="2" hands="left"/>
    </path>
    <path numbers="2 7">
      <move select="Run Right" hands="right" scaleX="3" scaleY="3" />
      <move select="Forward 3" beats="2" hands="right"/>
    </path>
  </tam>

  <tam title="Offset Lines Bend the Line" group="Offset Lines">
     <formation>
      <dancer gender="boy" x="3" y="0" angle="270"/>
      <dancer gender="girl" x="1" y="0" angle="270"/>
      <dancer gender="girl" x="1" y="3" angle="270"/>
      <dancer gender="boy" x="3" y="3" angle="270"/>
    </formation>
    <path numbers="8 1">
      <move select="Hinge Right" beats="2" hands="right" scaleX="0.67" />
    </path>
    <path numbers="7 2">
      <move select="BackHinge Left" beats="2" hands="left" scaleX="0.67" />
    </path>
    <path numbers="6 3">
      <move select="BackHinge Left" beats="2" hands="left" scaleX="0.67" />
    </path>
    <path numbers="5 4">
      <move select="Hinge Right" beats="2" hands="right" scaleX="0.67" />
    </path>
  </tam>

  <tam title="Offset Lines Pass the Ocean" group="Offset Lines">
     <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="-3" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" beats="1.5" scaleX="2.33" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Left" scaleX=".67" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" beats="1.5" scaleX="2.33" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Left" scaleX=".67" scaleY=".5" />
    </path>
  </tam>

  <tamxref title="Offset Lines The K" group="Offset Lines"
           xref-link="c2/anything_the_k"
           xref-title="Offset Lines the K"/>


</tamination>
