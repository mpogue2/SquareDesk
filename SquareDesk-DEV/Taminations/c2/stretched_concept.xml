<tamination title="Stretched Line, Wave, and Box Concept">

  <tam title="Stretched Line Crossfire" group="Stretched Line"
       formation="Tidal Line RH">
    <path couples="3 1">
      <move select="Run Right" beats="6"  scaleY="1.25" offsetX="2"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" scaleX=".5" scaleY=".75"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="6" scaleY="2.25" offsetX="2"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="4" scaleX=".5" scaleY="1.75"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Stretched Line Tag the Line" group="Stretched Line"
       formation="Tidal Line RH">
    <path>
      <move select="Lead Right" beats="2.5" scaleX=".5"/>
      <move select="Extend Right" beats="2.5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="2.5" scaleX=".5"/>
      <move select="Extend Right" beats="2.5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Stretched Line Turn and Deal" group="Stretched Line"
       formation="Tidal Line RH">
    <path>
      <move select="Lead Right" beats="2.5" scaleX="1.5" scaleY=".5"/>
      <move select="Quarter Right" beats="2.5" />
    </path>
    <path>
      <move select="Lead Right" beats="2.5" scaleX="1.5"/>
      <move select="Quarter Right" beats="2.5" offsetX=".5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX="1.5"/>
      <move select="Forward"/>
      <move select="Quarter Right" offsetX=".5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX="1.5"/>
      <move select="Forward 2"/>
      <move select="Quarter Right" offsetX=".5"/>
    </path>
  </tam>

  <tam title="Stretched Line Wheel and Deal" group="Stretched Line"
       formation="Tidal Line RH">
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="2" scaleX="1.5" scaleY="1.25"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2" offsetY=".5" hands="gripleft"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="2" scaleX="1.5" scaleY="2.25"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2" offsetY="-1.5" hands="gripleft"/>
    </path>
  </tam>

  <tam title="Stretched Wave Explode the Wave" group="Stretched Wave"
       formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="4" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Stretched Wave Recycle" group="Stretched Wave"
       formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Run Right" beats="3" offsetX="2" scaleY="1.25"/>
    </path>
    <path numbers="7 2">
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="U-Turn Right" beats="2" offsetX="1.5" offsetY="-.5" />
    </path>
    <path numbers="6 3">
      <move select="Run Right" beats="3" offsetX="2" scaleY="2.25"/>
    </path>
    <path numbers="5 4">
      <move select="U-Turn Right" beats="2" offsetX="-1"/>
      <move select="U-Turn Right" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
  </tam>

  <tamxref title="Stretched Box Circulate"
           from="Normal Lines"
           xref-link="c3a/scatter_circulate"
           xref-from="Normal Lines" />

  <tamxref title="Stretched Box Circulate"
           from="Lines Facing Out"
           xref-link="c3a/scatter_circulate"
           xref-from="Lines Facing Out" />

  <tamxref title="Stretched Box Circulate"
           from="Right-Hand Two-Faced Lines"
           xref-link="c3a/scatter_circulate"
           xref-from="Right-Hand Two-Faced Lines" />

  <tamxref title="Stretched Box Circulate"
           from="Left-Hand Two-Faced Lines"
           xref-link="c3a/scatter_circulate"
           xref-from="Left-Hand Two-Faced Lines" />

</tamination>
