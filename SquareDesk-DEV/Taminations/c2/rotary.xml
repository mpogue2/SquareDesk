<tamination title="Rotary">

  <tam title="Rotary Explode the Wave" formation="Eight Chain Thru"
       group="Rotary">
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Forward" beats="2"/>
      <move select="Lead Right" hands="right" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Extend Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Right" scaleY="2" beats="2"/>
      <move select="Lead Left" hands="right" beats="3" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="2" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Beau Wheel"/>
      <move select="Quarter Left" offsetY="1"/>
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Belle Wheel"/>
      <move select="Quarter Left" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Rotary Mix" group="Rotary">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="270" />
      <dancer gender="girl" y="3" x="-1" angle="270" />
      <dancer gender="boy" y="1" x="-1" angle="90" />
      <dancer gender="girl" y="1" x="1" angle="90" />
    </formation>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Forward" beats="2"/>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Right" scaleY="2" beats="2"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Beau Wheel"/>
      <move select="Quarter Left" offsetY="1"/>
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Belle Wheel"/>
      <move select="Quarter Left" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Rotary Trade the Wave" formation="Eight Chain Thru"
       group="Rotary">
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Forward" beats="2"/>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Right" scaleY="2" beats="2"/>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Beau Wheel"/>
      <move select="Quarter Left" offsetY="1"/>
    </path>
    <path>
      <move select="Pull Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Belle Wheel"/>
      <move select="Quarter Left" offsetY="-1"/>
    </path>
  </tam>

</tamination>
