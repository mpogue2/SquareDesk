<tamination title="Hocus Pocus">



  <tam title="Hocus Pocus"
       from="Lines"
       formation="Normal Lines"
       fractions="" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2.5" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Hocus Pocus"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       fractions="" >
    <path>
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="3" />
      <move select="Lead Left" scaleY=".5" />
    </path>
    <path>
      <move select="Flip Left" beats="4.5" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" beats="4.5" offsetX="-1" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY="3" />
      <move select="Lead Right" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Hocus Pocus"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       fractions="" >
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Swing Left" beats="5" offsetX="-1" />
    </path>
    <path>
      <move select="Swing Left" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="1" offsetY="-2" />
    </path>
  </tam>

  <tam title="Hocus Pocus"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="" >
    <path>
      <move select="Run Left" beats="5" offsetX="1" offsetY="2" />
    </path>
    <path>
      <move select="Swing Right" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Swing Right" beats="5" offsetX="-1" />
    </path>
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Hocus Pocus"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path>
      <move select="Run Right" beats="5" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Swing Right" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Swing Right" beats="5" offsetX="-1" />
    </path>
    <path>
      <move select="Extend Left" beats="2.5" scaleX="2" scaleY="2" />
      <move select="Forward 3" beats="2.5" />
    </path>
  </tam>

  <tam title="Hocus Pocus"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path>
      <move select="Extend Right" beats="2.5" scaleX="2" scaleY="2" />
      <move select="Forward 3" beats="2.5" />
    </path>
    <path>
      <move select="Swing Left" beats="5" offsetX="-1" />
    </path>
    <path>
      <move select="Swing Left" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="-1" offsetY="2" />
    </path>
  </tam>

  <tam title="Hocus Pocus"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path>
      <move select="Flip Left" beats="5" offsetX="-1" offsetY="2" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="-1" offsetY="-2" />
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="1" />
    </path>
  </tam>
</tamination>
