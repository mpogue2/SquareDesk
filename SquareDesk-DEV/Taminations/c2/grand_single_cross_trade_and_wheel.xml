<tamination title="Grand Single Cross Trade and Wheel">

  <tam title="Grand Single Cross Trade and Wheel" 
       from="Right-Hand Columns" parts="1.5;3">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path couples="2 4">
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Stand" beats="3"/>
      <move select="Flip Right" beats="2" offsetX="2" offsetY="1.5"/>
    </path>
    <path couples="2 4">
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Single Cross Trade and Wheel" from="Left-Hand Columns"
       formation="Column LH GBGB" parts="1.5;3">
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Stand" beats="3"/>
      <move select="Flip Left" beats="2" offsetX="2" offsetY="-1.5"/>
    </path>
  </tam>

</tamination>
