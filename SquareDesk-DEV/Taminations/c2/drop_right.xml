<tamination title="Drop Right/Left">
  
  

  <tam title="Drop Right"
       from="Right-Hand Diamond"
       formation="Diamond RH">
    <path>
      <move select="Lead Right" beats="2" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Drop Right" from="Left-Hand Diamond" formation="Diamond LH">
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Drop Left" from="Right-Hand Diamond" formation="Diamond RH">
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Drop Left" from="Left-Hand Diamond" formation="Diamond LH">
    <path>
      <move select="Lead Left" beats="2" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
  </tam>


</tamination>
