<tamination title="Chain the Square">

  <tam title="Chain the Square"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" >
    <path numbers="1 8">
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="U-Turn Left" beats="2" hands="gripleft" offsetX="1" offsetY="1.25" />
      <move select="U-Turn Left" beats="2" hands="gripleft" offsetX="-1" offsetY="-1.25" />
    </path>
    <path numbers="2 7">
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Run Left" beats="4" hands="gripleft" offsetX="-2" offsetY="-1.5" />
    </path>
    <path numbers="4 5">
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" />
      <move select="Extend Left" beats="2" hands="gripleft" scaleY="2" />
    </path>
    <path numbers="3 6">
      <move select="Pull Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" />
      <move select="Extend Left" beats="2" hands="gripright" scaleY="2" />
    </path>
  </tam>
</tamination>
