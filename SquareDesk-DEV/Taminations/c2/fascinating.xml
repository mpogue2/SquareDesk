<tamination title="Fascinating">

  <tam title="Fascinating Recycle"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       fractions="" group="Fascinating">
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Run Right" beats="5" offsetX="3" scaleY="3" />
    </path>
    <path>
      <move select="Cast Left" beats="6" />
      <move select="Swing Right" beats="5" />
    </path>
    <path>
      <move select="Cast Left" beats="6" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-1" />
      <move select="Run Right" beats="3" scaleX=".5" scaleY="1.5" offsetX="2" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Fascinating Turn and Deal"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       fractions="" group="Fascinating">
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Run Right" beats="5" offsetX="3" offsetY="-2" />
    </path>
    <path>
      <move select="Cast Right" beats="6" />
      <move select="Run Right" beats="5" offsetX="3" offsetY="-2" />
    </path>
    <path>
      <move select="Cast Right" beats="6" />
      <move select="Swing Left" beats="5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
  </tam>

</tamination>
