<tamination title="Rims Trade Back">



  <tam title="Rims Trade Back"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3" >
    <path>
      <move select="Swing Right" />
      <move select="Run Left" beats="4" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Forward 4" />
    </path>
  </tam>

  <tam title="Rims Trade Back"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="3" >
    <path>
      <move select="Swing Left" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Swing Left" />
      <move select="Run Right" beats="4" />
    </path>
  </tam>

  <tam title="Rims Trade Back"
       from="Thar"
       formation="Thar LH Boys"
       parts="3" >
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
  </tam>
