<tamination title="Zip Code 1-6">

  <tam title="Zip Code 6" from="Double Pass Thru"
       fractions="5;2;4;2;4">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="270" />
      <dancer gender="girl" y="3" x="-1" angle="270" />
      <dancer gender="boy" y="1" x="1" angle="270" />
      <dancer gender="girl" y="1" x="-1" angle="270" />
    </formation>
    <path couples="2 4">
      <move select="Forward 2" hands="right" />
    </path>
    <path couples="2 4">
      <move select="Forward 2" hands="left"/>
    </path>
    <path couples="1 3">
      <!-- zip code 1 -->
      <move select="Run Left" offsetX="-1"/>
      <move select="Lead Left" beats="2" scaleY="2"/>
      <!-- zip code 2 -->
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <!-- zip code 3 -->
      <move select="Lead Left" beats="4" scaleX="2" scaleY="2"/>
      <!-- zip code 4 -->
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <!-- zip code 5 -->
      <move select="Lead Left" beats="4" scaleX="2" scaleY="2"/>
      <!-- zip code 6 -->
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path couples="1 3">
      <!-- zip code 1 -->
      <move select="Run Right" offsetX="-1"/>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <!-- zip code 2 -->
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <!-- zip code 3 -->
      <move select="Lead Right" beats="4" scaleX="2" scaleY="2"/>
      <!-- zip code 4 -->
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <!-- zip code 5 -->
      <move select="Lead Right" beats="4" scaleX="2" scaleY="2"/>
      <!-- zip code 6 -->
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
  </tam>

</tamination>
