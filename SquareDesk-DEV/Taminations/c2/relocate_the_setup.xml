<tamination title="Relocate the Setup">

  <tam title="Relocate the Diamond" from="Twin Diamonds"
       formation="Diamonds RH Girl Points">
    <path couples="3 1">
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Right 5 -1" beats="4.5" />
    </path>
    <path couples="4 2">
      <move select="Cast Left"/>
    </path>
    <path couples="4 2">
      <move select="Counter Rotate Right 1 -5" beats="4.5"/>
    </path>
  </tam>

  <tam title="Relocate the Diamond" from="Point to Point Diamonds"
       formation="Diamonds RH PTP Girl Points">
    <path>
      <move select="Counter Rotate Right 4 2" beats="4.5" hands="right"/>
    </path>
    <path>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Counter Rotate Right -2 -4" beats="4.5" hands="right"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="5" scaleY="5"/>
    </path>
  </tam>

  <tam title="Relocate the Hourglass" from="Right-Hand Hourglass">
    <formation>
      <dancer gender="girl" y="2" x="-3" angle="90"/>
      <dancer gender="boy" y="3" x="0" angle="0"/>
      <dancer gender="girl" y="2" x="3" angle="270"/>
      <dancer gender="boy" y="0" x="1" angle="270"/>
    </formation>
    <path couples="2 4">
      <move select="Counter Rotate Right 1 -5" beats="4.5"/>
    </path>
    <path couples="1 3">
      <move select="Lead Right" scaleX="3" scaleY="3" beats="4.5"/>
    </path>
    <path couples="1 3">
      <move select="Counter Rotate Right 5 -1" beats="4.5"/>
    </path>
    <path couples="4 2">
      <move select="Cast Right"/>
    </path>
  </tam>

  <tam title="Relocate the Hourglass" from="Facing Hourglass" formation="Hourglass Facing RH Box">
    <path>
      <move select="Counter Rotate Right 1 -5" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Left" scaleX="2" scaleY="2" beats="3"/>
      <move select="Extend Right" beats="1.5"/>
    </path>
    <path>
      <move select="Counter Rotate Right 5 -1" beats="4.5"/>
    </path>
    <path>
      <move select="Cast Left"/>
    </path>
  </tam>

  <tam title="Relocate the Setup" from="Quarter Tag" formation="Quarter Tag">
    <path>
      <move select="Counter Rotate Right 4 2" beats="4.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3"/>
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Cast Left"/>
    </path>
  </tam>

  <tam title="Relocate the Setup" from="Tidal Wave" formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" beats="4.5"/>
    </path>
    <path>
      <move select="Cast Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Relocate the Setup" from="Tidal Line" formation="Tidal Line RH">
    <path>
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX="2.5" scaleY="2.5" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" beats="4.5"/>
    </path>
    <path>
      <move select="Cast Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

</tamination>
