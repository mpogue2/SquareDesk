<tamination title="Scoot and Cross Ramble">

  <tam title="Scoot and Cross Ramble"
       from="Quarter Tag"
       formation="Quarter Tag"
       parts="5;4" >
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" scaleX="1.5" />
      <move select="Lead Left" beats="1" scaleX=".5" />
      <move select="Lead Left" scaleX="3" scaleY="2.5" beats="3" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Forward" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleX="1.5" scaleY="1.5" />
      <move select="Flip Right" beats="4" scaleY="2" offsetX="-2" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Right" scaleX="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" scaleX="1.5" />
      <move select="Flip Left" beats="4" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Forward" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleX="1.5" scaleY=".5" />
      <move select="Run Right" beats="4" scaleY="2" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

</tamination>
