<tamination title="Disconnected Concept">

  <tam title="Boys Disconnected Crossfire" group="Boys Disconnected">
     <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="-.6" angle="0"/>
      <dancer gender="boy" x="0" y="1.8" angle="0"/>
      <dancer gender="girl" x="0" y="4.2" angle="0"/>
    </formation>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.6" scaleY="1.8"/>
      <move select="Forward"/>
      <move select="Lead Right" beats="2" scaleX="2.6" scaleY=".4"/>
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="2.3"/>
      <move select="Lead Right" beats="2" scaleX="1.9" scaleY="1.7"/>
      <move select="Forward"/>
    </path>
    <path>
    </path>
  </tam>

  <tam title="Girls Disconnected Cross Roll to a Wave"
       group="Girls Disconnected"
       formation="Tidal Line Girls Disconnected">
  <path numbers="7 2">
    <move select="Run Left" beats="5"/>
  </path>
  <path numbers="8 1">
    <move select="Stand" beats="5" hands="none"/>
  </path>
  <path numbers="5 4">
    <move select="Run Left" beats="5" scaleY="1.5"/>
  </path>
  <path numbers="6 3">
    <move select="Stand" beats="5" hands="none"/>
  </path>
  </tam>

  <tam title="Girls Disconnected Crossfire"
       group="Girls Disconnected">
     <formation>
      <dancer gender="girl" x="0" y="-2.5" angle="0"/>
      <dancer gender="boy" x="0" y="-3.5" angle="0"/>
      <dancer gender="girl" x="0" y="-.5" angle="0"/>
      <dancer gender="boy" x="0" y="-1.5" angle="0"/>
    </formation>
  <path numbers="7 2">
    <move select="Run Left" beats="5" offsetX="2" scaleY="1.75"/>
  </path>
  <path numbers="8 1">
    <move select="Stand" beats="5" hands="none"/>
  </path>
  <path numbers="5 4">
    <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
  </path>
  <path numbers="6 3">
    <move select="Dodge Right" beats="5" scaleY=".25"/>
  </path>
  </tam>

  <tam title="Girls Disconnected Mix" group="Girls Disconnected"
       formation="Tidal Wave LH BGGB">
    <path>
      <move select="Stand" beats="7" hands="none"/>
    </path>
    <path>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX="2" scaleY="2"/>
      <move select="Stand" />
    </path>
    <path>
      <move select="Stand" beats="7" hands="right"/>
    </path>
  </tam>

  <tam title="Girls Disconnected Swing Thru" group="Girls Disconnected"
       formation="Tidal Wave LH BGGB">
    <path>
      <move select="Stand" beats="7" hands="none"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Stand" beats="4" hands="none"/>
    </path>
    <path>
      <move select="Stand" beats="7" hands="right"/>
    </path>
  </tam>

  <tam title="Girls Disconnected Switch the Wave" group="Girls Disconnected"
       formation="Tidal Wave LH BGGB">
    <path>
      <move select="Stand" beats="6" hands="none"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".5"/>
      <move select="Stand" beats="3" hands="none"/>
    </path>
    <path>
      <move select="Stand" beats="6" hands="right"/>
    </path>
  </tam>

  <tam title="Ends Disconnected Chase Right" group="Ends Disconnected"
       formation="Lines Facing Out">
    <path>
      <move select="U-Turn Right" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Stand" beats="11" hands="left"/>
    </path>
    <path>
      <move select="Stand" beats="11" hands="right"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
      <move select="Forward 4" beats="5"/>
    </path>
  </tam>

  <tam title="Ends Disconnected Scoot Back" group="Ends Disconnected"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2.25"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2.25"/>
    </path>
    <path>
      <move select="Stand" beats="7" hands="left"/>
    </path>
    <path>
      <move select="Stand" beats="7" hands="left"/>
    </path>
    <path>
      <move select="Run Right" beats="7" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Ends Disconnected Swap Around" group="Ends Disconnected"
       formation="Normal Lines">
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Stand" beats="6" hands="right"/>
    </path>
    <path>
      <move select="Stand" beats="6" hands="left"/>
    </path>
    <path>
      <move select="Forward 4" beats="6"/>
    </path>
  </tam>

  <tam title="Same Sex Disconnected Crossfire" group=" ">
     <formation>
      <dancer gender="girl" x="0" y="3.5" angle="0"/>
      <dancer gender="boy" x="0" y="2.5" angle="0"/>
      <dancer gender="girl" x="0" y=".5" angle="0"/>
      <dancer gender="boy" x="0" y="1.5" angle="0"/>
    </formation>
    <path>
      <move select="Lead Right" scaleX="2"/>
      <move select="Forward 2"/>
      <move select="Quarter Right" offsetX="1.5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX="2" scaleY="1.5"/>
      <move select="Forward 2"/>
      <move select="Quarter Right" offsetX="2"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" scaleX="1.5" scaleY="1.5"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Disconnected Columns of 3 Circulate" group=" ">
     <formation>
      <dancer gender="boy" x="1" y="4" angle="270"/>
      <dancer gender="girl" x="1" y="0" angle="270"/>
      <dancer gender="boy" x="1" y="-4" angle="270"/>
      <dancer gender="girl" x="0" y="2" angle="270"/>
    </formation>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
    <path>
    </path>
  </tam>

</tamination>
