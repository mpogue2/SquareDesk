<tamination title="3 by 1 Triangle Formation">

  <tam title="3 by 1 Triangle Circulate"
       from="Right-Hand Wave Between Mini-Waves">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Flip Right" beats="5" offsetX="-3" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="3" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
  </tam>

  <tam title="3 by 1 Triangle Circulate"
       from="Left-Hand Wave Between Mini-Waves">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-3" angle="0"/>
      <dancer gender="girl" x="0" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="-3" />
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="3" />
    </path>
    <path>
      <move select="Forward 3" beats="5" />
    </path>
  </tam>

  <tam title="3 by 1 Triangle Circulate"
       from="Right-Hand Wave Between Mini-Waves, Facing Triangles">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Left" beats="5" offsetX="-3" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="3" offsetX="1" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="3 by 1 Triangle Circulate"
       from="&quot;H&quot; formation">
     <formation>
      <dancer gender="girl" x="-3" y="3" angle="0"/>
      <dancer gender="boy" x="-3" y="-3" angle="180"/>
      <dancer gender="boy" x="0" y="1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="3"/>
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
  </tam>

  <tam title="3 by 1 Interlocked Triangle Circulate"
       from="Interlocked 3 by 1 Triangles">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="3 by 1 Interlocked Triangle Circulate"
       from="&quot;H&quot; formation">
     <formation>
      <dancer gender="girl" x="-3" y="3" angle="0"/>
      <dancer gender="boy" x="-3" y="-3" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path couples="1 3">
      <move select="Forward 3" beats="6"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="6" offsetX="-3" scaleY="2"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="6" offsetX="3" scaleY="2"/>
    </path>
    <path couples="4 2">
      <move select="Forward 3" beats="6"/>
    </path>
  </tam>

</tamination>
