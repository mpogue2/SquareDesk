<tamination title="Invert the Column 1/4, 1/2, 3/4, Full">

  <tam title="Invert the Column" from="Right-Hand Columns"
       formation="Column RH GBGB" fractions="5;3;3">
    <path numbers="2 7" couples="4 2">
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Forward" beats="3"/>
      <move select="Forward" beats="3"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path numbers="4 5" couples="4 2">
      <move select="Forward" beats="5"/>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward" beats="3"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path numbers="6 3" couples="3 1">
      <move select="Forward" beats="5"/>
      <move select="Forward" beats="3"/>
      <move select="Run Left" offsetX="1"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path numbers="8 1" couples="3 1">
      <move select="Forward" beats="5"/>
      <move select="Forward" beats="3"/>
      <move select="Forward" beats="3"/>
      <move select="U-Turn Left" beats="3" offsetX="3"/>
    </path>
  </tam>

  <tam title="Invert the Column" from="Left-Hand Columns"
       formation="Column LH GBGB" fractions="5;3;3">
    <path>
      <move select="Forward" beats="5"/>
      <move select="Forward" beats="3"/>
      <move select="Forward" beats="3"/>
      <move select="U-Turn Right" beats="3" offsetX="3"/>
    </path>
    <path>
      <move select="Forward" beats="5"/>
      <move select="Forward" beats="3"/>
      <move select="Run Right" offsetX="1"/>
      <move select="Extend Right" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="5"/>
      <move select="Run Right" offsetX="-1"/>
      <move select="Forward" beats="3"/>
      <move select="Extend Right" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Forward" beats="3"/>
      <move select="Forward" beats="3"/>
      <move select="Extend Right" beats="3" scaleY="2"/>
    </path>
  </tam>


  <tam title="Colums of 3 Invert the Column" fractions="4;3" group=" ">
    <formation>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="2" y="1" angle="0"/>
      <dancer gender="girl" x="-4" y="0" angle="90"/>
    </formation>
    <path>
      <move select="Forward" beats="4"/>
      <move select="Forward" beats="3"/>
      <move select="U-Turn Left" beats="3" offsetX="2"/>
    </path>
    <path>
      <move select="Forward" beats="4"/>
      <move select="Run Left"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward"/>
      <move select="Forward" beats="3"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path>
    </path>
    <taminator>
      From this formation Invert the Column 1/3 forms a Galaxy,
      Invert the Column 2/3 forms an Hourglass.
    </taminator>
  </tam>

  <tam title="Magic Column Invert the Column" from="Right-Hand Columns"
       fractions="5;3;4" group=" ">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Forward" beats="5" />
      <move select="Extend Right" beats="3" scaleY="2" />
      <move select="Forward" beats="4"/>
      <move select="Run Left" offsetX="3"/>
    </path>
    <path>
      <move select="Forward" beats="5"/>
      <move select="Forward" beats="3"/>
      <move select="Run Left" beats="4" scaleY="2" offsetX="1"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="5" scaleY="2" />
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward" beats="4"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Forward" beats="3" />
      <move select="Forward" beats="4"/>
      <move select="Extend Left" beats="3" scaleY="2"/>
    </path>
  </tam>

</tamination>
