<tamination title="Split Trade Circulate">

  <tam title="Split Trade Circulate"
       from="Inverted Lines Ends Facing Out"
       formation="Inverted Lines Ends Facing Out"
       fractions="" >
    <path>
      <move select="Run Left" beats="4" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
    </path>
  </tam>

  <tam title="Split Trade Circulate"
       from="Inverted Lines Ends Facing In"
       formation="Inverted Lines Ends Facing In"
       fractions="" >
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
    </path>
    <path>
      <move select="Run Left" beats="4" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Split Trade Circulate"
       from="Magic Column RH"
       formation="Magic Column RH">
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
  </tam>

  <tam title="Split Trade Circulate"
       from="Magic Column LH"
       formation="Magic Column LH">
    <path numbers="2 7">
      <move select="Run Right" />
    </path>
    <path numbers="4 5">
      <move select="Run Left" scaleX=".5" />
    </path>
    <path numbers="6 3">
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" />
    </path>
    <path numbers="8 1">
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
  </tam>
</tamination>
