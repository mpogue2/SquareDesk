<tamination title="Anything and Circle">

  <tam title="All 8 Recycle and Circle 1/4"
       formation="Quarter Wave RH" group=" " parts="6">
    <path couples="2 4">
      <move select="U-Turn Right" hands="gripright" beats="6" offsetX="3" />
    </path>
    <path couples="2 4">
      <move select="Run Right" hands="gripright" beats="6" offsetX="-3" offsetY="-2" />
      <move select="Run Right" beats="4" offsetX="3"/>
    </path>
    <path couples="3 1">
      <move select="Cross Fold Right" beats="6" scaleX="1.5" />
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" offsetX="-1.5" scaleY=".5"/>
      <move select="Run Right" offsetX="1.5" scaleY=".5"/>
      <move select="Dodge Left" beats="4"/>
    </path>
  </tam>

  <tam title="Diamond Circulate and Circle 1/4" group=" " parts="3">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="0" angle="270"/>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Lead Right" beats="3" scaleY="3"/>
      <move select="Stand" beats="4"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3"/>
      <move select="Run Right" beats="4" offsetX="3"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Dodge Left" beats="4"/>
    </path>
  </tam>

  <tam title="Heads Spin the Top and Circle 1/4"
       formation="Static Square" group=" " parts="6;4.5">
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="1.5" />
      <move select="Run Right" beats="4" offsetX="3"/>
    </path>
    <path>
      <move select="Stand" beats="10.5"/>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" beats="10.5"/>
      <move select="Dodge Left" beats="4"/>
    </path>
  </tam>

  <tam title="Inlet and Circle 1/4" group=" "
       formation="Ocean Waves RH BGGB" parts="4">
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="2" />
      <move select="Stand" beats="4"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="-2" />
      <move select="Run Right" beats="4" offsetX="3"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
      <move select="Dodge Left" beats="4"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
  </tam>

  <tam title="Switch and Circle 1/4"
       formation="Quarter Tag"
       fractions="3" group=" ">
    <path numbers="1 8">
      <move select="Stand" beats="3" hands="right"/>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path numbers="2 7">
      <move select="Stand" beats="3" hands="left"/>
      <move select="Dodge Left" beats="4"/>
    </path>
    <path numbers="6 3">
      <move select="Run Right" scaleY="2"/>
    </path>
    <path numbers="5 4">
      <move select="Run Right"/>
      <move select="Run Right" beats="4" offsetX="3"/>
    </path>
  </tam>

  <tam title="Switch and Circle 1/2" group=" " parts="4;4;4">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Stand" beats="4"/>
      <move select="Flip Left" beats="4"/>
      <move select="Run Left" beats="4" offsetX="3"/>
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
      <move select="Run Left" beats="4" offsetX="3"/>
      <move select="Stand" beats="4"/>
      <move select="Dodge Right" beats="4"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Flip Left" beats="4"/>
      <move select="Stand" beats="4"/>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Run Left" beats="4" scaleY="2"/>
      <move select="Stand" beats="4"/>
    </path>
  </tam>

  <tam title="Swing and Mix and Circle 1/2"
       formation="Quarter Tag"
       fractions="8;4;8" group=" ">
  <path numbers="1 8">
    <!-- Swing and Mix -->
    <move select="Stand" beats="8" hands="right"/>
    <!-- Circle -->
    <move select="Dodge Right" beats="4"/>
    <!-- Swing and Mix -->
    <move select="Stand" beats="8" hands="right"/>
    <!-- Circle -->
    <move select="Dodge Left" beats="4"/>
  </path>
  <path numbers="2 7">
    <!-- Swing and Mix -->
    <move select="Stand" beats="8" hands="left"/>
    <!-- Circle -->
    <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
    <!-- Swing and Mix -->
    <move select="Swing Left"/>
    <move select="Run Right" beats="5" scaleX="1.5" scaleY="2"/>
    <!-- Circle -->
      <move select="Run Right" beats="4" offsetX="3"/>
  </path>
  <path numbers="6 3">
    <!-- Swing and Mix -->
    <move select="Swing Right"/>
    <move select="Run Left" beats="5" scaleX="1.5" scaleY="2"/>
    <!-- Circle -->
      <move select="Run Left" beats="4" offsetX="3"/>
    <!-- Swing and Mix -->
    <move select="Stand" beats="8" hands="right"/>
    <!-- Circle -->
    <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
  </path>
  <path numbers="5 4">
    <!-- Swing and Mix -->
    <move select="Swing Right"/>
    <move select="Dodge Right" beats="2"/>
    <move select="Swing Right"/>
    <!-- Circle -->
    <move select="Stand" beats="4" hands="right"/>
    <!-- Swing and Mix -->
    <move select="Swing Left"/>
    <move select="Dodge Left" beats="2"/>
    <move select="Swing Left"/>
    <!-- Circle -->
    <move select="Stand" beats="4" hands="left"/>
  </path>
  </tam>

</tamination>
