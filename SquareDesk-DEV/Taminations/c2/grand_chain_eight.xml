<tamination title="Grand Chain Eight">

  <tam title="Grand Chain Eight" from="Double Pass Thru" formation="Double Pass Thru">
  <path>
    <move select="Stand" hands="right"/>
    <move select="Quarter Left" beats="2" offsetX="1"/>
    <move select="U-Turn Left" offsetX="1" offsetY="-1" hands="right"/>
  </path>
  <path>
    <move select="Stand" beats="2" hands="left"/>
    <move select="Extend Right" beats="2"/>
    <move select="Quarter Left" offsetX="1" hands="left"/>
  </path>
  <path>
    <move select="Extend Left" scaleY=".5"/>
    <move select="Quarter Left" beats="2" offsetX="2" offsetY="-.5"/>
    <move select="U-Turn Left" offsetX="1" offsetY="-1" hands="right"/>
  </path>
  <path>
    <move select="Extend Left" scaleY=".5"/>
    <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    <move select="Quarter Left" offsetX="1" hands="left"/>
  </path>
  </tam>

  <tam title="Grand Chain Eight" from="Lines">
    <formation>
      <dancer gender="boy" y="2" x="3" angle="270"/>
      <dancer gender="girl" y="2" x="1" angle="270"/>
      <dancer gender="boy" y="2" x="-1" angle="270"/>
      <dancer gender="girl" y="2" x="-3" angle="270"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY="2.5"/>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Quarter Left"/>
      <move select="BackHinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" beats="4" scaleX=".5" scaleY="1.5"/>
      <move select="Hinge Left" beats="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Flip Left" beats="4" offsetX="1.5" scaleY=".25"/>
      <move select="Quarter Left"/>
      <move select="BackHinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" beats="4.5" scaleX="3.5" scaleY="2.5"/>
      <move select="Hinge Left" beats="3" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Grand Chain Eight"
       from="Eight Chain Thru"
       formation="Eight Chain Thru">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" hands="left" offsetX="1" />
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2.5" />
      <move select="Hinge Left" offsetY="1" />
    </path>
    <path couples="4 2">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" />
    </path>
    <path couples="4 2">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" />
    </path>
  </tam>

  <tam title="Split Grand Chain Eight" group=" " formation="T-Bone ULRU">
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right 1/2" offsetY="-.5" />
      <move select="Lead Left 1/2" beats="1.5" offsetX="-.4" offsetY="-1" />
      <move select="Quarter Left"/>
      <move select="BackHinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Right" beats="2.5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand" beats="1"/>
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5"/>
      <move select="Quarter Left"/>
      <move select="BackHinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Left" beats="2.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Left" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Heads Start Split Grand Chain Eight" group=" "
       formation="Static Square">
    <path>
      <move select="Forward 2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Left" beats="2.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right 1/2" offsetY="-.5" />
      <move select="Lead Left 1/2" beats="1.5" offsetX="-.4" offsetY="-1" />
      <move select="Quarter Left"/>
      <move select="BackHinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5"/>
      <move select="Quarter Left"/>
      <move select="BackHinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Extend Right" beats="2.5" scaleY=".5"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
  </tam>

</tamination>
