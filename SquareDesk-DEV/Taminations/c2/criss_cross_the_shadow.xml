<tamination title="Criss Cross the Shadow">

  <tam title="Criss Cross the Shadow"
       from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG"
       fractions="" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" beats="3" offsetX="3" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Right" beats="3" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX="-2" offsetY="-.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Criss Cross the Shadow"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       fractions="" >
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-2" offsetY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Left" beats="3" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Quarter Left" beats="3" offsetX="3" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Criss Cross the Shadow"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path couples="2 4">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" beats="3" offsetX="3" offsetY=".5" />
    </path>
    <path couples="2 4">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Left" beats="3" />
      <move select="Forward 2" />
    </path>
    <path couples="3 1">
      <move select="Lead Left" beats="2" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="3" />
    </path>
    <path couples="3 1">
      <move select="U-Turn Left" beats="2" offsetX="-2" offsetY="-.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Criss Cross the Shadow"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       fractions="" >
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-2" offsetY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" />
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Right" beats="3" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Quarter Left" beats="3" offsetX="3" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Criss Cross the Shadow"
       from="3 and 1 Lines, Centers In">
     <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="-1" angle="0"/>
      <dancer gender="girl" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" beats="3" offsetX="3" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleY="1.5" />
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX="-2" offsetY="-.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Criss Cross the Shadow"
       from="3 and 1 Lines, Centers Out">
     <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="boy" x="-2" y="1" angle="180"/>
      <dancer gender="boy" x="-2" y="-1" angle="180"/>
      <dancer gender="girl" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" beats="3" offsetX="3" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY="2" />
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3.5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2.5" />
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX="-2" offsetY="-.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>
</tamination>
