<tamination title="Interlocked Triangle Formation">

  <tam title="Inside Interlocked Triangle Circulate" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="1.5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Flip Right" beats="5" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
    </path>
  </tam>

  <tam title="Outside Interlocked Triangle Circulate" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Lead Right" beats="6" scaleX="5" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="3"/>
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleX="3" scaleY="5"/>
    </path>
  </tam>

  <tam title="Inpoint Interlocked Triangle Circulate" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3"/>
    </path>
    <taminator>Turn on the Paths button to see the triangles
    </taminator>
  </tam>

  <tam title="Outpoint Interlocked Triangle Circulate" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
  </tam>

</tamination>
