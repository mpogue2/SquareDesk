<tamination title="Inlet">

  <tam title="Inlet"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="2" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" offsetX="-2" />
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
  </tam>

  <tam title="Inlet"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Left" beats="4" offsetX="1" offsetY="2" />
    </path>
    <path>
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Left" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" offsetX="-2" />
    </path>
    <path>
      <move select="Run Left" beats="4" hands="gripleft" offsetX="2" />
    </path>
  </tam>

  <tam title="Inlet"
       from="3 and 1 Lines">
     <formation>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2" offsetY="-2" />
    </path>
    <path>
      <movement hands="none" beats="4" cx1="-1" cy1="2" cx2="1" cy2="2" x2="2" y2="2" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-.5" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX=".5" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1" offsetY="-2" />
    </path>
  </tam>
</tamination>
