<tamination title="Anything the K">

  <tam title="The K" from="Right-Hand Wave" formation="Wave RH" fractions="1.5">
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="The K" from="Left-Hand Wave" formation="Wave LH" fractions="1.5">
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="The K" from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH" fractions="1.5">
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="The K" from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH" fractions="1.5">
    <path>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="The K" from="Right-Hand Diamond" fractions="1.5"
       formation="Diamond RH">
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="The K" from="Left-Hand Diamond" fractions="1.5"
       formation="Diamond LH">
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="The K" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" fractions="1.5">
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="The K" from="Lines Facing Out" fractions="1.5"
       formation="Lines Facing Out">
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="The K" from="Right-Hand Diamonds" fractions="1.5"
       formation="Diamonds RH Girl Points">
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="The K" from="Right-Hand Columns" fractions="1.5">
    <formation>
      <dancer gender="boy" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="1" angle="270"/>
      <dancer gender="girl" y="3" x="1" angle="270"/>
    </formation>
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="The K" from="Left-Hand Columns" formation="Column LH GBGB"
       fractions="1.5">
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="The K" from="3/4 Tag" formation="3/4 Tag" fractions="1.5">
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="The K" from="Tidal Two-Faced Line" fractions="1.5"
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="The K" from="Galaxy" fractions="1.5">
    <formation>
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="boy" y="3" x="0" angle="0"/>
      <dancer gender="girl" y="-1" x="1" angle="270"/>
      <dancer gender="boy" y="0" x="3.1" angle="270"/>
    </formation>
    <path>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="As Couples the K" group=" " formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Beau Wheel" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Belle Wheel" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Swing Left" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Concentric the K" group=" " formation="Two-Faced Tidal Line RH">
    <path>
      <move select="U-Turn Left" beats="5"/>      
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2.5"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="5"/>      
    </path>
    <path>
      <move select="Swing Left" beats="5" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Crazy the K" group=" " parts="3;3;3" formation="Two-Faced Tidal Line RH">
    <path>
      <move select="U-Turn Left"/>
      <move select="Stand" beats="3"/>
      <move select="U-Turn Right"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="U-Turn Right"/>
      <move select="Flip Left" scaleY=".5"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Stand" beats="3"/>
      <move select="Run Right" scaleY=".5"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="U-Turn Right"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Cross Concentric the K" group=" " formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Dodge Right"/>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Dodge Right"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Left" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Offset Lines the K" group=" " fractions="1.5">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-.5" offsetY="-1"/>
      <move select="Lead Right" scaleY="1.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-.5" offsetY="-1"/>
      <move select="Lead Right" scaleY="1.5"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="Once Removed the K" group=" " formation="Tidal Wave RH BGBG">
    <path couples="1 2">
      <move select="U-Turn Left"/>
    </path>
    <path couples="2 1">
      <move select="U-Turn Right"/>
    </path>
    <path couples="1 2">
      <move select="Run Right" scaleX="1.5"/>
    </path>
    <path couples="2 1">
      <move select="Run Left" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Tandem the K" group=" " fractions="2">
    <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="180"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Pivot forward right" beats="4" scaleY=".5"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
    </path>
    <path>
      <move select="Pivot backward left" beats="4"/>
    </path>
  </tam>

  <tam title="Cross Trail Thru the K" group="  "
       from="Lines" formation="Normal Lines" fractions="5">
    <path numbers="1 8">
    <!-- Cross Trail Thru -->
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    <move select="Extend Right" beats="2" scaleY="2.5"/>
      <move select="Forward"/>
    <!-- the K -->
    <move select="Run Right"/>
    </path>
    <path numbers="2 7">
    <!-- Cross Trail Thru -->
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward"/>
    <move select="Extend Left" beats="2" scaleY="1.5"/>
    <!-- the K -->
    <move select="U-Turn Left"/>
    </path>
    <path numbers="3 6">
    <!-- Cross Trail Thru -->
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    <move select="Extend Right" beats="2" scaleY="2.5"/>
      <move select="Forward"/>
    <!-- the K -->
    <move select="U-Turn Right"/>
    </path>
    <path numbers="4 5">
    <!-- Cross Trail Thru -->
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward"/>
    <move select="Extend Left" beats="2" scaleY="1.5"/>
    <!-- the K -->
    <move select="Flip Left"/>
    </path>
    <taminator>
      This is the same as Cross the K
    </taminator>
  </tam>

</tamination>
