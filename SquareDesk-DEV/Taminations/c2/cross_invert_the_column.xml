<tamination title="Cross Invert the Column 1/4, 1/2, 3/4, Full">

  <tam title="Cross Invert the Column 1/4"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Run Right" beats="4" scaleY="2" offsetX="-1" />
      <move select="Forward 2" />
    </path>
    <path numbers="4 5">
      <move select="Forward" />
    </path>
    <path numbers="6 3">
      <move select="Forward" />
    </path>
    <path numbers="8 1">
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Cross Invert the Column 1/4"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Forward" />
    </path>
    <path numbers="4 5">
      <move select="Forward" />
    </path>
    <path numbers="6 3">
      <move select="Forward" />
    </path>
    <path numbers="8 1">
      <move select="Run Left" beats="4" scaleY="2" offsetX="-1" />
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Cross Invert the Column 1/2"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2" />
      <move select="Forward 3" />
    </path>
    <path numbers="4 5">
      <move select="Forward" />
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
    <path numbers="6 3">
      <move select="Forward 3" />
    </path>
    <path numbers="8 1">
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Cross Invert the Column 1/2"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Forward" />
    </path>
    <path numbers="4 5">
      <move select="Forward 3" />
    </path>
    <path numbers="6 3">
      <move select="Forward" />
      <move select="Run Left" beats="4" scaleY="2" />
    </path>
    <path numbers="8 1">
      <move select="Run Left" beats="4" scaleY="2" offsetX="-2" />
      <move select="Forward 3" />
    </path>
  </tam>

  <tam title="Cross Invert the Column 3/4"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2" />
      <move select="Forward 4" />
    </path>
    <path numbers="4 5">
      <move select="Forward" />
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1" />
      <move select="Forward" />
    </path>
    <path numbers="6 3">
      <move select="Forward 4" />
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
    <path numbers="8 1">
      <move select="Forward 3" />
    </path>
  </tam>

  <tam title="Cross Invert the Column 3/4"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Forward 3" />
    </path>
    <path numbers="4 5">
      <move select="Forward 4" />
      <move select="Run Left" beats="4" scaleY="2" />
    </path>
    <path numbers="6 3">
      <move select="Forward" />
      <move select="Run Left" beats="5" scaleY="2" offsetX="-1" />
      <move select="Forward" />
    </path>
    <path numbers="8 1">
      <move select="Run Left" beats="4" scaleY="2" offsetX="-2" />
      <move select="Forward 4" />
    </path>
  </tam>

  <tam title="Cross Invert the Column"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Run Right" />
      <move select="Forward 6" />
    </path>
    <path numbers="4 5">
      <move select="Forward 2" />
      <move select="Run Right" />
      <move select="Forward 4" />
    </path>
    <path numbers="6 3">
      <move select="Forward 4" />
      <move select="Run Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="8 1">
      <move select="Forward 6" />
      <move select="Run Right" />
    </path>
  </tam>

  <tam title="Cross Invert the Column"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path numbers="2 7">
      <move select="Forward 6" />
      <move select="Run Left" />
    </path>
    <path numbers="4 5">
      <move select="Forward 4" />
      <move select="Run Left" />
      <move select="Forward 2" />
    </path>
    <path numbers="6 3">
      <move select="Forward 2" />
      <move select="Run Left" />
      <move select="Forward 4" />
    </path>
    <path numbers="8 1">
      <move select="Run Left" />
      <move select="Forward 6" />
    </path>
  </tam>
</tamination>
