      <move select="Hinge Right" beats="3" hands="gripright" scaleX="1.5" scaleY="3"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="gripboth" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="BackRun Left" hands="gripleft" offsetX="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="gripboth" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" hands="gripright" scaleX="1.5" scaleY="3"/>
      <move select="Stand" beats="3"/>
      <move select="Run Right" hands="gripright" offsetX="2" offsetY="-.5"/>
    </path>
  </tam>

