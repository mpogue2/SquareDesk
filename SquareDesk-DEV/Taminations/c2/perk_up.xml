<tamination title="Perk Up">

  <tam title="Perk Up"
       from="Right-Hand Waves"
       fractions="4;2;2;3" >
    <formation>
      <dancer gender="girl" y="2" x="3" angle="270"/>
      <dancer gender="boy" y="2" x="1" angle="90"/>
      <dancer gender="girl" y="2" x="-1" angle="270"/>
      <dancer gender="boy" y="2" x="-3" angle="90"/>
    </formation>
    <path couples="2 4">
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" />
      <move select="Forward 4" />
      <move select="Run Right" beats="4" scaleX="2" scaleY="3" />
    </path>
    <path couples="2 4">
      <move select="Run Left" beats="4" />
      <move select="Forward 2" />
      <move select="Hinge Right" beats="2" />
      <move select="Run Right" />
      <move select="Swing Right" />
    </path>
    <path couples="3 1">
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" />
      <move select="Run Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Forward 4" />
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Forward 2" />
      <move select="Hinge Right" beats="2" />
      <move select="Forward 4" beats="3" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Perk Up"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       fractions="4;2;2;3" >
    <path>
      <move select="Run Left" beats="4" scaleX="2" scaleY="3" />
      <move select="Forward 2" />
      <move select="Hinge Left" beats="2" />
      <move select="Forward 4" beats="3" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 4" />
      <move select="Lead Left" beats="2" />
      <move select="Run Left" beats="4" scaleX="2" scaleY="3" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" />
      <move select="Hinge Left" beats="2" />
      <move select="Run Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Forward 4" />
      <move select="Lead Left" beats="2" />
      <move select="Forward 4" />
      <move select="Run Left" beats="4" scaleX="2" scaleY="3" />
    </path>
  </tam>


</tamination>
