<tamination title="Criss Cross Your Neighbor">

  <tam title="Criss Cross Your Neighbor"
       from="Right-Hand Box"
       formation="Box RH" >
    <path numbers="1 4">
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75" />
    </path>
    <path numbers="2 3">
      <move select="Run Right" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor"
       from="Left-Hand Box"
       formation="Box LH"
       fractions="" >
    <path>
      <move select="Run Left" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG" >
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" scaleY="1.25" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG" >
    <path>
      <move select="Run Left" scaleY="1.25" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".5" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor" from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" scaleY="1.5" beats="4" />
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY="1.5" beats="4"/>
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor" from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY="1.5" beats="4"/>
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleY="1.5" beats="4" />
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="2" />
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor"
       from="Right-Handed T-Bones"
       formation="T-Bone URUR">
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" scaleX=".5"/>
      <move select="Run Left" scaleX="2" scaleY="1.25" beats="6"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" scaleX=".5"/>
      <move select="Run Left" scaleX="2" scaleY="1.25" beats="6"/>
    </path>
  </tam>

  <tam title="Criss Cross Your Neighbor"
       from="Left-Handed T-Bones"
       formation="T-Bone LULU">
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Run Right" scaleX="2" scaleY="1.25" beats="6"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Run Right" scaleX="2" scaleY="1.25" beats="6"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="All 8 Criss Cross Your Neighbor" group=" "
       formation="Static MiniWaves RH">
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="4" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right" beats="4.5" scaleY="1.5" offsetX="-1"/>
      <move select="Forward 3"/>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="4" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right" beats="4.5" scaleY="1.5" offsetX="-1"/>
      <move select="Forward 3"/>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="2"/>
    </path>
  </tam>

  <tam title="As Couples Criss Cross Your Neighbor" group=" "
       formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" hands="right" beats="3" scaleX="2" scaleY="3.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left" beats="3" scaleX="2.5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="3" scaleX="2" scaleY="2.5"/>
      <move select="Swing Left" scaleX="1.5" scaleY="1.5"/>
      <move select="Lead Left" beats="3" scaleX="3.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripleft" scaleY="1.5"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="3" scaleX=".5" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleX="2" scaleY="3"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Tandem Criss Cross Your Neighbor" group=" "
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Forward"/>
      <move select="Lead Left" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Forward"/>
      <move select="Quarter Left" beats="3" offsetX="3"/>
    </path>
  </tam>

  <tam title="Concentric Criss Cross Your Neighbor" group=" "
       formation="Column RH GBGB">
    <path>
      <move select="Lead Right"/>
      <move select="Lead Right" beats="6" scaleX="4" scaleY="4"/>
      <move select="Lead Right" beats="5" scaleX="2.5" scaleY="4"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY="1.25" beats="4"/>
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" scaleX=".5"/>
      <move select="Lead Left" beats="3" scaleX="2.5" scaleY="3"/>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2.5"/>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="2.5"/>
      <move select="Lead Left" beats="3" scaleX="3.5" scaleY="2"/>
    </path>
  </tam>

</tamination>
