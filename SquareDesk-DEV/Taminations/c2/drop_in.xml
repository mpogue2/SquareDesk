<tamination title="Drop In/Out">
  
  

  <tam title="Drop In"
       from="Diamonds"
       formation="Diamonds RH Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
  </tam>

  <tam title="Drop In"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Lead Left" />
    </path>
  </tam>

  <tam title="Drop In"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="1" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="1" />
    </path>
  </tam>

  <tam title="Drop In"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Stand" beats="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Drop Out"
       from="Diamonds"
       formation="Diamonds RH Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="Drop Out"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="1" />
    </path>
  </tam>

  <tam title="Drop Out"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" offsetY="1" />
    </path>
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" offsetY="1" />
    </path>
  </tam>

  <tam title="Drop Out"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Stand" beats="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-2" />
    </path>
  </tam>
</tamination>
