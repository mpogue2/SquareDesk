<tamination title="Reverse Flip the Diamond">

  <tam title="Reverse Flip the Diamond" from="Right-Hand Diamond">
    <formation>
      <dancer gender="boy" y="0" x="3" angle="270" />
      <dancer gender="girl" y="-1" x="0" angle="180" />
    </formation>
    <path>
      <move select="Lead Right" beats="3" scaleY="3"/>
    </path>
    <path couples="3 1">
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Left-Hand Diamond" formation="Diamond LH">
    <path>
      <move select="Lead Left" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Facing Diamond, Left-Hand Centers"
       formation="Diamond Facing">
    <path>
      <move select="Lead Right" beats="3" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Facing Diamond, Right-Hand Centers"
       formation="Diamond Facing RH">
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Right-Hand Diamonds" formation="Diamonds RH Girl Points">
    <path>
      <move select="Flip Left" scaleX=".25" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX=".5" scaleY="3"/>
    </path>
    <path>
      <move select="Flip Left" scaleX=".25" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX=".5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Left-Hand Diamonds" formation="Diamonds LH Girl Points">
    <path>
      <move select="Flip Right" scaleX=".25" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="3"/>
    </path>
    <path>
      <move select="Flip Right" scaleX=".25" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Right-Hand Point-to-Point Diamonds" formation="Diamonds RH PTP Girl Points">
  <path>
    <move select="Run Left" offsetX="1"/>
  </path>
  <path>
    <move select="Lead Right" beats="3" />
  </path>
  <path>
    <move select="Run Left" offsetX="-1"/>
  </path>
  <path>
    <move select="Lead Right" beats="3" scaleY="3"/>
  </path>
  </tam>

  <tam title="Reverse Flip the Diamond" from="Diamonds with Center Two-Faced Line"
       formation="Interlocked Diamonds RH Girl Points">
    <path>
      <move select="Run Left" scaleX=".25" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX=".5" scaleY="3" />
    </path>
    <path>
      <move select="Run Right" scaleX=".25" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX=".5" scaleY="3" />
    </path>
  </tam>

</tamination>
