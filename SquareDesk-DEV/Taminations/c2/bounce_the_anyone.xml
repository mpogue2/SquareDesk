<tamination title="Bounce the Anyone">

  <tam title="Bounce the Centers" group=" "
       from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH"
       parts="2" >
    <path numbers="1 4">
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY="2" />
    </path>
    <path numbers="2 3">
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Bounce the Boys" group=" "
       formation="Two-Faced Lines RH" parts="2">
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
  </tam>

  <tam title="Bounce the Girls" group=" "
       formation="Two-Faced Lines RH" parts="2">
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <taminator>
      Note that the girls turn back in the direction of the veer.
    </taminator>
  </tam>

  <tam title="Bounce the Leaders" group=" "
       formation="Two-Faced Lines RH" parts="2">
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <taminator>
      The dancers who Bounce are the leaders before the veer.
    </taminator>
  </tam>

  <tam title="Bounce the Trailers" group=" "
       formation="Two-Faced Lines RH" parts="2">
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
  </tam>

  <tam title="As Couples Bounce the Ends" group="  " parts="3"
       formation="Tidal Line RH">
    <path>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY=".5" />
      <move select="Beau Reverse Wheel"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="both" scaleX="2" scaleY="1.5" />
      <move select="Belle Reverse Wheel"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="both" scaleX="2" scaleY="2.5" />
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="3.5" />
    </path>
  </tam>

  <tam title="Concentric Bounce the Boys" group="  "
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Forward" hands="right"/>
      <move select="Extend Right" hands="gripright" beats="3" scaleX="2" scaleY="2.5"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Forward" hands="left"/>
      <move select="Extend Right" hands="gripleft" beats="3" scaleX="2" scaleY="3.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" hands="left" scaleY="0.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" hands="right" scaleY="1.5"/>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="Cross Concentric Bounce the Boys" group="  "
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Extend Right" hands="gripright" beats="4" scaleY="2.5"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Right" hands="gripleft" beats="4" scaleY="3.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" hands="left" scaleX="3" scaleY="0.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" hands="right" scaleX="3" scaleY="1.5"/>
      <move select="U-Turn Left"/>
    </path>
  </tam>

  <tam title="Stretch Bounce the Boys" group="  "
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleY="2" />
      <move select="U-Turn Right"/>
    </path>
  </tam>  

  <tam title="Tandem Bounce the Centers" group="  " parts="3" 
       formation="Two-Faced Lines RH Compact">
    <path>
      <move select="Forward" beats="1" hands="right" scaleX="1.5"/>
      <move select="Extend Right" beats="2" hands="right" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="1" hands="left" scaleX="1.5"/>
      <move select="Extend Right" beats="2" hands="left" scaleY="2"/>
      <move select="Pivot forward left" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="left" scaleX="1.5" scaleY="2"/>
      <move select="Pivot backward right" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" hands="right" scaleX="1.5" scaleY="2"/>
    </path>
  </tam>

</tamination>
