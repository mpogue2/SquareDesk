<tamination title="Ripple the Wave">

  <tam title="Ends Ripple the Wave" group=" "
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="3;3" >
    <path>
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Very Ends Ripple the Wave" group=" "
       from="Tidal Line"
       formation="Tidal Line RH"
       parts="3;3" >
    <path>
      <move select="Run Right" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Run Right" scaleY=".5" />
    </path>
    <path>
      <move select="Flip Left" scaleY=".5" />
      <move select="Stand" beats="3" />
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="3" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Stand" beats="3" />
      <move select="Flip Left" scaleY=".5" />
    </path>
  </tam>

</tamination>
