<tamination title="Anyone Like a Ripple">

  <tam title="Trailing End Like A Ripple Swing, Cast Off 3/4, and Single Wheel"
       formation="Ocean Waves RH BGGB" group=" " fractions="3;4.5">
    <path>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
      <move select="Flip Right" offsetX="1" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

  <tam title="Outfacing Points Like a Ripple Jaywalk, Swing, Slip, Cast Off 3/4"
       formation="Diamonds Facing Girl Points" group=" " fractions="3;3;3">
    <formation>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="-2" angle="270"/>
      <dancer gender="boy" x="0" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-2" angle="90"/>
    </formation>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetY="1.5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left"/>
      <move select="Stand" beats="3"/>
      <move select="Cast Left"/>
    </path>
    <path>
    </path>
  </tam>

</tamination>
