<tamination title="Unwrap Family">

  <tam title="Unwrap the Diamond"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points">
    <path numbers="6 3" couples="3 1">
      <move select="Lead Right" beats="3" />
      <move select="Forward 3" />
    </path>
    <path numbers="2 7" couples="3 1">
      <move select="Extend Right" beats="6" scaleX="5" scaleY="2" />
    </path>
    <path numbers="5 4" couples="4 2">
      <move select="Lead Right" beats="3" />
      <move select="Run Right" offsetX="1" />
    </path>
    <path numbers="8 1" couples="4 2">
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Unwrap the Diamond"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       fractions="" >
    <path>
      <move select="Lead Left" beats="3" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Lead Left" beats="3" />
      <move select="Run Left" offsetX="1" />
    </path>
    <path>
      <move select="Extend Left" beats="6" scaleX="5" scaleY="2" />
    </path>
  </tam>

  <tam title="Unwrap the Hourglass"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP"
       fractions="" >
    <path>
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Lead Right" beats="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Lead Right" beats="2" />
      <move select="Forward 3" beats="4" />
    </path>
    <path>
      <move select="Extend Right" beats="6" scaleX="5" scaleY="2" />
    </path>
    <path>
      <move select="Forward 2" beats="3" />
      <move select="Run Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Unwrap the Hourglass"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP"
       fractions="" >
    <path>
      <move select="Extend Left" beats="6" scaleX="5" scaleY="2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" />
      <move select="Forward 3" beats="4" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
      <move select="Lead Left" beats="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward 2" beats="3" />
      <move select="Run Left" offsetX="1" />
    </path>
  </tam>
</tamination>
