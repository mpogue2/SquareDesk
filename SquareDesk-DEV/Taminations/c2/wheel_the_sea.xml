<tamination title="Wheel the Sea">



  <tam title="Wheel the Sea" from="Couples Facing Out"
       formation="Couples Facing Out" parts="3">
    <path>
      <move select="Belle Wheel" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Beau Wheel" />
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Wheel the Sea"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       parts="3" >
    <path>
      <move select="Belle Wheel" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Beau Wheel" />
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Belle Wheel" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Beau Wheel" />
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Wheel the Sea"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="3" >
    <path>
      <move select="Stand" beats="3" />
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Belle Wheel" />
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Beau Wheel" />
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Wheel the Sea"
       from="Trade By"
       formation="Trade By"
       parts="3" >
    <path>
      <move select="Belle Wheel" scaleX=".5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Beau Wheel" scaleX=".5" />
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Belle Wheel" scaleX=".5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Beau Wheel" scaleX=".5" />
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Wheel the Sea"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       parts="3" >
    <path>
      <move select="Belle Wheel" scaleX=".5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Beau Wheel" scaleX=".5" />
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Head Couples Wheel the Sea"
       from="Promenade"
       formation="Promenade"
       parts="2.25" >
    <path numbers="H H">
      <move select="BackHinge Right" scaleY=".5" />
      <move select="HalfBackHinge Right" />
      <move select="Dodge Right" offsetX="-.25" offsetY=".25" />
    </path>
    <path numbers="H H">
      <move select="Hinge Left" scaleY=".5" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="4" scaleY="4" offsetX="-.25" offsetY=".25" />
    </path>
    <path numbers="S S">
      <move select="HalfBackHinge Right" beats="2.25" scaleX=".5" scaleY=".5" />
      <move select="Dodge Right" offsetX="-.25" offsetY=".25" />
    </path>
    <path numbers="S S">
      <move select="HalfHinge Left" beats="2.25" scaleX=".5" scaleY=".5" />
      <move select="Forward" beats="4" scaleX="4" scaleY="4" offsetX="-.25" offsetY="-.75" />
    </path>
    <taminator>The red and cyan couples are the heads.
    </taminator>
  </tam>

  <tam title="As Couples Wheel the Sea" from="Lines Facing Out"
       formation="Lines Facing Out" parts="5">
    <path>
      <move select="Belle Wheel" beats="5" scaleX="3" scaleY="3"/>
      <move select="Forward 4" hands="left"/>
    </path>
    <path>
      <move select="Belle Wheel" beats="5" hands="both"/>
      <move select="Forward 4" hands="right"/>
    </path>
    <path>
      <move select="Beau Wheel" beats="5" scaleX=".5" hands="both"/>
      <move select="Dodge Right" beats="4" hands="left" scaleY="2"/>
    </path>
    <path>
      <move select="Beau Wheel" beats="5" scaleX="1.5" scaleY="3"/>
      <move select="Dodge Right" beats="4" hands="right" scaleY="2"/>
    </path>
  </tam>

  <tam title="All 8 Wheel the Sea" from="Squared Couples Facing Out"
       formation="Static Facing Out" parts="3">
    <path>
      <move select="Beau Wheel"/>
      <move select="Dodge Right" beats="6"/>
    </path>
    <path>
      <move select="Belle Wheel"/>
      <move select="Forward 6"/>
    </path>
    <path>
      <move select="Beau Wheel"/>
      <move select="Dodge Right" beats="6"/>
    </path>
    <path>
      <move select="Belle Wheel"/>
      <move select="Forward 6"/>
    </path>
  </tam>

</tamination>
