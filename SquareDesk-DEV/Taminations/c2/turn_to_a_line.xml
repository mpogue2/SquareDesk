    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
    </path>
  </tam>

  <tam title="Turn to a Line"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Flip Left" offsetX="2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Flip Left" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY=".5" />
