<tamination title="Turn to a Line">

  <tam title="Turn to a Line" from="Facing Couples" formation="Facing Couples">
    <path numbers="1 4">
      <move select="Flip Left" offsetX="2" />
    </path>
    <path numbers="2 3">
      <move select="Flip Left" offsetX="2" />
    </path>
  </tam>

  <tam title="Turn to a Line" from="Couples Facing Out" formation="Couples Facing Out">
    <path numbers="1 4">
      <move select="Flip Right" offsetX="-2" />
    </path>
    <path numbers="2 3">
      <move select="Flip Right" offsetX="-2" />
    </path>
  </tam>

  <tam title="Turn to a Line" from="Right-Hand Box" formation="Box RH">
