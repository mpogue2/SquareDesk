    </path>
    <path>
      <move select="Flip Left" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Left" offsetX="2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY=".5" />
    </path>
  </tam>

  <tam title="Turn to a Line and Roll" formation="Completed Double Pass Thru" group=" ">
    <path>
      <move select="Flip Right" offsetX="-1" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
      <move select="Quarter Left" offsetX="1"/>
    </path>
  </tam>

  <tam title="Turn to a Line and Spread" formation="Trade By" group=" ">
    <path>
      <move select="U-Turn Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1" scaleY="2"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1" scaleY="2"/>
    </path>
  </tam>

  <tam title="All 8 Turn to a Line" formation="Static MiniWaves RH" group="  ">
    <path>
      <move select="Flip Left" offsetX="3" beats="5"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-3" beats="5"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="3" beats="5"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-3" beats="5"/>
    </path>
  </tam>

  <tam title="As Couples Turn to a Line"
       formation="Two-Faced Lines RH" group="  ">
    <path>
      <move select="Quarter Left" hands="right" beats="2"/>
      <move select="Quarter Left" hands="right" beats="2" offsetX="-.5" offsetY="-2"/>
    </path>
    <path>
      <move select="Lead Left" hands="left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Quarter Left" hands="left" beats="2" offsetX=".5"/>
    </path>
    <path>
      <move select="Quarter Right" hands="left" beats="2" offsetX="-1" offsetY="-1"/>
      <move select="Lead Right" hands="left" beats="2" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleY="3"/>
      <move select="Lead Right" hands="right" beats="2" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Butterfly Turn to a Line" formation="Butterfly Trade By" group="   ">
    <path>
      <move select="Run Right" offsetX="-2" scaleY="2"/>
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" />
    </path>
  </tam>

  <tam title="Concentric Turn to a Line" formation="Double Pass Thru" group="   ">
    <path>
      <move select="Flip Left" offsetX="3" offsetY=".5"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="3" offsetY="1.5"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="1" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="1" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Cross Concentric Turn to a Line (from columns)"
       formation="Double Pass Thru" group="   ">
    <path>
      <move select="Flip Left" offsetX="3" scaleY=".25"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="3" scaleY=".75"/>
    </path>
    <path>
      <move select="Flip Left" scaleY="2" offsetX="1" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Flip Left" scaleY="1.75" offsetX="1" />
    </path>
  </tam>

  <tam title="Cross Concentric Turn to a Line (from waves)"
       formation="Ocean Waves RH BGBG" group="   ">
    <path>
      <move select="Stand"/>
      <move select="Dodge Right"/>
      <move select="Flip Left" offsetX="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" scaleY="1.25"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="2" scaleY="1.75"/>
    </path>
    <path>
      <move select="Stand"/>
      <move select="Dodge Right"/>
      <move select="Flip Right" offsetX="-2" scaleY=".75"/>
    </path>
  </tam>

  <tam title="&quot;O&quot; Turn to a Line" formation="O Trade By" group="   ">
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-2" scaleY="2"/>
    </path>
    <path>
      <move select="U-Turn Right" />
    </path>
  </tam>

  <tam title="Stretch Turn to a Line" formation="Completed Double Pass Thru" group="   ">
    <path>
      <move select="Flip Right" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Tandem Turn to a Line" formation="Completed Double Pass Thru" group="   ">
    <path>
      <move select="Flip Right" offsetX="-1" />
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".5" offsetX="-1" />
      <move select="Extend Left" beats="4" scaleX="4"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Run Right" beats="5"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Run Right" beats="5"/>
    </path>
  </tam>

  <tam title="Turn to a Line the Windmill Right" formation="Column RH GBGB"    group="   ">
    <path>
      <move select="Hinge Right" beats="1" scaleX=".5"/>
      <move select="Lead Right" beats="4" scaleX="5" scaleY="3.5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Hinge Right" beats="1" scaleX=".5"/>
      <move select="Lead Left" beats="4" scaleX="4" scaleY="2.5"/>
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
  </tam>

</tamination>
