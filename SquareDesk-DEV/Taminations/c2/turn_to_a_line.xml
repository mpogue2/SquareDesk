    </path>
    <path>
      <move select="Flip Left" offsetX="2" offsetY="-.5"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
      <move select="Flip Left" offsetX="2" offsetY="-.5" />
    </path>
