    </path>
  </tam>

  <tam title="Turn to a Line" from="Lines Facing Out" formation="Lines Facing Out">
    <path>
      <move select="Flip Right" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-2" offsetY="1.5" />
    </path>
    <path>
