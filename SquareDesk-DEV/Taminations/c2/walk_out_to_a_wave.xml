<tamination title="Walk Out to a Wave">

  <tam title="Walk Out to a Wave" from="Right-Hand Columns" formation="Column RH GBGB">
    <path couples="4 2">
      <move select="Run Right" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Right"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="5" offsetX="1"/>
      <move select="Dodge Left"/>
    </path>
    <path couples="1 3">
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Right" beats="2" offsetX="1"/>
    </path>
    <path couples="1 3">
      <move select="Forward 3" beats="5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Walk Out to a Wave" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 3" beats="5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="U-Turn Left" beats="2" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="1"/>
      <move select="Dodge Right"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2" offsetX="-1"/>
      <move select="Run Left"/>
    </path>
  </tam>

</tamination>
