<tamination title="Stagger Concept">

  <tam title="Stagger Double Pass Thru" group="Stagger"
       from="" formation="Facing Blocks">
  <path numbers="1 8">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
  </path>
  <path numbers="2 7">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
  </path>
  <path numbers="3 6">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
  </path>
  <path numbers="4 5">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
  </path>
  </tam>

  <tam title="Stagger Circulate" group="Stagger"
       from="" formation="Blocks RH">
  <path>
    <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
  </path>
  <path>
    <move select="Run Right" beats="3" scaleY="2"/>
  </path>
  <path>
    <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
  </path>
  <path>
    <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
  </path>
  </tam>

  <tam title="Stagger Split Circulate" group="Stagger"
       from="" formation="Blocks RH">
  <path>
    <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
  </path>
  <path>
    <move select="Run Right" beats="3" scaleY="2"/>
  </path>
  <path>
    <move select="Run Right" beats="3" scaleX=".5" scaleY="2"/>
  </path>
  <path>
    <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
  </path>
  </tam>

</tamination>
