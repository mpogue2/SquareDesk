<tamination title="Rotate 1/4, 1/2, 3/4">

  <tam title="Rotate 1/4" formation="Normal Lines" group=" ">
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
  </path>
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
  </path>
  </tam>

  <tam title="Rotate 1/2" formation="Normal Lines" group=" " fractions="4.5">
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleY=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Hinge Left" beats="3" scaleX="3" scaleY="1.5"/>
  </path>
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleY=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Hinge Left" beats="3" scaleX="3" scaleY="1.5"/>
  </path>
  </tam>

  <tam title="Rotate 3/4" formation="Normal Lines" group=" " fractions="4.5;3">
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleY=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Hinge Left" beats="3" scaleX="3" scaleY="1.5"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
  </path>
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleY=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Hinge Left" beats="3" scaleX="3" scaleY="1.5"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
  </path>
  </tam>

  <tam title="Rotate 1/2 and Spread" formation="Normal Lines" group="  " fractions="4.5;3">
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Lead Left" beats="3" scaleX="3" scaleY=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Lead Left" beats="3" scaleY="1.5"/>
  </path>
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Lead Left" beats="3" scaleX="3" scaleY=".5"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Lead Left" beats="3" scaleY="1.5"/>
  </path>
  </tam>

  <tam title="Rotate 1/2 and Roll" formation="Normal Lines" group="  " fractions="4.5;3">
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleY=".5"/>
    <move select="Quarter Left" offsetX="-1" beats="2"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Hinge Left" beats="3" scaleX="3" scaleY="1.5"/>
    <move select="Quarter Left" offsetX="-1" beats="2"/>
  </path>
  <path>
    <move select="Hinge Right"/>
    <move select="Hinge Left" beats="3" hands="both" scaleX=".5"/>
    <move select="Hinge Left" beats="3" hands="both" scaleY=".5"/>
    <move select="Quarter Left" offsetX="1" beats="2"/>
  </path>
  <path>
    <move select="BackHinge Left"/>
    <move select="Hinge Left" beats="3" scaleX="1.5" scaleY="3"/>
    <move select="Hinge Left" beats="3" scaleX="3" scaleY="1.5"/>
    <move select="Quarter Left" offsetX="1" beats="2"/>
  </path>
  </tam>

  <tam title="All 4 Couples Rotate 1/2" formation="Static Square" group="   ">
    <path>
      <move select="Extend Right" hands="right" scaleX="3" scaleY="2" beats="4"/>
      <move select="Hinge Left" hands="both" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" hands="left" scaleX="3" scaleY="2" beats="4"/>
      <move select="Hinge Left" hands="left" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Extend Right" hands="right" scaleX="3" scaleY="2" beats="4"/>
      <move select="Hinge Left" hands="both" beats="4"/>
    </path>
    <path>
      <move select="Extend Right" hands="left" scaleX="3" scaleY="2" beats="4"/>
      <move select="Hinge Left" hands="left" beats="4" scaleX="3" scaleY="3"/>
    </path>
  </tam>

</tamination>
