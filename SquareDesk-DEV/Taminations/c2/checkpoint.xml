<tamination title="Checkpoint">

  <tam title="Checkpoint Ah So by Swing Thru" group="Checkpoint"
       from="" formation="Tidal Wave RH BGGB">
  <path numbers="8 1">
    <move select="Dodge Right" beats="2" scaleY=".25"/>
    <move select="Swing Right"/>
    <move select="Swing Left"/>
  </path>
  <path numbers="7 2">
    <move select="Run Left" beats="4" hands="gripleft" offsetX="3" scaleY="1.75"/>
  </path>
  <path numbers="6 3">
    <move select="U-Turn Left" beats="4" hands="gripleft" offsetX="-3" offsetY="-.5"/>
  </path>
  <path numbers="5 4">
    <move select="Dodge Right" beats="2" scaleY=".25"/>
    <move select="Swing Right"/>
  </path>
  </tam>

  <tam title="Checkpoint Tag the Line by Swing Thru" group="Checkpoint"
       from="" formation="Tidal Wave RH BGGB">
  <path numbers="8 1">
    <move select="Dodge Right"/>
    <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    <move select="Swing Left" scaleX=".5" scaleY=".5"/>
  </path>
  <path numbers="7 2">
    <move select="Quarter Left" beats="2" offsetX="-1.5" offsetY=".5"/>
    <move select="Forward 3"/>
    <move select="Extend Right" beats="2" scaleX="1.5" scaleY="1.5"/>
  </path>
  <path numbers="6 3">
    <move select="Lead Right" beats="2" scaleX="1.5"/>
    <move select="Forward 3"/>
    <move select="Extend Right" beats="2" scaleY="1.5"/>
  </path>
  <path numbers="5 4">
    <move select="Stand" beats="3"/>
    <move select="Swing Right" scaleX=".5" scaleY=".5"/>
  </path>
  </tam>

  <tam title="Checkpoint Box Circulate by Mix" group="Checkpoint"
       formation="Diamonds RH PTP Girl Points">
    <path>
      <move select="Extend Left"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-1" offsetY="-1"/>
    </path>
    <path>
      <move select="Stand"/>
      <move select="Dodge Right" beats="4" scaleY="2"/>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="Checkpoint Counter Rotate by Triangle Circulate" group="Checkpoint">
     <formation>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="3.1" angle="0"/>
      <dancer gender="boy" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="5.1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Run Left" offsetX="-1" offsetY=".05"/>
    </path>
    <path>
      <move select="Lead Right" beats="5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Dodge Left"/>
      <move select="Run Left" offsetX="1" offsetY=".05"/>
    </path>
  </tam>


</tamination>
