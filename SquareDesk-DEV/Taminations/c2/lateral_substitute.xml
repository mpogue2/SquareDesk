      <move select="Sashay Left" scaleY="1.05"/>
    </path>
    <path>
    </path>
    <path>
      <move select="BackSashay Left" scaleY="1.05"/>
    </path>
    <path>
      <move select="Dodge Right" scaleY="1.05"/>
    </path>
  </tam>

