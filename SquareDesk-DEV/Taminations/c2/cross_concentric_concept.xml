<tamination title="Cross-Concentric Concept">

  <tamxref title="Cross Concentric Bounce the Boys" group="Cross Concentric"
           xref-link="c2/bounce_the_anyone"
           xref-title="Cross Concentric Bounce the Boys"/>

  <tamxref title="Cross Concentric Circle to a Wave" group="Cross Concentric"
           xref-link="c2/circle_to_a_wave"
           xref-title="Cross Concentric Circle to a Wave" />

  <tam title="Cross Concentric Crossfire" group="Cross Concentric"
       formation="Two-Faced Tidal Line RH">
    <path numbers="1 8">
      <move select="Stand" beats="3"/>
      <move select="Run Right" offsetX="1" scaleY="2.25" beats="4"/>
    </path>
    <path numbers="2 7">
      <move select="Stand" beats="3"/>
      <move select="Run Right" scaleY="1.75"/>
      <move select="Forward"/>
    </path>
    <path numbers="3 6">
      <move select="Run Left" offsetX="3" offsetY=".5"/>
    </path>
    <path numbers="4 5">
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="3" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Cross Concentric Flip the Diamond" group="Cross Concentric"
       formation="Concentric Diamonds RH">
    <path numbers="3 6">
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
    <path numbers="4 5">
      <move select="Lead Right" beats="3" scaleX="3.5"/>
    </path>
    <path numbers="7 2">
      <move select="U-Turn Right" offsetY=".5"/>
    </path>
    <path numbers="8 1">
      <move select="Run Right" scaleY="1.75"/>
    </path>
  </tam>

  <tam title="Cross Concentric Hinge" group="Cross Concentric"
       formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Quarter Right" hands="right" beats="3" offsetX="1" offsetY="-1.5"/>
    </path>
    <path numbers="7 2">
      <move select="Quarter Right" hands="right" beats="3" offsetX="1" offsetY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Quarter Right" beats="3" offsetX="3" offsetY=".5"/>
    </path>
    <path numbers="5 4">
      <move select="Quarter Right" beats="3" offsetX="3" offsetY="-1.5"/>
    </path>
  </tam>

  <tam title="Cross Concentric Recycle" group="Cross Concentric"
       formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Stand" beats="1"/>
      <move select="Lead Right" beats="3" scaleY="2.5"/>
      <move select="Quarter Right" beats="3" offsetX="2"/>
    </path>
    <path numbers="7 2">
      <move select="Stand" beats="2"/>
      <move select="U-Turn Right" offsetX="-1" offsetY=".5"/>
      <move select="U-Turn Right" offsetY="-1"/>
    </path>
    <path numbers="6 3">
      <move select="Run Right" beats="4" offsetX="3" offsetY="-.5"/>
    </path>
    <path numbers="5 4">
      <move select="Flip Right" offsetX="-1.5" scaleY=".5"/>
      <move select="Flip Right" offsetX="1.5" scaleY=".25"/>
    </path>
  </tam>

  <tam title="Cross Concentric Reverse Explode" group="Cross Concentric"
       formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Stand"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5"/>
    </path>
    <path numbers="7 2">
      <move select="Stand"/>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5"/>
    </path>
    <path numbers="5 4">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Cross Concentric Star Thru" group="Cross Concentric"
       from="" formation="Normal Lines">
  <path>
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Lead Right" beats="3" scaleY="1.5"/>
  </path>
  <path>
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Quarter Left" beats="3" offsetX="3" offsetY=".5"/>
  </path>
  <path>
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Quarter Right" beats="3" offsetX="3" offsetY="-1.5"/>
  </path>
  <path>
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Lead Left" beats="3" scaleY=".5"/>
  </path>
  </tam>

  <tam title="Cross Concentric Star Thru (example 1)" group="Cross Concentric"
        formation="Double Pass Thru">
    <path numbers="1 8">
      <move select="Forward 2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path numbers="2 7">
      <move select="Forward 2"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path numbers="3 6">
      <move select="Extend Left"/>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="1"/>
    </path>
    <path numbers="4 5">
      <move select="Forward"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-2"/>
    </path>
  </tam>

  <tam title="Cross Concentric Star Thru (example 2)" group="Cross Concentric">
     <formation>
      <dancer gender="boy" x="3" y="2" angle="270"/>
      <dancer gender="girl" x="-1" y="2" angle="270"/>
      <dancer gender="boy" x="1" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="270"/>
    </formation>
  <path numbers="7 2">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Lead Right" beats="3" scaleY="1.5"/>
  </path>
  <path numbers="3 6">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Quarter Left" beats="3" offsetX="3" offsetY="-1.5"/>
  </path>
  <path numbers="5 4">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Quarter Right" beats="3" offsetX="3" offsetY=".5"/>
  </path>
  <path numbers="1 8">
    <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
    <move select="Lead Left" beats="3" scaleY=".5"/>
  </path>
  </tam>

  <tam title="Cross Concentric Star Thru (example 3)" group="Cross Concentric">
     <formation>
      <dancer gender="boy" x="3" y="1" angle="270"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="boy" x="1" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="1" angle="270"/>
    </formation>
  <path numbers="7 2">
    <move select="Extend Left" scaleY=".5"/>
    <move select="Lead Right" beats="3" scaleY="2.5"/>
  </path>
  <path numbers="3 6">
    <move select="Extend Left" scaleY=".5"/>
    <move select="Quarter Left" beats="3" offsetX="1" offsetY="1.5"/>
  </path>
  <path numbers="5 4">
    <move select="Extend Left" scaleY=".5"/>
    <move select="Quarter Right" beats="3" offsetX="1" offsetY="-2.5"/>
  </path>
  <path numbers="1 8">
    <move select="Extend Left" scaleY=".5"/>
    <move select="Lead Left" beats="3" scaleY="1.5"/>
  </path>
  </tam>

  <tam title="Cross Concentric Step and Fold" group="Cross Concentric"
       formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Flip Right" offsetX="1" scaleY="1.25"/>
    </path>
    <path numbers="7 2">
      <move select="Extend Left" beats="3" scaleY="1.5"/>
    </path>
    <path numbers="6 3">
      <move select="Flip Right" scaleY=".25" offsetX="3"/>
    </path>
    <path numbers="5 4">
      <move select="Extend Right" beats="3" scaleX="3" scaleY=".5"/>
    </path>
  </tam>

  <tamxref title="Cross Concentric The K" group="Cross Concentric"
           xref-link="c2/anything_the_k"
           xref-title="Cross Concentric the K"/>

  <tamxref title="Cross Concentric Turn to a Line" group="Cross Concentric"
           xref-link="c2/turn_to_a_line"
           xref-title="Cross Concentric Turn to a Line (from waves)" />

  <!-- TODO add example from thar -->
  <tam title="Cross Concentric Wheel and Deal" group="Cross Concentric"
       from="" formation="Two-Faced Tidal Line RH">
    <path numbers="1 8">
      <move select="Run Right" hands="right" offsetX="1" offsetY="-2.5"/>
    </path>
    <path numbers="2 7">
      <move select="U-Turn Right" hands="left" offsetX="1" offsetY="-1.5"/>
    </path>
    <path numbers="3 6">
      <move select="Run Left" hands="gripleft" offsetX="3" offsetY=".5"/>
    </path>
    <path numbers="4 5">
      <move select="U-Turn Left" hands="gripright" offsetX="3" offsetY="-.5"/>
    </path>
  </tam>

</tamination>
