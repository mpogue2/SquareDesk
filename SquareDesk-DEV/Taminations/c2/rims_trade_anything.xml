<tamination title="Rims Trade">



  <tam title="Rims Trade Chase Right" group="Rims Trade"
       from=""
       formation="Normal Lines"
       fractions="3" >
    <path>
      <move select="Run Right" />
      <move select="U-Turn Right" beats="1.5" offsetX="-1" />
      <move select="Forward 2" />
      <move select="Run Right" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Flip Left" />
      <move select="Run Right" beats="2.5" />
      <move select="Forward 4" beats="3.5" />
    </path>
  </tam>

  <tam title="Rims Trade Follow Your Neighbor" group="Rims Trade"
       from=""
       formation="Ocean Waves RH BGGB"
       fractions="3" >
    <path>
      <move select="Swing Right" />
      <move select="Lead Left" beats="2" scaleX="2" />
      <move select="Run Left" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Forward 2" beats="1.5" offsetY=".125" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
  </tam>

  <tam title="Rims Trade Pass the Ocean" group="Rims Trade"
       from=""
       formation="Lines Facing Out"
       fractions="3" >
    <path>
      <move select="Flip Left" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward" beats=".5" />
      <move select="Lead Right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" hands="left" beats="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Rims Trade Pass Thru" group="Rims Trade"
       from=""
       formation="Lines Facing Out"
       fractions="3" >
    <path>
      <move select="Flip Left" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>
</tamination>
