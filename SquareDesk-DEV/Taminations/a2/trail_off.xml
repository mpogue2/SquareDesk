<tamination title="Trail Off">

  <tam title="Trail Off" from="Right-Hand Box"
       formation="Box RH Boys Lead">
    <path numbers="2 3" couples="3 1">
      <move select="Run Right" scaleY="2" offsetX="-2" />
    </path>
    <path numbers="1 4" couples="1 3">
      <move select="Forward 2" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Trail Off" from="Left-Hand Box" formation="Box LH">
    <path numbers="1 4">
      <move select="Run Left" scaleY="2" offsetX="-2" />
    </path>
    <path numbers="2 3">
      <move select="Forward 2" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Trail Off" from="Z Facing Out">
    <formation>
      <dancer gender="boy" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="2" y="1" angle="0"/>
    </formation>
    <path numbers="2 3">
      <move select="Swing Right"/>
    </path>
    <path numbers="4 1">
      <move select="Run Right" scaleY="2" offsetX="-2"/>
    </path>
  </tam>

  <tam title="Trail Off" from="Z Facing In">
    <formation>
      <dancer gender="boy" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="2" y="-1" angle="180"/>
    </formation>
    <path numbers="2 3">
      <move select="Run Right" scaleX="2" scaleY="2"/>
    </path>
    <path numbers="4 1">
      <move select="Forward 2"/>
      <move select="Swing Right"/>
    </path>
  </tam>

  <tam title="Trail Off"
       from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Run Right" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Right" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Trail Off"
       from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Forward" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Trail Off"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path numbers="5 4">
      <move select="Run Left" beats="6" scaleX="2" scaleY="2" offsetX="-1" />
    </path>
    <path numbers="6 3">
      <move select="Run Right" beats="6" scaleY="2" offsetX="-1" />
    </path>
    <path numbers="7 2">
      <move select="Run Left" offsetX="1" />
    </path>
    <path numbers="8 1">
      <move select="Flip Right" offsetX="1" />
    </path>
    <taminator>
      Some dancers in the trailing position perform a partner trade, with the
      beau passing in front of the belle.  This animation shows the movement
      as defined, with the belle passing in front of the beau.
    </taminator>
  </tam>

  <tam title="Trail Off"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward"/>
      <move select="Flip Right" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Forward"/>
      <move select="Run Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Run Left" offsetX="-1" offsetY=".5" />
      <move select="Forward"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" offsetY="-.5" />
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Trail Off"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".625" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="-2" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".625" />
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="-2" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Trail Off"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Run Left" beats="5" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".625" />
    </path>
    <path>
      <move select="Run Left" beats="5" offsetX="-2" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".625" />
    </path>
  </tam>

  <tam title="As Couples Trail Off"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" hands="right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" hands="left" beats="6" offsetX="-2" offsetY="-1.5" />
    </path>
    <path>
      <move select="Run Right" hands="right" beats="6" scaleX="2.5" scaleY="2.5" offsetX="-2" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="All 8 Trail Off"
       from="Mini-Waves"
       formation="Static MiniWaves RH">
    <path>
      <move select="Forward 3" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" offsetY="-2" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Run Right" beats="6" offsetX="-3" offsetY="-2" />
    </path>
  </tam>

</tamination>
