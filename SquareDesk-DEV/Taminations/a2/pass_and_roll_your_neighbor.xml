<tamination title="Pass and Roll Your Neighbor">

  <tam title="Pass and Roll Your Neighbor" from="Single Column">
    <formation>
      <dancer gender="boy" x="-3" y="0" angle="0"/>
      <dancer gender="girl" x="-1" y="0" angle="180"/>
    </formation>
    <path numbers="1 4">
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" />
      <move select="Quarter Right" />
      <move select="Quarter Right" />
    </path>
    <path numbers="2 3">
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Pass and Roll Your Neighbor"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Flip Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" />
      <move select="Quarter Right" />
      <move select="Quarter Right" offsetY="-1" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" scaleY="1.5" />
    </path>
  </tam>

  <tam title="All 8 Pass and Roll Your Neighbor and Spread"
       from="Facing Dancers"
       formation="Static Facing"
       group=" " >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 4" beats="6" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="3" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 4" beats="6" />
      <move select="Swing Right" />
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
  </tam>
  
   <tam title="As Couples Pass and Roll Your Neighbor" group=" "
       formation="Eight Chain Thru" >
    <path>
      <move select="Extend Left" hands="right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
      <move select="Forward 3" beats="2" />
      <move select="Run Right" hands="right" scaleX="1.5" scaleY="1.5" offsetX="1" />
      <move select="Hinge Right" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" hands="left" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward 3" beats="2" />
      <move select="Run Right" hands="left" scaleX=".5" scaleY=".5" offsetX="1" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" hands="right" scaleY=".5" />
      <move select="Run Right" beats="5" scaleX="1.5" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
      <move select="Hinge Right" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" hands="left" scaleY="1.5" />
      <move select="Run Right" beats="5" scaleX=".5" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>
  
</tamination>
