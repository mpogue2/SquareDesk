<tamination title="Grand Remake">

  <tam title="Grand Remake" group=" "
       formation="Column RH GBGB"
       parts="1.5;3" >
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Left Grand Remake" group=" "
       formation="Column LH GBGB"
       parts="1.5;3" >
    <path>
      <move select="Hinge Left" scaleX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

</tamination>