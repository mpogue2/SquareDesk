<tamination title="Switch the Wave">

  <tam title="Switch the Wave" from="Right-Hand Wave"
       formation="Wave RH Boys Center">
    <path numbers="2 3" couples="3 1">
      <move select="Run Right" beats="6"/>
    </path>
    <path numbers="1 4" couples="1 3">
      <move select="Run Right" beats="6" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Wave" from="Left-Hand Wave" formation="Wave LH">
    <path numbers="4 1" couples="3 1">
      <move select="Run Left" beats="6" scaleY="2" />
    </path>
    <path numbers="3 2" couples="3 1">
      <move select="Run Left" beats="6"/>
    </path>
  </tam>

  <tam title="Switch the Wave"
       from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG"
       fractions="" >
    <path>
      <move select="Run Right" beats="6" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Wave"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       fractions="" >
    <path>
      <move select="Run Left" beats="6" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Wave"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       fractions="" >
    <path>
      <move select="Run Right" beats="6" scaleX=".75" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX=".75" />
    </path>
  </tam>

  <tam title="Switch the Wave"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       fractions="" >
    <path>
      <move select="Run Left" beats="6" scaleX=".75" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".75" />
    </path>
  </tam>

  <tam title="As Couples Switch the Wave"
       from="Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH"
       fractions="" >
    <path>
      <move select="Run Right" hands="right" beats="6" scaleX="2.5" scaleY="2.5" />
    </path>
    <path>
      <move select="Run Right" hands="left" beats="6" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Right" hands="left" beats="6" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" hands="right" beats="6" scaleX="1.5" scaleY="1.5" />
    </path>
  </tam>

  <tam title="All 8 Switch the Wave"
       from="Thar"
       formation="Thar LH Boys"
       fractions="" >
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
  </tam>
</tamination>
