<tamination title="Zig and Zag">

  <tam title="Zig Zag"
       from="Double Pass Thru"
       formation="Double Pass Thru"
       fractions="" >
    <path>
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="" >
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Right-Hand Columns">
     <formation>
      <dancer gender="girl" x="-1" y="3" angle="90"/>
      <dancer gender="boy" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="-1" y="-1" angle="90"/>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
    </formation>
    <path numbers="1 8">
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
    <path numbers="3 6">
      <move select="Quarter Right" beats="2" offsetY="1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Left" beats="2" offsetY="1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetY="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Zig Zag"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-1" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Zig" from="Three Quarters Tag" formation="3/4 Tag">
    <path numbers="5 4">
      <move select="Quarter Right" offsetY="-1"/>
    </path>
    <path numbers="6 3">
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path numbers="8 1">
    </path>
    <path numbers="2 7">
    </path>
    <taminator>Here the dancers adjust to form diamonds.
    </taminator>
  </tam>

  <tam title="As Couples Zig Zag" group="As Couples"
       formation="Two-Faced Lines RH">
    <path>
      <move select="BackHinge Right"/>
    </path>    
    <path>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="BackHinge Left"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
  </tam>
  
  <tam title="As Couples Zag Zig" group="As Couples"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Hinge Right"/>
    </path>    
    <path>
      <move select="BackHinge Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="BackHinge Right"/>
    </path>
  </tam>

</tamination>
