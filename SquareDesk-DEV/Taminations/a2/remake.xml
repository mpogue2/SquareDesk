<tamination title="Remake">

  <tam title="Remake" from="Right-Hand Box" formation="Box RH" parts="1.5;3">
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Remake"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5;3" >
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Remake"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       parts="1.5;3" >
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Stand" beats="3"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
    </path>
    <taminator>
      Note that the very centers do not trade, since this is not a
      Grand Remake.
    </taminator>
  </tam>

  <tam title="Remake"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       parts="1.5;3" >
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Left Remake" formation="Ocean Waves LH BGGB" group=" ">
    <path>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
  </tam>

  <tam title="Remake the Alamo" group=" "
       from="Alamo Wave"
       formation="Alamo Wave"
       parts="1.5;3" >
    <path>
      <move select="Sxtnth Left" />
      <move select="Hinge Right" hands="gripright" offsetX=".414" />
      <move select="Hinge Left" />
      <move select="Hinge Left" hands="gripleft" offsetX=".414" />
      <move select="Cast Right" />
      <move select="Sxtnth Right" />
    </path>
    <path>
      <move select="Sxtnth Right" />
      <move select="Hinge Right" hands="gripright" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Sxtnth Left" />
    </path>
    <path>
      <move select="Sxtnth Left" />
      <move select="Hinge Right" hands="gripright" offsetX=".414" />
      <move select="Hinge Left" />
      <move select="Hinge Left" hands="gripleft" offsetX=".414" />
      <move select="Cast Right" />
      <move select="Sxtnth Right" />
    </path>
    <path>
      <move select="Sxtnth Right" />
      <move select="Hinge Right" hands="gripright" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Sxtnth Left" />
    </path>
  </tam>

  <tam title="Any Hand Remake" group=" "
       from="Inverted Lines"
       formation="Inverted Lines Ends Facing In"
       parts="1.5;3" >
    <path>
      <move select="Hinge Right" />
      <move select="Flip Left" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX=".33" offsetY=".33" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Quarter Right" hands="left" offsetX=".33" offsetY=".33" />
      <move select="Quarter Right" hands="left" offsetX="-.33" offsetY=".33" />
      <move select="Quarter Right" hands="left" offsetX="-.33" offsetY="-.33" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Run Right" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
    </path>
  </tam>

  <tam title="As Couples Remake" group=" "
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       parts="3;4" >
    <path>
      <move select="Lead Right" beats="3" hands="right" scaleX="1.5" scaleY="3" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" beats="3" hands="right" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="both" scaleX=".5" />
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" hands="both" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="both" scaleX=".5" />
      <move select="Stand" beats="4" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="3" hands="both" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="right" scaleX="1.5" scaleY="3" />
      <move select="Stand" beats="4" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" beats="3" hands="right" scaleX="3" scaleY="1.5" />
    </path>
  </tam>
</tamination>
