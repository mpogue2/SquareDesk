<tamination title="Diamond Chain Thru">

  <tam title="Diamond Chain Thru"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points"
       parts="3;3" >
    <path numbers="6 3" couples="2 4">
      <move select="Lead Right" scaleX="3" beats="3" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Lead Right" scaleY="3" beats="3" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path numbers="5 4" couples="3 1">
      <move select="Lead Right" scaleX="3" beats="3" />
    </path>
    <path numbers="8 1" couples="3 1">
      <move select="Lead Right" scaleY="3" beats="3" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Diamond Chain Thru"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       parts="3;3" >
    <path>
      <move select="Lead Left" scaleX="3" beats="3" />
    </path>
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Lead Left" scaleX="3" beats="3" />
    </path>
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Diamond Chain Thru"
       from="Facing Diamonds"
       formation="Diamonds Facing Girl Points"
       parts="3;3" >
    <path numbers="6 3">
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path numbers="2 7">
      <move select="Quarter Left" beats="1" />
      <move select="Forward" />
      <move select="Extend Right" scaleX="2" beats="2" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path numbers="8 1">
      <move select="Quarter Left" beats="1" />
      <move select="Forward" />
      <move select="Extend Right" scaleX="2" beats="2" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Diamond Chain Thru"
       from="Star Promenade" formation="Star Promenade"
       parts="3;3">
    <path>
      <move select="Lead Left" beats="3" scaleX="3"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Right" hands="left" offsetX=".33"/>
      <move select="Quarter Right" hands="left" offsetY=".33"/>
      <move select="Quarter Right" hands="left" offsetX="-.33"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Swing Left"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX=".33"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetY=".33"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3"/>
      <move select="Stand" beats="3"/>
      <move select="Quarter Right" hands="left" offsetX=".33"/>
      <move select="Quarter Right" hands="left" offsetY=".33"/>
      <move select="Quarter Right" hands="left" offsetX="-.33"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Swing Left"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX=".33"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetY=".33"/>
      <move select="Hinge Right" scaleX="2" scaleY="2" offsetX="-.33"/>
    </path>
    <taminator>
    This doesn't strictly follow the definition, but some use it anyway.
      All the centers trade in
    the second part as there are no very centers.
    </taminator>
  </tam>

</tamination>
