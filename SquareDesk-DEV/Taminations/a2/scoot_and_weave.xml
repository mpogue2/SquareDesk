<tamination title="Scoot and Weave">

  <tam title="Scoot and Weave" from="Right-Hand Box" formation="Box RH" 
       parts="5.5">
    <path numbers="1 4">
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75" />
    </path>
    <path numbers="2 3">
      <move select="Flip Right" />
      <move select="Stand" beats="2" />
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Left-Hand Box" formation="Box LH" parts="5">
    <path>
      <move select="Flip Left" />
      <move select="Stand" beats="2" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75" />
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Single Quarter Tag" formation="Single Quarter Tag" parts="5">
    <path numbers="1 4">
      <move select="Extend Left" beats="2"/>
      <move select="Swing Right"/>
      <move select="Lead Right"/>
    </path>
    <path numbers="2 3">
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Single Left Quarter Tag" formation="Single Left Quarter Tag" parts="5">
    <path numbers="1 4">
      <move select="Extend Right" beats="2"/>
      <move select="Swing Left"/>
      <move select="Lead Left"/>
    </path>
    <path numbers="2 3">
      <move select="Forward 2"/>
      <move select="Swing Left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Right-Hand Waves"
    formation="Ocean Waves RH BGBG" parts="5">
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75" />
    </path>
    <path>
      <move select="Flip Right" />
      <move select="Stand" beats="2" />
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75" />
    </path>
    <path>
      <move select="Flip Right" />
      <move select="Stand" beats="2" />
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG" parts="5">
    <path>
      <move select="Flip Left" />
      <move select="Stand" beats="2" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75" />
    </path>
    <path>
      <move select="Flip Left" />
      <move select="Stand" beats="2" />
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75" />
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Right-Hand Columns"
       formation="Column RH GBGB" parts="5">
    <path>
      <move select="Run Right" scaleX=".5"/>
      <move select="Stand" beats="2" />
      <move select="Extend Right" beats="3" scaleY="1.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5"/>
      <move select="Stand" beats="2" />
      <move select="Extend Right" beats="3" scaleY="1.5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Left-Hand Columns"
       formation="Column LH GBGB" parts="5">
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5"/>
      <move select="Stand" beats="2" />
      <move select="Extend Left" beats="3" scaleY="1.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5"/>
      <move select="Stand" beats="2" />
      <move select="Extend Left" beats="3" scaleY="1.5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Scoot and Weave" from="Quarter Tag"
    formation="Quarter Tag" parts="5">
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Swing Right" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Swing Right" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Hinge Left" scaleY=".75" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75" />
      <move select="Hinge Left" scaleY=".75" />
    </path>
  </tam>

  <tam title="As Couples Scoot and Weave" from="Two-Faced Lines"
    formation="Two-Faced Lines RH" parts="6">
    <path>
      <move select="Extend Right" beats="2" hands="right" scaleX="2"
        scaleY="1.5" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
      <move select="Forward 2" />
      <move select="Hinge Right" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleX="2"
        scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="6" hands="left" scaleX=".75"
        scaleY=".75" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
      <move select="Hinge Left" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Right" beats="6" hands="right" scaleX="2.25"
        scaleY="2.25" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam formation="Static MiniWaves RH" title="All 8 Scoot and Weave" 
       from="Squared Mini-Waves" parts="7">
    <path>
      <move select="Forward 3"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Run Right" beats="6"/>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Run Right" beats="6"/>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

</tamination>
