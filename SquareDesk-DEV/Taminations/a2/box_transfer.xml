<tamination title="Box Transfer">

  <tam title="Box Transfer"
       from="Right-Hand Box"
       formation="Box RH"
       fractions="" >
    <path numbers="1 4" couples="1 3">
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Cast Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path numbers="2 3" couples="3 1">
      <move select="Run Right" beats="4" scaleX=".5" scaleY="1.75" />
      <move select="Forward 2" />
      <move select="Lead Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Box Transfer"
       from="Left-Hand Box"
       formation="Box LH Girls Lead">
    <path couples="1 3">
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Cast Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path couples="3 1">
      <move select="Run Left" beats="4" scaleX=".5" scaleY="1.75" />
      <move select="Forward 2" />
      <move select="Lead Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="All 8 Box Transfer"
       from="Mini Waves"
       formation="Static MiniWaves RH"
       group=" " >
    <path>
      <move select="Forward 3" />
      <move select="Cast Right" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Lead Right" beats="2.5" scaleY="2" />
      <move select="Lead Right" beats="5.5" scaleX="3" scaleY="3" />
      <move select="Lead Right" beats="2.5" scaleX="2" />
    </path>
    <path>
      <move select="Forward 3" />
      <move select="Cast Right" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Lead Right" beats="2.5" scaleY="2" />
      <move select="Lead Right" beats="5.5" scaleX="3" scaleY="3" />
      <move select="Lead Right" beats="2.5" scaleX="2" />
    </path>
  </tam>

  <tam title="As Couples Box Transfer"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       group=" " >
    <path>
      <move select="Extend Right" hands="right" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Cast Right" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Left" hands="right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Cast Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" hands="left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" hands="left" beats="2" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Right" hands="left" beats="2" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="4" scaleX="4" scaleY="4" />
      <move select="Lead Right" hands="right" beats="2" scaleX="3" scaleY="2" />
    </path>
  </tam>
</tamination>
