<tamination title="Box Counter Rotate">

  <tam title="Box Counter Rotate" from="Right-Hand Box" formation="Box RH">
    <path couples="1 3">
      <move select="Counter Rotate Right 3 1" beats="4" hands="right" />
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Right -1 -3" hands="right" beats="4" />
    </path>
  </tam>

  <tam title="Box Counter Rotate" from="Left-Hand Box" formation="Box LH">
    <path couples="1 3">
      <move select="Counter Rotate Left -1 3" hands="gripleft" beats="4"  />
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Left 3 -1" hands="left" beats="4" />
    </path>
  </tam>

  <tamxref title="Box Counter Rotate (C-1)" from="Facing Couples"
           xref-link="ms/slide_thru"
           xref-from="Facing Couples" />

  <tamxref title="Box Counter Rotate (C-1)" from="Couples Facing Out"
           xref-link="a1/partner_tag"
           xref-from="Couples Facing Out"/>

  <tam title="Box Counter Rotate 3/4" from="Right-Hand Box" formation="Box RH" fractions="4;4">
    <path numbers="1 4">
      <move select="Counter Rotate Right 3 1" beats="4" hands="right" />
      <move select="Counter Rotate Right 3 1" beats="4" hands="right" />
      <move select="Counter Rotate Right 3 1" beats="4" hands="right" />
    </path>
    <path numbers="2 3">
      <move select="Counter Rotate Right -1 -3" hands="right" beats="4" />
      <move select="Counter Rotate Right -1 -3" hands="right" beats="4" />
      <move select="Counter Rotate Right -1 -3" hands="right" beats="4" />
    </path>

  </tam>

  <tam title="As Couples Box Counter Rotate"
       from="Two-Faced Lines"
       formation="Two-Faced Lines RH"
       group=" " >
    <path>
      <move select="Counter Rotate Right 5 -1" beats="5" hands="right" />
    </path>
    <path>
      <move select="Counter Rotate Right 3 1" beats="5" hands="both" />
    </path>
    <path>
      <move select="Counter Rotate Right -1 -3" hands="both" beats="5" />
    </path>
    <path>
      <move select="Counter Rotate Right 1 -5" beats="5" hands="right" />
    </path>
  </tam>

</tamination>
