<tamination title="Hourglass Circulate">

  <tam title="Hourglass Circulate"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP"
       fractions="" >
    <path couples="2 4">
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
    <path couples="2 4">
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path couples="1 3">
      <move select="Extend Right" scaleX="2" scaleY="2" beats="4" />
    </path>
    <path couples="1 3">
      <move select="Extend Left" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Hourglass Circulate"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP"
       fractions="" >
    <path>
      <move select="Extend Left" scaleX="2" scaleY="2" beats="4" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Hourglass Circulate"
       from="Facing Hourglass, Left-Hand Box"
       formation="Hourglass Facing LH Box">
    <path>
      <move select="Extend Left" scaleY="2" beats="3" />
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward 2" beats="2.7"/>
      <move select="Lead Right" beats="1.3"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2.7" offsetY="2"/>
      <move select="Extend Right" beats="1.3"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleY="2"/>
      <move select="Forward"/>
    </path>
    <taminator>
    All dancers pass right shoulders.
    </taminator>
  </tam>

  <tam title="Hourglass Circulate"
       from="Facing Hourglass, Right-Hand Box">
    <formation>
      <dancer gender="boy" y="2" x="-3" angle="90"/>
      <dancer gender="girl" y="3" x="0" angle="180"/>
      <dancer gender="boy" y="2" x="3" angle="270"/>
      <dancer gender="girl" y="0" x="1" angle="90"/>
    </formation>
    <path couples="3 1">
      <move select="Lead Right" beats="1.5"/>
      <move select="Forward 2" beats="2.5" />
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="1.5"/>
      <move select="Quarter Left" beats="2.5" offsetX="2"/>
    </path>
    <path>
      <move select="Forward" beats="1.3" />
      <move select="Extend Right" beats="2.7" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="1.3" />
      <move select="Extend Right" beats="2.7" scaleY="2"/>
    </path>
  </tam>


</tamination>
