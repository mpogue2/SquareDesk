<tamination title="Swing and Mix">

  <tam title="Swing and Mix" from="Facing Couples" formation="Facing Couples" parts="5;3">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Swing Right"/>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Swing and Mix" from="Right-Hand Wave" formation="Wave RH" parts="3;3">
    <path>
      <move select="Swing Right"/>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Swing and Mix" from="Lines" formation="Normal Lines" parts="5;3">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Swing and Mix"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="3;3" >
    <path>
      <move select="Swing Right"/>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Run Left" scaleY="2" />
    </path>
  </tam>

  <tam title="Swing and Mix"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="3;3" >
    <path>
      <move select="Swing Left"/>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Run Right" scaleY="2" />
    </path>
  </tam>

  <tam title="Swing and Mix"
       from="Eight Chain Thru" formation="Eight Chain Thru"
       parts="5;3">
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Swing Right"/>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right"/>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Extend Left" beats="2"  scaleY="2"/>
      <move select="Swing Right"/>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Right"/>
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Left Swing and Mix" from="Facing Couples" formation="Facing Couples" parts="5;3">
    <path>
      <move select="Forward 2"/>
      <move select="Swing Left"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Run Right" scaleY="2" />
    </path>
  </tam>

  <tam title="Left Swing and Mix" from="Lines" formation="Normal Lines" parts="5;3">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Left" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Left Swing and Mix"
       from="Eight Chain Thru" formation="Eight Chain Thru"
       parts="5;3">
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Run Right" scaleY="2" />
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left"/>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Right" beats="2"  scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Run Right" scaleY="2" />
    </path>
  </tam>


  <tam title="All 8 Swing and Mix"
       from="Thar"
       formation="Thar LH Girls"
       parts="3;4.5" group=" ">
    <path couples="2 4">
      <move select="Swing Right"/>
      <move select="Stand" beats="1.5" />
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path couples="2 4">
      <move select="Swing Right"/>
      <move select="Hinge Left" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="Stand" beats="1.5" />
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="Hinge Left" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="As Couples Swing and Mix"
       formation="Normal Lines"
       parts="5;3" group=" ">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX="1.5" scaleY="1.5"/>
      <move select="Run Left" beats="6" hands="gripright" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Run Left" beats="6" hands="gripleft" scaleX="3" scaleY="2.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" scaleX="1.5" scaleY="1.5"/>
      <move select="Dodge Right" />
      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Right" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

</tamination>
