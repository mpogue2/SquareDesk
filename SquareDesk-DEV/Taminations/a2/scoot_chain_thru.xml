<tamination title="Scoot Chain Thru">

  <tam title="Scoot Chain Thru" from="Right-Hand Waves"
    formation="Ocean Waves RH BGBG" parts="2;3;3;3">
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="2 7" couples="4 2">
      <move select="Stand" beats="2"/>
      <move select="Run Right" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="4 5" couples="1 3">
      <move select="Stand" beats="2"/>
      <move select="Run Right" />
    </path>
  </tam>

  <tam title="Scoot Chain Thru" from="Left-Hand Waves"
    formation="Ocean Waves LH BGBG" parts="2;3;3;3">
    <path>
      <move select="Stand" beats="2"/>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Scoot Chain Thru" from="Quarter Tag"
    formation="Quarter Tag" parts="2;3;3;3">
    <path numbers="1 8">
      <move select="Extend Left" scaleY="2" beats="2" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Extend Right" scaleY="2" beats="2" />
    </path>
    <path numbers="2 7">
      <move select="Forward" beats="2" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="6 3" couples="4 2">
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="5 4" couples="4 2">
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Scoot Chain Thru" from="Left-Handed Quarter Tag"
    formation="Quarter Tag LH" parts="2;3;3;3">
    <path numbers="1 8">
      <move select="Forward" beats="2" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward 2" />
    </path>
    <path numbers="2 7">
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path numbers="6 3">
      <move select="Forward 2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Forward 2" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
  </tam>
</tamination>
