<tamination title="Single Wheel">

  <tam title="Single Wheel" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1" offsetY="1"/>
    </path>
  </tam>

  <tam title="Single Wheel" from="Couples Facing Out" formation="Couples Facing Out">
    <path>
      <move select="U-Turn Left" offsetX="-1" offsetY="1"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Single Wheel" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Single Wheel" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="U-Turn Left" offsetX="1" offsetY="1"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="1" offsetY="1"/>
    </path>
  </tam>

  <tam title="Single Wheel" from="Right-Hand Wave"
       formation="Wave RH">
    <path>
      <move select="Flip Right" beats="4" offsetX="2" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2" />
    </path>
  </tam>

  <tam title="Single Wheel" from="Left-Hand Wave"
       formation="Wave LH">
    <path>
      <move select="Flip Left" beats="4" offsetX="2" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" offsetX="2" />
    </path>
  </tam>

  <tam title="Single Wheel"
       from="Lines Facing Out"
       formation="Lines Facing Out">
    <path>
      <move select="Flip Left" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Single Wheel" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Single Wheel"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Single Wheel"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Single Wheel"
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path>
      <move select="Flip Left" offsetX="-.5" offsetY="-1" />
    </path>
    <path>
      <move select="Flip Right" offsetX=".5" offsetY="1" />
    </path>
    <path>
      <move select="Flip Left" offsetX="-.5" offsetY="-1" />
    </path>
    <path>
      <move select="Flip Right" offsetX=".5" offsetY="1" />
    </path>
  </tam>

  <tam title="Single Wheel 3 Times"
       from="Tidal Wave"
       formation="Tidal Wave RH BGGB"
       fractions="3;3" >
    <path couples="3 1">
      <move select="U-Turn Right" offsetX="2" offsetY="-0.5" />
      <move select="Flip Left" offsetX="-1" />
      <move select="U-Turn Right" offsetX=".5" offsetY="-1" />
    </path>
    <path couples="2 4">
      <move select="U-Turn Right" offsetX="2" offsetY="-0.5" />
      <move select="Flip Right" offsetX="1" />
      <move select="U-Turn Left" offsetX="-.5" offsetY="1" />
    </path>
    <path couples="3 1">
      <move select="U-Turn Right" offsetX="2" offsetY="-0.5" />
      <move select="U-Turn Right" offsetX="1" />
      <move select="U-Turn Right" offsetX=".5" offsetY="-1" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="2" offsetY="-0.5" />
      <move select="U-Turn Left" offsetX="-1" />
      <move select="U-Turn Left" offsetX="-.5" offsetY="1" />
    </path>
  </tam>
</tamination>
