<tamination title="Split Counter Rotate">

  <tam title="Split Counter Rotate"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG" >
    <path numbers="1 8">
      <move select="Counter Rotate Right 2 0" hands="right" beats="4" scaleX="1.5"/>
    </path>
    <path numbers="2 7">
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4" offsetX="-1"/>
    </path>
    <path numbers="3 6">
      <move select="Counter Rotate Right 2 0" hands="right" beats="4" scaleX="1.5"/>
    </path>
    <path numbers="4 5">
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Split Counter Rotate"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       fractions="" >
    <path>
      <move select="Counter Rotate Left 0 2" hands="left" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" hands="left" beats="4" scaleX="1.5" />
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" hands="left" beats="4" offsetX="-1" />
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" hands="left" beats="4" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Split Counter Rotate"
       from="Right-Hand Columns">
    <formation>
      <dancer gender="boy" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="-1" x="-1" angle="90"/>
      <dancer gender="girl" y="-3" x="-1" angle="90"/>
    </formation>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4" offsetY="-1" />
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" beats="4" offsetY="1" />
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4" offsetY="-1" />
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" beats="4" offsetY="1" />
    </path>
  </tam>

  <tam title="Split Counter Rotate"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path>
      <move select="Counter Rotate Left 2 0" hands="left" beats="4" offsetY="-1" />
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" hands="left" beats="4" offsetY="1" />
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" hands="left" beats="4" offsetY="-1" />
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" hands="left" beats="4" offsetY="1" />
    </path>
  </tam>

  <tam title="Split Counter Rotate"
       from="T-Bones 1">
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="-1" y="-1" angle="90"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Counter Rotate Right 2 0" beats="4" />
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" beats="4" />
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4"  />
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="4" />
    </path>
  </tam>

