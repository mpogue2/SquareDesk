<tamination title="Trade Circulate">

  <tam title="Trade Circulate"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG"
       fractions="" >
    <path numbers="1 8">
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Run Left" beats="4" scaleX=".5" scaleY="2" />
    </path>
    <path numbers="3 6">
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path numbers="4 5">
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2" />
    </path>
  </tam>

  <tam title="Trade Circulate"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       fractions="" >
    <path>
      <move select="Run Left" beats="6" scaleX=".5" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2.5" scaleY="2" />
      <move select="Forward" scaleX="1.5" beats="2" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="1.5" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="2.5" scaleY="2" />
      <move select="Forward" scaleX="1.5" beats="2" />
    </path>
  </tam>

  <tam title="Trade Circulate"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH"
       fractions="" >
    <path numbers="1 8">
      <movement hands="none" beats="4" cx1="1.5" cy1="0" cx2="3.5" cy2="-4" x2="4" y2="-4" cx3="1" cx4="1" cy4="-0.4" x4="2" y4="-0.4" />
    </path>
    <path numbers="2 7">
      <movement hands="none" beats="4" cx1="1.5" cy1="0" cx2="3.5" cy2="-4" x2="4" y2="-4" cx3="1" cx4="1" cy4="-0.4" x4="2" y4="-0.4" />
    </path>
    <path numbers="3 6">
      <move select="Flip Left" />
    </path>
    <path numbers="4 5">
      <move select="Run Right" />
    </path>
  </tam>

  <tam title="Trade Circulate"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       fractions="" >
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <movement hands="none" beats="4" cx1="1.5" cy1="0" cx2="1.5" cy2="4" x2="4" y2="4" cx3="1" cx4="1" cy4="0.4" x4="2" y4="0.4" />
    </path>
    <path>
      <movement hands="none" beats="4" cx1="1.5" cy1="0" cx2="1.5" cy2="4" x2="4" y2="4" cx3="1" cx4="1" cy4="0.4" x4="2" y4="0.4" />
    </path>
  </tam>
</tamination>
