<tamination title="Switch to a Diamond">

  <tam formation="Wave RH" title="Switch to a Diamond" from="Right-Hand Wave">
    <path numbers="1 4">
      <move select="Lead Right" scaleY="3" beats="3" />
    </path>
    <path numbers="2 3">
      <move select="Run Right" />
    </path>
  </tam>

  <tam formation="Wave LH" title="Switch to a Diamond" from="Left-Hand Wave">
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
  </tam>

  <tam title="Switch to a Diamond"
       from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG"
       fractions="" >
    <path>
      <move select="Lead Right" scaleY="3" beats="3" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Lead Right" scaleY="3" beats="3" />
    </path>
  </tam>

  <tam title="Switch to a Diamond"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG"
       fractions="" >
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
    </path>
  </tam>

  <tam title="Switch to a Diamond"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       fractions="" >
    <path>
      <move select="Lead Right" beats="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Switch to a Diamond"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       fractions="" >
    <path>
      <move select="Lead Left" beats="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="1.5" />
    </path>
  </tam>
</tamination>
