<tamination title="T-Bone Formation">

  <tam title="(T-Bone) Circulate" from="" fractions="" group="(T-Bone)">
     <formation>
      <dancer gender="girl" x="-1" y="3" angle="90"/>
      <dancer gender="boy" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="-1" angle="90"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path numbers="5 4" couples="4 2">
      <move select="Run Right" beats="5"/>
    </path>
    <path numbers="6 3" couples="4 2">
      <move select="Run Left" beats="5"/>
    </path>
    <path numbers="7 2" couples="3 1">
      <move select="Forward 2" beats="5"/>
    </path>
    <path numbers="8 1" couples="3 1">
      <move select="Run Right" scaleX="2" scaleY="3" beats="5"/>
    </path>
  </tam>

  <tam title="(T-Bone) Split Circulate" from="" fractions="" group="(T-Bone)">
     <formation>
      <dancer gender="girl" x="-1" y="3" angle="90"/>
      <dancer gender="boy" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="-1" angle="90"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path numbers="5 4">
      <move select="Run Right"/>
    </path>
    <path numbers="6 3">
      <move select="Run Right"/>
    </path>
    <path numbers="7 2">
      <move select="Flip Right"/>
    </path>
    <path numbers="8 1">
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="(T-Bone) Scoot Back" from="" group="(T-Bone)">
     <formation>
      <dancer gender="girl" x="-1" y="3" angle="0"/>
      <dancer gender="boy" x="-1" y="1" angle="270"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-3" angle="270"/>
    </formation>
    <path numbers="5 4">
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Run Left" scaleX=".5" beats="5"/>
    </path>
    <path numbers="7 2">
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="8 1">
      <move select="Run Left" beats="5"/>
    </path>
  </tam>

  <tam title="(T-Bone) Follow Your Neighbor"
       from="Left-Handed T-Bone"
       group="(T-Bone)" >
     <formation>
      <dancer gender="girl" x="1" y="3" angle="0"/>
      <dancer gender="boy" x="1" y="1" angle="90"/>
      <dancer gender="girl" x="1" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-3" angle="90"/>
    </formation>
    <path numbers="1 8">
      <move select="Lead Right" beats="2.5" scaleX="2.5" />
      <move select="Run Right" scaleX=".5" scaleY=".25" />
    </path>
    <path numbers="2 7">
      <move select="Extend Left" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
    <path numbers="3 6">
      <move select="Lead Right" beats="2.5" scaleX="2.5" />
      <move select="Run Right" scaleX=".5" scaleY=".25" />
    </path>
    <path numbers="4 5">
      <move select="Extend Left" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
    </path>
  </tam>

</tamination>
