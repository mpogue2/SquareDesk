<tamination title="Cross Extend">



  <tam title="Cross Extend" from="Right-Hand Box" formation="Box RH">
  <path>
    <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
  </path>
  <path>
    <move select="Extend Right" beats="2"/>
  </path>
  </tam>

  <tam title="Cross Extend" from="Left-Hand Box"
       formation="Box LH Girls Lead">
  <path couples="3 1">
    <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
  </path>
  <path couples="1 3">
    <move select="Extend Left" beats="2"/>
  </path>
  </tam>

  <tam title="Cross Extend" from="Right-Hand Waves" formation="Ocean Waves RH BGBG">
    <path>
    <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
    <move select="Forward" beats="2"/>
    </path>
    <path>
    <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
    <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Cross Extend" from="Left-Hand Waves" formation="Ocean Waves LH BGBG">
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
    <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
    </path>
    <path>
    <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Cross Extend" from="Quarter Tag" formation="Quarter Tag">
    <path>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Cross Extend" from="Left-Hand Quarter Tag" formation="Quarter Tag LH">
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="As Couples Cross Extend" group=" " from="" formation="Two-Faced Lines RH">
    <path>
      <move select="Dodge Right" hands="right" offsetX="2" scaleY="2" beats="5"/>
    </path>
    <path>
      <move select="Dodge Right" hands="left" offsetX="2" scaleY="2" beats="5"/>
    </path>
    <path>
      <move select="Dodge Right" hands="left" offsetX="1"/>
    </path>
    <path>
      <move select="Dodge Right" hands="right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Tandem Cross Extend" group=" " from="" formation="Column RH GBGB">
    <path>
      <move select="Forward"/>
      <move select="Extend Right"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
  </tam>

</tamination>
