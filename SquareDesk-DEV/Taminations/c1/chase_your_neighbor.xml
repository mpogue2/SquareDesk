    </path>
  </tam>

  <tam title="As Couples Chase Your Neighbor" from="Lines Facing Out"
       formation="Lines Facing Out" group=" " parts="6">
    <path>
      <move select="BackRun Left" hands="left" offsetX="-1"/>
      <move select="Forward 3" hands="left"/>
      <move select="Lead Right" hands="left" beats="3" scaleX=".5"/>
      <move select="BackRun Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" hands="right" offsetX="-1"/>
      <move select="Forward 3" hands="right"/>
      <move select="Lead Right" hands="right" beats="3" scaleX="1.5" scaleY="3"/>
      <move select="Run Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" hands="left"/>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY=".5"/>
      <move select="Run Right" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" beats="2" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" hands="right" scaleX="3" scaleY="3"/>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY="1.5"/>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="1.5"/>
      <move select="Hinge Right" beats="2" scaleX="1.5" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Concentric Chase Your Neighbor" 
       formation="Lines Facing Out" group=" ">
    <path>
      <move select="Flip Right" beats="5" scaleY=".5" offsetX="-2"/>
      <move select="Lead Right" beats="6" scaleX="4.5" scaleY="4"/>
      <move select="Run Right" beats="4" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2" />
      <move select="Lead Right" beats="2" scaleX="1.5"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Flip Right" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Cast Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="2.5" scaleY="2.75" offsetX="-2"/>
      <move select="Cast Right" hands="none" beats="9" scaleX="2.5" scaleY="2.5"/>
    </path>
  </tam>

  <tam title="Tandem Chase Your Neighbor" 
       formation="Completed Double Pass Thru" group=" ">
    <path>
      <move select="Flip Right" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
      <move select="Run Right" scaleX=".5" scaleY=".5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1"/>
      <move select="Forward 3"/>
      <move select="Quarter Right" beats="3" hands="gripright" offsetY="-2"/>
      <move select="Quarter Right" beats="3" hands="gripright" offsetY="-2"/>
      <move select="Quarter Right" beats="4" hands="gripright" offsetY="-3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Flip Right" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
      <move select="Flip Right" scaleY=".5" offsetX="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" offsetX="-1"/>
      <move select="Forward"/>
      <move select="Quarter Right" beats="3" hands="gripright" offsetX="2"/>
      <move select="Quarter Right" beats="3" hands="gripright" offsetX="2"/>
      <move select="Quarter Right" beats="4" hands="gripright" offsetX="2" offsetY="1"/>
    </path>
  </tam>

