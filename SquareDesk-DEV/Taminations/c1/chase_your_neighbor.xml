  <tam title="All 8 Chase Your Neighbor" 
       formation="Static Facing Out" group=" " parts="4.3">
    <path>
      <move select="Flip Right" />
      <move select="Forward 3"/>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-3" />
      <move select="Lead Right" beats="4" scaleX="3.5" scaleY="1.5" />
      <move select="U-Turn Right" offsetX="-.5" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Right" />
      <move select="Forward 3"/>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-3" />
