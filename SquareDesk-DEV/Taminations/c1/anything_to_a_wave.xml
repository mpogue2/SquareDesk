<tamination title="Anything to a Wave">

  <tam title="Square Chain Thru to a Wave" group=" "
       from="Facing Couples">
    <formation>
      <dancer gender="boy" x="1" y="2" angle="270"/>
      <dancer gender="girl" x="-1" y="2" angle="270"/>
    </formation>
    <path numbers="3 2">
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
    </path>
    <path numbers="1 4">
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Square Thru 3 to a Wave" group=" "
       from="Facing Couples"
       formation="Facing Couples"
       fractions="2;1.5">
    <path numbers="1 4">
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" beats="2" offsetX="2" offsetY=".5" />
    </path>
    <path numbers="2 3">
      <move select="Forward" />
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" offsetX=".5" offsetY="-.5" />
      <move select="Lead Left" beats="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Flip Back, Centers to a Wave" group=" "
       from="Right-Hand Wave"
       formation="Wave RH"
       fractions="5.5" >
    <path numbers="1 4">
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Run Right" beats="6" scaleY=".5" offsetX="1"/>
    </path>
    <path numbers="2 3">
      <move select="Hinge Right" />
      <move select="Run Right" beats="4" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".875" />
    </path>
    <taminator>Note that the outside dancers adjust so they do not finish offset.
    </taminator>
  </tam>

  <tam title="Load the Boat, Centers to a Wave" group=" "
       from="Normal Lines"
       formation="Normal Lines"
       fractions="2;2;3">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Left" beats="2" />
      <move select="Flip Left" />
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Quarter Right" beats="2" />
      <move select="Run Right" />
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Percolate, Outsides to a Wave" group=" "
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="2;1;1.5" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Hinge Right" scaleY=".75" />
      <move select="Extend Right" hands="left" beats="3" scaleX="2.75" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Hinge Right" scaleY="1.25" />
      <move select="Stand" hands="none" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".75" />
    </path>
  </tam>


  <tam title="Scoot Chain Thru to a Wave" from="Quarter Tag" group=" "
    formation="Quarter Tag" fractions="2;3;3">
    <path numbers="1 8" couples="2 4">
      <move select="Extend Left" scaleY="2" beats="2" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Forward" beats="2" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
    </path>
    <path numbers="6 3" couples="3 1">
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
    </path>
    <path numbers="5 4" couples="3 1">
      <move select="Forward 2" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Square Chain Thru to a Wave" group=" "
       from="Lines"
       formation="Normal Lines"
       fractions="" >
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Pull Left" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Tag Back to a Wave, Centers to a Wave" group=" "
       from="Lines"
       formation="Normal Lines"
       fractions="3" >
    <path>
      <move select="Lead Right" beats="3" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".875" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Forward 2" beats="1.5" />
      <move select="U-Turn Right" beats="6" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-1" offsetY="1" />
      <move select="Forward 2" beats="1.5" />
      <move select="Run Right" beats="6" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="-1" offsetY="1" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".875" />
    </path>
  </tam>

  <tam title="Turn Thru to a Wave" group=" "
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       fractions="" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".25" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY="1.25" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".25" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY="1.25" />
    </path>
  </tam>

</tamination>
