<tamination title="Step and Fold">

  <tam title="Step and Fold"
       from="Right-Hand Wave"
       formation="Wave RH" >
    <path numbers="1 4">
      <move select="Run Right" offsetX="2" />
    </path>
    <path numbers="2 3">
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Right-Hand Diamond"
       formation="Diamond RH" >
    <path numbers="2 3">
      <move select="Run Right" offsetX="1" />
    </path>
    <path numbers="4 1">
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       fractions="" >
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="" >
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Inverted Lines"
       formation="Inverted Lines Ends Facing In">
    <path numbers="5 4">
      <move select="Flip Right" offsetX="1" />
    </path>
    <path numbers="6 3">
      <move select="Forward" hands="left" />
    </path>
    <path numbers="7 2">
      <move select="Forward" hands="right" />
    </path>
    <path numbers="8 1">
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points"
       fractions="" >
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       fractions="" >
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Fold"
       from="Right-Hand Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       fractions="" >
    <path>
      <move select="Forward 2" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
    </path>
    <path>
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="As Couples Step and Fold" group=" "
       from="Tidal Two-Faced Line" formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleY="2" offsetX="2" offsetY="1.5"/>
    </path>
    <path>
      <move select="Flip Right" beats="4" hands="gripleft" offsetX="2" offsetY="2.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" hands="left" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" hands="right" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Concentric Step and Fold" group=" "
       formation="Concentric Diamonds Mixed">
    <path>
      <move select="Flip Right" offsetX="1"/>
    </path>
    <path>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Extend Left"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Concentric Diamond Step and Fold" group=" "
       formation="Concentric Diamonds Mixed">
    <path>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="1" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Stretch Step and Fold"
       formation="Ocean Waves RH BGGB"
       group=" " >
    <path>
      <move select="Forward 2" beats="1" />
      <move select="Run Right" beats="2" offsetX="1" scaleX=".5" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Tandem Step and Fold"
       formation="Ocean Waves RH BGGB"
       group=" " >
    <path>
      <move select="Forward 4" beats="3" />
      <move select="Run Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Run Right" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Triple Line Step and Fold"
       group=" " >
     <formation>
      <dancer gender="boy" x="-4" y="1" angle="0"/>
      <dancer gender="girl" x="-4" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Forward" hands="right"/>
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

</tamination>
