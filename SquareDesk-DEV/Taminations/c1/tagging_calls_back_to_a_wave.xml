<tamination title="Tagging Calls Back to a Wave">

  <tam title="Flip Back"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="5.5" >
    <path numbers="1 4">
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Run Right" beats="6" />
    </path>
    <path numbers="2 3">
      <move select="Hinge Right" />
      <move select="Run Right" beats="4" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Flip Back"
       from="Left-Hand Wave"
       formation="Wave LH"
       parts="5.5" >
    <path numbers="4 1">
      <move select="Hinge Left" />
      <move select="Forward 4" />
      <move select="Run Left" beats="6" />
    </path>
    <path numbers="3 2">
      <move select="Hinge Left" />
      <move select="Run Left" beats="4" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Flip Back"
       from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG"
       parts="4.5" >
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" beats="3" />
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Forward 4" beats="3" />
      <move select="Run Right" beats="6" />
    </path>
  </tam>

  <tam title="Tag Back to a Wave"
       from="Lines"
       formation="Normal Lines"
       parts="3" >
    <path>
      <move select="Lead Right" beats="3" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Forward 2" beats="1.5" />
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="-1" offsetY="1" />
      <move select="Forward 2" beats="1.5" />
      <move select="Run Right" beats="6" />
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="-1" offsetY="1" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Vertical Tag Back to a Wave" from="Facing Couples"
       formation="Facing Couples" parts="3">
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward 2"/>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="All 8 Vertical Tag Back to a Wave" from="Static Square"
       formation="Static Square" parts="6">
    <path>
      <move select="Stand" beats="5"/>
      <move select="Forward 3"/>
      <move select="Swing Right"/>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
      <move select="Forward 3"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Stand" beats="5"/>
      <move select="Forward 3"/>
      <move select="Swing Right"/>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
      <move select="Forward 3"/>
      <move select="Run Right"/>
    </path>
  </tam>

</tamination>
