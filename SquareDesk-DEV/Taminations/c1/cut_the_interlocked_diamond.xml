<tamination title="Cut the Interlocked Diamond">

  <tam title="Cut the Interlocked Diamond"
       from="Right-Hand Interlocked Diamonds"
       formation="Interlocked Diamonds RH Girl Points">
    <path numbers="6 3" couples="3 1">
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path numbers="2 7" couples="3 1">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
    <path numbers="5 4" couples="4 2">
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path numbers="8 1" couples="2 4">
      <move select="Dodge Right" />
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Cut the Interlocked Diamond"
       from="Left-Hand Interlocked Diamonds"
       formation="Interlocked Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Dodge Left" />
      <move select="Swing Left" />
    </path>
  </tam>
  
</tamination>
