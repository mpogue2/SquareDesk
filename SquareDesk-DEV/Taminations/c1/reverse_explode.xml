<tamination title="Reverse Explode">

  <tam title="Reverse Explode" from="Right-Hand Wave" formation="Wave RH">
    <path numbers="1 4">
      <move select="Quarter Left" offsetX="1" offsetY="-1" />
    </path>
    <path numbers="2 3">
      <move select="Lead Right" />
    </path>
  </tam>

  <tam title="Reverse Explode" from="Left-Hand Wave" formation="Wave LH">
    <path>
      <move select="Quarter Right" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Lead Left" />
    </path>
  </tam>

  <tam title="Reverse Explode"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Quarter Left" offsetX="1" offsetY="-1" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="Reverse Explode"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       fractions="" >
    <path>
      <move select="Quarter Right" offsetX="1" offsetY="1" />
    </path>
    <path>
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Quarter Right" offsetX="1" offsetY="1" />
    </path>
  </tam>

  <tam title="Reverse Explode" from="Right-Hand Tidal Wave" formation="Tidal Wave RH BGGB">
    <path>
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Reverse Explode" from="Left-Hand Tidal Wave" formation="Tidal Wave LH BGGB">
    <path>
      <move select="Quarter Right" offsetX="1" offsetY=".5" />
    </path>
    <path>
      <move select="Lead Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="1" offsetY=".5"/>
    </path>
  </tam>

  <tam title="All 8 Reverse Explode" from="" formation="Thar LH Boys" group=" ">
    <path>
      <move select="Lead Right" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="1"/>
    </path>
  </tam>

  <tam title="As Couples Reverse Explode" from="" formation="Two-Faced Tidal Line RH" group=" ">
    <path>
      <move select="Quarter Left" beats="3" hands="right" offsetX="1" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" hands="left" offsetX="3" offsetY="-.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="left" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" hands="right" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Concentric Reverse Explode" from="" group=" " formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Forward 2"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
    <path numbers="7 2">
      <move select="Forward 2"/>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Lead Left" beats="4" scaleY=".5" />
    </path>
    <path numbers="5 4">
      <move select="Lead Right" beats="4" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Stretch Reverse Explode" group=" "
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 2"/>
      <move select="Quarter Left" offsetX="1" offsetY="-1" />
    </path>
    <path>
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Quarter Left" offsetX="1" offsetY="-1" />
    </path>
  </tam>

  <tam title="Tandem Reverse Explode" from="" formation="Ocean Waves RH BGGB" group=" ">
    <path>
      <move select="Extend Right" beats="3" scaleX="2.5" scaleY="1.5"/>
      <move select="Quarter Left" offsetX=".5" offsetY="-.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="4" offsetX="-1" offsetY="-2"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left" beats="4" offsetX="-1"/>
    </path>
  </tam>

</tamination>
