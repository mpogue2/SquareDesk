<tamination title="Scoot and Plenty">



  <tam title="Scoot and Plenty"
       from="Quarter Tag"
       formation="Quarter Tag"
       parts="6;6;7" >
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Flip Right" offsetX="-1" />
      <move select="Forward 4" beats="3" />
      <move select="Flip Right" />
      <move select="Forward 4" />
      <move select="Run Right" beats="6" offsetX="-2" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Flip Right" beats="5" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Forward 4" />
      <move select="Run Right" />
      <move select="Forward 2" beats="6" />
    </path>
    <path>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Forward 2" beats="6" />
      <move select="Flip Right" />
      <move select="Forward 4" />
      <move select="Lead Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="2" />
    </path>
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Flip Right" beats="6" offsetX="2" />
      <move select="Forward 4" />
      <move select="Flip Right" />
      <move select="Forward 4" beats="3.5" />
      <move select="Run Right" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Scoot and Plenty"
       from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH"
       parts="6;6;7" >
    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="1.5" />
