    <path>
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Flip Left" beats="6" offsetX="2" />
      <move select="Forward 4" />
      <move select="Flip Left" />
      <move select="Forward 4" beats="3.5" />
      <move select="Run Left" beats="2.5" offsetX="1" />
    </path>
  </tam>

</tamination>
