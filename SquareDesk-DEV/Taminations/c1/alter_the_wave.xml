      <move select="Swing Right" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="2.5" scaleY=".5" />
    </path>
    <path>
