<tamination title="Alter the Wave">

  <tam title="Alter the Wave"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="3;4.5;4" >
    <path numbers="1 4">
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Left" beats="4" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path numbers="2 3">
      <move select="Swing Right" />
      <move select="U-Turn Right" beats="4.5" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY="3" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY="2" />
      <move select="Flip Left" />
    </path>
  </tam>

