  <tam title="Tandem Alter the Wave" from="Right-Hand Waves" group=" "
       formation="Ocean Waves RH BGGB" parts="6;9;8">
    <path>
      <!-- Swing Right -->
      <move select="Counter Rotate Right 2 0" hands="right" beats="3" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" hands="right" beats="3"/>
      <!-- Cast Left -->
      <move select="Counter Rotate Left 2 0" hands="left" beats="3"/>
      <move select="Counter Rotate Left 2 0" hands="left" beats="3"/>
      <move select="Counter Rotate Left 2 0" hands="left" beats="3"/>
      <!-- Counter Rotate -->
      <move select="Counter Rotate Left 2 0" hands="left" beats="4"/>
      <move select="Counter Rotate Left 2 0" hands="left" beats="4"/>
      <!-- Flip the Diamond -->
      <move select="Quarter Left" beats="5" offsetX="4" offsetY="-1"/>
    </path>
    <path>
      <!-- Swing Right -->
      <move select="Counter Rotate Right 0 -2" hands="right" beats="3" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="3"/>
      <!-- U-Turn Right -->
      <move select="Quarter Right" beats="4.5" offsetX="-1" offsetY="-.5"/>
      <move select="Quarter Right" beats="4.5" offsetX="-.5" offsetY="-1"/>
      <!-- Counter Rotate -->
      <move select="Counter Rotate Left 2 4" beats="4"/>
      <move select="Counter Rotate Left 2 4" beats="4"/>
      <!-- Flip the Diamond -->
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <!-- Swing Right -->
      <move select="Counter Rotate Right 2 0" hands="right" beats="3" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" hands="right" beats="3"/>
      <!-- U-Turn Right -->
      <move select="Quarter Right" beats="4.5" offsetX="1" offsetY=".5"/>
      <move select="Quarter Right" beats="4.5" offsetX=".5" offsetY="1"/>
      <!-- Counter Rotate -->
      <move select="Counter Rotate Left 4 2" beats="4"/>
      <move select="Counter Rotate Left 4 2" beats="4"/>
      <!-- Flip the Diamond -->
      <move select="Forward 2"/>
      <move select="Run Left" offsetX="1"/>
    </path>
    <path>
      <!-- Swing Right -->
      <move select="Counter Rotate Right 0 -2" hands="right" beats="3" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="3"/>
      <!-- Cast Left -->
      <move select="Counter Rotate Left 0 2" hands="left" beats="3"/>
      <move select="Counter Rotate Left 0 2" hands="left" beats="3"/>
      <move select="Counter Rotate Left 0 2" hands="left" beats="3"/>
      <!-- Counter Rotate -->
      <move select="Counter Rotate Left 0 2" hands="left" beats="4"/>
      <move select="Counter Rotate Left 0 2" hands="left" beats="4"/>
      <!-- Flip the Diamond -->
      <move select="Lead Left" beats="4" scaleX="2" scaleY="3"/>
    </path>
  </tam>

