<tamination title="Switch to a Diamond">

  <tam title="Switch to a Diamond" from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH">
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Normal Lines" formation="Normal Lines">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Lead Left"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Lines Facing Out" formation="Lines Facing Out">
    <path>
      <move select="Lead Left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Inverted Lines" formation="Inverted Lines Ends Facing Out">
  <path>
    <move select="Lead Left" beats="3" offsetX="-2" offsetY="2"/>
  </path>
  <path>
    <move select="Run Left"/>
  </path>
  <path>
    <move select="Run Right"/>
  </path>
  <path>
    <move select="Lead Right" beats="3" scaleY="3"/>
  </path>
  </tam>

  <tam title="Switch to a Diamond" from="3 and 1 Lines">
     <formation>
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="boy" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path numbers="5 4">
      <move select="Lead Left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path numbers="6 3">
      <move select="Flip Right"/>
    </path>
    <path numbers="7 2">
      <move select="Flip Right"/>
    </path>
    <path numbers="8 1">
      <move select="Lead Right"/>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Tidal Two-Faced Line"
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Lead Right" scaleX=".75"/>
      <move select="Forward" scaleX=".5"/>
    </path>
    <path>
      <move select="Flip Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" scaleX=".75"/>
      <move select="Forward" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Switch to a Diamond" from="Tidal Line" formation="Tidal Line RH">
    <path>
      <move select="Lead Right" scaleX=".75" scaleY=".5"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Flip Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" scaleX=".75" scaleY=".5"/>
      <move select="Extend Left" scaleY="1.5" beats="2"/>
    </path>
  </tam>

</tamination>
