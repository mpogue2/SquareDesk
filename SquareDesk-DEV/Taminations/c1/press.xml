<tamination title="Press Ahead">

  <tam title="Press Ahead" from="Right-Hand Waves">
    <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Press Ahead" from="Two-Faced Lines">
    <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="180"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 2" hands="right"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
    </path>
    <path>
      <move select="Forward 2" hands="right"/>
    </path>
    <taminator>
    Be sure to go one full position and not stop at 1/2 Press Ahead.
    </taminator>
  </tam>

  <tam title="Ends Press Ahead" group=" "
       from="Lines Facing Out">
     <formation>
      <dancer gender="girl" x="-1" y="3" angle="180"/>
      <dancer gender="boy" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="-1" angle="180"/>
      <dancer gender="boy" x="-1" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
    </path>
    <path>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Girls Press Ahead" group=" "
       from="Right-Hand Waves">
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="180"/>
      <dancer gender="boy" x="-1" y="-1" angle="0"/>
      <dancer gender="girl" x="-1" y="-3" angle="180"/>
    </formation>
  <path>
  </path>
  <path>
      <move select="Forward 2"/>
  </path>
  <path>
  </path>
  <path>
      <move select="Forward 2"/>
  </path>
  </tam>

  <tam title="1/2 Press Ahead" from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
    </path>
    <taminator>
    Unlike Extend, the girls do not adjust to make a couple.
    </taminator>
  </tam>

  <tam title="1/2 Press Ahead" from="Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 2" hands="right"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="left"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="right"/>
    </path>
  </tam>

</tamination>
