<tamination title="Magic Column Formation/Concept">

  <tam title="Magic Column Circulate"
       from="Magic Column Right-Hand Centers"
       fractions="2" >
    <formation>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="1" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
    </formation>
    <path couples="4 2">
      <move select="Forward" beats="2" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path couples="3 1">
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
    </path>
    <path couples="1 3">
      <move select="Forward 2" beats="4" />
    </path>
    <path couples="2 4">
      <move select="Flip Left" beats="4" />
    </path>
  </tam>

  <tam title="Magic Column Circulate"
       from="Magic Column Left-Hand Centers"
       formation="Magic Column LH"
       fractions="2" >
    <path numbers="2 7">
      <move select="Flip Right" beats="4" />
    </path>
    <path numbers="4 5">
      <move select="Forward 2" beats="4" />
    </path>
    <path numbers="6 3">
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
    </path>
    <path numbers="8 1">
      <move select="Forward" beats="2" />
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Magic Column Coordinate" group="Magic Column" fractions="6;3">
    <formation>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="3" x="1" angle="90"/>
      <dancer gender="girl" y="-3" x="1" angle="90"/>
      <dancer gender="boy" y="-1" x="-1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Forward" beats="2" />
      <move select="Lead Left" beats="2"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" />
      <move select="Forward" beats="2"/>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" beats="2"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="4" />
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Swing Left" scaleX=".5"/>
    </path>
  </tam>

