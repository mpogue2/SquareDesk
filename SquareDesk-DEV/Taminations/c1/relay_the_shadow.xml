<tamination title="Relay the Shadow">

  <tam title="Relay the Shadow"
       from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="3;4.5" >
    <path numbers="8 1">
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
      <move select="Lead Right" />
      <move select="Lead Right" />
      <move select="Lead Right" />
    </path>
    <path numbers="7 2">
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3.5" />
      <move select="Hinge Right" beats="4" scaleX="3" />
    </path>
    <path numbers="6 3">
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
      <move select="Hinge Right" beats="4" scaleX="3" />
    </path>
    <path numbers="5 4">
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Hinge Left" />
      <move select="Forward 2" />
    </path>
  </tam>

  <tam title="Relay the Shadow"
       from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB"
       parts="3;4.5" >
    <path>
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Lead Left" />
      <move select="Lead Left" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3.5" />
      <move select="Hinge Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Hinge Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Hinge Right" />
      <move select="Forward 2" />
    </path>
  </tam>
</tamination>
