<tamination title="Triple Box Concept">

  <tam title="Triple Box Circulate" group="Triple Box">
    <formation>
      <dancer gender="boy" x="2" y="3" angle="0"/>
      <dancer gender="girl" x="2" y="1" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="phantom" x="2" y="5" angle="180"/>
      <dancer gender="phantom" x="2" y="-5" angle="0"/>
    </formation>
    <path>
      <move select="Run Left" beats="4" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Run Left" beats="4"/>
