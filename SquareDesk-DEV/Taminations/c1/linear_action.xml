<tamination title="Linear Action">

  <tam title="Linear Action"
       from="Right-Hand Quarter Tag"
       formation="Quarter Tag"
       parts="1.5;5">
    <path>
      <move select="Hinge Right" />
      <move select="Swing Right" beats="5" offsetY="-1" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY="1"/>
      <move select="Swing Right" beats="5" offsetY="1" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Lead Right" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Hinge Right" />
      <move select="Run Right" />
      <move select="Forward 2" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Linear Action"
       from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH"
       parts="1.5;5">
    <path>
      <move select="Hinge Right" />
      <move select="Swing Right" beats="5" offsetY="-1" />
      <move select="Lead Right" beats="4" scaleX="5" scaleY="3" />
    </path>
    <path>
      <move select="Quarter Left" beats="1.5" offsetX="-1" offsetY="1"/>
      <move select="Swing Right" beats="5" offsetY="1" />
      <move select="BackHinge Left" />
      <move select="BackHinge Left" />
      <move select="BackHinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Forward 4" />
      <move select="Lead Left" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Run Left" />
      <move select="Forward 2" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Linear Action"
       from="Right-Hand Quarter Waves"
       formation="Quarter Wave RH"
       parts="1.5;5" >
    <path numbers="1 8" couples="2 4">
      <move select="Hinge Right" />
      <move select="Swing Right" beats="5" offsetY="-1" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Hinge Right" />
      <move select="Swing Right" beats="5" offsetY="1" />
      <move select="Cast Left" />
    </path>
    <path numbers="6 3" couples="3 1">
      <move select="Hinge Right" />
      <move select="Forward 4" />
      <move select="Lead Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="5 4" couples="3 1">
      <move select="Hinge Right" />
      <move select="Run Right" />
      <move select="Forward 2" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Linear Action"
       from="Left-Hand Quarter Waves"
       formation="Quarter Wave LH"
       parts="1.5;5" >
    <path>
      <move select="Hinge Left" />
      <move select="Swing Left" beats="5" offsetY="-1" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Left" beats="5" offsetY="1" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Forward 4" />
      <move select="Lead Left" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Run Left" />
      <move select="Forward 2" />
      <move select="Cast Right" />
    </path>
  </tam>
</tamination>
