<tamination title="Square Chain the Top">

  <tam title="Square Chain the Top"
       from="Facing Couples"
       formation="Facing Couples"
       parts="5;3;4.5" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="2.5" scaleY="3" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Hinge Right"  />
      <move select="Swing Left"  scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <taminator>
      The different parts of this call are not clearly defined
      or officially recognized.
    </taminator>
  </tam>

  <tam title="Square Chain the Top"
       from="Normal Lines"
       formation="Normal Lines"
       parts="5;3;4.5" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="1.5" scaleY="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleY="1.5" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="1.5" scaleY="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>


  <tam title="Left Square Chain the Top"
       from="Facing Couples"
       formation="Facing Couples"
       parts="5;3;4.5" >
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Hinge Left"  />
      <move select="Swing Right"  scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleY="1.5" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="2.5" scaleY="3" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward 2"/>
    </path>
  </tam>


  <tam title="All 4 Couples Square Chain the Top" group=" "
       from="Static Square"
       formation="Static Square"
       parts="6.5;3;4.5" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Lead Right" beats="3.5" scaleY="3" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3"/>
      <move select="Swing Left" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" />
      <move select="Forward 2" />
      <move select="Lead Left" scaleY="2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <move select="Lead Right" beats="3.5" scaleY="3" />
      <move select="Swing Left" />
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3"/>
      <move select="Swing Left" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" />
      <move select="Forward 2" />
      <move select="Lead Left" scaleY="2" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2" />
    </path>
  </tam>

  <tam title="As Couples Square Chain the Top" group=" "
       formation="Normal Lines" parts="6;4;6">
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3.5" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="6" hands="right" scaleX="2.5" scaleY="2.5"/>
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY="1.5" />
      <move select="Lead Right" beats="4" scaleX=".5" scaleY="2.5" />
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" beats="6" hands="left" scaleX="3.5" scaleY="3.5"/>
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleX="2.5" scaleY=".5" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Hinge Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" hands="right" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY="1.5" />
      <move select="Lead Left" beats="4" scaleX="3.5" scaleY="1.5" />
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" beats="4" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Left" beats="2" hands="left" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Tandem Square Chain the Top" group=" "
       formation="Double Pass Thru" parts="5;4;6">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Counter Rotate Right 2 0" offsetY="-1.5" beats="3"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="4" scaleX="2" scaleY="2"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Left 2 0" offsetX="2" beats="3"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Counter Rotate Left 2 0" hands="left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Counter Rotate Right 0 -2" offsetY="-1.5" beats="3"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Lead Left" beats="4" scaleX="2" scaleY="2"/>
      <move select="Forward 2"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Left 0 2" offsetX="2" beats="3"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Counter Rotate Left 0 2" hands="left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>


</tamination>
