<tamination title="Anything the Windmill">

  <tam title="Mix the Windmill Right" formation="Quarter Tag" group=" ">
    <path>
      <move select="Quarter Right" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Right" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Dodge Right"/>
      <move select="Swing Right"/>
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX="1.5" scaleY="2"/>
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Half Tag the Windmill Right" formation="Quarter Lines RH" group=" ">
    <path>
      <move select="Quarter Right" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Right" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2"/>
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Stand" beats="2"/>
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Follow Your Neighbor the Windmill Forward" formation="Ocean Waves RH BGGB" group=" ">
    <path>
      <move select="Forward 4"/>
      <move select="Run Right" beats="6.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX="2" />
      <move select="Run Left" beats="4" scaleY=".5" />
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY=".125" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Hinge Left" offsetY="-.25" />
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="Run Right" beats="6.5" scaleX="3" scaleY="3"/>
      <move select="Forward 4"/>
    </path>
  </tam>


</tamination>
