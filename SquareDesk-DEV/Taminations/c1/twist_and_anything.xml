<tamination title="Twist and Anything">

  <tam title="Twist And"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       group=" " >
    <path numbers="1 8">
      <move select="Quarter Left" beats="3" offsetX="-1" offsetY="2" />
    </path>
    <path numbers="2 7">
      <move select="Flip Left" offsetX="1" />
    </path>
    <path numbers="3 6">
      <move select="Run Right" offsetX="1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Right" beats="3" offsetX="-1" offsetY="-2" />
    </path>
  </tam>

  <tam title="Twist And Pass Out"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       group=" " >
    <path numbers="1 8">
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" beats="1" scaleY=".5"/>
    </path>
    <path numbers="2 7">
      <move select="Flip Left" offsetX="1" />
    </path>
    <path numbers="3 6">
      <move select="Run Right" offsetX="1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Right" beats="2" offsetX="-1" offsetY="-2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Twist And Split Square Thru 2"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       group=" " >
    <path numbers="1 8">
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleX=".5" scaleY="1.5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="2 7">
      <move select="Flip Left" offsetX="1" />
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="3 6">
      <move select="Run Right" offsetX="1" />
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="4 5">
      <move select="Quarter Right" beats="2" offsetX="-1" offsetY="-2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Left" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Twist And Square Thru 2"
       from="Lines Facing Out"
       formation="Lines Facing Out"
       group=" " >
    <path numbers="1 8">
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Left" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
    <path numbers="2 7">
      <move select="Flip Left" offsetX="1" />
    </path>
    <path numbers="3 6">
      <move select="Run Right" offsetX="1" />
    </path>
    <path numbers="4 5">
      <move select="Quarter Right" beats="2" offsetX="-1" offsetY="-2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleX=".5" scaleY="1.5"/>
      <move select="Extend Left" scaleY=".5"/>
    </path>
  </tam>

</tamination>
