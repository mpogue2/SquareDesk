<tamination title="Ignore">

  <tam title="Ignore the Very Centers, Fan the Top" group=" "
       formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Swing Left" beats="2.5" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Swing Left" beats="2.5" scaleX=".5" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="4" hands="left"/>
    </path>
  </tam>

  <tam title="Ignore the Head Men, Motivate"
       group=" " fractions="4;4.5;3">
    <formation>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="180"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
    </formation>
    <path>
    </path>
    <path>
      <move select="Forward 4" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Run Left" beats="4" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Extend Left" beats="4" scaleX="4"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="4" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Ignore the Lead End, Lines of 3 Out Roll Circulate"
       formation="Two-Faced Lines RH"
       group=" ">
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
    </path>
  </tam>

  <tam title="Ignore the Head Men, Wave-Based Triangle Circulate" group=" ">
    <formation name="Diamonds RH PTP Girl Points">
      <dancer gender="girl" x="-1" y="-3" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="-3" angle="270"/>
      <dancer gender="boy" x="0" y="-5" angle="180"/>
    </formation>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Stand" beats="3" hands="left"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="2"/>
    </path>
  </tam>

</tamination>
