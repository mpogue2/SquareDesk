<tamination title="Rotary Spin">

  <tam title="Rotary Spin"
       from="Eight Chain Thru"
       parts="2" >
     <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
      <dancer gender="boy" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="1" y="1" angle="90"/>
    </formation>
    <path numbers="5 4">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Cast Left" />
    </path>
    <path numbers="1 8">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2.5" />
      <move select="Cast Left" />
    </path>
    <path numbers="2 7">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Beau Wheel" beats="4" />
      <move select="Quarter Left" offsetY="1" />
    </path>
    <path numbers="6 3">
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Belle Wheel" beats="4" />
      <move select="Quarter Left" offsetY="-1" />
    </path>
  </tam>
  
</tamination>
