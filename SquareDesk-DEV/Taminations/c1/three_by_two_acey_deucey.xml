<tamination title="Three by Two Acey Deucey">

  <tam title="Three by Two Acey Deucey"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points" >
    <path numbers="6 3" couples="3 1">
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path numbers="2 7" couples="3 1">
      <move select="U-Turn Right" beats="5" offsetY="-6" />
    </path>
    <path numbers="5 4" couples="4 2">
      <move select="Swing Left" />
    </path>
    <path numbers="8 1" couples="4 2">
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
  </tam>

  <tam title="Three by Two Acey Deucey"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points"
       fractions="" >
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Swing Right" />
    </path>
    <path>
      <move select="U-Turn Left" beats="5" offsetY="6" />
    </path>
  </tam>

  <tam title="Three by Two Acey Deucey"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points"
       fractions="" >
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Three by Two Acey Deucey"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP"
       fractions="" >
    <path numbers="3 6">
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
    <path numbers="1 8">
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path numbers="2 7">
      <move select="U-Turn Right" beats="5" offsetY="-6" />
    </path>
    <path numbers="4 5">
      <move select="Swing Right" />
    </path>
  </tam>

  <tam title="Three by Two Acey Deucey"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP"
       fractions="" >
    <path>
      <move select="U-Turn Left" beats="5" offsetY="6" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Swing Left" />
    </path>
  </tam>
</tamination>
