<tamination title="Left">

  <tam title="Left Pass and Roll"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       group=" " >
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Left" scaleY=".5" />
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Left" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Left" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Left Square Chain Thru" group=" "
       from="Facing Couples"
       formation="Facing Couples"
       fractions="3;3;3" >
    <path>
      <move select="Pull Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="3" scaleY=".5" />
      <move select="Swing Right" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Pull Right" scaleX="1.5" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleY="1.5" />
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="2" scaleX="2" />
    </path>
  </tam>

