<tamination title="Square the Bases">

  <tam title="Square the Bases"
       from="Normal Lines"
       formation="Normal Lines"
       fractions="5;2.5" >
    <path numbers="1 8">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2.5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Right" scaleX=".5" scaleY="1.5" />
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Extend Right" scaleY=".5" />
    </path>
    <path numbers="2 7">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="1.5" scaleX=".5" scaleY="1.5" />
      <move select="Lead Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="2.5" scaleX="2" />
      <move select="Run Right" offsetX="1" offsetY=".5" />
    </path>
    <path numbers="3 6">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Lead Left" beats="1.5" scaleX=".5" scaleY="1.5" />
      <move select="Extend Right" beats="2.5" scaleX="2" />
      <move select="Flip Left" offsetX="1" offsetY=".5" />
    </path>
    <path numbers="4 5">
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3" scaleX="3" scaleY="1.5" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Extend Right" scaleY=".5" />
    </path>
  </tam>
</tamination>
