<tamination title="Scoot and Ramble">

  <tam title="Scoot and Ramble"
       from="Quarter Tag"
       formation="Quarter Tag"
       parts="6;3" >
    <path couples="2 4">
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Right" beats="2.5" scaleX="1.5" scaleY="3" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path couples="2 4">
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="U-Turn Left" offsetX="-1" offsetY="1.5" />
      <move select="Forward 2" beats="1.5"/>
      <move select="Quarter Left" beats="1" offsetX="1" offsetY="-.5" />
    </path>
    <path couples="3 1">
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path couples="3 1">
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Scoot and Ramble"
       from="Quarter Tag, Boys in center" fractions="6;3">
