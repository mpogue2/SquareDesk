<tamination title="Replace / But / Skip / Delete">

  <tam title="Chain Reaction, But 2/3 Recycle"
       group=" "
       formation="Quarter Tag"
       fractions="3.5;2" >
    <path numbers="1 8">
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Right" beats="2" />
      <move select="Cast Left" hands="none"/>
    </path>
    <path numbers="2 7">
      <move select="Forward" beats="2" />
      <move select="Hinge Left" />
      <move select="Hinge Right" beats="2" />
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2" />
    </path>
    <path numbers="6 3">
      <move select="Lead Right" beats="3.5" scaleX="5" scaleY="3" />
      <move select="Swing Right" beats="2" />
      <move select="Lead Left" beats="4.5" scaleY="5"/>
    </path>
    <path numbers="5 4">
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Left" offsetX=".5" offsetY="-.5" />
      <move select="Swing Right" beats="2" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Chain Reaction, Replace the final Cast Off 3/4 with a Single Wheel"
       formation="Quarter Tag" group=" " fractions="3.5;2">
    <path numbers="1 8">
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Right" beats="2" />
      <move select="U-Turn Left" beats="4.5" offsetX="1" />
    </path>
    <path numbers="2 7">
      <move select="Forward" beats="2" />
      <move select="Hinge Left" />
      <move select="Hinge Right" beats="2" />
      <move select="Extend Left" beats="4.5"  scaleY="2" />
    </path>
    <path numbers="6 3">
      <move select="Lead Right" beats="3.5" scaleX="5" scaleY="3" />
      <move select="Swing Right" beats="2" />
      <move select="Flip Left" beats="4.5" offsetX="1"/>
    </path>
    <path numbers="5 4">
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5" />
      <move select="Hinge Left" offsetX=".5" offsetY="-.5" />
      <move select="Swing Right" beats="2" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="4" />
    </path>
  </tam>

  <tam title="Coordinate, Replace Trade with a Remake"
       group=" ">
  <formation>
    <dancer gender="boy" x="-3" y="1" angle="0"/>
    <dancer gender="girl" x="-1" y="1" angle="0"/>
    <dancer gender="boy" x="1" y="1" angle="0"/>
    <dancer gender="girl" x="3" y="1" angle="0"/>
  </formation>
    <path>
      <move select="Forward" scaleX="3" beats="3" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" scaleX="3" beats="3" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Stand" beats="3"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" scaleX="2" beats="1.5" />
      <move select="Lead Right" beats="1.5"/>
      <move select="Stand" hands="none" beats="9"/>
      <move select="Lead Right" scaleX="3" scaleY="2" beats="3" />
    </path>
    <path>
      <move select="Flip Right" beats="2" />
      <move select="Forward" />
      <move select="Hinge Right" scaleX=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Delete All Arm Turn 1/2's, Spin Chain the Gears"
       formation="Ocean Waves RH BGGB"
       group=" " fractions="4.5;4.5">
    <path>
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="2.5" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right" beats="4.5"/>
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right" beats="4.5"/>
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="2.5" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Motivate, Replace Turning the Star with a U-Turn Back"
       formation="Two-Faced Lines RH" group=" " fractions="4;4.5;3">
    <path>
      <move select="Forward 4" hands="right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Run Right" />
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Forward 4" hands="left" />
      <move select="Cast Right" />
      <move select="U-Turn Left"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="left" />
      <move select="Cast Right" />
      <move select="Flip Left" />
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleX="3" scaleY="3" />
      <move select="Extend Right" beats="4.5" scaleX="2" scaleY="2" />
      <move select="U-Turn Right"/>
      <move select="Extend Right" beats="4.5" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Pass the Axle, But Skip the Third Part"
       group=" "
       fractions="2;4" >
    <formation>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="3" x="-1" angle="270"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 3" beats="4" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Run Right" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 3" beats="4" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Run Right" beats="4" scaleY="2" offsetX="-1" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Run Left" beats="4" scaleX="2" scaleY="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Scoot and Plenty, Replace the Box Circulates with a Motivate"
       formation="Quarter Tag"  group=" " fractions="6;6;4;4.5;3;4.5">
    <path>
      <!--  Scoot Back  -->
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <!--  Litle  -->
      <move select="Flip Right" offsetX="-1" />
      <move select="Forward 4" beats="3" />
      <!--  Motivate  -->
      <move select="Run Right" beats="4" scaleX="2" scaleY="3" />
      <move select="Extend Right" beats="4.5" scaleX="2" scaleY="2" />
      <move select="Swing Right" />
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2" />
      <!--  Finish the Plenty  -->
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" />
      <move select="Lead Right" />
    </path>
    <path>
      <!--  Scoot Back  -->
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY="1.5" />
      <!--  Litle  -->
      <move select="Flip Right" beats="5" scaleX="2" scaleY="2" />
      <move select="Forward" />
      <!--  Motivate  -->
      <move select="Forward 4" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <!--  Finish the Plenty  -->
      <move select="Flip Right" />
      <move select="Forward 2" />
    </path>
    <path>
      <!--  Scoot Back  -->
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <!--  Litle  -->
      <move select="Forward 2" beats="6" />
      <!--  Motivate  -->
      <move select="Run Left" beats="4" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
      <!--  Finish the Plenty  -->
      <move select="Extend Left" beats="4" scaleX="4" scaleY=".5" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleY=".5" />
    </path>
    <path>
      <!--  Scoot Back  -->
      <move select="Forward" beats="1.5" scaleX="1.5" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
      <!--  Litle  -->
      <move select="Flip Right" beats="6" offsetX="2" />
      <!--  Motivate  -->
      <move select="Forward 4" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <!--  Finish the Plenty  -->
      <move select="Forward 2" />
    </path>
  </tam>

	<tam title="Swing the Fractions, Replace the Second Part with Trade Circulate"
	     group=" " formation="Ocean Waves RH BGGB" fractions="1.5;4;4.5;3">
		<path>
      <move select="Hinge Right" />
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
		</path>
		<path>
      <move select="Hinge Right" />
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2" />
      <move select="Cast Right"/>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right"/>
		</path>
		<path>
      <move select="Hinge Right" />
      <move select="Run Left" beats="4" scaleX=".5" scaleY="2" />
		</path>
		<path>
      <move select="Hinge Right" />
      <move select="Forward" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2" />
      <move select="Cast Right"/>
      <move select="Swing Left"/>
      <move select="Hinge Right"/>
		</path>
	</tam>

  <tam title="Swing the Fractions, Replace the Third Part with a Split Circulate"
       group=" "
       formation="Ocean Waves RH BGGB"
       fractions="1.5;3;3;3" >
    <path numbers="1 8" couples="2 4">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Run Right"/>
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Run Right"/>
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="3 6" couples="3 1">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Forward 4" beats="3"/>
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="4 5" couples="3 1">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Forward 4" beats="3"/>
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Tally Ho, But Explode the Wave"
       formation="Ocean Waves RH BGGB"
       fractions="2;3" group=" ">
    <path numbers="1 8">
      <move select="Forward 2" />
      <move select="Hinge Right" />
      <move select="Forward 2" beats="1.5" />
      <move select="Lead Right" hands="right" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleY=".5" />

    </path>
    <path numbers="2 7">
      <move select="Lead Left" beats="2" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path numbers="3 6">
      <move select="Forward 2" />
      <move select="Hinge Right" />
      <move select="Lead Right" />
      <move select="Forward 2" />
    </path>
    <path numbers="4 5">
      <move select="Lead Right" beats="2" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Lead Left" hands="right" beats="3" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY=".5" />

    </path>
  </tam>


</tamination>
