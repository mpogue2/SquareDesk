<tamination title="Split Counter Rotate">

  <tam title="Split Counter Rotate" from="Tidal Wave" formation="Tidal Wave RH BGGB">
    <path numbers="8 1">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
    <path numbers="7 2">
      <move select="Hinge Left" beats="3" scaleY=".5"/>
    </path>
    <path numbers="6 3">
      <move select="Hinge Left" beats="3" scaleY=".5"/>
    </path>
    <path numbers="5 4">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Split Counter Rotate" from="Right-Hand Waves" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Left" beats="3" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Split Counter Rotate" from="Twin Diamonds"
       formation="Diamonds RH Girl Points">
    <path>
      <move select="Hinge Right" beats="3" offsetY="1"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" offsetX="-1"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" offsetY="-1"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3" offsetX="1"/>
    </path>
  </tam>

  <tam title="Split Counter Rotate" from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points">
    <path numbers="2 7">
      <move select="Hinge Right" beats="3" offsetX="1"/>
    </path>
    <path numbers="5 4">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2" offsetY="1"/>
    </path>
    <path numbers="8 1">
      <move select="Hinge Right" beats="3" offsetX="-1"/>
    </path>
    <path numbers="6 3">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2" offsetY="-1"/>
    </path>
  </tam>

</tamination>
