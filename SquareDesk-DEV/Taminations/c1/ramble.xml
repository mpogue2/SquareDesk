<tamination title="Ramble">

  <tam title="Ramble"
       from="Quarter Tag"
       formation="Quarter Tag"
       parts="3" >
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Ramble" from="Quarter Tag, Girls in Center"
       parts="3">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Ramble" from="Quarter Tag, Boys in Center"
       parts="3">
     <formation>
      <dancer gender="girl" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Quarter Left" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>


  <tam title="Ramble"
       from="Three Quarter Tag"
       formation="3/4 Tag"
       parts="3" >
    <path numbers="1 8">
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Right" beats="3.5" scaleY="3" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path numbers="2 7">
      <move select="U-Turn Left" offsetX="-1" offsetY="1" />
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path numbers="6 3">
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path numbers="5 4">
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Ramble" from="Three Quarter Tag, Girls in Center"
       parts="3">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="boy" x="-3" y="-1" angle="180"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="0" y="-1" angle="0"/>
    </formation>
    <path numbers="1 8">
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Right" beats="3.5" scaleY="3" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path numbers="2 7">
      <move select="U-Turn Left" offsetX="-1" offsetY="1" />
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path numbers="6 3">
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
    <path numbers="5 4">
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Left" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Ramble" from="Three Quarter Tag, Boys in Center"
       parts="3">
     <formation>
      <dancer gender="girl" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
    </formation>
    <path numbers="1 8">
      <move select="Quarter Right" offsetY="-1" />
      <move select="Lead Right" beats="3.5" scaleY="3" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path numbers="2 7">
      <move select="U-Turn Left" offsetX="-1" offsetY="1" />
      <move select="Forward 2" />
      <move select="Quarter Left" offsetX="1" offsetY="-1"/>
    </path>
    <path numbers="6 3">
      <move select="Flip Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
    <path numbers="5 4">
      <move select="U-Turn Right" offsetX="1" />
      <move select="Extend Left" scaleY=".5" />
      <move select="Quarter Right" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

</tamination>
