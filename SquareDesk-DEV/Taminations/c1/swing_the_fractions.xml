<tamination title="Swing the Fractions">

  <tam title="Swing the Fractions"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5;3;4.5;3" >
    <path numbers="1 8" couples="2 4">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="3 6" couples="3 1">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
    <path numbers="4 5" couples="3 1">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Swing the Fractions"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="1.5;3;4.5;3" >
    <path numbers="1 8">
      <move select="Stand" beats="9" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
    <path numbers="2 7">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="1.5" />
    </path>
    <path numbers="3 6">
      <move select="Hinge Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="1.5" />
    </path>
    <path numbers="4 5">
      <move select="Stand" beats="9" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Swing the Fractions"
       from="Facing Diamonds"
       parts="1.5;3;4.5;3" >
    <formation>
      <dancer gender="boy" y="0" x="-3" angle="90"/>
      <dancer gender="girl" y="3" x="-2" angle="180"/>
      <dancer gender="boy" y="0" x="-1" angle="270"/>
      <dancer gender="girl" y="-3" x="-2" angle="0"/>
    </formation>
    <path couples="3 1">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="9" />
    </path>
    <path couples="3 1">
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" />
    </path>
    <path couples="4 2">
      <move select="Hinge Right" />
      <move select="Swing Left" />
      <move select="Stand" beats="9" />
    </path>
    <path couples="4 2">
      <move select="Stand" beats="1.5" />
      <move select="Swing Left" />
      <move select="Cast Right" />
      <move select="Swing Left" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Left Swing the Fractions"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1.5;3;4.5;3" >
    <path>
      <move select="Stand" beats="9" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="1.5" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Stand" beats="1.5" />
    </path>
    <path>
      <move select="Stand" beats="9" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
  </tam>

  <tam title="Left Swing the Fractions"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="1.5;3;4.5;3" >
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
    <path>
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Hinge Left" />
    </path>
  </tam>

</tamination>
