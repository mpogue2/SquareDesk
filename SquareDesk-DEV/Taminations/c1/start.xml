<tamination title="Start">

  <tam title="Those Facing, Start Right and Left Thru"
       group=" " fractions="3">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Stand" hands="none" beats="3"/>
      <move select="Belle Wheel"/>
    </path>
    <path>
      <move select="Pull By" beats="3" scaleX="2"/>
      <move select="Belle Wheel"/>
    </path>
    <path>
      <move select="Pull By" beats="3" scaleX="2"/>
      <move select="Beau Wheel"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="3"/>
      <move select="Beau Wheel"/>
    </path>
  </tam>

  <tam title="Men Start, Pass the Ocean"
       group=" " fractions="3">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="-1" angle="0"/>
      <dancer gender="girl" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Stand" hands="none" beats="2"/>
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Stand" hands="none" beats="2"/>
      <move select="Lead Right" beats="2"/>
    </path>
  </tam>

  <tam title="Ends Start, Load the Boat"
       group=" " fractions="2;2;3"
       formation="Inverted Lines Ends Facing In">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Right" scaleX="2.5" scaleY="3.5" beats="2" />
      <move select="Lead Right" scaleX="3.5" scaleY="3.5" beats="2.5" />
      <move select="Lead Right" beats="2.5" />
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Quarter Right" beats="2" offsetX="-1"/>
      <move select="Run Right" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Quarter Left" beats="2" offsetX="-1"/>
      <move select="Flip Left" />
      <move select="Pass Thru" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Lead Left" scaleX="1.5" scaleY="3.5" beats="2" />
      <move select="Lead Left" scaleX="2.5" scaleY="2.5" beats="2.5" />
      <move select="Quarter Left" beats="2.5" offsetX="1" />
    </path>
  </tam>

  <tam title="Ladies Start, Touch 1/4 and Cross"
       group=" " fractions="2.5">
    <formation>
      <dancer gender="boy" x="-1" y="3" angle="90"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-3" angle="90"/>
    </formation>
    <path>
      <move select="Stand" beats="2.5"/>
      <move select="Stand" beats="2" hands="none"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Stand" beats="2" hands="none"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
    <path>
      <move select="Stand" beats="2.5"/>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
  </tam>

  <tam title="Girls Start, Spin the Top"
       group=" " fractions="3">
    <formation>
      <dancer gender="girl" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="180"/>
      <dancer gender="boy" x="-2" y="-1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Swing Right" />
      <move select="Hinge Left" />
      <move select="Hinge Left" />
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="1.5" scaleY="3" />
    </path>
    <path>
      <move select="Stand" beats="3" />
      <move select="Hinge Left" />
      <move select="Hinge Left" />
      <move select="Hinge Left" scaleX=".5" />
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Lead Right" beats="4.5" scaleX="1.5" scaleY="3" />
    </path>
  </tam>


</tamination>
