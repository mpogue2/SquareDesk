<tamination title="Twist the Line">

  <tam title="Twist the Line"
       from="Normal Lines"
       formation="Normal Lines">
    <path>
      <move select="Quarter Right" beats="3" offsetX="-.5" offsetY="-3" />
      <move select="Lead Right" beats="1" scaleY=".5" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="-1.5" offsetY="3" />
      <move select="Quarter Left" beats="1" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Twist the Line"
       from="Lines Facing Out"
       formation="Lines Facing Out" >
    <path>
      <move select="Quarter Left" beats="3" offsetX="-1.5" offsetY="3" />
      <move select="Quarter Left" beats="1" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Flip Left" beats="4" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="1" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="-.5" offsetY="-3" />
      <move select="Lead Right" beats="1" scaleY=".5" />
    </path>
  </tam>

  <tam title="Twist the Line"
       from="Tidal Line"
       formation="Tidal Line RH" >
    <path>
      <move select="Quarter Right" beats="2" offsetX=".5" offsetY="-1.5" />
      <move select="Lead Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Forward"/>
      <move select="Run Right" beats="4" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="Forward"/>
      <move select="Flip Left" beats="4" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="-.5" offsetY="1.5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-0.5" />
    </path>
  </tam>
</tamination>
