<tamination title="Step and Flip">

  <tam title="Step and Flip"
       from="Lines Facing Out"
       formation="Lines Facing Out" >
    <path>
      <move select="Flip Left" offsetX="-1" />
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
    </path>
  </tam>

  <tam title="Step and Flip"
       from="Inverted Lines Ends Facing In"
       formation="Inverted Lines Ends Facing In" >
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Flip"
       from="Inverted Lines Ends Facing Out"
       formation="Inverted Lines Ends Facing Out" >
    <path>
      <move select="Flip Left" offsetX="1" />
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Flip Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Step and Flip" from="3 and 1 Lines">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="90"/>
      <dancer gender="girl" y="2" x="3" angle="90"/>
      <dancer gender="boy" y="2" x="-3" angle="90"/>
      <dancer gender="girl" y="2" x="-1" angle="270"/>
    </formation>
    <path>
      <move select="Forward" beats="3" scaleX="1.5"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Forward" beats="3" scaleX="1.5"/>
    </path>
  </tam>

  <tam title="Step and Flip"
       from="Tidal Lines">
    <formation name="Tidal Line RH">
      <dancer gender="boy" x="0" y="3.5" angle="0"/>
      <dancer gender="girl" x="0" y="2.5" angle="0"/>
      <dancer gender="boy" x="0" y=".5" angle="0"/>
      <dancer gender="girl" x="0" y="1.5" angle="0"/>
    </formation>
    <path>
      <move select="Flip Right"  offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Left" hands="right" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Flip Left"  offsetY="-1.5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="3" scaleX="3" scaleY=".5" />
    </path>
  </tam>

  <tam title="Step and Flip and Roll" group=" "
       from="Lines Facing Out"
       formation="Lines Facing Out" >
    <path>
      <move select="Flip Left" offsetX="-1" />
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" />
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="As Couples Step and Flip" group=" ">
    <formation name="Tidal Line RH">
      <dancer gender="boy" x="0" y="3.5" angle="0"/>
      <dancer gender="girl" x="0" y="2.5" angle="0"/>
      <dancer gender="boy" x="0" y=".5" angle="0"/>
      <dancer gender="girl" x="0" y="1.5" angle="0"/>
    </formation>
    <path>
      <move select="Swing Right" scaleY="1.25"/>
    </path>
    <path>
      <move select="U-Turn Right" hands="left" offsetY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" hands="left" scaleX="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" hands="right" scaleX="3" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Stretch Step and Flip" group=" "
       formation="Inverted Lines Ends Facing In" >
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" offsetX="1" />
    </path>
    <path>
      <move select="Forward" hands="left" />
    </path>
    <path>
      <move select="Forward" hands="right" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Flip Left" offsetX="1" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Tandem Step and Flip" group=" "
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 3"/>
      <move select='Run Right'/>
    </path>
    <path>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Forward 5"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Forward 3"/>
    </path>
  </tam>

</tamination>
