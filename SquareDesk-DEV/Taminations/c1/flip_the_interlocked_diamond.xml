<tamination title="Flip the Interlocked Diamond">

  <tam title="Flip the Interlocked Diamond"
       from="Right-Hand Interlocked Diamonds"
       formation="Interlocked Diamonds RH Girl Points"
       fractions="" >
    <path numbers="6 3">
      <move select="Lead Right" beats="2" scaleX="3" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" />
    </path>
    <path numbers="5 4">
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path numbers="8 1">
      <move select="Flip Right" />
    </path>
  </tam>

  <tam title="Flip the Interlocked Diamond"
       from="Left-Hand Interlocked Diamonds"
       formation="Interlocked Diamonds LH Girl Points"
       fractions="" >
    <path>
      <move select="Lead Left" beats="2" scaleX="3" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
  </tam>

