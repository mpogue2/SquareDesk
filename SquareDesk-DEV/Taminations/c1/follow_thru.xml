<tamination title="Follow Thru">

  <tam title="Follow Thru" from="Right-Hand Box" formation="Box RH">
    <path numbers="1 4">
      <move select="Lead Right" beats="2" hands="right" scaleX="3" />
    </path>
    <path numbers="2 3">
      <move select="Lead Right" beats="2" />
    </path>
  </tam>

  <tam title="Follow Thru" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Lead Left" beats="2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="left" scaleX="3" />
    </path>
  </tam>

  <tam title="Follow Thru" from="Single Quarter Tag" formation="Single Quarter Tag">
    <path numbers="1 4">
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path numbers="2 3">
      <move select="Forward" beats="1.5" scaleX="1.5"/>
      <move select="Hinge Right" scaleX="1.5"/>
    </path>
  </tam>

  <tam title="Follow Thru" from="Single Left Quarter Tag" formation="Single Left Quarter Tag">
    <path numbers="1 4">
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path numbers="2 3">
      <move select="Forward" beats="1.5" scaleX="1.5"/>
      <move select="Hinge Left" scaleX="1.5"/>
    </path>
  </tam>

  <tam title="Follow Thru" from="Single T-Bone">
    <formation>
      <dancer gender="boy" x="-1" y="1" angle="270"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
    </formation>
    <path numbers="1 4">
      <move select="Forward"/>
      <move select="Hinge Left"/>
    </path>
    <path numbers="3 2">
      <move select="Lead Right" beats="2" scaleX="2"/>
    </path>
  </tam>

  <tam title="Follow Thru"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleX="3" />
    </path>
    <path>
      <move select="Lead Right" beats="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleX="3" />
    </path>
    <path>
      <move select="Lead Right" beats="2" />
    </path>
  </tam>

  <tam title="Follow Thru"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG"
       fractions="" >
    <path>
      <move select="Lead Left" beats="2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="left" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="left" scaleX="3" />
    </path>
  </tam>

  <tam title="Follow Thru"
       from="Right-Hand Columns"
       formation="Column RH GBGB"
       fractions="" >
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Follow Thru"
       from="Left-Hand Columns"
       formation="Column LH GBGB"
       fractions="" >
    <path>
      <move select="Lead Left" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX=".5" />
    </path>
  </tam>

  <tam title="Follow Thru"
       from="Quarter Tag"
       formation="Quarter Tag"
       fractions="" >
    <path>
      <move select="Extend Left" />
      <move select="Quarter Right" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleX="2" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleX="3" />
    </path>
    <path>
      <move select="Lead Right" hands="right" beats="2" scaleX="3" />
    </path>
  </tam>

  <tam title="Follow Thru"
       from="T-Bones"
       formation="T-Bone DLDL"
       fractions="" >
    <path>
      <move select="Lead Left" beats="2" scaleX="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleX="2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX="2" />
    </path>
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleX="2" />
    </path>
  </tam>

  <tam title="All 8 Follow Thru" from="Squared Mini-Waves" formation="Static MiniWaves RH" group=" ">
    <path>
      <move select="Forward 3"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Quarter Right" beats="4.5" offsetY="-1"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Quarter Right" beats="4.5" offsetY="-1"/>
    </path>
  </tam>

  <tam title="As Couples Follow Thru" from="Two-Faced Lines" formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Extend Right" beats="2" hands="right" scaleX="2" scaleY="1.5"/>
      <move select="Hinge Right" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" hands="left" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" hands="both" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" hands="left" beats="3" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="3" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Concentric Follow Thru" from="Right-Hand Columns" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" />
      <move select="Stand" hands="none" beats="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Forward" beats="3" scaleX="4.5"/>
      <move select="Lead Right" beats="1"/>
    </path>
  </tam>

  <tam title="Stretch Follow Thru" from="Right-Hand Columns" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="2" scaleX=".5" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="2" scaleX="1.5" />
    </path>
  </tam>

  <tam title="Tandem Follow Thru" from="Right-Hand Columns" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Quarter Right" beats="4" offsetY="-3"/>
    </path>
    <path>
      <move select="Quarter Right" beats="4" offsetX="2" offsetY="1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4" offsetY="-1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right 2 0" hands="right" beats="4" offsetY="1"/>
    </path>
  </tam>

</tamination>
