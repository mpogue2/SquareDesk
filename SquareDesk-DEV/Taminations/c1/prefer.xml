<tamination title="Prefer">

  <tam title="Prefer the Men, Explode the Line"
       formation="Lines Facing Out"
       group=" " >
    <path>
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY="1" />
      <move select="Pull Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="3" />
      <move select="Forward 2" beats="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="-.5" />
      <move select="Pull Left" beats="2" scaleX="2" scaleY=".1" />
      <move select="Extend Right" beats="2" scaleY=".6" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Prefer the Head Men, In Roll Circulate" group=" ">
    <formation name="Inverted Lines Ends Facing In">
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="180"/>
      <dancer gender="girl" x="-2" y="-1" angle="180"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Flip Right" beats="4"/>
    </path>
    <path>
      <move select="Flip Left" beats="4"/>
    </path>
  </tam>

  <tam title="Prefer the Girls, Scoot and Dodge"
       formation="Normal Lines" group=" ">
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>


</tamination>
