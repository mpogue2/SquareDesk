<tamination title="Cross Over Circulate">

  <tamxref title="Cross Over Circulate" from="Eight Chain Thru"
           xref-link="a1/cross_trail_thru" xref-from="Eight Chain Thru"/>

  <tam title="Cross Over Circulate" from="Trade By" formation="Trade By">
    <path>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" beats="2"/>
      <movement beats="4" hands="none" cx1="1" cy1="0" cx2="1.5" cy2="1.5" x2="1" y2="1.5"
                cx3="1" cx4="1" cy4=".5" x4="2" y4=".5"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" beats="2"/>
      <movement beats="4" hands="none" cx1="1" cy1="0" cx2="0" cy2="-2.5" x2="1" y2="-2.5"
                cx3="1" cx4="1" cy4="-.5" x4="2" y4="-.5"/>
    </path>
  </tam>
  
  <tam title="Cross Over Circulate" from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Cross Over Circulate" from="Left-Hand Columns"
       formation="Column LH GBGB">
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="U-Turn Left"/>
    </path>
  </tam>

</tamination>