<tamination title="Block Formation">

  <tam title="In Your Block Box Circulate" group="In Your Block"
       from="" formation="Blocks RH">
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.5" scaleY="2"/>
    </path>
  </tam>

  <tam title="In Your Block Chase Right" group="In Your Block"
       from=""
       formation="Blocks Facing Out"
       fractions="" >
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-1" />
      <move select="Lead Right" beats="3" scaleX="3" />
      <move select="Quarter Right" beats="3" offsetX="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-3" />
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Forward" />
    </path>
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-1" />
      <move select="Lead Right" beats="3" scaleX="3" />
      <move select="Quarter Right" beats="3" offsetX="3" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-3" />
      <move select="Lead Right" beats="3" scaleY="3" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="In Your Block Pass Thru" group="In Your Block"
       from=""
       formation="Facing Blocks"
       fractions="" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="In Your Block Partner Tag" group="In Your Block"
       from=""
       formation="Facing Blocks"
       fractions="" >
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" offsetX="-1.5" offsetY="1" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="2" offsetX="-1.5" offsetY="1" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="In Your Block Partner Trade" group="In Your Block"
       from=""
       formation="Blocks Facing Out"
       fractions="" >
    <path>
      <move select="Flip Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Flip Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="In Your Block Slide Thru" group="In Your Block"
       from=""
       formation="Facing Blocks"
       fractions="" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetX="1" offsetY="-1.5" />
    </path>
  </tam>

  <tam title="In Your Block Square Chain the Top" group="In Your Block"
       fractions="">
    <formation>
      <dancer gender="boy" x="1" y="1" angle="270"/>
      <dancer gender="girl" x="-3" y="1" angle="270"/>
      <dancer gender="boy" x="3" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
    </formation>
    <path>
      <move select="Forward 3" beats="2"/>
      <move select="Lead Right" scaleX=".5" scaleY="2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="4.5" scaleX="1.5" scaleY="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left"  beats="2" scaleX="3" />
      <move select="Lead Left" scaleX="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Cast Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Lead Right" scaleX=".5" scaleY="2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Lead Left" beats="4.5" scaleX="1.5" scaleY="1.5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="3" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2"  scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Cast Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="In Your Block Square Chain Thru" group="In Your Block"
       fractions="3.5;3;3;3" >
    <formation>
      <dancer gender="boy" x="1" y="1" angle="270"/>
      <dancer gender="girl" x="-3" y="1" angle="270"/>
      <dancer gender="boy" x="3" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
    </formation>
    <path numbers="5 4">
      <move select="Forward 2"/>
      <move select="Lead Right" scaleX=".5" scaleY="2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Stand" hands="nohands" beats="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path numbers="1 8">
      <move select="Extend Left"  beats="2" scaleX="2" />
      <move select="Lead Left" scaleX="1.5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path numbers="7 2">
      <move select="Forward 2" />
      <move select="Lead Right" scaleX=".5" scaleY="2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Stand" hands="nohands" beats="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
    </path>
    <path numbers="3 6">
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="In Your Block Square Thru" group="In Your Block"
       from=""
       formation="Facing Blocks"
       fractions="4;4;4" >
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" offsetX="1" offsetY="1.5" />
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetX="1" offsetY="-1.5" />
      <move select="Extend Right"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetX="1" offsetY="-1.5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" offsetX="1" offsetY="1.5" />
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetX="1" offsetY="-1.5" />
      <move select="Extend Right"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="2" offsetX="1" offsetY="-1.5" />
      <move select="Extend Right"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="In Your Block Touch a Quarter" group="In Your Block"
       from=""
       formation="Facing Blocks"
       fractions="" >
    <path>
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left"  beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="In Your Block Walk and Dodge" group="In Your Block"
       from=""
       formation="Blocks RH"
       fractions="" >
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Dodge Right" beats="4" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Dodge Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="In Your Block Wheel Thru" group="In Your Block"
       from=""
       formation="Facing Blocks"
       fractions="" >
    <path>
      <move select="Lead Right" beats="4" scaleX="4" scaleY="4" />
    </path>
    <path>
      <move select="Quarter Right" beats="4" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="4" scaleY="4" />
    </path>
    <path>
      <move select="Quarter Right" beats="4" />
    </path>
  </tam>

  <tam title="In Your Block Zing" group="In Your Block" from="" formation="Blocks RH">
    <path>
      <move select="Forward 3" beats="4.5"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-2" scaleY=".5"/>
      <move select="Lead Left" beats="3" scaleX="2"/>
    </path>
    <path>
      <move select="Forward 3" beats="4.5"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-2" scaleY=".5"/>
      <move select="Lead Left" beats="3" scaleX="2"/>
    </path>
  </tam>

</tamination>
