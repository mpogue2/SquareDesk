<tamination title="Make Magic">

  <tam title="Make Magic"
       from="Centers Right-Hand Box">
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="180"/>
    </formation>
    <path numbers="1 8">
    </path>
    <path numbers="2 7">
      <move select="Pass Thru" beats="3" />
    </path>
    <path numbers="3 6">
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Forward" />
    </path>
    <path numbers="4 5">
      <move select="Pass Thru" beats="3" />
    </path>
  </tam>

  <tam title="Make Magic"
       from="Centers Left-Hand Box">
     <formation>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="3" x="-1" angle="270"/>
      <dancer gender="boy" y="1" x="1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="270"/>
    </formation>
    <path>
      <move select="Pass Thru" beats="3" />
    </path>
    <path>
    </path>
    <path>
      <move select="Pass Thru" beats="3" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>
</tamination>
