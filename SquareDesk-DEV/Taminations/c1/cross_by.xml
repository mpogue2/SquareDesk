<tamination title="Cross By">

  <tam title="Cross By"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" >
    <path numbers="1 8">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Lead Left" beats="3" scaleX="2.5" />
    </path>
    <path numbers="3 6">
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2" />
    </path>
    <path numbers="4 5">
      <move select="Lead Right" beats="3" scaleX=".5" scaleY="3" />
    </path>
  </tam>

  <tam title="Cross By"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path couples="2 4">
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="3" />
    </path>
    <path couples="2 4">
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="3" scaleX="2.5" />
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Cross By"
       from="Thar"
       formation="Thar RH Boys">
    <path numbers="2 7">
      <move select="Eighth Right" beats="3" offsetX="2.121" offsetY="1.121"/>
    </path>
    <path numbers="1 8">
      <move select="Eighth Left" beats="3" offsetX="0.707" offsetY="2.293"/>
    </path>
    <path numbers="5 4">
      <move select="Eighth Right" beats="3" offsetX="2.121" offsetY="1.121"/>
    </path>
    <path numbers="6 3">
      <move select="Eighth Left" beats="3" offsetX="0.707" offsetY="2.293"/>
    </path>
  </tam>
</tamination>
