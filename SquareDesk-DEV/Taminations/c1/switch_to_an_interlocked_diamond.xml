<tamination title="Switch to an Interlocked Diamond">

  <tam title="Switch to an Interlocked Diamond"
       from="Right-Hand Waves">
     <formation>
      <dancer gender="girl" x="3" y="2" angle="270"/>
      <dancer gender="boy" x="1" y="2" angle="90"/>
      <dancer gender="boy" x="-1" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="90"/>
    </formation>
    <path numbers="7 2">
      <move select="Lead Right" scaleX="3" scaleY="3" beats="3" />
    </path>
    <path numbers="5 4">
      <move select="Run Right" />
    </path>
    <path numbers="3 6">
      <move select="Run Right" />
    </path>
    <path numbers="1 8">
      <move select="Lead Right" scaleY="3" beats="3" />
    </path>
  </tam>

  <tam title="Switch to an Interlocked Diamond"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG" >
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Lead Left" scaleX="3" scaleY="3" beats="3" />
    </path>
  </tam>

  <tam title="Switch to an Interlocked Diamond"
       from="Right-Hand Two-Faced Lines" formation="Two-Faced Lines RH">
    <path>
      <move select="Lead Right" scaleX="3" scaleY="3" beats="3" />
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Lead Right" scaleY="3" beats="3" />
    </path>
  </tam>

  <tam title="Switch to an Interlocked Diamond"
       from="Left-Hand Two-Faced Lines" formation="Two-Faced Lines LH">
    <path>
      <move select="Lead Left" scaleY="3" beats="3" />
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Lead Left" scaleX="3" scaleY="3" beats="3" />
    </path>
  </tam>

</tamination>
