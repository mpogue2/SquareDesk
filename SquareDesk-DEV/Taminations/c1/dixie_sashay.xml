<tamination title="Dixie Sashay">

  <tam title="Dixie Sashay" from="Facing Couples">
    <formation>
      <dancer gender="boy" x="1" y="2" angle="270"/>
      <dancer gender="girl" x="-1" y="2" angle="270"/>
    </formation>
    <path numbers="3 2">
      <move select="Dodge Right" beats="4" scaleY="0.875"/>
      <move select="Hinge Left" beats="3" scaleX="3" scaleY=".75"/>
    </path>
    <path numbers="1 4">
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Left" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Dixie Sashay" from="Tandem" formation="Tandem Girls Lead">
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2"/>
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Dixie Sashay"
       from="Lines"
       formation="Normal Lines">
    <path>
      <move select="Dodge Right" beats="4" scaleY="0.875"/>
      <move select="Hinge Left" beats="3" scaleX="3" scaleY=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Dodge Right" beats="4" scaleY="0.875"/>
      <move select="Hinge Left" beats="3" scaleX="3" scaleY=".75"/>
   </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.25" />
      <move select="Hinge Left" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Dixie Sashay" from="Eight Chain Thru" formation="Eight Chain Thru">
    <path>
      <move select="Dodge Right" scaleY=".875" offsetX="-.3"/>
      <move select="Stand" />
      <move select="Hinge Left" beats="2" scaleX="1.8" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="1.15" scaleY="1.5" />
      <move select="Extend Right" beats="2" scaleX="1.15" scaleY="1.25" />
      <move select="Quarter Left" hands="left" offsetX=".2" offsetY=".75" />
    </path>
    <path>
      <move select="Dodge Right" scaleY=".875" offsetX="-.3"/>
      <move select="Stand" />
      <move select="Hinge Left" beats="2" scaleX="1.8" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" scaleX="1.15" scaleY="1.5" />
      <move select="Extend Right" beats="2" scaleX="1.15" scaleY="1.25" />
      <move select="Quarter Left" hands="left" offsetX=".2" offsetY=".75" />
    </path>
  </tam>

  <tam title="Dixie Sashay" from="Double Pass Thru" formation="Double Pass Thru">
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2"/>
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Forward 2"/>
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

</tamination>
