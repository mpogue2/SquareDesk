<tamination title="Triangle Circulate">

  <tam title="Inside Triangle Circulate"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points" >
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleX="3" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Forward 4" />
      <move select="Quarter Right" offsetX="1" />
    </path>
  </tam>

  <tam title="Inside Triangle Circulate"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points" >
    <path>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Forward 4" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleY="3" />
    </path>
  </tam>

  <tam title="Inside Triangle Circulate"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points">
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Outside Triangle Circulate"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points">
    <path>
      <move select="Lead Right" beats="6" scaleX="3" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Forward 4" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleY="3" />
    </path>
  </tam>

  <tam title="Outside Triangle Circulate"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="6" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleY="3" />
    </path>
    <path>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Forward 4" />
      <move select="Quarter Left" offsetX="1" />
    </path>
  </tam>

  <tam title="Outside Triangle Circulate"
       from="Point-to-Point Diamonds"
       formation="Diamonds RH PTP Girl Points">
    <path>
      <move select="Flip Right" />
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
  </tam>

  <tam title="Inpoint Triangle Circulate"
       from="Tandem Centers" >
     <formation>
      <dancer gender="boy" x="0" y="-3" angle="270"/>
      <dancer gender="girl" x="-3" y="-2" angle="90"/>
      <dancer gender="boy" x="0" y="-1" angle="270"/>
      <dancer gender="girl" x="3" y="-2" angle="270"/>
    </formation>
    <path numbers="6 3">
      <move select="Run Right" beats="3" offsetX="-1" scaleY="1.5" />
    </path>
    <path numbers="2 7">
      <move select="Run Right" beats="3" offsetX="1" scaleY="1.5" />
    </path>
    <path numbers="5 4">
      <move select="Forward 2" beats="3"/>
    </path>
    <path numbers="8 1">
    </path>
  </tam>

  <tam title="Inpoint Triangle Circulate"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Outpoint Triangle Circulate"
       from="Right-Hand Diamonds"
       formation="Diamonds RH Girl Points" >
    <path>
      <move select="Flip Right" />
    </path>
    <path>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleY="3" />
    </path>
  </tam>

  <tam title="Outpoint Triangle Circulate"
       from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points">
    <path numbers="6 3">
      <move select="Flip Left" />
    </path>
    <path numbers="2 7">
      <move select="Lead Left" beats="3" scaleY="3" />
    </path>
    <path numbers="5 4">
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path numbers="8 1">
    </path>
  </tam>

  <tam title="Wave-Based Triangle Circulate"
       from="Right-Hand Hourglass"
       formation="Hourglass RH BP">
    <path>
      <move select="Lead Right" beats="6" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleX="3" />
    </path>
    <path>
      <move select="Quarter Right" offsetY="-1" />
      <move select="Forward 4" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Wave-Based Triangle Circulate"
       from="Left-Hand Hourglass"
       formation="Hourglass LH BP">
    <path>
      <move select="Quarter Left" offsetY="1" />
      <move select="Forward 4" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleX="3" />
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleY="3" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Wave-Based Triangle Circulate"
       from="Right-Hand Galaxy"
       formation="Galaxy RH GP">
    <path numbers="3 6">
      <move select="Lead Right" beats="3" scaleX="2" />
    </path>
    <path numbers="1 8">
      <move select="Lead Right" beats="3" scaleY="2" />
    </path>
    <path numbers="2 7">
      <move select="Flip Right" />
    </path>
    <path numbers="4 5">
    </path>
  </tam>

  <tam title="Wave-Based Triangle Circulate"
       from="Left-Hand Galaxy"
       formation="Galaxy LH GP">
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleY="2" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX="2" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Tandem-Based Triangle Circulate"
       from="Hourglass with Right-Hand Tandem Triangles">
     <formation>
      <dancer gender="boy" x="-2" y="-3" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="-2" offsetY="-2" />
    </path>
    <path>
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2" offsetY="-2" />
    </path>
  </tam>

  <tam title="Tandem-Based Triangle Circulate"
       from="Hourglass with Left-Hand Tandem Triangles">
     <formation>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
    </formation>
    <path numbers="3 6">
      <move select="Forward 4" />
    </path>
    <path numbers="1 8">
    </path>
    <path numbers="2 7">
      <move select="U-Turn Left" beats="4" offsetX="-2" offsetY="2" />
    </path>
    <path numbers="4 5">
      <move select="U-Turn Left" beats="4" offsetX="2" offsetY="2" />
    </path>
  </tam>

  <tam title="Tandem-Based Triangle Circulate"
       from="Galaxy with Right-Hand Tandem Triangles">
     <formation>
      <dancer gender="boy" x="-1" y="-1" angle="0"/>
      <dancer gender="girl" x="-3" y="0" angle="90"/>
      <dancer gender="boy" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="0" y="3.1" angle="0"/>
    </formation>
    <path>
      <move select="Forward 2" beats="3" />
    </path>
    <path>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-1" offsetY="-2.1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="1" offsetY="-2.1" />
    </path>
  </tam>

  <tam title="Tandem-Based Triangle Circulate"
       from="Galaxy with Left-Hand Tandem Triangles">
     <formation>
      <dancer gender="boy" x="-1" y="-1" angle="180"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="boy" x="-1" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="3.1" angle="180"/>
    </formation>    <path>
      <move select="U-Turn Left" beats="3" offsetX="-1" offsetY="2.1" />
    </path>
    <path>
    </path>
    <path>
      <move select="Forward 2" beats="3" />
    </path>
    <path>
      <move select="U-Turn Left" beats="3" offsetX="1" offsetY="2.1" />
    </path>
  </tam>
</tamination>
