<tamination title="Reverse Rotate">

  <tam title="Heads Reverse Rotate"
       from="Static Square"
       formation="Static Square"
       parts="2" >
    <path>
      <move select="Quarter Left" hands="right" beats="2" />
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Left" hands="left" beats="2" scaleY="2" />
      <move select="Lead Right" hands="left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" hands="right" />
    </path>
    <path>
      <move select="Forward 2" hands="left" />
    </path>
  </tam>
</tamination>
