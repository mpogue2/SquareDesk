<tamination title="Pass the Axle">

  <tam title="Pass the Axle"
       from="Eight Chain Thru"
       parts="2;4;3" >
    <formation>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="3" x="-1" angle="270"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 3" beats="4" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 3" beats="4" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Run Right" beats="4" scaleY="2" offsetX="-1" />
      <move select="Swing Right" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Pass Thru" />
      <move select="Run Left" beats="4" scaleX="2" scaleY="2" offsetX="-1" />
      <move select="Swing Left" />
      <move select="Run Right" />
    </path>
  </tam>
</tamination>
