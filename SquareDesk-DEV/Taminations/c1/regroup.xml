<tamination title="Regroup">

  <tam title="Regroup" from="Normal Lines" formation="Normal Lines" parts="3">
    <path>
      <move select="Lead Left"/>
      <move select="Lead Right"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" scaleY="1.5" offsetX="1"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Flip Left" scaleY="1.5" offsetX="1"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
  </tam>

  <tam title="Regroup"
       from="Lines Facing Out"
       formation="Lines Facing Out" parts="3">
    <path numbers="1 8" couples="2 4">
      <move select="U-Turn Right" offsetX="-1" offsetY="-1" />
      <move select="Forward 2" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY="2" />
    </path>
    <path numbers="2 7" couples="2 4">
      <move select="Flip Left" scaleY="1.5" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path numbers="3 6" couples="3 1">
      <move select="Run Right" scaleY="1.5" />
      <move select="Quarter Right" offsetX="1" />
    </path>
    <path numbers="4 5" couples="3 1">
      <move select="U-Turn Left" offsetX="-1" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="2" scaleX="2" />
    </path>
  </tam>
</tamination>
