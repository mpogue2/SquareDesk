<tamination title="Switch the Line">

  <tam title="Switch the Line" from="Right-Hand Wave" formation="Wave RH">
    <path numbers="1 4">
      <move select="Run Right" beats="6" scaleY="2" />
    </path>
    <path numbers="2 3">
      <move select="Run Right" />
    </path>
  </tam>

  <tam title="Switch the Line" from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH">
    <path numbers="1 4">
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
    <path numbers="2 3">
      <move select="Flip Left" />
    </path>
  </tam>

  <tam title="Switch the Line" from="Inverted Lines"
       formation="Inverted Lines Ends Facing Out">
    <path numbers="5 4">
      <move select="Flip Left" beats="4" scaleY="2"/>
    </path>
    <path numbers="6 3">
      <move select="Run Left" beats="4"/>
    </path>
    <path numbers="7 2">
      <move select="Run Right" beats="4"/>
    </path>
    <path numbers="8 1">
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Switch the Line"
       from="Lines Facing Out"
       formation="Lines Facing Out">
    <path numbers="5 4">
      <move select="Run Left" beats="4" scaleY="2" />
    </path>
    <path numbers="6 3">
      <move select="Flip Right" />
    </path>
    <path numbers="7 2">
      <move select="Flip Left" />
    </path>
    <path numbers="8 1">
      <move select="Run Right" beats="4" scaleX="2" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Line"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Line"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Run Left" beats="4" scaleY="2" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Line"
       from="Right-Hand Waves"
       formation="Ocean Waves RH GBBG">
    <path>
      <move select="Run Right" beats="6" scaleY="2" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" />
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="2" />
    </path>
  </tam>

  <tam title="Switch the Line"
       from="Left-Hand Waves"
       formation="Ocean Waves LH GBBG">
    <path>
      <move select="Run Left" beats="6" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Left" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleY="2" />
    </path>
  </tam>

  <tam title="As Couples Switch the Line"
       from="Tidal Line"
       formation="Tidal Line RH">
    <path>
      <move select="Run Right" beats="4" scaleX="3.5" scaleY="2.5" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2.5" scaleY="1.5" />
    </path>
    <path>
      <move select="Run Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" scaleX="1.5" scaleY="1.5" />
    </path>
  </tam>
</tamination>
