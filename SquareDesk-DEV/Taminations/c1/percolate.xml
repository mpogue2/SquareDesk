<tamination title="Percolate">

  <tam title="Percolate"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       parts="2;1" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Hinge Right" scaleY=".75" />
      <move select="Extend Right" hands="left" beats="3" scaleX="2.75" scaleY="2" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Hinge Right" scaleY="1.25" />
      <move select="Stand" hands="none" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Percolate"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="4;2" >
    <path couples="2 4">
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward 2" />
    </path>
    <path couples="2 4">
      <move select="Run Left" beats="4" />
      <move select="Forward 2" />
      <move select="Hinge Right" />
      <move select="Stand" hands="none" beats="4"/>
    </path>
    <path couples="3 1">
      <move select="Forward 4" />
      <move select="Lead Left" beats="2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="2" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward 2" />
      <move select="Hinge Right" />
      <move select="Extend Right" hands="left" beats="3" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Percolate"
       from="Left-Hand Waves"
       parts="4;2" >
     <formation>
      <dancer gender="girl" x="-2" y="-3" angle="0"/>
      <dancer gender="boy" x="-2" y="-1" angle="180"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 4" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY="3" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" />
      <move select="Hinge Left" />
      <move select="Stand" hands="none" beats="4"/>
    </path>
    <path>
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" />
    </path>
    <path>
      <move select="Lead Left" beats="2" scaleX="2" scaleY="3" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward 2" />
      <move select="Hinge Left" />
      <move select="Extend Left" hands="right" beats="3" scaleX="3" scaleY="2" />
      <move select="Forward" />
    </path>
  </tam>

  <tam title="Percolate" from="Normal Lines" formation="Normal Lines" parts="3;2">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX="2.5" scaleY="3"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Lead Right" beats="2" scaleX=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Left" beats="2" offsetX="-.5" offsetY="1"/>
      <move select="Hinge Right" scaleY=".5"/>
      <move select="Stand" hands="none" beats="4"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY="3"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Percolate" from="T-Bones" parts="3;1.5">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="180"/>
      <dancer gender="boy" x="1" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Forward" beats="1.5"/>
      <move select="Hinge Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" beats="3" scaleX="2" scaleY="3"/>
      <move select="Forward" beats="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Lead Left" beats="1.5"/>
      <move select="Hinge Left" scaleY=".5"/>
      <move select="Cross Left" beats="3" scaleX="1.5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Lead Right" beats="1.5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Forward 1.5"/>
    </path>
  </tam>


  <tam title="Percolate but Ah So" group=" "
       formation="Ocean Waves RH BGGB"
       parts="4;2">
    <path couples="2 4">
      <move select="Forward 4" />
      <move select="Lead Right" beats="2" scaleX="2" scaleY="3" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
    </path>
    <path couples="2 4">
      <move select="Run Left" beats="4" />
      <move select="Forward 2" />
      <move select="U-Turn Right" hands="gripright" offsetX="-1" />
    </path>
    <path couples="3 1">
      <move select="Forward 4" />
      <move select="Lead Left" beats="2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right"  />
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="2" scaleX="2" scaleY="3" />
      <move select="Lead Right" beats="2" scaleX="3" scaleY="2" />
      <move select="Forward 2" />
      <move select="Run Right" hands="gripright" scaleY="2" offsetX="1" />
    </path>
  </tam>

  <tam title="Percolate but Swing Thru" group=" "
       formation="Eight Chain Thru"
       parts="2;1" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Hinge Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Hinge Right" scaleY="1.25" />
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

  <tam title="Percolate but 2/3 Recycle" group=" "
       formation="Eight Chain Thru"
       parts="2;1" >
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Lead Right" />
      <move select="Forward 2" />
      <move select="Forward 1.5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25" />
      <move select="Lead Right" />
      <move select="Run Right" offsetX=".25"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
    </path>
  </tam>

</tamination>
