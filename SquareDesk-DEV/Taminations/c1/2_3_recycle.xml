<tamination title="2/3 Recycle">

  <tam title="Recycle in 3 parts"
       formation="Wave RH"
       from="Right-Hand Wave" parts="2;2">
    <path>
      <move select="Extend Right" scaleX="1.5" scaleY="1.5" beats="2"/>
      <move select="Counter Rotate Right 0 -2" scaleX="1.5" scaleY="1.5"/>
      <move select="Quarter Right" offsetX="-.5" beats="2"/>
    </path>
    <path>
      <move select="Fold Right" scaleX=".75" scaleY=".25"/>
      <move select="Counter Rotate Right 2 0" scaleX="1.5" scaleY="1.5"/>
      <move select="Quarter Right" offsetX=".5" beats="2"/>
    </path>
  </tam>

  <tam title="Recycle in 3 parts"
       formation="Wave LH"
       from="Left-Hand Wave" parts="2;2">
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY="1.5" beats="2"/>
      <move select="Counter Rotate Left 0 2" scaleX="1.5" scaleY="1.5"/>
      <move select="Quarter Left" offsetX="-.5" beats="2"/>
    </path>
    <path>
      <move select="Fold Left" scaleX=".75" scaleY=".25"/>
      <move select="Counter Rotate Left 2 0" scaleX="1.5" scaleY="1.5"/>
      <move select="Quarter Left" offsetX=".5" beats="2"/>
    </path>
  </tam>



  <tam title="2/3 Recycle"
       from="Right-Hand Wave"
       formation="Wave RH">
    <path numbers="1 4">
      <move select="Lead Right" beats="4.5" scaleY="5" />
    </path>
    <path numbers="2 3">
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="2/3 Recycle"
       from="Left-Hand Wave"
       formation="Wave LH">
    <path numbers="4 1">
      <move select="Lead Left" beats="4.5" scaleY="5" />
    </path>
    <path numbers="3 2">
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="2/3 Recycle"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Lead Right" beats="4.5" scaleY="5" />
    </path>
    <path>
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleY="5" />
    </path>
  </tam>

  <tam title="2/3 Recycle"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Lead Left" beats="4.5" scaleY="5" />
    </path>
    <path>
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleY="5" />
    </path>
  </tam>

  <tam title="2/3 Recycle" from="Right-Hand Tidal Wave"
       formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" beats="4.5" scaleY="2.5" />
    </path>
    <path>
      <move select="Lead Right" offsetY=".17"/>
      <move select="Lead Right" offsetX="-.17"/>
      <move select="Lead Right" offsetY="-.16"/>
    </path>
    <path>
      <move select="Lead Right" offsetY=".5"/>
      <move select="Lead Right" offsetX="-.5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleY="2.5" />
    </path>
  </tam>

  <tam title="2/3 Recycle" from="Left-Hand Tidal Wave"
       formation="Tidal Wave LH BGGB">
    <path>
      <move select="Lead Left" beats="4.5" scaleY="2.5" />
    </path>
    <path>
      <move select="Lead Left" offsetY="-.17"/>
      <move select="Lead Left" offsetX="-.17"/>
      <move select="Lead Left" offsetY=".16"/>
    </path>
    <path>
      <move select="Lead Left" offsetY="-.5"/>
      <move select="Lead Left" offsetX="-.5"/>
      <move select="Lead Left" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleY="2.5" />
    </path>
  </tam>


  <tam title="As Couples 2/3 Recycle" group=" "
       formation="Two-Faced Tidal Line RH">
    <path>
      <move select="Lead Right" beats="2" hands="right" scaleX="3" scaleY="2.5"/>
      <move select="Forward 3" beats="2.5" hands="right"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" hands="left" scaleY="1.5"/>
      <move select="Forward 3" beats="2.5" hands="left"/>
    </path>
    <path>
      <move select="Quarter Right" hands="left" offsetX="-0.33" offsetY="-0.17"/>
      <move select="Quarter Right" hands="left" offsetX="0.16" offsetY="-0.34"/>
      <move select="Quarter Right" hands="left" offsetX=".33" offsetY=".17"/>
    </path>
    <path>
      <move select="Hinge Right" offsetY="-0.17"/>
      <move select="Hinge Right" scaleX="1.5" scaleY="1.66"/>
      <move select="Hinge Right" scaleX="2.33" scaleY="1.17"/>
    </path>
  </tam>

  <tam title="Concentric 2/3 Recycle" group=" "
       formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="5.5" />
    </path>
    <path>
      <move select="Lead Right" offsetY=".5"/>
      <move select="Lead Right" scaleY="2"/>
      <move select="Lead Right" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleY="3.5" />
    </path>
    <path>
      <move select="Lead Right" scaleY="1.17"/>
      <move select="Lead Right" scaleX="1.17"/>
      <move select="Lead Right" scaleY="0.83"/>
    </path>
  </tam>

  <tam title="Stretch 2/3 Recycle" group=" "
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="5" />
    </path>
    <path>
      <move select="Lead Right" />
      <move select="Run Right" scaleY="2"/>
    </path>
    <path>
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleY="5" />
    </path>
  </tam>

  <tam title="Tandem 2/3 Recycle" group=" "
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1"/>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right"/>
      <move select="Quarter Right" beats="1" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Extend Right" beats="4" scaleY="2" scaleX="4"/>
    </path>
  </tam>

</tamination>
