<tamination title="Interlocked Rally">

  <tam title="Interlocked Rally" from="Right-Hand Quarter Lines"
       formation="Quarter Lines RH">
    <path>
      <move select="Extend Right" beats="4" scaleX="1" scaleY="4"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Forward 2"/>
      <move select="Run Left" beats="3" scaleX=".5" scaleY=".25"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Forward"/>
      <move select="Run Left" scaleX=".5" scaleY=".25" offsetX="-1"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="2" offsetX="1"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Interlocked Rally" from="Right-Hand 3/4 Lines">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right" offsetX="-.5" offsetY="-1"/>
      <move select="Forward 2"/>
      <move select="Lead Right" beats="3.5" scaleX="1.5" scaleY="2.5"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-.5" offsetY="-1"/>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="2.5"/>
      <move select="Run Right" beats="2.5" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleY="2" offsetX="1"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Forward"/>
      <move select="Run Left" scaleX=".5" scaleY=".25" offsetX="-1"/>
    </path>
  </tam>

</tamination>
