<tamination title="Cross Cycle">

  <tam title="Cross Cycle, 3 distinct parts" group=" "
       formation="Two-Faced Line RH" parts="3;2">
    <path>
      <move select="Dodge Right" offsetX="1"/>
      <move select="Counter Rotate Right 0 -2" hands="right"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" hands="right"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
  </tam>

  <tam title="Cross Cycle" from="Right-Hand Two-Faced Line" formation="Two-Faced Line RH" fractions="4">
    <path>
      <move select="Lead Right" beats="4" scaleY="4"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Run Right" beats="2"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <taminator>
      For the rest of these animations from lines, the first two parts are danced as
      one movement.
    </taminator>
  </tam>

  <tam title="Cross Cycle" from="Left-Hand Two-Faced Line" formation="Two-Faced Line LH" fractions="4">
    <path>
      <move select="Lead Left" beats="2" scaleY="2"/>
      <move select="Run Left" beats="2"/>
      <move select="Quarter Left" offsetY="-1"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleY="4"/>
      <move select="Quarter Left" offsetY="-1"/>
    </path>
  </tam>

  <tam title="Cross Cycle" from="Facing Couples">
    <formation>
      <dancer gender="girl" x="2" y="-1" angle="180" />
      <dancer gender="boy" x="2" y="1" angle="180" />
    </formation>
    <path>
      <move select="Forward 2"/>
      <move select="Hinge Right" hands="right"/>
      <move select="Hinge Right" hands="both" beats="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3.5" offsetY="1"/>
      <move select="Lead Right" beats="2" hands="right" scaleX="3" scaleY="2"/>
    </path>
  </tam>

  <tam title="Cross Cycle"
       from="Right-Hand Box"
       formation="Box RH">
    <path>
      <move select="U-Turn Right" beats="4" hands="gripright" offsetX="2" />
      <move select="BackSashay Left" beats="2" scaleX="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="4" hands="gripright" scaleX="2" scaleY="2" offsetX="-2" />
    </path>
  </tam>


</tamination>
