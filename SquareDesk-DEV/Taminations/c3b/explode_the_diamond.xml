<tamination title="Explode the Diamond">

  <tam title="Explode the Diamond" from="Right-Hand Diamonds">
    <formation>
      <dancer gender="boy" y="3" x="2" angle="0"/>
      <dancer gender="girl" y="0" x="3" angle="270"/>
      <dancer gender="boy" y="-3" x="2" angle="180"/>
      <dancer gender="girl" y="0" x="1" angle="90"/>
    </formation>
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
      <move select="U-Turn Right" beats="2" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleY=".5" />
    </path>
  </tam>

  <tam title="Explode the Diamond" from="Left-Hand Diamonds"
       formation="Diamonds LH Girl Points">
    <path>
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
      <move select="U-Turn Left" beats="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Explode the Diamond" from="3/4 Tag" formation="3/4 Tag">
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="1.5" scaleY="2" />
      <move select="Extend Right" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="1" />
      <move select="Extend Right" beats="3" scaleY=".5" />
    </path>
  </tam>

</tamination>
