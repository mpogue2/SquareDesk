<tamination title="Wave The anyone">

  <tam title="Wave the Beaus" group=" " parts="2">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
      <dancer gender="boy" x="1" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Forward" beats="2" hands="right"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="left"/>
      <move select="Dodge Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Run Right" scaleY="1.5" offsetX="1"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Quarter Left" beats="2" offsetY="1"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Wave the Belles" group=" " parts="2">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
      <dancer gender="boy" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="1" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Dodge Right"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Quarter Right" offsetY="-1"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Run Left" offsetX="1"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
  </tam>

  <tam title="Wave the Boys" group=" " parts="2">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Forward" beats="2" hands="right"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="left"/>
      <move select="Dodge Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Quarter Right" beats="2" offsetY="-1"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Run Left" scaleY="1.5" offsetX="1"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
  </tam>

  <tam title="Wave the Girls" group=" " parts="2">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="270"/>
      <dancer gender="girl" x="-1" y="3" angle="270"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Forward" beats="2" hands="right"/>
      <move select="Dodge Right" beats="4"/>
    </path>
    <path>
      <move select="Forward" beats="2" hands="left"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Forward 2" hands="right"/>
      <move select="Run Right" scaleY="1.5" offsetX="1"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2" hands="left"/>
      <move select="Quarter Left" beats="2" offsetY="1"/>
      <move select="Forward 2"/>
    </path>
  </tam>

</tamination>
