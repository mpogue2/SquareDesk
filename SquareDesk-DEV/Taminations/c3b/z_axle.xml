<tamination title="Z Axle">

  <tam title="&quot;Z&quot; Axle" from="Outfacing Z" parts="4;3">
  <formation>
    <dancer gender="boy" x="2" y="1" angle="0" />
    <dancer gender="girl" x="0" y="1" angle="180" />
  </formation>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Stand" beats="4" hands="left"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

  <tam title="&quot;Z&quot; Axle" from="Tandem Z" parts="4;3">
  <formation>
    <dancer gender="boy" x="2" y="1" angle="0" />
    <dancer gender="girl" x="0" y="1" angle="0" />
  </formation>
    <path>
      <move select="Run Right" beats="4" scaleY="2" offsetX="-2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Stand" beats="4" hands="left"/>
      <move select="Flip Left"/>
      <move select="Stand" beats="3"/>
    </path>
  </tam>

</tamination>
