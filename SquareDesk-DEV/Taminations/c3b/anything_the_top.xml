<tamination title="Any Tagging Call the Top">

  <tam title="Chase the Top" group=" " fractions="6" formation="Lines Facing Out">
    <path>
      <move select="U-Turn Right" offsetX="-2"/>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Lead Right" beats="1.5" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2"/>
      <move select="Forward 3"/>
      <move select="Quarter Left" beats="1.5" offsetX="-.5" offsetY="1"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="4.5" scaleX="1.5" scaleY="3"/>
    </path>
  </tam>

  <tam title="Flip the Top" group=" " fractions="7.5" formation="Ocean Waves LH BGGB">
    <path couples="2 4">
      <move select="Lead Left" beats="3.5" scaleX=".5" scaleY="2" />
      <move select="Forward 2" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Lead Left" beats="1.5" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path couples="2 4">
      <move select="Run Left" />
      <move select="Lead Left" />
      <move select="Forward 2" beats="3"/>
      <move select="Swing Left"/>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Run Left" />
      <move select="Lead Left" />
      <move select="Forward 2" beats="3"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="4.5" scaleX="1.5" scaleY="3"/>
    </path>
    <path couples="3 1">
      <move select="Lead Left" beats="3.5" scaleY="2" />
      <move select="Forward 4" />
      <move select="Quarter Right" beats="1.5" offsetX="-.5" offsetY="-1"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Tag the Top" group=" " fractions="4.5">
    <formation>
      <dancer gender="boy" x="2" y="3" angle="0"/>
      <dancer gender="girl" x="2" y="1" angle="0"/>
      <dancer gender="girl" x="2" y="-3" angle="180"/>
      <dancer gender="boy" x="2" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Lead Right" beats="1.5" scaleX=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="4.5" scaleX="1.5" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 3"/>
      <move select="Quarter Left" beats="1.5" offsetX="-.5" offsetY="1"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

</tamination>
