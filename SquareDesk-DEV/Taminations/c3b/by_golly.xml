<tamination title="By Golly">

  <tam title="Bend the Line By Golly" group=" "
       formation="Two-Faced Line LH" >
    <path>
      <move select="BackHinge Right" beats="4" />
      <move select="Dodge Right"/>
      <movement  beats="3" cx1="2.5" cy1="0" cx2="3" cy2=".5" x2="3" y2="3" hands="none"/>
    </path>
    <path>
      <move select="Hinge Left" beats="4" />
      <move select="Counter Rotate Left 3 -1" beats="3"/>
    </path>
  </tam>

  <tam title="Recycle By Golly" group=" "
       formation="Wave RH">
    <path>
      <move select="Run Right" beats="4" offsetX="2" offsetY="-2" />
      <move select="Counter Rotate Right 3 1" beats="3"/>
    </path>
    <path>
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="-1" />
      <move select="Run Right" beats="2" scaleX=".5" scaleY=".5" offsetX="1" />
      <move select="Dodge Left"/>
      <movement  beats="3" cx1="2.5" cy1="0" cx2="3" cy2="-.5" x2="3" y2="-3" hands="none"/>
    </path>
  </tam>

</tamination>
