<tamination title="Bingo">

  <tam title="Bingo" from="Right-Hand Box" fractions="2.25">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="270"/>
      <dancer gender="girl" y="-2" x="1" angle="270"/>
    </formation>
    <path>
      <move select="Wheel Thru Right" beats="4.5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.333" offsetY=".333"/>
      <move select="Quarter Left" offsetX=".333" offsetY=".333"/>
      <move select="Quarter Left" offsetX=".333" offsetY="-.333"/>
    </path>
  </tam>

  <tam title="Bingo" from="Left-Hand Box" formation="Box LH" fractions="2.25">
    <path>
      <move select="Quarter Right" offsetX="-.333" offsetY="-.333"/>
      <move select="Quarter Right" offsetX=".333" offsetY="-.333"/>
      <move select="Quarter Right" offsetX=".333" offsetY=".333"/>
    </path>
    <path>
      <move select="Wheel Thru Left" beats="4.5"/>
    </path>
  </tam>

  <tam title="Bingo" from="Right-Hand Waves" formation="Ocean Waves RH BGBG">
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.333"/>
      <move select="Quarter Left" offsetY=".333"/>
      <move select="Quarter Left" offsetX=".333"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.333" />
      <move select="Quarter Left" offsetY=".333"/>
      <move select="Quarter Left" offsetX=".333"/>
    </path>
  </tam>

  <tam title="Bingo" from="Left-Hand Waves" formation="Ocean Waves LH BGBG">
    <path>
      <move select="Quarter Right" offsetX="-.333"/>
      <move select="Quarter Right" offsetY="-.333"/>
      <move select="Quarter Right" offsetX=".333"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-.333"/>
      <move select="Quarter Right" offsetY="-.333"/>
      <move select="Quarter Right" offsetX=".333"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="3" scaleY="2"/>
    </path>
  </tam>

  <tam title="Bingo" from="Right-Hand Columns" formation="Column RH GBGB">
    <path>
      <move select="Quarter Left" offsetY=".333"/>
      <move select="Quarter Left" offsetX=".333"/>
      <move select="Quarter Left" offsetY="-.333"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY=".333"/>
      <move select="Quarter Left" offsetX=".333"/>
      <move select="Quarter Left" offsetY="-.333"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Bingo" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Lead Left" beats="4.5" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="-.333"/>
      <move select="Quarter Right" offsetX=".333"/>
      <move select="Quarter Right" offsetY=".333"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="-.333"/>
      <move select="Quarter Right" offsetX=".333"/>
      <move select="Quarter Right" offsetY=".333"/>
    </path>
  </tam>

  <tam title="Bingo" from="T-Bone Box">
    <formation>
      <dancer gender="boy" x="1" y="1" angle="180" />
      <dancer gender="girl" x="1" y="-1" angle="270" />
    </formation>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX=".25" offsetY=".25"/>
      <move select="Quarter Left"/>
      <move select="Quarter Left" offsetX=".25" offsetY=".25"/>
    </path>
  </tam>

  <tam title="As Couples Bingo" group=" "
       formation="Two-Faced Lines RH">
    <path>
      <move select="Lead Right" hands="right" beats="3" scaleX="3.5" scaleY="3" />
      <move select="Extend Left" hands="right" beats="3" scaleX="2" scaleY="1.5" />
    </path>
    <path>
      <move select="Lead Right" hands="left" beats="3" scaleX="2.5" />
      <move select="Extend Left" hands="left" beats="3" scaleX="2" scaleY=".5" />
    </path>
    <path>
      <move beats="2" select="Hinge Left" scaleX="2" scaleY="2" offsetX=".33" offsetY="-.33" />
      <move beats="2" select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY="-.33" />
      <move beats="2" select="Hinge Left" scaleX="2" scaleY="2" offsetX="-.33" offsetY=".33" />
    </path>
    <path>
      <move beats="2" select="Quarter Left" hands="right" offsetX=".33" offsetY="-.33" />
      <move beats="2" select="Quarter Left" hands="right" offsetX="-.33" offsetY="-.33" />
      <move beats="2" select="Quarter Left" hands="right" offsetX="-.33" offsetY=".33" />
    </path>
  </tam>

  <tam title="Tandem Bingo" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Counter Rotate Left 0 2"/>
      <move select="Counter Rotate Left 0 2"/>
      <move select="Counter Rotate Left 0 2"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0"/>
      <move select="Counter Rotate Left 2 0"/>
      <move select="Counter Rotate Left 2 0"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="3" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Lead Right" beats="3"  scaleY="2"/>
    </path>
  </tam>

  <tam title="In Your Block Bingo" formation="Blocks RH" group=" ">
    <path>
      <move select="Lead Right" beats="4.5" scaleX="4" scaleY="4"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Quarter Left"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="4" scaleY="4"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Quarter Left"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

  <tam title="Once Removed Bingo" formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="4"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="3.5" scaleX="2" scaleY="4"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.25"/>
      <move select="Quarter Left" offsetY=".25"/>
      <move select="Quarter Left" offsetX=".5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.25"/>
      <move select="Quarter Left" offsetY=".25"/>
      <move select="Quarter Left" offsetX=".5"/>
    </path>
  </tam>

  <tam title="Couples Twosome Bingo" formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="4"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="3.5" scaleX="2" scaleY="4"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.25"/>
      <move select="Quarter Left" offsetY=".25"/>
      <move select="Quarter Left" offsetX=".5"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="-.25"/>
      <move select="Quarter Left" offsetY=".25"/>
      <move select="Quarter Left" offsetX=".5"/>
    </path>
    <taminator>
      This is the same as Once Removed Bingo
    </taminator>
  </tam>

  <tam title="Tandem Twosome Bingo" formation="Column RH GBGB" group=" ">
    <path>
      <move select="Quarter Left" offsetY=".5" beats="2"/>
      <move select="Quarter Left" offsetX=".25" beats="2"/>
      <move select="Quarter Left" offsetY="-.25" beats="2"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY=".5" beats="2"/>
      <move select="Quarter Left" offsetX=".25" beats="2"/>
      <move select="Quarter Left" offsetY="-.25" beats="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Lead Right" beats="3" scaleY="2.5"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Forward"/>
      <move select="Lead Right" beats="3" scaleY="2.5"/>
   </path>
  </tam>

</tamination>
