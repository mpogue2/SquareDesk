<tamination title="Gee Whiz">

  <tam title="Gee Whiz" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Forward 3" beats="3"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Gee Whiz" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path couples="4 2">
      <move select="Run Left" beats="5" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
    <path couples="4 2">
      <move select="Run Left" beats="4"/>
      <move select="Forward"/>
    </path>
    <path couples="3 1">
      <move select="Stand" beats="2"/>
      <move select="Forward 3" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Left Gee Whiz" formation="Lines Facing Out" group=" ">
    <path couples="4 2">
      <move select="U-Turn Left" beats="2" offsetX="-1.5" offsetY=".5"/>
      <move select="Forward" beats=".5" />
      <move select="Extend Right" beats="2.5" scaleX="2.5" scaleY="1.5" />
    </path>
    <path couples="4 2">
      <move select="Flip Right" beats="2" offsetX=".5" offsetY=".5" />
      <move select="Forward 2" beats="1.5" />
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY="1.5" />
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="4"/>
      <move select="Forward"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="5" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
  </tam>

  <tam title="Right Gee Whiz" formation="Lines Facing Out" group=" ">
    <path>
      <move select="Run Left" beats="5" scaleX="1.5" scaleY="2" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="4"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX="-1.5" offsetY=".5"/>
      <move select="Forward 2" beats="1.5" />
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Flip Right" beats="2" offsetX=".5" offsetY=".5" />
      <move select="Forward" beats=".5" />
      <move select="Extend Left" beats="2.5" scaleX="2.5" scaleY=".5" />
    </path>
  </tam>

</tamination>
