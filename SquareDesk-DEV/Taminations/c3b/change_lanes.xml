<tamination title="Change Lanes">

  <tam title="Change Lanes" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path couples="2 4">
      <move select="Forward 4" beats="6"/>
      <move select="Run Right" beats="5" scaleY="2"/>
    </path>
    <path couples="2 4">
      <move select="Hinge Right"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="3.5" scaleX="3"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Right"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="3.5" scaleX="3"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="8" scaleX="2" scaleY="3"/>
      <move select="Extend Right" beats="3" scaleX="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Change Lanes" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Run Left" beats="8" scaleX="2" scaleY="3"/>
      <move select="Extend Left" beats="3" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="3.5" scaleX="3"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="3.5" scaleX="3"/>
    </path>
    <path>
      <move select="Forward 4" beats="6"/>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Change Lanes" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 4" beats="6"/>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="3.5" scaleX="3"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="3.5" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right" beats="8" scaleX="2" scaleY="3"/>
      <move select="Extend Right" beats="3" scaleX="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Change Lanes" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Left" beats="8" scaleX="2" scaleY="3"/>
      <move select="Extend Left" beats="3" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="3.5" scaleX="3"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="3.5" scaleX="3"/>
    </path>
    <path>
      <move select="Forward 4" beats="6"/>
      <move select="Flip Left" beats="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Change Lanes" from="Columns">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Run Right" beats="6"/>
      <move select="Stand" beats="2"/>
      <movement beats="3.5" hands="none" cx1="-1" cy1="0" cx2="0" cy2="-2" x2="1" y2="-2"
                                       cx3="4" cx4="4" cy4="-1" x4="8" y4="-1"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.5"/>
    </path>
    <path>
      <move select="Flip Left" beats="6"/>
      <move select="Stand" beats="2"/>
      <movement beats="3.5" hands="none" cx1="2" cy1="0" cx2="1" cy2="1" x2="1" y2="2"
                                       cx3="4" cx4="4" cy4="1" x4="8" y4="1"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Quarter Right" beats="4" offsetX="3" offsetY=".5"/>
    </path>
  </tam>

</tamination>
