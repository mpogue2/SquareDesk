<tamination title="Rotate">

  <tam title="Rotate 1/4" group=" " fractions="1.5"
       formation="Completed Double Pass Thru">
    <path couples="3 1">
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Hinge Left" hands="left" beats="4" scaleX="3.5" scaleY="3.5"/>
    </path>
    <path couples="3 1">
      <move select="BackHinge Right" scaleX=".5"/>
      <move select="Hinge Left" hands="both" beats="4" scaleX="2.5" scaleY="2.5"/>
    </path>
    <path couples="4 2">
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Hinge Left" hands="both" beats="4" scaleX="1.5" scaleY="1.5"/>
    </path>
    <path couples="4 2">
      <move select="BackHinge Right" scaleX=".5"/>
      <move select="Hinge Left" hands="both" beats="4" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Reverse Rotate 1/4" group=" " fractions="1.5"
       formation="Completed Double Pass Thru">
    <path couples="3 1">
      <move select="BackHinge Left" scaleX=".5"/>
      <move select="Hinge Right" hands="left" beats="4" scaleX="2.5" scaleY="2.5"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Hinge Right" hands="both" beats="4" scaleX="3.5" scaleY="3.5"/>
    </path>
    <path couples="4 2">
      <move select="BackHinge Left" scaleX=".5"/>
      <move select="Hinge Right" hands="both" beats="4" scaleX=".5" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Hinge Right" hands="both" beats="4" scaleX="1.5" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Single Rotate 1/4" group=" " fractions="1.5"
       formation="Completed Double Pass Thru">
    <path couples="3 1">
      <move select="Quarter Left" offsetY="-1"/>
      <move select="Counter Rotate Left 5 1" beats="4" hands="left"/>
    </path>
    <path couples="3 1">
      <move select="Quarter Left" offsetY="1"/>
      <move select="Counter Rotate Left 1 5" beats="4" hands="left"/>
    </path>
    <path couples="4 2">
      <move select="Quarter Left" offsetY="-1"/>
      <move select="Counter Rotate Left 3 -1" beats="4" hands="both"/>
    </path>
    <path couples="4 2">
      <move select="Quarter Left" offsetY="1"/>
      <move select="Counter Rotate Left -1 3" beats="4" hands="both"/>
    </path>
  </tam>

  <tam title="Reverse Single Rotate 1/4" group=" " fractions="1.5"
       formation="Completed Double Pass Thru">
    <path couples="3 1">
      <move select="Quarter Right" offsetY="-1"/>
      <move select="Counter Rotate Right 1 -5" beats="4" hands="right"/>
    </path>
    <path couples="3 1">
      <move select="Quarter Right" offsetY="1"/>
      <move select="Counter Rotate Right 5 -1" beats="4" hands="right"/>
    </path>
    <path couples="4 2">
      <move select="Quarter Right" offsetY="-1"/>
      <move select="Counter Rotate Right -1 -3" beats="4" hands="both"/>
    </path>
    <path couples="4 2">
      <move select="Quarter Right" offsetY="1"/>
      <move select="Counter Rotate Right 3 1" beats="4" hands="both"/>
    </path>
  </tam>

  <tam title="Split Single Rotate 1/4" group=" " fractions="1.5"
       formation="Completed Double Pass Thru">
    <path couples="3 1">
      <move select="Quarter Left"/>
      <move select="Counter Rotate Left 2 0" beats="2" hands="left"/>
    </path>
    <path couples="3 1">
      <move select="Quarter Left"/>
      <move select="Counter Rotate Left 0 2" beats="2" hands="left"/>
    </path>
    <path couples="4 2">
      <move select="Quarter Right"/>
      <move select="Counter Rotate Left 0 2" beats="2" hands="left"/>
    </path>
    <path couples="4 2">
      <move select="Quarter Right"/>
      <move select="Counter Rotate Left 2 0" beats="2" hands="left"/>
    </path>
  </tam>

</tamination>
