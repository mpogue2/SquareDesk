<tamination title="Sidetrack">

  <tam title="Sidetrack" from="Right-Hand Columns" parts="1.5;4">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="girl" x="1" y="-1" angle="180"/>
      <dancer gender="boy" x="1" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right" offsetY="1"/>
      <move select="Counter Rotate Right 5 -1" beats="4"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Counter Rotate Right 1 -5" beats="4"/>
      <move select="Quarter Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="1"/>
      <move select="Counter Rotate Left 3 -1" beats="4"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Counter Rotate Left -1 3" beats="4"/>
      <move select="Quarter Left" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Sidetrack" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH" parts="1.5;4">
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Counter Rotate Right -2 -4" hands="right" beats="4"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="4"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Counter Rotate Right 2 0" hands="right" beats="4"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Counter Rotate Right 4 2" hands="right" beats="4"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
  </tam>

  <tam title="Single Sidetrack" from="Right-Hand Columns" parts="1.5;4">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="girl" x="1" y="-1" angle="180"/>
      <dancer gender="boy" x="1" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right" offsetY="1"/>
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Quarter Right" offsetY="1.2"/>
    </path>
    <path>
      <move select="Quarter Right" offsetY="1"/>
      <move select="Hinge Left" beats="4" scaleX=".5"/>
      <move select="Quarter Left" offsetY=".4"/>
    </path>
    <path>
      <move select="Quarter Left" offsetY="1"/>
      <move select="Hinge Left" beats="4" scaleX=".5"/>
      <move select="Quarter Left" offsetY="-.8"/>
    </path>
  </tam>

  <tam title="Single Sidetrack" from="Column of 8" parts="1.5;4">
    <formation>
      <dancer gender="boy" x="4.2" y="0" angle="0"/>
      <dancer gender="girl" x="3.0" y="0" angle="0"/>
      <dancer gender="boy" x="1.8" y="0" angle="0"/>
      <dancer gender="girl" x="0.6" y="0" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2.2"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Hinge Left" beats="4" scaleY="0.6" offsetY=".4"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Right"/>
      <move select="Hinge Left" beats="4" scaleY="0.6" offsetY="-.4"/>
      <move select="Quarter Left" offsetX="-1"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.4"/>
      <move select="Quarter Right" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Split Sidetrack" from="Right-Hand Columns" parts="1.5;2">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="girl" x="1" y="-1" angle="180"/>
      <dancer gender="boy" x="1" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right"/>
      <move select="Counter Rotate Right 2 0"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 0 -2"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Right"/>
      <move select="Counter Rotate Right 2 0"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Quarter Left"/>
      <move select="Counter Rotate Right 0 -2"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
  </tam>

  <tam title="Split Sidetrack" from="Right-Hand Waves" parts="1.5;2"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Counter Rotate Right 0 -2"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Counter Rotate Right 2 0"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Counter Rotate Right 0 -2"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Counter Rotate Right 2 0"/>
      <move select="Quarter Right"/>
    </path>
  </tam>

</tamination>
