<tamination title="Nuclear Reaction">

  <tam title="Nuclear Reaction" from="1/4 Tag" formation="Quarter Tag" parts="3;5">
    <path couples="2 4">
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Left" beats="2.5"/>
      <move select="Quarter Left" beats="2.5" offsetX="1" offsetY="-1"/>
      <move select="Counter Rotate Left 5 1"/>
    </path>
    <path couples="2 4">
      <move select="Stand" beats="3"/>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2"/>
      <move select="Forward 2"/>
      <move select="Counter Rotate Right -1 -3"/>
    </path>
    <path couples="3 1">
      <move select="Stand" beats="3"/>
      <move select="BackHinge Right" beats="2.5"/>
      <move select="Lead Left" beats="2.5"/>
      <move select="Counter Rotate Left 1 5"/>
    </path>
    <path couples="3 1">
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="U-Turn Left" beats="5" offsetX="-1"/>
      <move select="Counter Rotate Right 3 1" />
    </path>
  </tam>

  <tam title="Nuclear Reaction" from="Left-Hand 1/4 Tag"
       formation="Quarter Tag LH" parts="3;5">
    <path>
      <move select="Stand" beats="3"/>
      <move select="Forward 5"/>
      <move select="Counter Rotate Right -1 -3" hands="both"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Right" beats="2.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="1" offsetY="1"/>
      <move select="Counter Rotate Right 5 -1" hands="right"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="BackHinge Left" beats="2.5"/>
      <move select="Lead Right" beats="2.5"/>
      <move select="Counter Rotate Right 1 -5" hands="right"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Run Right" beats="3.7"/>
      <move select="Forward" beats="1.3"/>
      <move select="Counter Rotate Right 3 1" hands="both"/>
    </path>
  </tam>

  <tam title="Nuclear Reaction" from="Quarter Lines"
       formation="Quarter Lines RH" parts="3;5">
    <path>
      <move select="Stand" beats="3"/>
      <move select="Forward 5"/>
      <move select="Counter Rotate Right -1 -3" beats="5" hands="right"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Hinge Right" beats="2.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="1" offsetY="1"/>
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Run Right" beats="3.7"/>
      <move select="Forward" beats="1.3"/>
      <move select="Counter Rotate Right 3 1" beats="5" hands="right"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right" beats="2.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="-1" offsetY="1"/>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Cross Nuclear Reaction" from="1/4 Tag"
       formation="Quarter Tag" parts="3;5">
    <path>
      <move select="Stand" beats="3"/>
      <move select="Forward 5"/>
      <move select="Counter Rotate Right -1 -3" hands="both"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Hinge Left" beats="2.5"/>
      <move select="Quarter Left" beats="2.5" offsetX="1" offsetY="-1"/>
      <move select="Counter Rotate Left 5 1"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="BackHinge Right" beats="2.5"/>
      <move select="Lead Left" beats="2.5"/>
      <move select="Counter Rotate Left 1 5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Run Right" beats="3.7"/>
      <move select="Forward" beats="1.3"/>
      <move select="Counter Rotate Right 3 1" hands="both"/>
    </path>
  </tam>

  <tam title="Cross Nuclear Reaction" from="Two-Faced Line Between Mini-Waves"
      parts="3;5">
    <formation>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Hinge Right" beats="2.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="-1" offsetY="1"/>
      <move select="Forward 2"/>
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
      <move select="U-Turn Left" beats="2" offsetX="-2"/>
      <move select="Forward 3"/>
      <move select="Counter Rotate Right -1 -3" beats="5" hands="right"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
      <move select="Hinge Right" beats="2.5"/>
      <move select="Quarter Right" beats="2.5" offsetX="1" offsetY="1"/>
      <move select="Extend Left" beats="2" scaleX="2" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Run Right" beats="3.7"/>
      <move select="Forward" beats="1.3"/>
      <move select="Counter Rotate Right 3 1" beats="5" hands="both"/>
    </path>
  </tam>

</tamination>
