<tamination title="Fan Concept">

  <tam title="Fan Alter and Circulate" formation="Ocean Waves RH BGGB"
       fractions="7.5;4" group=" ">
    <path>
      <move select="U-Turn Right" />
      <move select="Run Left" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Flip Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Swing Left" beats="4" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" beats="4" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
    <path>
      <move select="U-Turn Right" />
      <move select="Forward 4" beats="4.5" />
      <move select="Run Left" beats="4" scaleX="1.5" scaleY="3" />
      <move select="Flip Left" />
    </path>
  </tam>

  <tam title="Fan Alter the Wave" group=" " formation="Wave RH" fractions="4.5;4">
    <path>
      <move select="U-Turn Right" beats="4.5" />
      <move select="Lead Left" beats="2" scaleX="2" scaleY="3" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY="2" />
      <move select="Run Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Left" beats="4" />
      <move select="Lead Left" beats="3" scaleX="3" />
    </path>
  </tam>

  <tam title="Fan Chain and Exchange the Gears" group=" "
       formation="Ocean Waves RH BGGB" fractions="4.5;3;4.5;4">
    <path>
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Swing Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="HalfHinge Right" />
      <move select="Hinge Right" />
      <move select="Forward" beats="2.5" scaleX="2.7" scaleY="2.7" />
      <move select="Hinge Right" hands="nohands" />
      <move select="Swing Right" hands="nohands" offsetX="-.5" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="HalfHinge Right" />
      <move select="Hinge Right" />
      <move select="Forward" beats="2" scaleX="2.2" scaleY="2.2" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
      <move select="Swing Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="Forward" offsetY=".3" />
      <move select="HalfHinge Right" beats="1.5" offsetX=".3" offsetY=".3" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Swing Left" />
      <move select="Swing Left" />
      <move select="HalfHinge Left" />
      <move select="Forward" beats="4" scaleX="2.95" />
      <move select="HalfHinge Right" />
      <move select="Hinge Right" scaleX=".5" offsetY=".3" />
      <move select="Quarter Right" />
    </path>
  </tam>

  <tam title="Fan Chain the Gears" group=" "
       formation="Ocean Waves RH BGGB" fractions="4.5;3;4.5;3">
    <path>
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Flip Right" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Flip Right" beats="5.5" />
      <move select="Cast Left" hands="gripleft"/>
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Fan Chain the Line" formation="Tidal Wave RH BGGB" group=" ">
    <path>
      <move select="Stand" beats="3"/>
      <move select="Dodge Right" beats="1" scaleY=".25"/>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
      <move select="Dodge Right" beats="1" scaleY=".25"/>
      <move select="Cast Right"/>
    </path>
  </tam>

  <tam title="Fan Chain Thru" group=" "
       formation="Ocean Waves RH BGGB" fractions="4.5;3">
    <path>
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Stand" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
    </path>
  </tam>

  <tam title="Fan Relay the Deucey" group=" "
       formation="Ocean Waves RH BGGB" fractions="4.5;3;3;3">
    <path>
      <move select="Forward 2" beats="4.5" />
      <move select="Forward 2" beats="3" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="3" scaleX="3" scaleY="3" />
      <move select="Forward 2" beats="3" />
      <move select="Forward 2" beats="4.5" />
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tam title="Fan Relay the Shadow" group=" ">
    <formation>
      <dancer gender="boy" x="0" y="3.5" angle="180"/>
      <dancer gender="girl" x="-2" y="2" angle="0"/>
      <dancer gender="girl" x="-2" y="-2" angle="0"/>
      <dancer gender="boy" x="-2" y="0" angle="0"/>
    </formation>
    <path>
      <move select="Lead Left" beats="6.5" scaleX="3" scaleY="3.5" />
      <move select="Hinge Left" />
      <move select="Dodge Right" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Lead Left" />
      <move select="Lead Left" />
      <move select="Lead Left" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Hinge Right" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Swing Right" hands="gripright" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleY=".5" />
      <move select="Hinge Left" />
      <move select="Dodge Right" />
    </path>
  </tam>

  <tam title="Fan Relay the Top" group=" "
       formation="Ocean Waves RH BGGB" fractions="4.5;3" >
    <path>
      <move select="Extend Right" beats="4.5" scaleX="2" scaleY="2" />
      <move select="Hinge Right" beats="3" />
      <move select="Cast Left" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Hinge Right" beats="3" />
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2" />
    </path>
    <path>
      <move select="Cast Left" />
      <move select="Swing Right" />
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3" />
      <move select="Swing Right" />
      <move select="Cast Left" />
    </path>
  </tam>

  <tamxref title="Fan the Top" group=" "
           xref-link="plus/fan_the_top"
           xref-from="Right-Hand Wave"/>

  <tam title="Fan 1/2 Cast and Relay" group=" "
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" fractions="4.5;3">
    <path>
      <move select="Extend Right" beats="4.5" scaleX="2" scaleY="2"/>
      <move select="Swing Right"/>
      <move select="Extend Left" beats="4.5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Lead Right" beats="4.5" scaleX="3" scaleY="3"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
  </tam>

</tamination>
