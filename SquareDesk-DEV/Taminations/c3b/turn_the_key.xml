<tamination title="Turn the Key">

  <tam title="Turn the Key" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" parts="3;5">
    <path>
      <move select="Swing Right"/>
      <move select="Counter Rotate Left -1 3" beats="5"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Counter Rotate Right 5 -1" beats="5"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Counter Rotate Right 1 -5" beats="5"/>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Counter Rotate Left 3 -1" beats="5"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Turn the Key" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" parts="3;5">
    <path>
      <move select="Swing Left"/>
      <move select="Counter Rotate Right 3 1" beats="5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Counter Rotate Left 1 5" beats="5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Counter Rotate Left 5 1" beats="5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Counter Rotate Right -1 -3" beats="5"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Turn the Key" from="3 and 1 Lines" parts="3;5">
    <formation>
      <dancer gender="boy" x="2" y="1" angle="180"/>
      <dancer gender="girl" x="2" y="3" angle="180"/>
      <dancer gender="girl" x="-2" y="3" angle="180"/>
      <dancer gender="boy" x="-2" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Run Right"/>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Counter Rotate Right -1 -3" beats="5"/>
      <move select="Quarter Left" offsetX="-1" offsetY="1"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Counter Rotate Right 3 1" beats="5"/>
      <move select="Hinge Left"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="3" scaleY="3"/>
      <move select="Forward 2"/>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Turn the Key" from="Quarter Tag" formation="Quarter Tag" parts="3;5.5">
    <path couples="2 4">
      <move select="Run Right"/>
      <move select="Lead Right" scaleX="1.5"/>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="3.5"/>
      <move select="Lead Right"/>
    </path>
    <path couples="2 4">
      <move select="Flip Left"/>
      <move select="Lead Left" scaleX=".5"/>
      <move select="Forward 2" beats="1.5"/>
      <move select="Extend Left" beats="2.5" scaleY="2.5"/>
      <move select="Quarter Left" offsetX="-1" offsetY="1"/>
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="Hinge Left" beats="5.5"/>
      <move select="Hinge Right"/>
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="Lead Right" beats="5.5" scaleX="3" scaleY="3"/>
      <move select="Hinge Right"/>
    </path>
  </tam>

  <tam title="Turn the Key" from="Tidal Wave"
       formation="Tidal Wave RH BGBG" parts="3;5">
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Lead Left" beats="5" scaleX="2.5" scaleY="2.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right" beats="5" scaleX="3.5" scaleY="3.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Left" beats="5" scaleX=".5" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".5" scaleY=".5"/>
      <move select="Lead Right" beats="5" scaleX="1.5" scaleY="1.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
  </tam>

</tamination>
