<tamination title="Quadruple Formation Concept">

  <tam title="Quadruple Box Split Swap" group=" ">
    <formation>
      <dancer gender="boy" x="1" y="5.25" angle="180"/>
      <dancer gender="girl" x="1" y="3.75" angle="180"/>
      <dancer gender="boy" x="-1" y="2.25" angle="0"/>
      <dancer gender="girl" x="-1" y=".75" angle="0"/>
      <dancer gender="phantom" x="1" y=".75" angle="180"/>
      <dancer gender="phantom" x="1" y="2.25" angle="180"/>
      <dancer gender="phantom" x="-1" y="3.75" angle="0"/>
      <dancer gender="phantom" x="-1" y="5.25" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1.5"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetX="2"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1.5"/>
    </path>
  </tam>

  <tam title="Quadruple Column Pass and Roll" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="3" angle="180"/>
      <dancer gender="girl" x="3" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="phantom" x="3" y="-1" angle="180"/>
      <dancer gender="phantom" x="3" y="-3" angle="180"/>
      <dancer gender="phantom" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="1" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Forward"/>
      <move select="U-Turn Right" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Forward" />
      <move select="U-Turn Right" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Forward"/>
      <move select="U-Turn Right" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Forward" />
      <move select="Forward"/>
      <move select="U-Turn Right" offsetY="-1"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Forward" />
      <move select="Flip Right" scaleY=".5" />
      <move select="Forward 3" />
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Quadruple Line Bend the Line" group=" ">
    <formation>
      <dancer gender="boy" x="3" y="3" angle="180"/>
      <dancer gender="girl" x="3" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="phantom" x="3" y="-1" angle="180"/>
      <dancer gender="phantom" x="3" y="-3" angle="180"/>
      <dancer gender="phantom" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="1" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
    </path>
    <path>
      <move select="BackHinge Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
    </path>
    <path>
      <move select="BackHinge Left" scaleX=".5"/>
    </path>
    <path>
      <move select="BackHinge Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
    </path>
    <path>
      <move select="BackHinge Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Quadruple Wave Swing Thru" group=" " fractions="3">
    <formation>
      <dancer gender="boy" x="1" y="3" angle="180"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="3" y="3" angle="0"/>
      <dancer gender="girl" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="1" y="-1" angle="180"/>
      <dancer gender="phantom" x="1" y="-3" angle="0"/>
      <dancer gender="phantom" x="3" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
  </tam>
  <tam title="Quadruple Waves of 3 Swing Thru" group=" " fractions="3">
    <formation>
      <dancer gender="boy" x="1" y="2" angle="180"/>
      <dancer gender="girl" x="1" y="0" angle="0"/>
      <dancer gender="boy" x="3" y="2" angle="0"/>
      <dancer gender="girl" x="3" y="0" angle="180"/>
      <dancer gender="phantom" x="3" y="-2" angle="0"/>
      <dancer gender="phantom" x="1" y="-2" angle="180"/>
    </formation>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Stand" beats="3"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
    <path>
      <move select="Swing Right" scaleX=".65"/>
      <move select="Swing Left" scaleX=".65"/>
    </path>
  </tam>

</tamination>
