<tamination title="Swing-O-Late">

  <tam title="Swing-O-Late" from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" fractions="3">
    <path couples="2 4">
      <move select="Swing Right"/>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
    <path couples="2 4">
      <move select="Swing Right"/>
      <move select="U-Turn Right" offsetX="-1"/>
      <move select="Run Left" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="U-Turn Right" offsetX="-1"/>
      <move select="Extend Left" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path couples="3 1">
      <move select="Swing Right"/>
      <move select="Run Left" beats="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Swing-O-Late" from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB" fractions="3">
    <path>
      <move select="Swing Left"/>
      <move select="Run Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="U-Turn Left" offsetX="-1"/>
      <move select="Extend Right" beats="4" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="U-Turn Left" offsetX="-1"/>
      <move select="Run Right" beats="4" offsetX="-1" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Run Right" beats="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Swing-O-Late" from="Right-Hand Thar" fractions="3">
    <formation>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="0" y="3" angle="180"/>
      <dancer gender="girl" x="-1" y="0" angle="90"/>
      <dancer gender="boy" x="-3" y="0" angle="270"/>
    </formation>
    <path>
      <move select="Swing Left"/>
      <move select="U-Turn Left" beats="2" offsetY=".5"/>
      <move select="Lead Right" beats="3" scaleY="2.5"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Run Right" hands="right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="U-Turn Left" beats="2" offsetY=".5"/>
      <move select="Lead Right" beats="3" scaleY="2.5"/>
    </path>
    <path>
      <move select="Swing Left"/>
      <move select="Run Right" hands="right" beats="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Swing-O-Late" from="Left-Hand Thar"
       formation="Thar LH Boys" fractions="3">
    <path>
      <move select="Swing Right"/>
      <move select="U-Turn Right" beats="2" offsetY="-.5"/>
      <move select="Lead Left" beats="3" scaleY="2.5"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Run Left" hands="left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="U-Turn Right" beats="2" offsetY="-.5"/>
      <move select="Lead Left" beats="3" scaleY="2.5"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Run Left" hands="left" beats="5" scaleY="2"/>
    </path>
  </tam>

</tamination>
