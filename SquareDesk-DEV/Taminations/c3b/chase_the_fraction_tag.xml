<tamination title="Chase the fraction Tag">

  <tam title="Chase the Tag" from="Back to Back Couples" fractions="3;2;2">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="90" />
      <dancer gender="girl" y="2" x="-1" angle="90" />
    </formation>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2"/>
    </path>
  </tam>

  <tam title="Chase the Tag" from="Lines Facing Out" formation="Lines Facing Out" fractions="3;2;2">
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Forward" beats="2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Forward" beats="2"/>
    </path>
  </tam>

  <tam title="Chase and Scatter" formation="Lines Facing Out" group=" " fractions="3;2">
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right" scaleX="2" scaleY="3" beats="3" />
      <move select="Lead Right" scaleX="3" scaleY="2" beats="3" />
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Chase Back" formation="Lines Facing Out" group=" " fractions="3;2">
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Chase Chain Thru" formation="Lines Facing Out" group=" " fractions="3;2">
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="3"/>
      <move select="Swing Right"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tamxref title="Chase the Top" group=" "
           xref-link="c3b/anything_the_top"
           xref-title="Chase the Top"/>

  <tam title="Chase Your Leader" group=" " formation="Lines Facing Out">
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
      <move select="Forward 5" beats="3"/>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
      <move select="Forward"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Run Right" beats="5" scaleX="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2" beats="1.5" offsetY="-.25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
      <move select="Forward 3"/>
    </path>
  </tam>

  <tamxref title="Chase Your Neighbor" group=" "
           xref-link="c1/chase_your_neighbor"
           xref-title="Chase Your Neighbor" xref-from="Lines Facing Out"/>

  <tam title="Chaser's Delight" group=" " formation="Lines Facing Out">
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
      <move select="Forward 4"/>
      <move select="Run Right" beats="6" scaleX="3" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
      <move select="Swing Left"/>
      <move select="Cast Right"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="3" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
      <move select="Run Right" beats="6" scaleX="3" scaleY="3"/>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1" scaleY=".5"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Swing Right"/>
      <move select="Stand" beats="6"/>
      <move select="Cast Right"/>
    </path>
  </tam>

</tamination>
