<tamination title="Shake and Rattle">

  <tam title="Shake and Rattle" from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path couples="2 1">
      <move select="Flip Right" offsetX="-1" scaleY=".5"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path couples="2 1">
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path couples="4 3">
      <move select="Quarter Left" beats="4.5" offsetY="3"/>
    </path>
      <path couples="4 3">
      <move select="Lead Left" beats="4.5" scaleX="2"/>
    </path>
  </tam>

  <tam title="Shake and Rattle" from="Right-Hand Columns"
       formation="Column RH GBGB">
    <path>
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="2"/>
    </path>
    <path>
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="2"/>
    </path>
  </tam>

  <tam title="Shake and Rattle" from="Magic Columns"
       formation="Magic Column RH">
    <path>
      <move select="Quarter Left" beats="4.5" offsetY="3"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleX="2"/>
    </path>
    <path>
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetY="1"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="-1" scaleY=".5"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Shake and Rattle" from="Right-Hand Waves"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Quarter Left" beats="4.5" offsetX="3"/>
    </path>
    <path>
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Quarter Left" beats="4.5" offsetX="3"/>
    </path>
    <path>
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Shake and Rattle" from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Flip Right" beats="2.5" offsetX="-1" scaleY=".25"/>
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Right" beats="2.5" offsetX="-1" scaleY=".25"/>
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Shake and Rattle" from="Inverted Lines"
       formation="Inverted Lines Ends Facing Out">
    <path>
      <move select="Flip Right" beats="2.5" offsetX="-1" scaleY=".25"/>
      <move select="Lead Right" beats="2" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="4.5" scaleY="2"/>
    </path>
    <path>
      <move select="Quarter Left" beats="4.5" offsetX="3"/>
    </path>
    <path>
      <move select="Flip Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Shake and Rattle and Roll" group=" "
       formation="Completed Double Pass Thru">
    <path couples="2 1">
      <move select="Flip Right" offsetX="-1" scaleY=".5"/>
      <move select="Lead Right"/>
      <move select="Quarter Right"/>
    </path>
    <path couples="2 1">
      <move select="Flip Right"/>
      <move select="Quarter Right"/>
      <move select="Quarter Right"/>
    </path>
    <path couples="4 3">
      <move select="Quarter Left" beats="4.5" offsetY="2"/>
      <move select="Quarter Left"/>
    </path>
      <path couples="4 3">
      <move select="Quarter Left" beats="4.5" offsetX="2"/>
      <move select="Quarter Left"/>
    </path>
  </tam>


</tamination>
