<tamination title="Interlocked Counter">

  <tam title="Interlocked Counter" from="Right-Hand Three Quarter Lines">
    <formation>
      <dancer gender="girl" x="0" y="1" angle="0"/>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="3" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Swing Right"/>
      <move select="Counter Rotate Right 2 0" hands="right" offsetY="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetY="-1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-3" offsetY="-1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-3"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Run Right" beats="2" offsetX="2" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Interlocked Counter" from="Left-Hand Three Quarter Lines"
       formation="3/4 Lines LH">
    <path>
      <move select="Run Right" offsetX="-3" offsetY="-1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-3"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Run Right" beats="2" offsetX="2" scaleY=".75"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward"/>
      <move select="Swing Left"/>
      <move select="Counter Rotate Left 2 0" hands="left" offsetY="-1"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward"/>
      <move select="Swing Left" scaleX=".5"/>
      <move select="Counter Rotate Left 0 2" hands="left" offsetY="1"/>
    </path>
  </tam>

  <tam title="Interlocked Counter" from="Right-Hand Three Quarter Tag"
       formation="3/4 Tag">
    <path>
      <move select="Run Right" beats="5.5" offsetX="-3" offsetY="-2"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" beats="5.5" offsetX="-3" offsetY=".5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Run Right" beats="1.5" offsetX="2" offsetY="-.5" scaleY=".75"/>
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetX="-.5" offsetY="-1"/>
      <move select="Quarter Left" hands="right" offsetY="-.5"/>
      <move select="Quarter Left" hands="right" offsetX="-.5"/>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Quarter Right" beats="2" offsetX="1" offsetY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="3" scaleX=".5" scaleY="3"/>
      <move select="Lead Left" hands="left" scaleY=".5"/>
      <move select="Lead Left" hands="left" scaleX=".5"/>
      <move select="Forward 2"/>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1.5"/>
    </path>
  </tam>

</tamination>
