<tamination title="Criss Cross The Deucey">

  <tam title="Criss Cross the Deucey" from="Right-Hand Waves"
       formation="Ocean Waves RH GBGB">
    <path couples="4 2">
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75"/>
    </path>
    <path couples="4 2">
      <move select="Lead Right" beats="2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="2"/>
    </path>
    <path couples="3 1">
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.75"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY=".75"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="2"/>
      <move select="Extend Right" beats="6" scaleX="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Criss Cross the Deucey" from="Left-Hand Waves"
       formation="Ocean Waves LH GBGB">
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Extend Left" beats="6" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Run Left" beats="6" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="1.75"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Criss Cross the Deucey" from="T-Bones">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="0"/>
      <dancer gender="girl" y="1" x="1" angle="90"/>
      <dancer gender="boy" y="-1" x="1" angle="0"/>
      <dancer gender="girl" y="-3" x="1" angle="90"/>
    </formation>
    <path>
      <move select="Lead Right" beats="2" scaleX="2"/>
      <move select="Extend Right" beats="6" scaleX="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.75"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Lead Right" beats="3" scaleY=".75"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="2" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleY="1.75"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY=".75"/>
    </path>
  </tam>

  <tam title="Criss Cross the Deucey" from="Squared Mini-Waves"
       formation="Static MiniWaves RH">
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="2" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Left" beats="3" scaleX="2"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="2"/>
      <move select="Swing Left"/>
      <move select="Lead Left" beats="2" scaleX="3"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Left" beats="3" scaleX="2"/>
      <move select="Extend Right" beats="2"/>
    </path>
  </tam>

</tamination>
