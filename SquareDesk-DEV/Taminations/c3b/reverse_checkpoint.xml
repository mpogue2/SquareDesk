<tamination title="Reverse Checkpoint anything By anything">

  <tam title="Reverse Checkpoint Follow to a Diamond by Box Circulate"
       group="Reverse Checkpoint" formation="Two-Faced Lines RH">
    <path>
      <move select="Stand" beats="5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward 2" beats="1.5" offsetY="-.125" />
      <move select="Swing Right" scaleX=".875" scaleY=".875" />
      <move select="Lead Right" beats="2" offsetX="3" offsetY=".125" />
    </path>
    <path>
      <move select="Run Right" beats="4" />
      <move select="Forward 2" beats="2.5" />
    </path>
    <path>
      <move select="Stand" beats="5"/>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Reverse Checkpoint Hinge by Cast Off 3/4" group="Reverse Checkpoint"
       formation="Ocean Waves LH BGGB">
    <path>
      <move select="Dodge Left"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Dodge Left" hands="left" scaleY=".25"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Dodge Left" scaleY=".25"/>
    </path>
    <path>
      <move select="Dodge Left"/>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Swing Left" scaleX=".5" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Reverse Checkpoint Recycle by Touch 1/4" group="Reverse Checkpoint"
       formation="Double Pass Thru">
    <path couples="3 1">
      <move select="Stand" beats="2.5"/>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="2.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path couples="3 1">
      <move select="Stand" beats="2.5"/>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path couples="4 2">
      <move select="U-Turn Right" beats="3" offsetX="1" />
    </path>
    <path couples="4 2">
      <movement hands="none" beats="3" cx1="-1" cy1="2" cx2="1" cy2="4" x2="1" y2="4" cx3="1" cx4="2" cy4="2" x4="3" y4="2" />
      <move select="Dodge Left"/>
    </path>
  </tam>

</tamination>
