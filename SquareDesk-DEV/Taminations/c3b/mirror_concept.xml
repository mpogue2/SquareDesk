<tamination title="Mirror Concept">

  <tam formation="Static Square" group="Mirror"
       title="Mirror All 4 Couples Right and Left Thru">
    <path>
      <move beats="3.5" scaleX="3" select="Extend Left" />
      <move select="Forward 2" />
      <move select="Extend Right" />
      <move select="Beau Reverse Wheel" />
    </path>
    <path>
      <move beats="2" scaleX="2" scaleY="2" select="Extend Right" />
      <move select="Forward" />
      <move select="Lead Left" />
      <move beats="2" scaleY="2" select="Lead Right" />
      <move select="Belle Reverse Wheel" />
    </path>
    <path>
      <move beats="3.5" scaleX="3" select="Extend Left" />
      <move select="Forward 2" />
      <move select="Extend Right" />
      <move select="Beau Reverse Wheel" />
    </path>
    <path>
      <move beats="2" scaleX="2" scaleY="2" select="Extend Right" />
      <move select="Forward" />
      <move select="Lead Left" />
      <move beats="2" scaleY="2" select="Lead Right" />
      <move select="Belle Reverse Wheel" />
    </path>
  </tam>

  <tam title="Mirror Brace Thru" group="Mirror"
       from="Lines"
       fractions="3" >
     <formation>
      <dancer gender="boy" x="-2" y="3" angle="0"/>
      <dancer gender="girl" x="-2" y="1" angle="0"/>
      <dancer gender="boy" x="-2" y="-3" angle="0"/>
      <dancer gender="girl" x="-2" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Pull Right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="U-Turn Right" />
    </path>
    <path>
      <move select="Pull Right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="U-Turn Left" />
    </path>
    <path>
      <move select="Pull Right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Belle Reverse Wheel" />
    </path>
    <path>
      <move select="Pull Right" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".5" />
      <move select="Beau Reverse Wheel" />
    </path>
    <taminator>
    If you are uncertain about any of these Mirror animations, hold a
    mirror to the side and look at the animation through the mirror.
    You will see the &quot;normal&quot; version of the call.
    </taminator>
  </tam>

  <tam title="Mirror Pass the Ocean" group="Mirror"
       formation="Facing Couples">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" hands="right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward" beats=".5" />
      <move select="Lead Left" scaleX="2" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Mirror Pass the Sea" group="Mirror"
       formation="Facing Couples">
    <path>
      <move select="Extend Right" beats="2.5" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="3.5" scaleX="3" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2.5" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="3.5" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Mirror Recycle"
       from="Facing Couples"
       formation="Facing Couples"
       group="Mirror" >
    <path>
      <movement hands="none" beats="3" cx1="-.5" cy1="0" cx2="0" cy2="-4" x2="2" y2="-4"
                                     cx3="1" cx4="2" cy4="-2" x4="3" y4="-2" />
    </path>
    <path>
      <move select="U-Turn Left" beats="3" offsetX="2" />
    </path>
  </tam>

  <tam title="Mirror Right and Left Thru" group="Mirror"
       formation="Facing Couples">
    <path>
      <move select="Pull Right" scaleX="2" scaleY=".5" />
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Beau Reverse Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Pull Right" scaleX="2" scaleY=".5" />
      <move select="Extend Left" scaleX="2" scaleY=".5" />
      <move select="Belle Reverse Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Mirror Single Wheel" group="Mirror" formation="Facing Couples">
    <path>
      <move select="U-Turn Right" offsetX="-1" offsetY="-1"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="1" offsetY="1"/>
    </path>
  </tam>

  <tam title="Mirror Slide Thru"
       gender-specific="true" group="Mirror"
       formation="Facing Couples">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Quarter Right" beats="2" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tam title="Mirror Wheel and Deal"
       formation="Lines Facing Out" group="Mirror">
    <path>
      <move select="Run Left" beats="4" hands="left" scaleX="2" scaleY="2" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Left" beats="4" hands="right" offsetX="1" />
    </path>
    <path>
      <move select="U-Turn Right" beats="4" hands="left" offsetX="-1" />
    </path>
    <path>
      <move select="Run Right" beats="4" hands="right" scaleY="2" offsetX="-1" />
    </path>
  </tam>

  <tam title="Mirror Triple Star Thru" group="Mirror"
       from="Double Pass Thru"
       fractions="3;3" >
     <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
      <dancer gender="boy" x="-1" y="-1" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
    </formation>
    <path>
      <move select="Stand" beats="6" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="1.5" />
    </path>
    <path>
      <move select="Stand" beats="6" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY=".5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="1.5" />
    </path>
    <path>
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY=".5" />
      <move select="Extend Left" hands="right" beats="1.5" scaleY=".5" />
      <move select="Quarter Left" beats="1.5" offsetX="1" offsetY="-.5" />
      <move select="Extend Right" hands="left" beats="1.5" scaleY=".5" />
      <move select="Quarter Right" beats="1.5" offsetX="1" offsetY="-.5" />
    </path>
  </tam>

  <tamxref title="Mirror (C-3B) Lift Off" group="Mirror (C-3B)"
           xref-link="c3b/lift_off"
           xref-title="Mirror Lift Off"/>

  <tamxref title="Mirror (C-3B) Rip Off (from completed double pass thru)" group="Mirror (C-3B)"
           xref-link="c3b/rip_off"
           xref-from="Completed Double Pass Thru"
           xref-title="Mirror Rip Off"/>

  <tamxref title="Mirror (C-3B) Rip Off (from magic columns)" group="Mirror (C-3B)"
           xref-link="c3b/rip_off"
           xref-from="Magic Columns"
           xref-title="Mirror Rip Off"/>

  <tamxref title="Mirror (C-3B) Swap the Top" group="Mirror (C-3B)"
           xref-link="c3b/swap_the_top"
           xref-title="Mirror Swap the Top"/>

  <tamxref title="Mirror (C-3B) Cross Swap the Top" group="Mirror (C-3B)"
           xref-link="c3b/swap_the_top"
           xref-title="Mirror Cross Swap the Top"/>

</tamination>
