<tamination title="Trapezoid Formation">

  <tam title="Trapezoid Brace Thru" formation="Normal Lines" group="Trapezoid">
    <path>
      <move select="Forward 2"/>
      <move select="Hinge Right"/>
      <move select="Lead Left" beats="2"/>
      <move select="Beau Wheel"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Hinge Right"/>
      <move select="Forward 2"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Hinge Right"/>
      <move select="Lead Left" beats="2"/>
      <move select="U-Turn Left"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Hinge Right"/>
      <move select="Forward 2"/>
      <move select="Belle Wheel"/>
    </path>
  </tam>

  <tam title="Trapezoid Circulate" formation="Two-Faced Lines RH" group="Trapezoid">
    <path>
      <move select="Extend Right" beats="2" scaleX="1.5"/>
      <move select="Extend Right" beats="2" scaleX="2.5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2.5"/>
      <move select="Extend Left" beats="2" scaleX="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Trapezoid Couple Up" group="Trapezoid">
    <formation>
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="-3" x="1" angle="270"/>
      <dancer gender="boy" y="-1" x="1" angle="270"/>
    </formation>
    <path>
      <move select="Forward 2"/>
      <move select="U-Turn Right"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2"/>
      <move select="Forward 3"/>
      <move select="U-Turn Right" offsetX="1" offsetY="-1"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right"/>
    </path>
  </tam>
</tamination>
