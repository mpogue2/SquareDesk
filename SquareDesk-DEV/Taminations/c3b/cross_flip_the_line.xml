<tamination title="Cross Flip The Line">

  <tam title="Cross Flip the Line" from="Right-Hand Two-Faced Line"
       formation="Two-Faced Line RH" fractions="4.5;1;1">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 2" beats="3"/>
      <move select="Forward"/>
      <move select="Extend Right"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Run Right" scaleY=".5" offsetX="2"/>
      <move select="Extend Left"/>
      <move select="Forward"/>
      <move select="Extend Right"/>
    </path>
  </tam>

  <tam title="Cross Flip the Line" from="Left-Hand Two-Faced Line"
       formation="Two-Faced Line LH" fractions="4.5;1;1">
    <path>
      <move select="Lead Left"/>
      <move select="Run Left" scaleY=".5" offsetX="2"/>
      <move select="Extend Right"/>
      <move select="Forward"/>
      <move select="Extend Left"/>
    </path>
    <path>
      <move select="Lead Left"/>
      <move select="Forward 2" beats="3"/>
      <move select="Forward"/>
      <move select="Extend Left"/>
      <move select="Forward"/>
    </path>
  </tam>

</tamination>
