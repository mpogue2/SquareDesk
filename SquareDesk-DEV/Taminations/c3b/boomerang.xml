<tamination title="Boomerang">

  <tam title="Boomerang" from="Right-Hand Box" fractions="3">
    <formation>
      <dancer gender="boy" y="2" x="1" angle="270"/>
      <dancer gender="girl" y="-2" x="1" angle="270"/>
    </formation>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".25" beats="1.5"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleX="2" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Run Left" offsetX="2" />
    </path>
  </tam>

  <tam title="Boomerang" from="Left-Hand Box"
       formation="Box LH" fractions="3">
    <path>
      <move select="Run Right" offsetX="-2" />
      <move select="Run Right" offsetX="2" />
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".25" beats="1.5"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleX="2" scaleY=".25" beats="1.5"/>
    </path>
  </tam>

  <tam title="Boomerang" from="T-Bone Box" fractions="3">
    <formation>
      <dancer gender="boy" y="1" x="1" angle="0"/>
      <dancer gender="girl" y="-1" x="1" angle="90"/>
    </formation>
    <path>
      <move select="Run Left" offsetX="-1" />
      <move select="Run Left" offsetX="1" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".25" beats="1.5"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" scaleY=".25" beats="1.5"/>
    </path>
  </tam>

  <tam title="Boomerang" from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru">
    <path>
      <move select="Run Right" beats="3" offsetX="-1" />
      <move select="Run Right" beats="3" offsetX="1" />
    </path>
    <path>
      <move select="Run Left" beats="3" offsetX="-1" />
      <move select="Run Left" beats="3" offsetX="1" />
    </path>
    <path>
      <move select="Forward 2" beats="3" hands="left" />
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Forward 2" beats="3" hands="right" />
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Couples Twosome Boomerang" group=" "
       formation="Two-Faced Lines RH">
    <path>
      <move select="Extend Right" scaleX="2" scaleY="1.5" beats="1.5"/>
      <move select="Run Right" scaleX=".5"/>
      <move select="Extend Left" scaleX="2" scaleY=".5" beats="1.5"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="2" scaleY=".5" beats="1.5"/>
      <move select="Run Right" scaleX=".5"/>
      <move select="Extend Left" scaleX="2" scaleY="1.5" beats="1.5"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Run Left" offsetX="2" />
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Run Left" offsetX="2" />
    </path>
  </tam>

  <tam title="Tandem Twosome Boomerang" group=" "
       formation="Column RH GBGB" fractions="3">
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Run Left" offsetX="2" />
    </path>
    <path>
      <move select="Run Left" offsetX="-2" />
      <move select="Run Left" offsetX="2" />
    </path>
    <path>
      <move select="Extend Right" scaleX="2.5" scaleY=".25" beats="1.5"/>
      <move select="Run Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" scaleX="2.5" scaleY=".25" beats="1.5"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="3" scaleY=".25" beats="1.5"/>
      <move select="Run Right" scaleX=".5" scaleY=".75" />
      <move select="Extend Left" scaleX="3" scaleY=".25" beats="1.5"/>
    </path>
  </tam>

</tamination>
