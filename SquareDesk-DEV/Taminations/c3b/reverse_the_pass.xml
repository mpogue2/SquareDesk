<tamination title="Reverse The Pass">

  <tam title="Reverse the Pass" from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru" parts="3;3">
    <path>
      <move select="Flip Left"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Stand" hands="left" beats="3"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Stand" hands="right" beats="3"/>
    </path>
    <path>
      <move select="Stand" hands="left" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Stand" hands="right" beats="3"/>
      <move select="Extend Left" beats="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleY=".5"/>
      <move select="Run Right"/>
    </path>
  </tam>

  <tam title="Reverse the Pass" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH" parts="3;4">
    <path>
      <move select="Stand" hands="right" beats="3"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Stand" hands="left" beats="3"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Stand" hands="left" beats="3"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5"/>
      <move select="Stand" hands="right" beats="3"/>
    </path>
  </tam>

</tamination>
