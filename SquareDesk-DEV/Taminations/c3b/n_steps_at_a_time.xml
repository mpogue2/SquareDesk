<tamination title="n Steps At A Time">

  <tam title="1 Step at a Time" group=" " parts="3;3">
    <formation name="Column RH GBGB">
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="-3" x="1" angle="270"/>
      <dancer gender="boy" y="-1" x="1" angle="270"/>
    </formation>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2" beats="3"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="2 Steps at a Time" group=" " parts="3;3">
    <formation name="Column RH GBGB">
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="-3" x="1" angle="270"/>
      <dancer gender="boy" y="-1" x="1" angle="270"/>
    </formation>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 2" beats="3"/>
      <move select="Quarter Left" hands="left" offsetX="1"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="3" offsetX="1" offsetY="1"/>
      <move select="Forward 2" beats="3"/>
      <move select="BackHinge Right" hands="right"/>
    </path>
  </tam>

  <tam title="3 Steps at a Time" group=" " parts="3;3">
    <formation name="Column RH GBGB">
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="-3" x="1" angle="270"/>
      <dancer gender="boy" y="-1" x="1" angle="270"/>
    </formation>
    <path>
      <move select="U-Turn Left" beats="3" offsetX="2" offsetY="1"/>
      <move select="Forward" beats="3"/>
      <move select="BackHinge Right" hands="right" beats="2" scaleX="2"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Swing Right"/>
      <move select="Quarter Right" beats="2"/>
    </path>
    <path>
      <move select="Run Left" scaleY="1.5" offsetX="-2"/>
      <move select="Forward" beats="3"/>
      <move select="Hinge Left" beats="2" scaleX="2"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Forward" beats="3"/>
      <move select="Quarter Left" beats="2" hands="both"/>
    </path>
  </tam>

  <tam title="4 Steps at a Time" group=" " parts="3;0">
    <formation name="Column RH GBGB">
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="boy" y="3" x="1" angle="270"/>
      <dancer gender="girl" y="-3" x="1" angle="270"/>
      <dancer gender="boy" y="-1" x="1" angle="270"/>
    </formation>
    <path>
      <move select="U-Turn Left" beats="3" offsetX="1" offsetY="1"/>
      <move select="Quarter Left" beats="3" hands="both" offsetX="-1"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="3" offsetX="3"/>
      <move select="BackHinge Right" hands="right" beats="3" scaleX="3" scaleY="2" offsetY="1"/>
    </path>
    <path>
      <move select="Run Left" scaleY="1.5" offsetX="-3"/>
      <move select="Hinge Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="-1"/>
      <move select="Hinge Left" hands="both" beats="3" />
    </path>
  </tam>

</tamination>
