<tamination title="Diagonal Box Concept">

  <tam title="Diagonal Box Circulate" formation="Ocean Waves RH BGBG" group="Diagonal Box">
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY="2"/>
      <move select="Hinge Right"/>
      <move select="Lead Left" beats="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1.5"/>
      <move select="Hinge Right"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4.5"/>
    </path>
  </tam>

  <tam title="Diagonal Box Counter Rotate" formation="Ocean Waves RH GBGB" group="Diagonal Box">
    <path couples="4 2">
      <move select="Lead Right" beats="5" scaleX="3" scaleY="4"/>
    </path>
    <path couples="4 2">
      <move select="Counter Rotate Right 0 -2" beats="5" offsetX="-1"/>
    </path>
    <path couples="3 1">
      <move select="Lead Left" beats="2" scaleY="2"/>
      <move select="Run Right" offsetX="2"/>
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Right 0 -2" beats="5" offsetX="-1"/>
    </path >
  </tam>

  <tam title="Diagonal Box Scoot Back"  formation="Ocean Waves RH BGBG" group="Diagonal Box">
    <path>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY="2"/>
      <move select="Cast Right"/>
      <move select="Lead Left" beats="1.5"/>
    </path>
    <path>
      <move select="Run Right" beats="4.5"/>
    </path>
    <path>
      <move select="Lead Left" beats="1.5"/>
      <move select="Cast Right"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4.5"/>
    </path>
  </tam>

</tamination>
