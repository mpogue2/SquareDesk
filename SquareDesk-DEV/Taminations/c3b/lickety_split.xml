<tamination title="Lickety Split">

  <tam title="Lickety Split" from="Right-Hand Waves" formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="3" offsetX="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="3" offsetX="1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1"/>
    </path>
  </tam>

  <tam title="Lickety Split" from="Left-Hand Waves" formation="Ocean Waves LH BGGB">
    <path>
      <move select="Run Left" offsetX="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3" offsetX="-1"/>
    </path>
    <path>
      <move select="Forward 3"/>
    </path>
  </tam>

  <tam title="Lickety Split" from="Right-Hand Columns" formation="Column RH GBGB">
    <path>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" beats="3"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tam title="Lickety Split" from="Left-Hand Columns" formation="Column LH GBGB">
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" hands="left" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" hands="left" beats="3"/>
    </path>
    <path>
      <move select="Run Left"/>
    </path>
  </tam>

  <tam title="Lickety Split" from="T-Bones 1">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="0"/>
      <dancer gender="girl" y="1" x="1" angle="270"/>
      <dancer gender="girl" y="-1" x="1" angle="270"/>
      <dancer gender="boy" y="-3" x="1" angle="180"/>
    </formation>
    <path>
      <move select="Run Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>

  <tam title="Lickety Split" from="T-Bones 2">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="90"/>
      <dancer gender="girl" y="1" x="1" angle="0"/>
      <dancer gender="girl" y="-1" x="1" angle="180"/>
      <dancer gender="boy" y="-3" x="1" angle="90"/>
    </formation>
    <path>
      <move select="Run Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
  </tam>
</tamination>
