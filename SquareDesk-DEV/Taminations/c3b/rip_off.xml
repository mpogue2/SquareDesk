<tamination title="Rip Off">

  <tam title="Rip Off" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
    </path>
  </tam>

  <tam title="Rip Off" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Run Right" offsetX="-2"/>
      <move select="Run Right" offsetX="2"/>
    </path>
    <path>
      <move select="Dodge Left" beats="6"/>
    </path>
  </tam>

  <tam title="Rip Off" from="Facing Couples" formation="Facing Couples">
    <path>
      <move select="Forward 4"/>
    </path>
    <path>
      <move select="Dodge Left" beats="4"/>
    </path>
  </tam>

  <tam title="Rip Off" from="Couples Facing Out" formation="Couples Facing Out">
    <path>
      <move select="Run Right" offsetX="-2"/>
      <move select="Run Right" offsetX="2"/>
    </path>
    <path>
      <move select="Run Right" beats="6"/>
    </path>
  </tam>

  <tam title="Rip Off" from="Completed Double Pass Thru" formation="Completed Double Pass Thru">
    <path couples="4 1">
      <move select="Run Right" offsetX="-1"/>
      <move select="Run Right" offsetX="1"/>
    </path>
    <path couples="4 1">
      <move select="Run Right" beats="6"/>
    </path>
    <path couples="2 3">
      <move select="Dodge Left" beats="6"/>
    </path>
    <path couples="2 3">
      <move select="Forward 2" beats="6"/>
    </path>
  </tam>

  <tam title="Rip Off" from="Magic Columns">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Run Right" beats="6"/>
    </path>
    <path>
      <move select="Run Right" offsetX="-1"/>
      <move select="Run Right" offsetX="1"/>
    </path>
    <path>
      <move select="Dodge Left" beats="6"/>
    </path>
    <path>
      <move select="Forward 2" beats="6"/>
    </path>
  </tam>

  <tam title="Mirror Rip Off" from="Completed Double Pass Thru" formation="Completed Double Pass Thru">
    <path couples="4 1">
      <move select="Run Left" beats="6"/>
    </path>
    <path couples="4 1">
      <move select="Run Left" offsetX="-1"/>
      <move select="Run Left" offsetX="1"/>
    </path>
    <path couples="2 3">
      <move select="Forward 2" beats="6"/>
    </path>
    <path couples="2 3">
      <move select="Dodge Right" beats="6"/>
    </path>
  </tam>

  <tam title="Mirror Rip Off" from="Magic Columns">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Run Left" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="6" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="6"/>
    </path>
    <path>
      <move select="Dodge Right" beats="6"/>
    </path>
  </tam>

</tamination>
