<tamination title="Stingy | Generous anything">

  <tam title="Generous Dixie Style to a Wave" group="Generous"
       formation="Double Pass Thru" fractions="2">
    <path>
      <move select="Stand" beats="2"/>
      <move select="Forward" beats="2"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Forward" beats="2"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleY="2"/>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="Generous Lockit" group="Generous"
    formation="Tidal Wave RH BGGB">
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
    <path>
      <move select="Hinge Left" beats="2" scaleY=".5" />
      <move select="Hinge Left" beats="2"/>
    </path>
    <path>
      <move select="Hinge Left" beats="2" scaleY=".5" />
      <move select="Hinge Left" beats="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="1.5" />
    </path>
  </tam>

  <tam title="Generous Mix" group="Generous"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       fractions="3" >
    <path>
      <move select="Dodge Right" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Run Left" scaleY="2" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Generous Reset" group="Generous" fractions="3;3;3"
       formation="Column RH GBGB">
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Swing Left"/>
      <move select="U-Turn Right" beats="3" offsetX="-2" offsetY="-.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Swing Left"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Left"/>
      <move select="U-Turn Right" beats="3" offsetX="-2" offsetY="-.5"/>
      <move select="Hinge Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Generous Six-Two Acey Deucey" group="Generous"
       formation="Hourglass RH BP">
    <path>
      <move select="Lead Right" beats="4" scaleY="3" />
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="3" />
    </path>
    <path>
      <move select="Forward 4" />
    </path>
    <path>
      <move select="Cast Right" beats="4"/>
    </path>
  </tam>

  <tam title="Generous Spin the Windmill Forward" group="Generous"
       formation="Ocean Waves RH GBBG">
    <path>
      <move select="Forward 4" beats="5"/>
      <move select="Run Right" beats="7" scaleX="2.5" scaleY="3"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Swing Right"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Cast Left"/>
      <move select="Stand" beats="3"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Run Right" beats="7" scaleX="2.5" scaleY="3"/>
      <move select="Forward 4" beats="5"/>
    </path>
  </tam>

  <tam title="Generous Scoot Back" group="Generous"
       formation="Quarter Tag">
    <path>
      <move select="Extend Left" beats="2" scaleY="1.75"/>
      <move select="Cast Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Right" beats="2" scaleY="1.75"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY=".25"/>
      <move select="Cast Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25"/>
      <move select="Cast Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="2" scaleY=".25"/>
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".25"/>
      <move select="Cast Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".25"/>
    </path>
  </tam>

  <tam title="Generous Sets in Motion" group="Generous"
       formation="Diamonds Facing Girl Points">
    <path>
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Quarter Left" offsetX="-.5" offsetY="1"/>
      <move select="Forward 3" />
      <move select="Flip Left" scaleY=".25" />
    </path>
    <path>
      <move select="Run Left" beats="5.5" scaleX="2" scaleY="3" />
      <move select="Forward 2" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Quarter Right" />
      <move select="Stand" beats="2" />
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Forward 2" />
      <move select="Flip Right" beats="3" offsetX="2" offsetY=".5" />
    </path>
    <path>
      <move select="Forward 4" beats="5.5"/>
      <move select="Run Left" beats="4" />
      <move select="Forward 2" />
    </path>
  </tam>

  <tamxref title="Generous Swing Thru" group="Generous"
           xref-link="a1/three_quarter_thru"
           xref-title="3/4 Thru"
           xref-from="Ocean Waves"/>


  <tam title="Stingy Cut the Diamond" group="Stingy"
       formation="Diamonds RH Girl Points" >
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Hinge Right" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
    </path>
    <path>
      <move select="Dodge Right" />
      <move select="Hinge Right" />
    </path>
  </tam>

  <tam title="Stingy Follow Your Neighbor" group="Stingy"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"  offsetY="-.25" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="2" />
      <move select="Run Right" scaleY=".5" />
    </path>
    <path>
      <move select="Forward 2"  offsetY="-.25" />
      <move select="Hinge Right" scaleX=".75" scaleY=".75" />
      <move select="Hinge Right" offsetY=".25" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="2" />
      <move select="Run Right" scaleY=".5" />
    </path>
  </tam>

  <tam title="Stingy Spin the Top" group="Stingy"
       formation="Box RH" fractions="2">
    <path>
      <move select="Hinge Right" beats="2"/>
      <move select="Cast Left" beats="4"/>
    </path>
    <path>
      <move select="Hinge Right" beats="2"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
  </tam>

  <tam title="Stingy Split Square Chain Thru" group="Stingy"
       fractions="1;2;6" >
     <formation>
      <dancer gender="boy" x="-1" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="3" angle="180"/>
      <dancer gender="boy" x="-1" y="1" angle="90"/>
      <dancer gender="girl" x="1" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Right" beats="2" scaleY="1.5" />
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Pull Left" scaleY=".5" />
      <move select="Lead Left" beats="2" scaleX="3" scaleY=".5" />
      <move select="Hinge Left" />
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Extend Left" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Forward" beats="2" />
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
    <path>
      <move select="Stand" />
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Hinge Left" />
      <move select="Stand" beats="3" />
      <move select="Swing Left" />
      <move select="Forward" />
    </path>
  </tam>

  <tamxref title="Stingy Swing Thru" group="Stingy"
           xref-link="a1/quarter_thru"
           xref-title="Quarter Thru"
           xref-from="Right-Hand Waves"/>

  <tam title="Finally Stingy Spin the Top" group=" "
       formation="Facing Couples" fractions="3;3">
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Swing Right"/>
      <move select="Swing Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Swing Right"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3"/>
    </path>
  </tam>

</tamination>
