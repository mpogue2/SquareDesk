<tamination title="Flip Your Lid">

  <tam title="Flip Your Lid" from="Right-Hand Quarter Tag">
    <formation>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="boy" x="3" y="1" angle="180"/>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Forward 3"/>
      <move select="Swing Right" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="1.5" scaleY=".25"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Run Right" beats="5" scaleY="1.875" offsetX="1.5"/>
    </path>
    <path>
      <move select="Extend Right" scaleX="1.5" scaleY=".25"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Left" beats="5" scaleX="1.5" scaleY=".25"/>
    </path>
    <path>
      <move select="Run Right" beats="4"/>
      <move select="Run Right" beats="5" offsetX="3"/>
    </path>
  </tam>

  <tam title="Flip Your Lid" from="Left-Hand Quarter Tag" formation="Quarter Tag LH">
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY=".25"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75"/>
      <move select="Run Left" beats="5" scaleY="1.875" offsetX="1.5"/>
    </path>
    <path>
      <move select="Forward 3"/>
      <move select="Swing Left" beats="5" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="1.5" scaleY=".25"/>
      <move select="Swing Left" scaleX=".75" scaleY=".75"/>
      <move select="Extend Right" beats="5" scaleX="1.5" scaleY=".25"/>
    </path>
    <path>
      <move select="Run Left" beats="4"/>
      <move select="Run Left" beats="5" offsetX="3"/>
    </path>
  </tam>

</tamination>
