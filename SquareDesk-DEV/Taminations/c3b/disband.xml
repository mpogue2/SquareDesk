<tamination title="Disband">

  <tam title="Disband"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB" parts="3.5">
    <path>
      <move select="Forward 2" />
      <move select="Quarter Left" hands="left" offsetX="1" />
      <move select="Run Left"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3.5" hands="left" offsetX="-1"/>
      <move select="Flip Right" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3.5" hands="left" offsetX="1"/>
      <move select="Flip Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Run Left" beats="2" offsetX="-2" offsetY="-1" />
      <move select="Hinge Left" />
      <move select="Forward 5"/>
    </path>
  </tam>

  <tam title="Disband"
       from="Left-Hand Waves"
       formation="Ocean Waves LH BGGB"
       parts="3.5" >
    <path couples="2 4">
      <move select="Run Right" beats="2" offsetX="-2" offsetY="1" />
      <move select="Hinge Right" />
      <move select="Forward 5"/>
    </path>
    <path couples="2 4">
      <move select="Counter Rotate Right 2 0" beats="3.5" hands="right" offsetX="1"/>
      <move select="Flip Left" offsetX="-1"/>
    </path>
    <path couples="3 1">
      <move select="Counter Rotate Right 0 -2" beats="3.5" hands="right" offsetX="-1"/>
      <move select="Flip Left" offsetX="1"/>
    </path>
    <path couples="3 1">
      <move select="Forward 2" />
      <move select="Quarter Right" hands="right" offsetX="1" />
      <move select="Run Right"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Disband"
       from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH" parts="3.5">
    <path>
      <move select="Forward 2" />
      <move select="Quarter Left" hands="left" offsetX="1" />
      <move select="Run Left"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="3.5" hands="right" offsetX="1"/>
      <move select="Flip Left" offsetX="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="3.5" hands="right" offsetX="-1"/>
      <move select="Flip Left" offsetX="1"/>
    </path>
    <path>
      <move select="Run Left" beats="2" offsetX="-2" offsetY="-1" />
      <move select="Hinge Left" />
      <move select="Forward 5"/>
    </path>
  </tam>

  <tam title="Disband"
       from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH"
       parts="3.5" >
    <path>
      <move select="Run Right" beats="2" offsetX="-2" offsetY="1" />
      <move select="Hinge Right" />
      <move select="Forward 5"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="3.5" hands="left" offsetX="-1"/>
      <move select="Flip Right" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="3.5" hands="left" offsetX="1"/>
      <move select="Flip Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Quarter Right" hands="right" offsetX="1" />
      <move select="Run Right"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Disband" from="Right-Hand Columns"
       formation="Column RH GBGB" parts="4">
    <path>
      <move select="Run Left" beats="3" scaleY="1.25" offsetX="-3"/>
      <move select="Hinge Left" beats="1" scaleY=".5"/>
      <move select="Forward 5"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="4" hands="right"/>
      <move select="Flip Left" offsetX="1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="4" hands="right"/>
      <move select="Flip Left" offsetX="-1"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Left" beats="1" scaleY=".5"/>
      <move select="Run Left"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Disband" from="Left-Hand Columns" parts="4">
    <formation>
      <dancer gender="boy" y="3" x="1" angle="90"/>
      <dancer gender="girl" y="1" x="1" angle="90"/>
      <dancer gender="boy" y="3" x="-1" angle="270"/>
      <dancer gender="girl" y="1" x="-1" angle="270"/>
    </formation>
    <path>
      <move select="Run Right" beats="3" scaleY="1.25" offsetX="-3"/>
      <move select="Hinge Right" beats="1" scaleY=".5"/>
      <move select="Forward 5"/>
    </path>
    <path>
      <move select="Counter Rotate Left 0 2" beats="4" hands="left"/>
      <move select="Flip Right" offsetX="1"/>
    </path>
    <path>
      <move select="Extend Right" beats="3" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Right" beats="1" scaleY=".5"/>
      <move select="Run Right"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Counter Rotate Left 2 0" beats="4" hands="left"/>
      <move select="Flip Right" offsetX="-1"/>
    </path>
  </tam>

</tamination>
