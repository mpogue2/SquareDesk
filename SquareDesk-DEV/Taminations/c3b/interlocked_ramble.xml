<tamination title="Interlocked Ramble">

  <tam title="Interlocked Ramble" from="Right-Hand 3/4 Lines"
       formation="3/4 Lines RH" parts="4">
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
      <move select="Lead Right" beats="2" scaleY="2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1" offsetY="2" />
      <move select="Forward" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="2"/>
      <move select="Quarter Right" beats="2" offsetX="1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="2"/>
      <move select="Quarter Right" beats="2" offsetX="1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
  </tam>

  <tam title="Interlocked Ramble" from="Left-Hand 3/4 Lines" parts="4">
    <formation name="3/4 Lines LH">
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
      <dancer gender="boy" x="0" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Quarter Right" beats="2" offsetY="-1" />
      <move select="Lead Right" beats="2" scaleY="2" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1" offsetY="2" />
      <move select="Forward" />
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Quarter Left" beats="2" offsetX="1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Quarter Left" offsetX="1" offsetY="-.5"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Quarter Left" beats="2" offsetX="1"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Lead Right" scaleY=".5"/>
    </path>
  </tam>

</tamination>
