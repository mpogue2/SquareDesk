<tamination title="Reflected Concept">

  <tam title="Reflected Flip the Line" from="Right-Hand Wave" formation="Wave RH" group=" ">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 4" beats="3"/>
      <move select="Counter Rotate Right -1 -3"/>
      <move select="Extend Right"/>
    </path>
    <path>
      <move select="Run Right"/>
      <move select="Lead Right"/>
      <move select="Counter Rotate Right 3 1"/>
      <move select="Forward 2"/>
      <move select="Extend Right"/>
    </path>
  </tam>

  <tam title="Reflected Tag the Line" formation="Two-Faced Lines RH" group=" ">
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Counter Rotate Right 2 0"/>
      <move select="Forward"/>
      <move select="Extend Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Counter Rotate Right 0 -2"/>
      <move select="Extend Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Counter Rotate Right 0 -2"/>
      <move select="Extend Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward"/>
      <move select="Counter Rotate Right 2 0"/>
      <move select="Forward"/>
      <move select="Extend Right" scaleX=".5"/>
    </path>
  </tam>

</tamination>
