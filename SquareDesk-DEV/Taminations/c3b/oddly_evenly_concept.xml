<tamination title="Oddly | Evenly Concept">

  <tam title="Oddly Once Removed Reset" group="Oddly" fractions="4;2;4">
    <formation>
      <dancer gender="boy" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="-1" x="-1" angle="90"/>
      <dancer gender="girl" y="-3" x="-1" angle="90"/>
    </formation>
    <path>
      <move select="Run Left" beats="4" offsetX="-1"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Extend Right" beats="4" scaleX="2" scaleY=".5"/>
      <move select="Hinge Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" beats="4" offsetX="-3"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Extend Left" beats="4" scaleX="2" scaleY="1.5"/>
      <move select="Hinge Left" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Run Right" beats="4" scaleY=".25" offsetX="-2"/>
      <move select="Hinge Right" beats="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward" beats="4"/>
      <move select="Hinge Left" beats="2"/>
      <move select="Run Left" beats="4" scaleY="0.75" offsetX="-2"/>
      <move select="Hinge Right" beats="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Oddly Tandem Remake" group="Oddly" fractions="3;3">
    <formation>
      <dancer gender="boy" y="3" x="-1" angle="90"/>
      <dancer gender="girl" y="1" x="-1" angle="90"/>
      <dancer gender="boy" y="-1" x="-1" angle="90"/>
      <dancer gender="girl" y="-3" x="-1" angle="90"/>
    </formation>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right" offsetY="-1"/>
      <move select="Stand" beats="3"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right" offsetY="1"/>
      <move select="Stand" beats="3"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right" offsetY="-1"/>
      <move select="Swing Left"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" beats="3" hands="right" offsetY="1"/>
      <move select="Swing Left"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
      <move select="Counter Rotate Right 0 -2" beats="3" hands="right"/>
    </path>
  </tam>

  <tam title="Oddly Tandem Swing and Mix" group="Oddly" fractions="4;4"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" hands="right" offsetY="1"/>
      <move select="Run Left" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetY="-1"/>
      <move select="Dodge Right" beats="4"/>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetY="-1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" hands="right" offsetY="1"/>
      <move select="Dodge Right" beats="4"/>
      <move select="Counter Rotate Right 2 0" hands="right" offsetX="1"/>
      <move select="Counter Rotate Right 2 0" hands="right" offsetY="1"/>
    </path>
    <path>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetX="-1"/>
      <move select="Counter Rotate Right 0 -2" hands="right" offsetY="-1"/>
      <move select="Run Left" beats="4" scaleY="2"/>
    </path>
  </tam>

</tamination>
