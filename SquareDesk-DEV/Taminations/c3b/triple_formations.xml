<tamination title="Triple formations Working direction Concept">

  <tam title="Triple Lines Working Forward Circulate"
       group="Triple Lines Working Forward">
    <formation>
      <dancer gender="boy" x="3" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="1" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
    </path>
    <path>
      <move select="Forward 3" beats="4" hands="right"/>
    </path>
    <path>
      <move select="Forward 3" beats="4" hands="left"/>
    </path>
  </tam>

  <tam title="Triple Lines Working Forward Link Up"
       group="Triple Lines Working Forward">
    <formation>
      <dancer gender="boy" x="3" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="-3" angle="0"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Hinge Right" beats="2.5" scaleX="2" scaleY="2"/>
      <move select="Quarter Right"/>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Quarter Right" beats="2.5" hands="left"/>
      <move select="Quarter Right"/>
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Swing Left"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward" beats="2"/>
      <move select="Swing Left"/>
      <move select="Forward" beats="2"/>
    </path>
  </tam>

  <tam title="Triple Lines Working Forward Load the Boat"
       group="Triple Lines Working Forward">
    <formation>
      <dancer gender="boy" x="0" y="-3" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="-3" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Lead Right" beats="4" scaleX="4" scaleY="3"/>
      <move select="Lead Right" beats="4" scaleX="4" scaleY="3"/>
      <move select="Lead Right"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Forward" beats="1.5" scaleX="1.5"/>
      <move select="Quarter Left"/>
      <move select="Flip Left" offsetX="-.5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Quarter Right"/>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Forward" beats="1.5" scaleX="1.5"/>
      <move select="Quarter Right"/>
      <move select="Run Right" offsetX=".5"/>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Triple Lines Working Backward Chase Right"
       group="Triple Lines Working Backward">
    <formation>
      <dancer gender="boy" x="3" y="-1" angle="0"/>
      <dancer gender="girl" x="3" y="-3" angle="0"/>
      <dancer gender="boy" x="0" y="-1" angle="0"/>
      <dancer gender="girl" x="0" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Run Right" beats="2.5" />
      <move select="Forward 3" beats="2.5" />
    </path>
    <path>
      <move select="U-Turn Right" beats="1.5" offsetX="-1" />
      <move select="Forward" />
      <move select="Run Right" beats="2.5" offsetX="1" />
    </path>
    <path>
      <move select="Run Right" beats="2.5" />
      <move select="Forward 3" beats="2.5" />
    </path>
    <path>
      <move select="Run Right" beats="2.5" />
      <move select="Forward 3" beats="2.5" />
    </path>
  </tam>

  <tam title="Triple Lines Working Backward Vertical Tag the Line"
       group="Triple Lines Working Backward">
    <formation>
      <dancer gender="boy" x="3" y="0" angle="270"/>
      <dancer gender="girl" x="1" y="0" angle="270"/>
      <dancer gender="boy" x="-1" y="2" angle="270"/>
      <dancer gender="girl" x="-3" y="2" angle="270"/>
    </formation>
    <path>
      <move select="Flip Right" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="U-Turn Left" beats="2" offsetX="-2"/>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Stand" beats="4"/>
      <move select="Forward"/>
    </path>
    <path>
      <move select="Stand" beats="2"/>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward"/>
    </path>
  </tam>

  <tam title="Triple Boxes Working Left Trade Circulate"
       group="Triple Boxes Working Left">
    <formation>
      <dancer gender="boy" x="2" y="5" angle="180"/>
      <dancer gender="girl" x="2" y="3" angle="0"/>
      <dancer gender="boy" x="2" y="1" angle="180"/>
      <dancer gender="girl" x="2" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="4" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Left" beats="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Triple Boxes Working Left Regroup"
       group="Triple Boxes Working Left">
    <formation>
      <dancer gender="boy" x="1" y="5" angle="0"/>
      <dancer gender="girl" x="1" y="3" angle="0"/>
      <dancer gender="boy" x="1" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Quarter Left"/>
      <move select="Flip Left"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Flip Left"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Quarter Right"/>
      <move select="Run Right" scaleX=".5"/>
      <move select="Extend Left" beats="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="Triple Boxes Working Right Trade Circulate"
       group="Triple Boxes Working Right">
    <formation>
      <dancer gender="boy" x="2" y="5" angle="180"/>
      <dancer gender="girl" x="2" y="3" angle="0"/>
      <dancer gender="boy" x="2" y="1" angle="180"/>
      <dancer gender="girl" x="2" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="4" scaleX="4" scaleY="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Right" beats="4" scaleY="2"/>
    </path>
  </tam>

  <tam title="Triple Boxes Working Right Turn and Deal"
       group="Triple Boxes Working Right">
    <formation>
      <dancer gender="boy" x="2" y="1" angle="0"/>
      <dancer gender="girl" x="2" y="-1" angle="180"/>
      <dancer gender="boy" x="2" y="-3" angle="180"/>
      <dancer gender="girl" x="2" y="-5" angle="180"/>
    </formation>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
  </tam>

</tamination>
