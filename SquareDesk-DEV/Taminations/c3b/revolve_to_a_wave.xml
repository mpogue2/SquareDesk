<tamination title="Revolve To A Wave">

  <tam title="Revolve to a Wave" from="Right-Hand Box" formation="Box RH">
    <path>
      <move select="U-Turn Right" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX=".5" scaleY="2"/>
      <move select="Lead Right" beats="2" scaleX="2" scaleY="2.5"/>
    </path>
  </tam>

  <tam title="Revolve to a Wave" from="Left-Hand Box" formation="Box LH">
    <path>
      <move select="Quarter Right" beats="1" offsetY="-1"/>
      <move select="Run Right" scaleY="1.5"/>
      <move select="Lead Right" beats="1" />
    </path>
    <path>
      <move select="Extend Left" beats="5" scaleX="2" scaleY="4"/>
    </path>
  </tam>

</tamination>
