<tamination title="Loop and Tag">

  <tam title="Loop and Tag" from="Right-Hand Box" formation="Box RH"
       fractions="6.5;2;2">
    <path>
      <move select="Forward 3" beats="2"/>
      <move select="Run Left" />
      <move select="Quarter Left" offsetX="1"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Lead Left" beats="2" scaleY="2"/>
      <move select="Extend Left" beats="1.5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2"/>
    </path>
  </tam>

  <tam title="Loop and Tag" from="Left-Hand Box" formation="Box LH"
       fractions="6.5;2;2">
    <path couples="1 3">
      <move select="Run Right" offsetX="-1"/>
      <move select="Lead Right" beats="2" scaleY="2"/>
      <move select="Extend Left" beats="1.5"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2"/>
    </path>
    <path couples="3 1">
      <move select="Forward 3" beats="2"/>
      <move select="Run Right" />
      <move select="Quarter Right" offsetX="1"/>
      <move select="Extend Left" beats="2"/>
      <move select="Forward 2"/>
      <move select="Extend Right" beats="2"/>
    </path>
  </tam>

</tamination>
