<tamination title="Any Tagging Call and Scatter">

  <tam title="Chase and Scatter" group=" " fractions="5"
       formation="Lines Facing Out">
    <path>
      <move select="U-Turn Right" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="U-Turn Right" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Cross Flip and Scatter" formation="Two-Faced Lines RH"
       group=" " fractions="5.5">
    <path>
      <move select="Lead Right"/>
      <move select="Forward 4"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Run Right" beats="4" scaleY="2"/>
      <move select="Lead Right"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Lead Right"/>
      <move select="Forward 4"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Cross Loop and Scatter" formation="Column RH GBGB"
       group=" " fractions="7">
    <path>
      <move select="Run Right" scaleX=".4" scaleY="1.5" offsetX="-1"/>
      <move select="Lead Right" beats="2"  scaleY="2"/>
      <move select="Forward 2"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="2"/>
      <move select="Lead Right" beats="2" scaleX="2"/>
      <move select="Quarter Right" beats="2" offsetX="1"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Run Right" scaleX=".4" scaleY="1.5" offsetX="-1"/>
      <move select="Lead Right" beats="2"  scaleY="2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Forward"/>
      <move select="Lead Right" beats="2"/>
      <move select="Lead Right" beats="2" scaleX="2"/>
      <move select="Quarter Right" beats="2" offsetX="1"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Flip and Scatter" formation="Ocean Waves RH BGGB"
       group=" " fractions="5.5">
    <path couples="2 4">
      <move select="Lead Right"/>
      <move select="Forward 4"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path couples="2 4">
      <move select="Lead Right"/>
      <move select="Run Right" beats="4"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path couples="3 1">
      <move select="Lead Right"/>
      <move select="Run Right" beats="4"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path couples="3 1">
      <move select="Lead Right"/>
      <move select="Forward 4"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Invert and Scatter" group=" " fractions="6">
    <formation>
      <dancer gender="boy" x="3" y="1" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
    </formation>
    <path>
      <move select="Run Left" offsetX="-1"/>
      <move select="Forward 4" beats="3"/>
      <move select="Run Left" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Run Left"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Forward 3" beats="6"/>
      <move select="Run Right" beats="6"/>
    </path>
    <path>
      <move select="Forward" beats="6"/>
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Left" scaleX=".75" scaleY=".75" />
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Loop and Scatter" group=" "
       from="Completed Double Pass Thru"
       formation="Completed Double Pass Thru"
       fractions="8.5" >
    <path>
      <move select="Lead Right" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Forward 4" beats="3"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" beats="2" scaleX="1.5" scaleY="1.5" />
      <move select="Extend Left" beats="3" scaleX="4" scaleY="2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Right" />
      <move select="Lead Right" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Right" scaleX="1.5" scaleY=".5" />
      <move select="Forward" beats="2"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Lead Left" />
      <move select="Lead Left" scaleX="1.5" scaleY="1.5" />
      <move select="Lead Left" scaleX="1.5" scaleY=".5" />
      <move select="Extend Left" beats="2" scaleY="2"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

  <tam title="Vertical Tag and Scatter" group=" " fractions="5"
       formation="Lines Facing Out">
    <path>
      <move select="U-Turn Left" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Run Left" beats="6"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
      <move select="Extend Right" beats="1.5" scaleX="2" scaleY=".25" />
      <move select="Swing Right" scaleX=".75" scaleY=".75" />
      <move select="Extend Left" beats="1.5" scaleX="2" scaleY=".25" />
    </path>
  </tam>

</tamination>
