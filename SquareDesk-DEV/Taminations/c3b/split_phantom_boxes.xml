      <dancer gender="girl" x="-1.5" y="-2.25" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="3.75" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="5.25" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="-3.75" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="-5.25" angle="0"/>
    </formation>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".375"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".75"/>
      <move select="Flip Right" offsetX="1.5" scaleY=".375"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Lead Left" beats="5" scaleX="1.5" scaleY="1.875"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".75"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward" scaleX=".75"/>
      <move select="Quarter Right" offsetX=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Lead Right" beats="5" scaleX="3" scaleY="2.625"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2" beats="3" scaleX=".75"/>
      <move select="Forward" scaleX=".75"/>
      <move select="Quarter Right" offsetX=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".375"/>
      <move select="Forward 2" beats="3" scaleX=".75"/>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".75"/>
      <move select="Run Left" scaleX=".75" scaleY=".375"/>
    </path>

    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".375"/>
      <move select="Forward 2" beats="3" scaleX=".75"/>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".75"/>
      <move select="Run Left" scaleX=".5" scaleY=".375"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Lead Right" beats="5" scaleX="3" scaleY="2.625"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2" beats="3" scaleX=".75"/>
      <move select="Forward" scaleX=".75"/>
      <move select="Quarter Right" offsetX=".75"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".375"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
      <move select="Extend Right" beats="2" scaleX="1.5" scaleY=".75"/>
      <move select="Flip Right" offsetX="1.5" scaleY=".375"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".375"/>
      <move select="Lead Left" beats="5" scaleX="1.5" scaleY="1.875"/>
      <move select="Hinge Right" scaleX=".75" scaleY=".75"/>
      <move select="Run Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward" scaleX=".75"/>
      <move select="Quarter Right" offsetX=".75"/>
    </path>
  </tam>

  <tam title="Split Phantom Boxes Walk Out to a Wave" group="Split Phantom Boxes">
    <formation>
      <dancer gender="boy" x="1" y=".75" angle="270"/>
      <dancer gender="girl" x="1" y="2.25" angle="270"/>
      <dancer gender="girl" x="1" y="3.75" angle="270"/>
      <dancer gender="boy" x="1" y="5.25" angle="270"/>
      <dancer gender="phantom" x="1" y="-.75" angle="270"/>
      <dancer gender="phantom" x="1" y="-2.25" angle="270"/>
      <dancer gender="phantom" x="1" y="-3.75" angle="270"/>
      <dancer gender="phantom" x="1" y="-5.25" angle="270"/>
    </formation>
    <path>
      <move select="Run Right" beats="5" scaleY="2" scaleX=".5" offsetX="-.75"/>
      <move select="Run Right"/>
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="1"/>
