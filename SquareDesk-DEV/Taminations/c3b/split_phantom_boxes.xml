<tamination title="Split Phantom Boxes Concept">

  <tam title="Split Phantom Boxes Acey Deucey" group="Split Phantom Boxes">
    <formation>
      <dancer gender="boy" x="-1.5" y="-.75" angle="0"/>
      <dancer gender="girl" x="-1.5" y=".75" angle="180"/>
      <dancer gender="girl" x="-1.5" y="2.25" angle="0"/>
      <dancer gender="boy" x="-1.5" y="3.75" angle="180"/>
      <dancer gender="phantom" x="-1.5" y="-2.25" angle="180"/>
      <dancer gender="phantom" x="-1.5" y="-3.75" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="-5.25" angle="180"/>
      <dancer gender="phantom" x="1.5" y="-5.25" angle="180"/>
    </formation>
    <path>
      <move select="Forward 3" beats="4"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.75" scaleY="2.25"/>
    </path>
    <path>
      <move select="Swing Left" beats="4" scaleX=".75" scaleY=".75"/>
    </path>
    <path>
      <move select="Swing Left" beats="4" scaleX=".75" scaleY=".75"/>
    </path>
    <path>
      <move select="Swing Left" beats="4" scaleX=".75" scaleY=".75"/>
    </path>
    <path>
      <move select="Swing Left" beats="4" scaleX=".75" scaleY=".75"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX="1.75" scaleY="2.25"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
    </path>
  </tam>

  <tam title="Split Phantom Boxes In Roll Circulate" group="Split Phantom Boxes">
    <formation>
      <dancer gender="boy" x="-1.5" y="-.75" angle="0"/>
      <dancer gender="girl" x="-1.5" y=".75" angle="180"/>
      <dancer gender="girl" x="-1.5" y="2.25" angle="0"/>
      <dancer gender="boy" x="-1.5" y="3.75" angle="180"/>
      <dancer gender="phantom" x="-1.5" y="-2.25" angle="180"/>
      <dancer gender="phantom" x="-1.5" y="-3.75" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="-5.25" angle="180"/>
      <dancer gender="phantom" x="1.5" y="-5.25" angle="180"/>
    </formation>
    <path>
      <move select="Forward 3"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".75"/>
    </path>
    <path>
      <move select="Flip Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".75"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".75"/>
    </path>
    <path>
      <move select="Flip Left" scaleY=".75"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".75"/>
    </path>
    <path>
      <move select="Forward 3"/>
    </path>
  </tam>

  <tam title="Split Phantom Boxes Link Up" group="Split Phantom Boxes">
    <formation>
      <dancer gender="boy" x="-1.5" y="5.25" angle="0"/>
      <dancer gender="girl" x="-1.5" y="3.75" angle="0"/>
      <dancer gender="girl" x="-1.5" y="2.25" angle="180"/>
      <dancer gender="boy" x="-1.5" y=".75" angle="180"/>
      <dancer gender="phantom" x="-1.5" y="-.75" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="-2.25" angle="0"/>
      <dancer gender="phantom" x="-1.5" y="-3.75" angle="180"/>
      <dancer gender="phantom" x="-1.5" y="-5.25" angle="180"/>
    </formation>
    <path>
      <move select="Forward 2" scaleX=".75" hands="right"/>
      <move select="Run Right" beats="5" offsetX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Forward 2" scaleX=".75" hands="left"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2" scaleX=".75"/>
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="left" scaleX="1.5" scaleY="1.5"/>
      <move select="Quarter Left"/>
      <move select="Forward 2" scaleX=".75" beats="3.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2" hands="right"/>
      <move select="Quarter Left"/>
      <move select="Forward 3" beats="3.5"/>
    </path>
    <path>
      <move select="Forward 2" scaleX=".75" hands="right"/>
      <move select="Run Right" beats="5" offsetX="1.5" scaleY="1.5"/>
    </path>
    <path>
      <move select="Forward 2" scaleX=".75" hands="left"/>
      <move select="Swing Right" scaleX=".75" scaleY=".75"/>
      <move select="Forward 2" scaleX=".75"/>
    </path>
    <path>
      <move select="Lead Left" beats="2" hands="left" scaleX="1.5" scaleY="1.5"/>
      <move select="Quarter Left"/>
      <move select="Forward 2" scaleX=".75" beats="3.5"/>
    </path>
    <path>
      <move select="Quarter Left" beats="2" hands="right"/>
      <move select="Quarter Left"/>
      <move select="Forward 3" beats="3.5"/>
    </path>
  </tam>

  <tam title="Split Phantom Boxes Plan Ahead" group="Split Phantom Boxes">
