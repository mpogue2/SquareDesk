    </path>
    <path>
      <move select="Forward" scaleX="1.5" beats="3"/>
      <move select="U-Turn Right" beats="3" offsetX=".75"/>
    </path>
    <path>
      <move select="Run Right" beats="5" offsetX="1"/>
      <move select="Dodge Left" offsetX=".25"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleY="2" scaleX=".5" offsetX="-.75"/>
