<tamination title="Phantom Columns | Lines | Waves Concept">

  <tam title="Phantom Columns Checkmate" group="Phantom Columns">
    <formation>
      <dancer gender="boy" x="3" y="3" angle="180"/>
      <dancer gender="girl" x="1" y="3" angle="180"/>
      <dancer gender="girl" x="3" y="-1" angle="0"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="-3" y="3" angle="180"/>
      <dancer gender="phantom" x="1" y="1" angle="180"/>
      <dancer gender="phantom" x="-1" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Forward" beats="4" scaleX="3.5"/>
      <move select="Lead Left"/>
      <move select="Forward 4" hands="right"/>
      <move select="Extend Left" hands="right" scaleY=".5"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
      <move select="Lead Left"/>
      <move select="Forward 5" hands="left"/>
    </path>
    <path>
      <move select="Run Left" beats="4"/>
      <move select="Forward 5"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left"/>
      <move select="Forward 3"/>
      <move select="Quarter Left" offsetX="1" beats="2.5"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
      <move select="Lead Left"/>
      <move select="Forward" beats="5" hands="right"/>
    </path>
    <path>
      <move select="Run Left" beats="4" scaleY="3"/>
      <move select="Forward 5"/>
      <move select="Quarter Left" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 3" beats="4"/>
      <move select="Lead Left"/>
      <move select="Forward" beats="5" hands="left"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Left" scaleY="3"/>
      <move select="Forward 3"/>
      <move select="Quarter Left" offsetX="1" beats="2.5"/>
    </path>
  </tam>

  <tam title="Phantom Columns Circulate" group="Phantom Columns">
    <formation>
      <dancer gender="boy" x="3" y="3" angle="0"/>
      <dancer gender="girl" x="1" y="1" angle="180"/>
      <dancer gender="girl" x="3" y="-3" angle="180"/>
      <dancer gender="boy" x="1" y="-1" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="-3" y="1" angle="180"/>
      <dancer gender="phantom" x="1" y="3" angle="0"/>
      <dancer gender="phantom" x="-1" y="3" angle="0"/>
    </formation>
    <path>
      <move select="Run Right" beats="4" scaleY="3"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
    <path>
      <move select="Run Left" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
    <path>
      <move select="Forward 2" beats="4"/>
    </path>
  </tam>


  <tam title="Phantom Lines Chase Right" group="Phantom Lines">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="180"/>
      <dancer gender="girl" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="-3" angle="0"/>
      <dancer gender="boy" x="3" y="-3" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="0"/>
      <dancer gender="phantom" x="1" y="1" angle="0"/>
      <dancer gender="phantom" x="1" y="3" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="0"/>
    </formation>
    <path>
      <move select="Run Right" beats="4" scaleX=".5" scaleY="1.75" offsetX="-1"/>
      <move select="Forward 3"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-1"/>
      <move select="Run Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".75" offsetX="-2"/>
      <move select="Forward 3"/>
      <move select="Run Right" scaleY="1.75" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" scaleY=".75" offsetX="-2"/>
      <move select="Forward 3"/>
      <move select="Run Right" scaleY="1.75" offsetX="1"/>
    </path>
    <path>
      <move select="U-Turn Right" beats="2" offsetX="-1"/>
      <move select="Run Right" offsetX="1"/>
    </path>
    <path>
      <move select="Run Right" scaleX=".5"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" scaleX=".5" scaleY="1.75" offsetX="-1"/>
      <move select="Forward 3"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
    </path>
  </tam>

  <tam title="Phantom Lines Swap Around" group="Phantom Lines">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
      <dancer gender="girl" x="1" y="3" angle="180"/>
      <dancer gender="boy" x="3" y="-3" angle="180"/>
      <dancer gender="phantom" x="3" y="1" angle="180"/>
      <dancer gender="phantom" x="1" y="-1" angle="180"/>
      <dancer gender="phantom" x="1" y="-3" angle="180"/>
      <dancer gender="phantom" x="3" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Forward 6" beats="5"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
    </path>
    <path>
      <move select="Forward 2" beats="5"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
    </path>
    <path>
      <move select="Forward 2" beats="5"/>
    </path>
    <path>
      <move select="Flip Right" beats="5"/>
    </path>
    <path>
      <move select="Forward 6" beats="5"/>
    </path>
  </tam>

  <tam title="Phantom Waves Circulate" group="Phantom Waves">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="-3" angle="180"/>
      <dancer gender="boy" x="3" y="-3" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="0"/>
      <dancer gender="phantom" x="1" y="1" angle="180"/>
      <dancer gender="phantom" x="1" y="3" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Forward 4" beats="3"/>
      <move select="Extend Right" scaleY=".5"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleX=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="5"/>
    </path>
    <path>
      <move select="Run Left" beats="5" scaleY="3"/>
    </path>
    <path>
      <move select="Run Right" beats="5"/>
    </path>
    <path>
      <move select="Forward 2" beats="5"/>
    </path>
    <path>
      <move select="Run Right" beats="5" scaleY="3"/>
    </path>
    <path>
      <move select="Forward 6" beats="5"/>
    </path>
  </tam>

  <tam title="Phantom Waves In-Roll Circulate" group="Phantom Waves">
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="180"/>
      <dancer gender="girl" x="1" y="-3" angle="180"/>
      <dancer gender="boy" x="3" y="-3" angle="0"/>
      <dancer gender="phantom" x="3" y="1" angle="0"/>
      <dancer gender="phantom" x="1" y="1" angle="180"/>
      <dancer gender="phantom" x="1" y="3" angle="0"/>
      <dancer gender="phantom" x="3" y="3" angle="180"/>
    </formation>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Left"/>
    </path>
    <path>
      <move select="Flip Right"/>
    </path>
    <path>
      <move select="Forward 6" beats="3"/>
    </path>
  </tam>

</tamination>
