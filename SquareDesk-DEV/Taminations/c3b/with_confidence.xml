<tamination title="With Confidence">

  <tam title="With Confidence" from="Right-Hand Waves"
       formation="Ocean Waves RH GBGB" fractions="3">
    <path couples="4 2">
      <move select="Forward 2" beats="3"/>
      <move select="Forward 2" hands="right"/>
    </path>
    <path couples="4 2">
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Stand" beats="1.5"/>
      <move select="U-Turn Right" offsetX="-1"/>
      <move select="Quarter Right" hands="left" beats="3" offsetY="-.5"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Left"/>
      <move select="Hinge Right"/>
      <move select="Forward 2" hands="left"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3"/>
      <move select="Forward" beats="3"/>
      <move select="Lead Right" hands="right" beats="3" scaleX="2" scaleY="2"/>
    </path>
  </tam>

  <tam title="With Confidence" from="Right-Hand Two-Faced Lines"
       formation="Two-Faced Lines RH">
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Forward" beats="3"/>
      <move select="Hinge Right" beats="2" scaleX="2"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Hinge Left"/>
      <move select="U-Turn Right" offsetX="-1"/>
      <move select="Quarter Right" beats="2" hands="left" offsetY="1"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Stand" beats="1.5"/>
      <move select="Extend Right" beats="3" hands="left" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Lead Right" beats="3" scaleX="2" scaleY="3"/>
      <move select="Extend Right" beats="3" hands="right" scaleX="2" scaleY="1"/>
    </path>
  </tam>

  <tam title="With Confidence" from="Left-Hand Waves"
       formation="Ocean Waves LH BGBG">
    <path>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="3"/>
      <move select="Forward" beats="3"/>
      <move select="Lead Left" hands="left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Hinge Right"/>
      <move select="Hinge Left"/>
      <move select="Forward 2" hands="right"/>
    </path>
    <path>
      <move select="Hinge Right" scaleX=".5"/>
      <move select="Stand" beats="1.5"/>
      <move select="U-Turn Left" offsetX="-1"/>
      <move select="Quarter Left" hands="right" beats="3" offsetY=".5"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Forward 2" hands="left"/>
    </path>
  </tam>

  <tam title="With Confidence" from="Left-Hand Two-Faced Lines"
       formation="Two-Faced Lines LH">
    <path>
      <move select="Lead Left" beats="3" scaleX="2" scaleY="3"/>
      <move select="Extend Left" beats="3" hands="left" scaleX="2" scaleY="1"/>
    </path>
    <path>
      <move select="Hinge Left" scaleX=".5"/>
      <move select="Stand" beats="1.5"/>
      <move select="Extend Left" beats="3" hands="right" scaleX="2" scaleY="1.5"/>
    </path>
    <path>
      <move select="Hinge Left"/>
      <move select="Hinge Right"/>
      <move select="U-Turn Left" offsetX="-1"/>
      <move select="Quarter Left" beats="2" hands="right" offsetY="-1"/>
    </path>
    <path>
      <move select="Forward 2" beats="3"/>
      <move select="Forward" beats="3"/>
      <move select="Hinge Left" beats="2" scaleX="2"/>
    </path>
  </tam>

</tamination>
