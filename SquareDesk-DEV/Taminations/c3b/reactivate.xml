<tamination title="Reactivate">

  <tam title="Reactivate" from="Quarter Tag" fractions="3;3">
    <formation>
      <dancer gender="girl" x="3" y="-1" angle="180"/>
      <dancer gender="boy" x="3" y="1" angle="180"/>
      <dancer gender="boy" x="0" y="3" angle="0"/>
      <dancer gender="girl" x="0" y="1" angle="180"/>
    </formation>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Left" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleX="4" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1" scaleX=".5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Reactivate" from="Left-Hand Quarter Tag"
       formation="Quarter Tag LH" fractions="3;3">
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Left" beats="6" scaleX="4" scaleY="3"/>
      <move select="Lead Left" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Reactivate" from="Quarter Lines"
       formation="Quarter Lines RH" fractions="3;3">
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Swing Left" scaleX=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1" scaleX=".5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Lead Right" beats="4" scaleX="4" scaleY="3"/>
      <move select="Lead Right" beats="5" scaleX="5" scaleY="2"/>
    </path>
  </tam>

  <tam title="Reactivate" from="Quarter Waves"
       formation="Quarter Wave RH" fractions="3;3">
    <path>
      <move select="Extend Left" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1.5" scaleX="1.5" scaleY=".5"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Stand" beats="3"/>
      <move select="Run Right" offsetX="-1"/>
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleX="4" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="1.5" scaleY=".5"/>
      <move select="Extend Right" beats="1" scaleX=".5" scaleY=".5"/>
      <move select="Flip Left" scaleX=".5"/>
    </path>
  </tam>

  <tam title="Cross Reactivate" from="Quarter Tag" formation="Quarter Tag" fractions="">
    <path>
      <move select="Forward" beats="3"/>
      <move select="Swing Right" scaleX=".5"/>
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY="2"/>
      <move select="Forward"/>
      <move select="Swing Right" scaleX=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
    </path>
    <path>
      <move select="Lead Right" beats="6" scaleX="4" scaleY="3"/>
      <move select="Lead Right" beats="3" scaleX="3" scaleY="2"/>
    </path>
    <path>
      <move select="Extend Left" beats="3" scaleX="2" scaleY="2"/>
      <move select="Swing Right" scaleX=".5"/>
    </path>
  </tam>

</tamination>
